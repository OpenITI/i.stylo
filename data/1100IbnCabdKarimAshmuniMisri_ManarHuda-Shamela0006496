 {والميزان} [] كاف، ومثله «اشياءهم»، وكذا «بعد اصلاحها»، و «مءمنين»، و «عوجا»، و «فكثركم».
 {المفسدين ()} [] تام؛ للابتداء بالشرط.
 {لم يءمنوا} [] ليس بوقف؛ لان جواب الشرط لم يات، وهو: «فاصبروا»، فلا يفصل بين الشرط وجوابه بالوقف.
 {بيننا} [] حسن.
 {الحاكمين ()} [] تام ، وفي قوله: «او لتعودن في ملتنا» جواز اطلاق العود علي من لم يتقدم فعله؛ لان الرسل لم تكن في ملتهم قبل؛ لانهم لم يدخلوا في ملة احد من الكفار، فالمراد بالعود: الدخول، ومنه حديث الجهنميين (): «عادوا حمما»، اي: صاروا الا انهم كانوا حمما، ثم عادوا حمما.
 {في ملتنا} [] حسن، ومثله «كارهين»، وقيل: ليس بوقف؛ لبشاعة الابتداء بما بعده، واذا كان محكيا عن السيد شعيب كان اشنع، ولكن الكلام معلق بشرط هو بعقبه، والتعليق بالشرط اعدام. 
 {نجانا الله منها} []، و {الا ان يشاء الله ربنا} []، و {كل شء علما} []، و {علي الله توكلنا} []، و {وبين قومنا بالحق} [] كلها وقوف حسان.
 {الفاتحين ()} [] تام.
 {لخاسرون ()} [] كاف، ومثله «جاثمين» علي استءناف ما بعده مبتدا خبره، «كان لم يغنوا فيها»، وليس بوقف ان جعل ما بعده نعتا لما قبله، او بدلا من الضمير في «اصبحوا»، او حالا من فاعل «كذبوا»، ومن حيث كونه راس اية يجوز.
 {كان لم يغنوا فيها} [] حسن، وقيل: تام، ان جعل ما بعده مبتدا خبره «كانوا هم الخاسرين»، وليس بوقف ان جعل ذلك بدلا من الذين قبله.
 {الخاسرين ()} [] كاف.
 {ونصحت لكم} [] جاءز؛ لان «كيف» للتعجب، فتصلح للابتداء، اي: فكيف احزن علي من لا يستحق ان احزن عليه.
 {كافرين ()} [] تام.
 {يضرعون ()} [] كاف.
 {حتي عفوا} [] جاءز، وقال الاخفش: تام، قال ابو جعفر: وذلك غلط؛ لان «وقالوا» معطوف علي «عفوا» الا انه من عطف الجمل المتغايرة المعني.
 {لا يشعرون ()} [] كاف، ومثله «يكسبون»، وكذا «ناءمون» لمن حرك الواو، وليس بوقف علي قراءة من سكنها، وهم: نافع، وابن عامر، وابن كثير، وقرا الباقون بفتحها ()، ففي قراءة من سكن الواو جعل «او» بجملتها حرف عطف، ومعناها: التقسيم، ومن فتح الواو، وجعلها للعطف، ودخلت عليها همزة الاستفهام مقدمة عليها؛ لان الاستفهام له صدر الكلام، وان كانت بعدها تقديرا عند الجمهور.
 {وهم يلعبون ()} [] كاف، ومثله «مكر الله».
 {الخاسرون ()} [] تام؛ للاستفهام بعده.
 {بذنوبهم} [] جاءز؛ للفصل بين الماضي والمستقبل، فان «نطبع» منقطع عما قبله؛ لان «اصبناهم» ماض، و «نطبع» مستقبل، وقال الفراء: تام؛ لان «نطبع علي قلوبهم» ليس داخلا في جواب 
 لو، ويدل علي ذلك قوله: «فهم لا يسمعون».
 والوقف علي {لا يسمعون ()} [] تام.
 {من انباءها} [] حسن، ومثله «بالبينات»؛ لعطف الجملتين المختلفتين؛ لان ضمير «فما كانوا ليءمنوا الا» اهل مكة، وضمير «جاءتهم» للامم السابقة، مع ان الفاء توجب الاتصال، وكذا «من قبل».
 {الكافرين ()} [] كاف؛ للابتداء بالنفي، ومثله «من عهد».
 {لفاسقين ()} [] تام، و «ثم» وردت؛ لترتيب الاخبار، فيبتدا بها؛ لانها جاءت اول قصة اخري.
 {فظلموا بها} [] حسن؛ للفصل بين الماضي والمستقبل، مع العطف بالفاء.
 {المفسدين ()} [] تام.
 {العالمين ()} [] حسن، وراس اية.
 كل ما في كتاب الله من ذكر (ان لا) فهو بغير نون الا في عشرة مواضع فهو بنون، منها: {حقيق علي ان لا اقول} [] ()، والوقف علي {حقيق} [] احسن علي قراءة نافع (): «علي» بتشديد ياء المتكلم؛ علي ان الكلام تم عند قوله: «حقيق»؛ لان «حقيق» نعت «رسول»، اي: رسول حقيق من رب العالمين ارسلت، وعلي هذا لا يوقف علي «العالمين»؛ لان «حقيق» صفة «رسول»، او خبر بعد خبر، وليس «حقيق» وقفا ان جعلت «ان لا اقول» ان وصلتها مبتدا، و «حقيق» خبرا، او «حقيق» 
 مبتدا، و «ان لا اقول» خبرا، او «ان لا اقول» فاعل ب «حقيق»، وهذا اعذب الوجوه؛ لوضوحه لفظا ومعني، وقرا العامة (): «علي» حرف جر مجردا من ياء المتكلم.
 {الا الحق} [] حسن.
 {من ربكم} [] جاءز.
 {بني اسراءيل ()} [] كاف، وراس اية.
 {الصادقين ()} [] حسن.
 {مبين ()} [] جاءز.
 {للناظرين ()} [] حسن، ومثله «لساحر عليم»، علي استءناف ما بعده، وليس بوقف ان جعل في موضع الصفة لما قبله.
 {من ارضكم} [] حسن، ان جعل «فماذا تامرون» من كلام فرعون، ويءيد كونه من كلامه «قالوا ارجه»، و «يريد ان يخرجكم من ارضكم»؛ فهو قول الملا، وليس بوقف ان جعل من كلام الملا، وخاطبوا فرعون وحده بقولهم: «تامرون» تعظيما له، كما تخاطب الملوك بصيغة الجمع، او قالوا ذلك له ولاصحابه، ويجوز ان تكون «ماذا» كلها اسما واحدا مفعولا ثانيا ل «تامرون»، والمفعول الاول محذوف وهو ياء المتكلم، والتقدير: باي شء تامرونني؟ ويجوز ان تكون «ما» وحدها استفهاما، «ما» مبتدا، و «ذا» اسم موصول بمعني: الذي خبر عنها، و «تامرون» صلة «ذا»، ومفعول «تامرون» محذوف،
 وهو ضمير المتكلم، والثاني الضمير العاءد علي الموصول، والتقدير: فاي شء تامروننيه؟ اي:
 تامرونني به ().
 {تامرون ()} [] كاف، «حاشرين» راس اية، وليس بوقف؛ لان ما بعده من تمام الحكاية عن الملا، ولا يوقف علي «حاشرين»؛ لان قوله: «ياتوك» جواب قوله: «وارسل»، فلا يفصل بين الامر وجوابه.
 {ساحر عليم ()} [] كاف، ومثله «نحن الغالبين».
 {قال نعم} [] جاءز.
 {المقربين ()} [] حسن.
 {الملقين ()} [] كاف.
 {قال القوا} [] حسن، ومثله «واسترهبوهم».
 {بسحر عظيم ()} [] تام. 
 {عصاك} [] جاءز عند بعضهم، وقيل: ليس بوقف؛ لان ما بعده يفسر ما قبله.
 {ما يافكون ()} [] كاف، ومثله «يعملون»، و «صاغرين»، و «ساجدين» علي استءناف ما بعده، وليس بوقف ان جعل ما بعده حالا من فاعل «انقلبوا».
 {العالمين ()} [] ليس بوقف؛ لان ما بعده بدل مما قبله.
 {رب موسي وهارون ()} [] تام، وقدم «موسي» هنا علي «هارون»، وان كان «هارون» اسن منه؛ لكبره في الرتبة، او لانه هنا وقع فاصلة، كما قدم «هارون» علي «موسي» في طه؛ لوقوعه فاصلة، ومات «هارون» قبل موسي بثلاث سنين ().
 {قبل ان اذن لكم} [] كاف، علي استءناف ما بعده، وليس بوقف ان جعل ما بعده داخلا في القول.
 {اهلها} [] جاءز، علي ان اللام في قوله: «لتخرجوا منها اهلها» من صلة «مكرتموه»، ومن جعلها متعلقة بمحذوف تقديره: فعلتم ذلك لتخرجوا وقف علي «المدينة»، وقال نافع: تام.
 {فسوف تعلمون ()} [] كاف، ومثله «اجمعين»، وكذا «منقلبون».
 {لما جاءتنا} [] حسن.
 {صبرا} [] جاءز.
 {مسلمين ()} [] تام.
 {في الارض} [] جاءز، ان نصب «ويذرك» عطفا علي جواب الاستفهام، وهو «ليفسدوا» باضمار ان، والمعني: اني يكون الجمع بين تركك موسي وقومه للافساد وبين تركهم اياك وعبادة الهتك؟ اي: ان هذا مما لا يمكن، وليس قصد الملا بذلك زندقة فرعون علي موسي وقومه، وليس بوقف ان قرء بالرفع علي «اتذر»، كما يروي عن الحسن انه كان يقرا (): «ويذرك» بالرفع، وكذا ان نصب عطفا علي ما قبله، او جعل جملة في موضع الحال؛ فلاهل العربية في اعراب «ويذرك» خمسة اوجه، انظرها ان شءت ().
 {والهتك} [] حسن، ومثله «نساءهم».
 {قاهرون ()} [] تام. 
 {واصبروا} [] كاف؛ للابتداء ب «ان».
 {من عباده} [] حسن.
 {للمتقين ()} [] كاف.
 {ما جءتنا} [] حسن.
 {في الارض} [] ليس بوقف؛ لان بعده فاء السببية.
 {تعملون ()} [] تام.
 {يذكرون ()} [] كاف.
 {لنا هذه} [] حسن، والمراد ب «الحسنة»: العافية، والرخاء. و «السيءة»: البلاء، والعقوبة.
 {ومن معه} [] كاف، «عند الله» الاولي وصله.
 {لا يعلمون ()} [] كاف، ومثله «بمءمنين»، و «مفصلات»، و «قوما مجرمين»، ومن وقف علي «ادع لنا ربك»، وابتدا «بما عهد عندك»، وجعل الباء حرف قسم فقد تسعف، واخطا؛ لان باء القسم لا يحذف معها الفعل، بل متي ذكرت الباء لابد من الاتيان بالفعل بخلاف الواو.
 {بما عهد عندك} [] جاءز.
 {بني اسراءيل ()} [] حسن، وراس اية ايضا.
 {ينكثون ()} [] كاف.
 {فانتقمنا منهم} [] جاءز، علي استءناف ما بعده، وليس بوقف ان جعل ما بعده نفس الانتقام.
 {غافلين ()} [] كاف.
 {يستضعفون} [] ليس بوقف؛ لان «مشارق الارض» منصوب، علي انه مفعول ثان ل «اورثنا»، قال السجستاني: نصبوا «مشارق» ب «اورثنا»، ولم ينصبوها بالظرف، ولم يريدوا في مشارق الارض وفي مغاربها، قال ابو بكر بن الانباري: فانكاره النصب علي الظرفية خطا؛ لان في مشارق ومغارب وجهين: احدهما انها منصوبة ب «اورثنا» علي غير معني مخل، وهو الذي يسميه الكساءي صفة، ويسميه الخليل ظرفا. والوجه الثاني: ان تنصب «التي» ب «اورثنا»، وتنصب مشارق ومغارب علي المحل، كانك قلت: واورثنا القوم الارض التي باركنا فيها مشارق الارض ومغاربها، فلما حذف الجار نصبا، واذا نصبت مشارق ومغارب بوقوع الفعل عليها علي غير معني المحل جعلت «التي باركنا فيها» نعت مشارق ومغارب، وعليهما فلا يوقف علي «يستضعفون» (). 
 والوقف علي {ومغاربها} [] حسن، ان جعلت «التي باركنا فيها» منقطعا عما قبله، قال الاخفش: «باركنا فيها» هو تمام الكلام.
 {بما صبروا} [] كاف، ومثله «يعرشون»، و «اصنام لهم»، و «كما لهم الهة» كلها حسان.
 {تجهلون ()} [] كاف.
 {ما هم فيه} [] جاءز.
 {يعملون ()} [] كاف، ومثله «العالمين» علي قراءة الجماعة غير ابن عامر في قوله: «واذ انجيناكم» بالنون علي لفظ الجمع؛ لان كلام موسي قد تم، وليس بوقف علي قراءة ابن عامر: «واذ انجاكم» علي لفظ الواحد الغاءب ()؛ لان ما بعده متصل بكلام موسي واخباره عن الله تعالي في قوله: «اغير الله ابغيكم الها»، فهو مردود عليه، فلا يقطع منه، اه نكزاوي.
 {سوء العذاب} [] كاف، علي استءناف ما بعده، وليس بوقف ان جعل بدلا من «يسومونكم».
 {نساءكم} [] حسن.
 {عظيم ()} [] تام.
 {اربعين ليلة} [] حسن.
 {واصلح} [] جاءز، علي استءناف النهي، نهاه عن اتباع سبيلهم وامره اياه بالاصلاح علي سبيل التاكيد، لا لتوهم انه يقع منه خلاف الاصلاح؛ لان منصب النبوة منزه عن ذلك.
 {المفسدين ()} [] تام.
 {وكلمه ربه} [] ليس بوقف؛ لان «قال» جواب «لما».
 {اليك} [] حسن، ومثله «لن تراني»، ومثله «الي الجبل»؛ للابتداء بالشرط مع الفاء، ومثله «فسوف تراني»، و «صعقا»، قرا الاخوان: «دكاء» بالمد بوزن حمراء، والباقون: «دكا» بالقصر والتنوين ().
 {اول المءمنين ()} [] تام. 
 {وبكلامي} [] جاءز.
 {الشاكرين ()} [] كاف.
 {من كل شء} [] حسن، ان نصب ما بعده بفعل مقدر، وليس بوقف ان نصب بما قبله، او ابدل منه، او نصب علي المفعول من اجله، اي: كتبنا له تلك الاشياء؛ للاتعاظ والتفصيل.
 {لكل شء} [] حسن، ومثله «باحسنها».
 {الفاسقين ()} [] تام.
 {بغير الحق} [] كاف؛ للابتداء بالشرط.
 {لا يءمنوا بها} [] كاف؛ للابتداء بالشرط ايضا.
 {سبيلا} [] حسن.
 {يتخذوه سبيلا} [] كاف.
 {غافلين ()} [] تام.
 {اعمالهم} [] حسن.
 {يعملون ()} [] تام.
 {له خوار} [] حسن، ومثله «سبيلا»؛ لءلا تصير الجملة صفة «سبيلا»؛ فان الهاء ضميرا ل «العجل»، وكذا «ظالمين»، وقال ابو جعفر فيهما: تام.
 {قد ضلوا} [] ليس بوقف؛ لان «قالوا» بعده جواب «لما».
 {الخاسرين ()} [] كاف.
 {اسفا} [] ليس بوقف؛ لان «قال» جواب «لما»، ورسموا «بءسما» موصولة كلمة واحدة باتفاق، وتقدم الكلام علي ذلك.
 {من بعدي} [] كاف؛ للابتداء بالاستفهام، ومثله «امر ربكم».
 {يجره اليه} [] حسن، اتفق علماء الرسم علي رسم «ابن ام»: «ابن» كلمة، و «ام» كلمة، علي ارادة الاتصال، وياتي الكلام علي التي في طه.
 {يقتلونني} [] جاءز، ووصله احسن؛ لان الفاء في جواب شرط مقدر، اي: اذا هموا بقتلي فلا تشمتهم بضربي .
 {الظالمين ()} [] تام.
 {في رحمتك} [] حسن.
 {الراحمين ()} [] تام.
 {في الحياة الدنيا} [] كاف، وقيل: تام، ان جعل «ان الذين اتخذوا العجل» وما بعده من
 
 كلام موسي، وهو اشبه بسياق الكلام، وقوله: «في الحياة الدنيا» اخر كلامه، ثم قال تعالي: {وكذلك نجزي المفترين ()} []، ولا يبلغ درجة التمام ان جعل ذلك من كلام الله تعالي اخبارا عما ينال عباد العجل، ومخاطبة لموسي بما ينالهم، ويدل عليه قوله: «وكذلك نجزي المفترين»، وعلي هذا لم يتم الوقف علي قوله: «في الحياة الدنيا»، ولكنه كاف.
 {المفترين ()} [] تام.
 {وامنوا} [] كاف.
 {رحيم ()} [] تام.
 {الغضب} [] ليس بوقف؛ لان جواب «لما» لم يات، وهو قوله: «اخذ الالواح» فلا يفصل بينهما بالوقف.
 {الالواح} [] حسن، علي استءناف ما بعده، وليس بوقف ان جعل «وفي نسختها» جملة في محل نصب حالا من «الالواح»، او من ضمير «موسي».
 {يرهبون ()} [] كاف، وقيل: تام.
 {لميقاتنا} [] حسن.
 {واياي} [] كاف، ومثله «السفهاء منا».
 {ان هي الا فتنتك} [] جاءز؛ لان الجملة لا توصف بها المعرفة، ولا عامل يجعلها حالا، قاله السجاوندي.
 {وتهدي من تشاء} [] حسن، ومثله «وارحمنا».
 {الغافرين ()} [] كاف.
 {هدنا اليك} [] حسن، ومثله «من اشاء»؛ للفصل بين الجملتين.
 {كل شء} [] كاف، في محل «الذين» بعد «يءمنون» الحركات الثلاث: الرفع، والنصب، والجر؛ فالرفع من وجهين، والنصب من وجهين، والجر من ثلاثة؛ فتام ان رفع علي انه خبر مبتدا محذوف، او مبتدا، والخبر اما الجملة الفعلية من قوله: «يامرهم بالمعروف»، او الجملة الاسمية، وكاف ان نصب «الذين»، او رفع علي المدح، وليس بوقف ان جر بدلا من «الذين يتقون»، او نعتا، او عطف بيان، ومن حيث كونه راس اية يجوز.
 {والانجيل} [] كاف، علي استءناف ما بعده، وقيل: تام؛ لان ما بعده يحتمل ان يكون خبر مبتدا محذوف، اي: هو يامرهم، وان يكون نعتا لقوله: «مكتوبا»، او بدلا، اي: يجدونه امرا، او صلة ل «الذي» قاءما مقام «يجدونه» كالبدل من تلك الجملة، اي: الامي الذي يامرهم، قاله السجاوندي مع زيادة للايضاح، و «الامي» بضم الهمزة، وهي قراءة العامة نسبة الي الامة، او الي الام؛ فهو مصدر
 
 ل (ام يءم) اي: (قصد يقصد)، والمعني: ان هذا النبي مقصود لكل احد، وفيه نظر؛ لانه لو كان كذلك لقيل: الامي بفتح الهمزة، وقد يقال: انه من تغيير النسبة، او نسبة ل (ام القري) وهي مكة، اول من اظهر الكتابة ابو سفيان بن امية عم ابي سفيان بن حرب ().
 {كانت عليهم} [] حسن.
 {انزل معه} [] ليس بوقف؛ لان «اولءك» خبر قوله: «فالذين».
 {المفلحون ()} [] تام.
 {جميعا} [] حسن، ان رفع ما بعده، او نصب علي المدح، وليس بوقف ان جر نعتا للجلالة، او بدلا منها، لكن فيه الفصل بين الصفة والموصوف بقوله: «اليكم جميعا»، واجاز ذلك الزمخشري، واستبعده ابو البقاء.
 {والارض} [] حسن؛ لان الجملة بعده تصلح ان تكون مبتدا، او حالا.
 {يحيي ويميت} [] حسن.
 {وكلماته} [] جاءز؛ للامر بعده.
 {تهتدون ()} [] تام.
 {يعدلون ()} [] كاف.
 {امما} [] حسن، وان اتفقت الجملتان، لكن «اوحينا» عامل «اذ استسقاه»، فلم يكن معطوفا علي «قطعنا»؛ فان تفريق الاسباط لم يكن في زمن الاستسقاء.
 {الحجر} []، و {عينا} []، و {مشربهم} []، و {والسلوي} []،
 و {رزقناكم} [] كلها حسان.
 {يظلمون ()} [] كاف.
 {خطيءاتكم} [] حسن.
 {المحسنين ()} [] كاف.
 {غير الذي قيل لهم} [] ليس بوقف؛ لمكان الفاء.
 {يظلمون ()} [] كاف.
 {شرعا} [] جاءز.
 {لا تاتيهم} [] تام، علي القول بعدم الاتيان بالكلية؛ فانهم كانوا ينظرون الي الحيتان في البحر يوم السبت، فلم يبق حوت الا اجتمع فيه، فاذا انقضي السبت ذهبت، فلم تظهر الي السبت 
 المقبل، فوسوس اليهم الشيطان، وقال لهم: ان الله لم ينهكم عن الاصطياد، وانما نهاكم عن الاكل، فاصطادوا، وقيل: قال لهم: انما نهيتم عن الاخذ، فاتخذوا حياضا علي ساحل البحر، فتاتي اليها الحيتان يوم السبت، فاذا كان يوم الاحد خذوها، ففعلوا ذلك، ثم اعتدوا في السبت، فاصطادوا فيه واكلوا وباعوا، فمسخ الله: شبانهم قردة، ومشايخهم خنازير، فمكثوا ثلاثة ايام، ثم هلكوا، ولم يبق ممسوخ فوق ثلاثة ايام ابدا ()، واما من قال: ان الاتيان في غير يوم السبت كان اقل من يوم السبت، او بطلب ونصب؛ لان التشبيه من تمام الكلام فالوقف علي كذلك، قال مجاهد: حرمت عليهم الحيتان يوم السبت، فكانت تاتيهم فيه شرعا لامنها، ولا تاتيهم في غيره، الا ان يطلبوها، فقوله: «كذلك»، اي: تاتيهم شرعا، وهنا تم الكلام، «ونبلوهم» مستانف، ومحل الكاف نصب بالاتيان علي الحال، اي: لا ناتي مثل ذلك الاتيان، او الكاف صفة مصدر بعده محذوف، اي: نبلوهم بلاء كذلك، فالوقف علي «كذلك» حسن فيهما، او تام ().
 {يفسقون ()} [] كاف، ان علق «اذ» باذكر مقدرا مفعولا به.
 {قوما} [] ليس بوقف؛ لان ما بعده صفة لقوله: «قوما»، كانه قال: لم تعظون قوما مهلكين؟
 {عذابا شديدا} [] حسن.
 {يتقون ()} [] كاف، ان رفع «معذرة» علي انه خبر مبتدا محذوف، اي: قالوا: موعظتنا معذرة، وقرا حفص عن عاصم (): «معذرة» بالنصب بفعل مقدر، اي: نعتذر معذرة، او نصب بالقول؛ لان المعذرة تتضمن كلاما، والمفرد المتضمن لكلام اذا وقع بعد القول نصب المفعول به، كقلت: قصيدة وشعرا.
 {ينهون عن السوء} [] جاءز.
 {يفسقون ()} [] كاف، كل ما في كتاب الله من ذكر «عما» فهو بغير نون بعد العين الا هنا في قوله: {عن ما نهوا عنه} [] فهو بنون، كما تري.
 {خاسءين ()} [] حسن، وقيل: كاف. 
 {سوء العذاب} [] حسن، وقال ابو عمرو: كاف.
 {لسريع العقاب} [] جاءز، ووصله اولي للجمع بين الصفتين ترغيبا وترهيبا، كما تقدم.
 {رحيم ()} [] كاف، ومثله «امما»، و «دون ذلك»، و «يرجعون».
 {سيغفر لنا} [] جاءز.
 {ياخذوه} [] حسن.
 {الا الحق} [] كاف، ومثله «ما فيه»، وكذا «يتقون».
 {تعقلون ()} [] تام، ان جعل «والذين يمسكون» مبتدا، وليس بوقف ان عطف علي قوله: «الذين يتقون» فلا يوقف علي «يتقون»، ولا علي «تعقلون»، وان جعل «والذين» مبتدا، وخبره «انا لا نضيع» لم يوقف علي قوله: «واقاموا الصلاة»؛ لانه لا يفصل بين المبتدا والخبر بالوقف؛ لان المصلحين هم الذين يمسكون بالكتاب، وفي قوله: «واقاموا الصلاة» اعادة المبتدا بمعناه، والرابط بينهما العموم في المصلحين، او ضمير محذوف تقديره: المصلحين منهم.
 {المصلحين ()} [] تام.
 {واقع بهم} [] حسن.
 {تتقون ()} [] تام ان علق «اذ» باذكر مقدرا مفعولا به، وان عطف علي «ما»، او علي «واذ نتقنا الجبل» لم يتم الكلام علي ما قبله، واختلف في «شهدنا» هل هو من كلام الله، او من كلام الملاءكة، او من كلام الذرية؟! فعلي انه من كلام الملاءكة، وان الذرية لما اجابوا ب «بلي» قال الله للملاءكة: اشهدوا عليهم، فقالت الملاءكة: شهدنا؛ ف «بلي» اخر قصة الميثاق فاصلة بين السءال والجواب.
 فالوقف علي {بلي} [] تام؛ لانه لا تعلق له بما بعده لا لفظا، ولا معني، وعلي انه من كلام الذرية فالوقف علي «شهدنا»، و «ان» متعلقة بمحذوف، اي: فعلنا ذلك ان تقولوا يوم القيامة، فاذا لا يوقف علي «بلي»؛ لتعلق ما بعدها بما قبلها لفظا ومعني، وقال ابن الانباري: لا يوقف علي «بلي»، ولا علي «شهدنا»؛ لتعلق «ان» بقوله: «واشهدهم»؛ فالكلام متصل بعضه ببعض.
 {غافلين ()} [] ليس بوقف؛ لان ما بعده معطوف علي ما قبله.
 {من بعدهم} [] حسن؛ للابتداء بالاستفهام.
 {المبطلون ()} [] كاف.
 {يرجعون ()} [] تام.
 {الغاوين ()} [] كاف.
 {واتبع هواه} [] حسن، وقيل: كاف؛ لان ما بعده مبتدا.
 {او تتركه يلهث} [] حسن؛ فهو لا يملك ترك اللهث.
 
 {باياتنا} [] كاف.
 {يتفكرون ()} [] تام.
 {مثلا} [] جاءز، ان جعل الفاعل مضمرا تقديره: ساء مثلهم مثلا، ويكون «القوم» خبر مبتدا محذوف، تقديره: هم القوم، وليس بوقف ان جعل «القوم» فاعلا ب «ساء»؛ لانه لا يفصل بين الفعل والفاعل.
 {يظلمون ()} [] تام.
 {فهو المهتدي} [] حسن، باثبات الياء وصلا ووقفا باتفاق القراء هنا، خلافا لما في سورتي الكهف والاسراء؛ فان ابا عمرو، ونافعا يثبتانها وصلا، والباقون يحذفونها فيهما وقفا ووصلا.
 {الخاسرون ()} [] تام.
 {والانس} [] كاف، علي استءناف ما بعده، وليس بوقف ان جعل ما بعده في موضع النعت لقوله: «كثيرا».
 {لا يسمعون بها} [] حسن.
 {اضل} [] كاف.
 {الغافلون ()} [] تام.
 {فادعوه بها} [] كاف، ومثله: «في اسماءه».
 {يعملون ()} [] تام، ومثله «يعدلون».
 {لا يعلمون ()} [] كاف، علي استءناف ما بعده.
 {واملي لهم} [] كاف؛ للابتداء بعده ب «ان».
 {متين ()} [] تام.
 {اولم يتفكروا} [] اتم؛ للابتداء بعده بالنفي.
 {من جنة} [] حسن، وقال ابو عمرو: كاف؛ للابتداء بعد بالنفي، والمعني: او لم يتاملوا ويتدبروا في انتقاء هذا الوصف عن رسول الله  صلي الله عليه وسلم ؛ فانه منتف عنه بلا محالة ، ولا يمكن لمن امعن الفكر ان ينسب ذلك اليه.
 {مبين ()} [] تام.
 {من شء} [] ليس بوقف؛ لان «وان عسي» متعلق ب «ينتظروا»، فهو في محل جر عطفا علي «ملكوت»، اي: او لم ينظروا في ان الامر والشان؟ عسي ان يكون، ف «ان يكون» فاعل «عسي»، وهي حينءذ تامة؛ لانها متي رفعت «ان» وما في حيزها كانت تامة.
 {اجلهم} [] كاف؛ للابتداء بالاستفهام، اي: اذا لم يءمنوا بهذا الحديث فكيف يءمنون
 
 بغيره؟
 {يءمنون ()} [] تام.
 {فلا هادي له} [] كاف، علي قراءة: «ونذرهم» بالنون والرفع علي الاستفهام؛ لانه منقطع عنه، وبها قرا ابن كثير، وابن عامر، ونافع ()، وليس بوقف لمن قرا (): «ويذرهم» بالياء والجزم؛ لانه معطوف علي موضع الفاء، وذلك ان موضعها جزم؛ لانها جواب الشرط، وجوابه مجزوم، انشد هشام:
 ايا صدقت فانني لك كاشح ... وعلي انتقاصك في الجباية ازددي ()
 فجزم (ازددي) عطفا علي محل الفاء، وانشد الاخفش البصري:
 دعني واذهب جانبا ... يوما واكفك جانبا ()
 فجزم (واكفك) عطفا علي محل الفاء، وقرا حمزة، والكساءي (): «ويذرهم» بالياء والجزم. وقرا عاصم، وابو عمرو (): «ويذرهم» بالياء والرفع، فان جعلته معطوفا علي ما بعد الفاء لم يجز الوقف علي ما قبله، وان جعلته مستانفا وقفت علي ما قبله. 
 {يعمهون ()} [] تام.
 {مرساها} [] حسن.
 {عند ربي} [] جاءز؛ لاختلاف الجملتين.
 {الا هو} [] كاف، عند ابي عمرو، وعند نافع: تام.
 {والارض} [] حسن.
 {الا بغتة} [] تام.
 {حفي عنها} [] كاف؛ للامر بعده، اي: عالم، ومعتن بها، وبالسءال عنها.
 {قل انما علمها عند الله} [] الاولي وصله؛ للاستدراك بعده.
 {لا يعلمون ()} [] تام.
 {الا ما شاء الله} [] حسن، وقيل: كاف.
 {من الخير} [] ليس بوقف؛ لعطف «وما مسني السوء» علي جواب «لو».
 {وما مسني السوء} [] تام ان فسر «السوء» بالجنون الذي نسبوه اليه، فكان ابتداء بنفي بعد وقف، اي: ما بي جنون ان انا الا نذير وبشير لقوم يءمنون، او المعني: لو علمت الغيب من امر القحط لاستكثرت من الطعام، وما مسني الجوع، والاولي ان يحمل السوء علي الجنون الذي نسبوه اليه ().
 {لقوم يءمنون ()} [] تام.
 {ليسكن اليها} [] حسن، ومثله «فمرت به».
 {الشاكرين ()} [] كاف.
 {فلما اتاهما} [] كاف ايضا؛ لانقضاء قصة ادم وحواء عليهما السلام، وما بعده تخلص الي قصة العرب واشراكهم، ولو كانت القصة واحدة لقال عما يشركون، كقوله: {دعوا الله ربهما} []، {فلما اتاهما صالحا جعلا له شركاء فيما اتاهما} [].
 {يشركون ()} [] كاف، ومثله «يخلقون»، و «ينصرون»، و «لا يتبعوكم» قرا نافع بتخفيف الفوقية ()، ومثله: {يتبعهم الغاوون ()} [الشعراء: ]، والباقون بالتشديد ()؛ فهما لغتان.
 {صامتون ()} [] تام، ومثله «امثالكم». 
 {صادقين ()} [] كاف، وكذا «بها» الاخيرة، وفي المواضع الثلاثة لا يجوز الوقف؛ لان «ام» عاطفة، والمعني: يقتضي الوصل؛ لان الاستفهام قد يحمل علي الابتداء به.
 {فلا تنظرون ()} [] تام.
 {الكتاب} [] كاف، علي استءناف ما بعده.
 {الصالحين ()} [] تام، علي القراءتين، قرا العامة (): «وليي» مضافا لياء المتكلم المفتوحة؛ اضاف الولي الي نفسه، وقرء (): «ولي الله» بياء مشددة مفتوحة، وجر الجلالة باضافة الولي الي الجلالة.
 {ينصرون ()} [] كاف.
 {لا يسمعوا} [] جاءز.
 {لا يبصرون ()} [] تام.
 {الجاهلين ()} [] كاف، ومثله «بالله».
 {عليم ()} [] تام.
 {مبصرون ()} [] كاف؛ لان «واخوانهم» مبتدا، و «يمدونهم» خبر.
 {لا يقصرون ()} [] كاف، ومثله «اجتبيتها»، وكذا «من ربي».
 {وهدي ورحمة} [] ليس بوقف؛ لتعلق ما بعده بما قبله.
 {يءمنون ()} [] تام.
 {وانصتوا} [] ليس بوقف؛ لحرف الترجي بعده، وتعلقه كتعلق (لام كي).
 {ترحمون ()} [] تام.
 {والاصال} [] جاءز.
 {الغافلين ()} [] تام.
 {ويسبحونه} [] جاءز.
 {وله يسجدون (()} [] تام. 
  سورة الانفال
 مدنية
 الا سبع ايات اولها: {واذ يمكر بك} [] الايات السبع فمكي.
 [ايها:] وهي سبعون وخمس ايات في الكوفي، وست في المدني والمكي والبصري، وسبع وسبعون في الشامي، اختلافهم في ثلاث ايات:
    
 {ثم يغلبون} [] عدها البصري والشامي.
    
 {ليقضي الله امرا كان مفعولا} [] الاول لم يعدها الكوفي.
    
 {بنصره وبالمءمنين ()} [] لم يعدها البصري.
  وكلمها: الف وماءتان واحد وثلاثون كلمة.
  وحروفها: خمسة الاف وماءتان واربعة وتسعون حرفا، وفيها مما يشبه الفواصل، وليس معدودا باجماع ثمانية مواضع:
    
 {اولءك هم المءمنون} [].
    
 {رجز الشيطان} [].
    
 {فوق الاعناق} [].
    
 {عن المسجد الحرام} [].
    
 {الا المتقون} []
    
 {يوم الفرقان يوم التقي الجمعان} [].
    
 {امرا كان مفعولا} [] الثاني بعده.
    
 {والي الله ترجع الامور ()} [].
 {عن الانفال} [] جاءز، وقيل: ليس بوقف؛ لان ما بعده جواب لما قبله.
 {والرسول } [] كاف؛ لان عنده انقضي الجواب، وقيل: حسن؛ لعطف الجملتين المختلفتين بالفاء.
 {ذات بينكم} [] كاف.
 {مءمنين ()} [] تام.
 {وجلت قلوبهم} [] حسن.
 {وعلي ربهم يتوكلون ()} [] تام، ان رفع «الذين» علي الابتداء، والخبر «اولءك هم المءمنون حقا»، او رفع خبر مبتدا محذوف، اي: هم الذين، وكاف ان نصب بتقدير: اعني، وليس بوقف ان جعل بدلا مما قبله، او نعتا، او عطف بيان.
 
 {ينفقون ()} [] حسن، ان لم يجعل «اولءك» خبر «الذين»؛ للفصل بين المبتدا والخبر.
 {حقا} [] كاف، وقيل: تام.
 {كريم ()} [] كاف، ان علقت الكاف في «كما» بفعل محذوف، وذكر ابو حيان في تاويل «كما» سبعة عشر قولا، حاصلها: ان الكاف نعت لمصدر محذوف، اي:
    
 الانفال ثابتة لله ثبوتا كما اخرجك ربك.
    
 او واصلحوا ذات بينكم اصلاحا كما اخرجك ربك.
    
 او واطيعوا الله ورسوله طاعة محققة كما اخرجك ربك.
    
 او وعلي ربهم يتوكلون توكلا حقيقيا كما اخرجك ربك.
    
 او هم المءمنون حقا كما اخرجك ربك.
    
 او استقر لهم درجات استقرارا ثابتا كاستقرار اخراجك.
 فعلي هذه التقديرات الست لا يوقف علي ما قبل الكاف؛ لتعلقها بما قبلها، وان علقت بما بعدها بتقدير:
    
 يجادلونك مجادلة كما اخرجك ربك؛ فهي متعلقة بما بعدها.
    
 او لكارهون كراهية ثابتة كما اخرجك ربك.
    
 او ان الكاف بمعني: اذ، وما زاءدة، نحو: {واحسن كما احسن الله اليك} [القصص: ] فمعناه: واحسن اذا احسن الله اليك؛ لان «كما» علي هذا متعلقة بمضمر فيسوغ الوقف علي ما قبل كما، والتقدير: اذكر اذ اخرجك ربك.
    
 او ان الكاف بمعني: علي، والتقدير: امض علي الذي اخرجك وان كرهوا ذلك كما في كراهتهم له اخرجك ربك.
    
 او ان الكاف في محل رفع، والتقدير: كما اخرجك ربك فاتق الله.
    
 او انها في محل رفع ايضا، والتقدير: لهم درجات عند ربهم ومغفرة ورزق كريم هذا وعد حق كما اخرجك.
    
 او هي في محل رفع ايضا، والتقدير: واصلحوا ذات بينكم ذلكم خير لكم كما اخرجك ربك.
    
 او هي في موضع رفع خبر مبتدا محذوف، اي: هذا الحال من تنفيلك الغزاة علي ما رايت في كراهتهم لها كحال اخراجك للحرب.
    
 او هي صفة لخبر مبتدا، وحذف هو وخبره، والتقدير: قسمتك الغناءم حق كما كان اخراجك حقا.
 
    
 او ان التشبيه وقع بين اخراجين اخراج ربك اياك من مكة وانت كاره لخروجك، وكان عاقبة ذلك الاخراج النصر والظفر كاخراجهم اياك من المدينة وبعض المءمنين كاره، يكون عقب ذلك الخروج النصر والظفر كما كان عاقبة ذلك الخروج الاول.
    
 انها قسم، مثل: {والسماء وما بناها ()} [الشمس: ] بجعل الكاف بمعني الواو، قاله ابو عبيدة، ومعناه: والذي اخرجك، كما قال: {وما خلق الذكر والانثي ()} [الليل: ] اي: والذي خلق الذكر والانثي، وبهذه التقادير يتضح المعني، ويكون الوقف تابع للمعني، فان كانت الكاف متعلقة بفعل محذوف، او متعلقة ب «يجادلونك» بعدها، او جعلت الكاف بمعني: اذ، او بمعني: علي، او بمعني: القسم حسن الوقف علي «كريم»، وجاز الابتداء بالكاف، وليس بوقف ان جعلتها متصلة ب «يسالونك»، او بغير ما ذكر، واستيفاء الكلام علي هذا الوقف جدير بان يخص بتاليف، وفيما ذكر غاية في بيان ذلك، ولله الحمد.
 {لكارهون ()} [] كاف، علي استءناف ما بعده.
 {بعد ما تبين} [] جاءز.
 {ينظرون ()} [] تام.
 {انها لكم} [] صالح.
 {تكون لكم} [] حسن.
 {الكافرين ()} [] ليس بوقف؛ لتعلق ما بعده بما قبله.
 {المجرمون ()} [] كاف، وقيل: تام ان علق «اذ» باذكر مقدرة، وكاف ان علق بقوله: «ليحق الحق ويبطل الباطل»، اي: يحق الحق وقت استغاثتكم، وهو قول ابن جرير، وهو غلط؛ لان «ليحق» مستقبل؛ لانه منصوب باضمار ان، و «اذ» ظرف لما مضي، فكيف يعمل المستقبل في الماضي؟! قاله السمين.
 {ربكم} [] حسن.
 {مردفين ()} [] كاف، ومثله: «به قلوبكم»؛ للابتداء بالنفي.
 {الا من عند الله} [] حسن.
 {حكيم ()} [] تام، ان نصب «اذ» باذكر مقدرة، وليس بوقف ان جعل «اذ» بدلا ثانيا من «اذ يعدكم»، ومن حيث كونه راس اية يجوز، قرا نافع (): «يغشيكم النعاس» بضم التحتية وسكون 
 المعجمة، ونصب «النعاس»، وقرا ابو عمرو (): «يغشاكم النعاس» برفع «النعاس»، وقرا الباقون (): «يغشيكم النعاس» بتشديد الشين المعجمة، ونصب «النعاس».
 {امنة منه} [] جاءز.
 {به الاقدام ()} [] كاف، ان علق «اذ» بمحذوف.
 {فثبتوا الذين امنوا} [] تام.
 {الرعب} [] حسن.
 {فوق الاعناق} [] ليس بوقف؛ للعطف.
 {كل بنان ()} [] حسن، ومثله «ورسوله» الاول.
 {العقاب ()} [] تام.
 {فذوقوه} [] جاءز، بتقدير: واعلموا ان للكافرين، او بتقدير: مبتدا تكون «ان» خبره، اي: وختم ان، وليس بوقف ان جعلت «وان» بمعني: مع ان، او بمعني: وذلك ان.
 {عذاب النار ()} [] تام.
 {الادبار ()} [] كاف؛ للابتداء بالشرط.
 {من الله} [] حسن.
 {وماواه جهنم} [] احسن منه.
 {المصير ()} [] تام.
 {قتلهم} [] حسن.
 {ولكن الله رمي} [] ليس بوقف؛ لتعلق ما بعده بما قبله؛ اذ معناه: ليبصرهم، ويختبرهم، وان جعلت اللام في «وليبلي» متعلقة بمحذوف بعد الواو، تقديره: وفعلنا ذلك، اي: قتلهم، ورميهم؛ ليبلي المءمنين كان وقفا حسنا.
 {بلاء حسنا} [] كاف، ومثله «عليم».
 {الكافرين ()} [] تام.
 {الفتح} [] حسن؛ للفصل بين الجملتين المتضادتين مع العطف. 
 {خير لكم} [] كاف، علي استءناف ما بعده.
 {نعد} [] جاءز.
 {ولو كثرت} [] كاف، علي قراءة: «وان» بكسر الهمزة، وبها قرا ابن كثير، وابو عمرو، وحمزة، والكساءي، وابو بكر عن عاصم ()، وليس بوقف ان قرء بفتحها؛ لتعلق ما بعدها بما قبلها، وان قد عمل فيها ما قبل الواو، وبفتحها قرا ابو جعفر، وشيبة، ونافع، وحفص عن عاصم، وابن عامر ()؛ وذلك علي تقدير: مبتدا تكون «ان» في موضع رفع، اي: ذلكم وان، او في موضع نصب، اي: واعلموا ان الله مع المءمنين.
 والوقف علي {المءمنين ()} [] تام؛ للابتداء ب «يا» النداء.
 {ورسوله} [] تام.
 {تسمعون ()} [] كاف، وقيل: جاءز؛ لعطف «ولا تكونوا» علي قوله: «ولا تولوا».
 {لا يسمعون ()} [] تام.
 {لا يعقلون ()} [] كاف، ومثله «لاسمعهم».
 {معرضون ()} [] تام؛ للابتداء ب «يا» النداء.
 {لما يحييكم} [] كاف.
 {وقلبه} [] حسن بتقدير: واعلموا انه، وليس بوقف ان جعل «وانه» معطوفا علي ما قبله.
 {تحشرون ()} [] كاف.
 {خاصة} [] حسن.
 {العقاب ()} [] كاف.
 {تشكرون ()} [] تام.
 {تعلمون ()} [] كاف.
 {عظيم ()} [] تام.
 {ويغفر لكم} [] كاف.
 {العظيم ()} [] تام.
 {او يخرجوك} [] حسن، ومثله: «ويمكرون». 
 {ويمكر الله} [] احسن منه.
 {الماكرين ()} [] كاف، وقيل: تام.
 {مثل هذا} [] حسن، ولا بشاعة في الابتداء بما بعده؛ لانه حكاية عن قاءلي ذلك.
 {الاولين ()} [] كاف، ومثله «اليم».
 {وانت فيهم} [] حسن، علي ان الضمير في «معذبهم» للمءمنين، والضمير في «ليعذبهم» للكفار؛ ليفرق بينهما، وليس بوقف علي قول من جعله فيهما للكفار.
 {وهم يستغفرون ()} [] تام؛ لان الله لا يهلك قرية وفيها نبيها، وما كان الله معذبهم لو استغفروه من شركهم، وما لهم ان لا يعذبهم الله وهم لا يستغفرون من كفرهم، بل هم مصرون علي الكفر والذنوب ().
 {اولياءه} [] كاف.
 {الا المتقون} [] ليس بوقف؛ لحرف الاستدراك بعده.
 {لا يعلمون ()} [] تام.
 {وتصدية} [] حسن، قرا العامة (): «صلاتهم» بالرفع، و «مكاء» بالنصب، وقرا عاصم (): «وما كان صلاتهم» بالنصب، ورفع «مكاء»، وخطا الفارسي هذه القراءة، وقال: لا يجوز ان يخبر عن النكرة بالمعرفة الا في ضرورة، كقول حسان:
 كان خبياة من بيت راس ... يكون مزاجها عسل وماء ()
 وخرجها ابو الفتح علي ان المكاء والتصدية اسما جنس، واسم الجنس تعريفه وتنكيره متقاربان، وهذا يقرب من المعرف ب (ال) الجنسية؛ حيث وصفه بالجملة، كما توصف به النكرة كقوله تعالي:
 {واية لهم الليل نسلخ منه النهار} [يس: ]. 
 وقوله:
 ولقد امر علي اللءيم يسبني ... فمضيت ثمت قلت لا يعنيني ()
 وقرا مكي بالقصر والتنوين ()، وجمع الشاعر بين القصر والمد في قوله:
 بكت عيني وحق لها بكاها ... وما يغني البكاء ولا العويل () 
 ونظير هذه القراءة ما قرء به قوله: {اولم يكن لهم اية ان يعلمه علماء بني اسراءيل ()} [الشعراء: ] برفع «اية» () وهي ضعيفة، وذلك انه جعل اسم «يكن» نكرة، وخبرها معرفة، وهذا قلب ما عليه الباب، ومن ذلك قول القطامي:
 قفي قبل التفرق يا ضباعا ... ولا يك موقف منك الوداعا ()
 وذلك ان قوله: «ان يعلمه» في موضع نصب خبر «يكن»، ونصب «اية» من وجهين اما ان تكون خبرا ل «يكن»، و «ان يعلمه» اسمها، فكانه قال: او لم يكن علم علماء بني اسراءيل اية لهم؟!
 {تكفرون ()} [] تام.
 {عن سبيل الله} [] حسن.
 {يغلبون} [] كاف، وراس اية في البصري والشامي؛ لان «والذين» مبتدا.
 {يحشرون ()} [] ليس بوقف؛ لتعلق لام «ليميز» بقوله: «يحشرون»، ومن حيث كونه راس اية يجوز.
 {من الطيب} [] ليس بوقف؛ لعطف ما بعده علي ما قبله. 
 {في جهنم} [] كاف.
 {الخاسرون ()} [] تام.
 {ما قد سلف} [] حسن؛ للابتداء بالشرط.
 {الاولين ()} [] كاف.
 كل ما في كتاب الله من ذكر «سنة الله» فهو بالهاء الا في خمسة مواضع فهو بالتاء المجرورة:
    
 {سنة الاولين ()} [].
    
 {الا سنة الاولين} [فاطر: ].
    
 {فلن تجد لسنة الله تبديلا} [فاطر: ].
    
 {ولن تجد لسنة الله تحويلا ()} [فاطر: ].
    
 {سنة الله التي قد خلت} [غافر: ].
 {كله لله} [] كاف؛ للابتداء بعد بالشرط.
 {بصير ()} [] كاف، ومثله «مولاكم».
 {النصير ()} [] تام، ولا وقف من قوله: «واعلموا» الي «الجمعان»؛ فلا يوقف علي «ابن السبيل»؛ لتعلق حرف الشرط بما قبله، اي: واعلموا هذه الاقسام ان كنتم مءمنين، وان جعل «ان كنتم» شرطا جوابه مقدر لا متقدم، اي: ان كنتم امنتم فاعلموا ان حكم الخمس ما تقدم، او فاقبلوا ما امرتم به كان الوقف علي «ابن السبيل» كافيا ().
 {الجمعان} [] كاف، وكذا «قدير»، ومثله «اسفل منكم».
 {لاختلفتم في الميعاد} [] وصله احسن؛ لحرف الاستدراك، وقيل: يجوز بتقدير: ولكن جمعكم هنا، والاول اولي.
 {كان مفعولا} [] ليس بوقف؛ لتعلق لام «ليهلك» بما قبلها.
 {عن بينة} [] حسن.
 {عليم ()} [] كاف، علي استءناف ما بعده، ولا يوقف عليه ان جعل ما بعده متعلقا بما قبلها، اي: وان الله لسميع عليم اذ يريكهم الله في منامك قليلا.
 {قليلا} [] حسن.
 {في الامر} [] لا يوقف عليه؛ لتعلق ما بعده بما قبله استدراكا، وعطفا.
 {سلم} [] كاف، وكذا «الصدور». 
 {قليلا} [] تام ان جعل المعني: واذكر اذ يريكموهم، وان جعل معطوفا علي ما قبله كان كافيا.
 {مفعولا} [] حسن.
 {ترجع الامور ()} [] تام؛ للابتداء بعد ب «يا» النداء.
 {تفلحون ()} [] كاف، ومثله «ورسوله».
 {ريحكم} [] حسن.
 {واصبروا} [] احسن منه.
 {الصابرين ()} [] كاف، ومثله «عن سبيل الله»، وكذا «محيط».
 {جار لكم} [] حسن، ومثله «برء منكم»، و «ما لا ترون»، و «اخاف الله» كلها حسان.
 {العقاب ()} [] كاف، ان جعلت التقدير: اذكر اذ يقول.
 {دينهم} [] تام؛ لانه اخر كلام المنافقين.
 {حكيم ()} [] تام.
 {كفروا} [] بيان؛ بين بهذا الوقف المعني المراد علي قراءة (): «يتوفي» بالتحتية، ان الفاعل هو ضمير «يتوفي» عاءد علي «الله»، وان «الذين كفروا» في محل نصب مفعول «يتوفي »، و «الملاءكة» مبتدا، والخبر «يضربون»، وان الملاءكة هي الضاربة لوجوه الكفار وادبارهم، وكذا ان جعل «الذين كفروا» فاعل «يتوفي» بالتحتية، والمفعول محذوف تقديره: يستوفون اعمالهم، و «الملاءكة» مبتدا، وما بعده الخبر، فعلي هذين التقديرين الوقف علي «كفروا»، وليس بوقف لمن قرا (): «تتوفي» بالفوقية او التحتية، و «الملاءكة» فاعل، و «يضربون» في موضع نصب حال من «الملاءكة»، وحينءذ الوقف علي «الملاءكة»، ويبتدء: «يضربون وجوههم»، فبين به ان الملاءكة هي التي تتوفاهم، ولم يصل الملاءكة بما بعده؛ لءلا يشكل بان الملاءكة ضاربة لا متوفية، والاولي ان لا يوقف علي «كفروا»، ولا علي «الملاءكة»، بل علي قوله: «وادبارهم»، اي: حال الادبار والاقبال، وجواب «لو» محذوف تقديره: لرايت امرا عجيبا وشيءا هاءلا فظيعا (). 
 {الحريق ()} [] كاف.
 {للعبيد ()} [] جاءز، والاولي وصله ب «كداب ال فرعون»، وتقدم ما يغني عن اعادته في ال عمران، فعليك به ان شءت، والداب: العادة، اي: كداب الكفار في مالهم الي النار، مثل مال ال فرعون لما ايقنوا ان موسي نبي فكذبوه، كذلك هءلاء جاءهم محمد  صلي الله عليه وسلم  فكذبوه، فانزل الله بهم عقوبة، كما انزل بال فرعون ().
 {والذين من قبلهم} [] جاءز، ثم يبتدء: «كفروا بايات الله فاخذهم الله بذنوبهم».
 {بذنوبهم} [] كاف، ومثله «العقاب».
 {عليم ()} [] جاءز، وفيه ما تقدم من ان الكاف في محل نصب، او في محل رفع، «والذين من قبلهم» كامة شعيب، وصالح، وهود، ونوح.
 {ال فرعون} [] حسن، علي استءناف ما بعده.
 {ظالمين ()} [] تام.
 {لا يءمنون ()} [] تام، ان جعل «الذين» بعده مبتدا، والخبر فيما بعده، وكذا ان جعل خبر مبتدا محذوف تقديره: هم الذين، او في موضع نصب بتقدير: اعني الذين، وليس بوقف ان جعل بدلا من «الذين» قبله، وهو الاحسن، ومن حيث كونه راس اية يجوز.
 {لا يتقون ()} [] كاف، ومثله «يذكرون»، وكذا «علي سواء».
 {الخاءنين ()} [] تام.
 {سبقوا} [] حسن، لمن قرا (): «انهم» بكسر الهمزة مستانفا، وهذا تمام الكلام، اي: لا تحسب من افلت من الكفار يوم بدر فاتونا، بل لابد من اخذهم في الدنيا، وليس بوقف لمن قرا (): بفتحها ؛ بتقدير: لانهم لا يعجزون؛ فهي متعلقة بالجملة التي قبلها.
 {لا يعجزون ()} [] كاف، ومثله «من رباط الخيل».
 {وعدوكم} [] حسن، وتام عند الاخفش، ويجعل قوله: «واخرين» منصوبا باضمار فعل غير معطوف علي ما قبله؛ لان النصب بالفعل اولي، وليس بوقف ان جعل «واخرين» معطوفا علي «واعدوا لهم ما استطعتم من قوة»، اي: وتءتوا اخرين، او معطوفا علي «وعدوكم»، اي: وترهبون 
 اخرين، والتفسير يدل علي هذين التقديرين ().
 {لا تعلمونهم} [] حسن؛ لانهم يقولون: لا اله الا الله، ويغزون معكم، وقيل: «واخرين من دونهم لا تعلمونهم» هم: الجن، تفر من صهيل الخيل، وانهم لا يقربون دارا فيها فرس، والتقدير علي هذا: وترهبون اخرين لا تعلمونهم وهم الجن، وكان محمد بن جرير يختار هذا القول لا بني قريظة وفارس هم يعلمونهم؛ لانهم كفار، وهم حرب لهم ()، قاله النكزاوي.
 {الله يعلمهم} [] تام.
 {يوف اليكم} [] جاءز.
 {لا تظلمون ()} [] كاف، ومثله «علي الله»، وكذا «العليم»، و «حسبك الله».
 {بين قلوبهم} [] كاف، ومثله «الف بينهم».
 {حكيم ()} [] تام.
 {حسبك الله} [] كاف، علي استءناف ما بعده، «ومن اتبعك» في محل رفع بالابتداء، اي: ومن اتبعك حسبهم الله، وليس بوقف ان جعل ذلك في محل رفع عطفا علي اسم الله، او في محل جر عطفا علي الكاف.
 {من المءمنين ()} [] تام.
 {علي القتال} [] حسن، ومثله «ماءتين»؛ للابتداء بالشرط، و «لا يفقهون» كذلك.
 {ضعفا} [] كاف، وقيل: تام.
 {ماءتين} [] حسن؛ للابتداء بالشرط، ومثله «باذن الله».
 {مع الصابرين ()} [] تام.
 {في الارض} [] كاف، علي استءناف ما بعده؛ لان المعني: حتي يقتل من بها من المشركين، او يغلب عليها، او هو علي تقدير اداة الاستفهام، اي: اتريدون؟
 {عرض الدنيا} [] حسن؛ لان ما بعده مستانف مبتدا.
 {والله يريد الاخرة} [] احسن منه.
 {حكيم ()} [] كاف، ومثله «عظيم».
 {طيبا} [] حسن.
 {واتقوا الله} [] احسن.
 {رحيم ()} [] تام. 
 {من الاسري} [] ليس بوقف؛ لان ما بعده مقول قول، قرا ابو عمرو (): «من الاساري» بزنة (فعالي) بضم الفاء وكسر اللام، والباقون (): بزنة (فعلي) بفتح الفاء واسكان العين وفتح اللام، وقرا ابو جعفر من العشرة (): «ايديكمو من الاساري» بالف بعد السين بغير امالة، وقرا ابن عامر، وعاصم بعدم الصلة ()، وبالقصر من غير امالة، واما بغير الصلة، وضم الهمزة، وفتح السين، وبغير امالة فلم يقرا بها احد لا من العشرة، ولا من السبعة ().
 {ويغفر لكم} [] كاف، ومثله «رحيم»، وقيل: تام.
 {فامكن منهم} [] كاف.
 {حكيم ()} [] تام، ولا وقف من قوله: «ان الذين امنوا» الي «اولياء بعض»؛ فلا يوقف علي «في سبيل الله».
 {اولياء بعض} [] حسن، وقيل: كاف، وقيل: تام.
 {حتي يهاجروا} [] حسن؛ للابتداء بالشرط.
 {ميثاق} [] كاف.
 {بصير ()} [] تام.
 {اولياء بعض} [] حسن، وقيل: كاف؛ للابتداء بالشرط، اي: ان لم تفعلوه تكن فتنة في الارض وفساد كبير.
 {كبير ()} [] كاف، ولا وقف من قوله: «والذين امنوا» الي «حقا»؛ فلا يوقف علي «في سبيل الله»، ولا علي «ونصروا»؛ لان خبر «والذين» «اولءك»، فلا يفصل بين المبتدا وخبره بالوقف.
 {حقا} [] كاف.
 {كريم ()} [] تام.
 {فاولءك منكم} [] كاف، ومثله «في كتاب الله».
 {عليم ()} [] تام. 
  سورة التوبة
 مدنية
 الا ايتين من اخرها: {لقد جاءكم رسول} [] الي اخرها، فانهما نزلتا بمكة.
 وانما تركت البسملة في براءة؛ لانها نزلت لرفع الامان، قال حذيفة بن اليمان: انكم تسمونها التوبة، وانما هي سورة العذاب، والله ما تركت احدا الا نالت منه. او لانها تشبه الانفال وتناسبها؛ لان الانفال ذكر العهود، وفي براءة نبذها؛ فضمت اليها، وقيل: لما اختلف الصحابة في انهما سورة واحدة هي سابعة السبع الطوال، او سورتان تركت بينهما فرجة، ولم تكتب البسملة ().
 [ايها:] وهي ماءة وتسع وعشرون اية في الكوفي، وثلاثون في عد الباقين، اختلافهم في ثلاث ايات:
    
 {ان الله برء من المشركين} [] عدها البصري.
    
 {الا تنفروا يعذبكم عذابا اليما} [] عدها الشامي.
    
 {وعاد وثمود} []، وعدها المدنيان والمكي.
  وكلمها: الفان واربعماءة وسبع وتسعون كلمة، وعلي قراءة ابن كثير ثمانية وتسعون كلمة.
  وحروفها: عشرة الاف وثمانماءة وسبعة وثلاثون حرفا.
 وفيها ما يشبه الفواصل، وليس معدودا باجماع ستة عشر موضعا:
    
 {عاهدتم من المشركين ()} [] بعده.
    
 {ثم لم ينقصوكم شيءا} []، علي ان اهل البصرة قد جاء عنهم خلاف فيه، وفي قوله: «برء من المشركين»، والصحيح عنهم ما قدمناه، والذي في اول السورة مجمع علي عده.
    
 {برحمة منه ورضوان} [].
    
 {وقاتلوا المشركين} [].
    
 {وقلبوا لك الامور} [].
    
 {وفي الرقاب} [].
    
 {من يلمزك في الصدقات} [].
    
 {ويءمن للمءمنين} [].
    
 {عذابا اليما} []، وهو الثاني.
    
 {ما علي المحسنين من سبيل} [].
    
 {الا يجدوا ما ينفقون ()} []. 
    
 {من المهاجرين والانصار} [].
    
 {وتفريقا بين المءمنين} [].
    
 {فيقتلون ويقتلون} [].
    
 {ان يستغفروا للمشركين} [].
    
 {ما يتقون} [].
    
 {انهم يفتنون} [].
    
 {عاهدتم من المشركين ()} [] كاف، وراس اية.
    
 {غير معجزي الله} [] ليس بوقف؛ لعطف «وان الله» علي ما قبله.
    
 {الكافرين ()} [] كاف، ان لم يعطف «واذان» علي «براءة».
    
 {يوم الحج الاكبر} [] حسن، علي قراءة الحسن البصري (): «ان الله» بكسر الهمزة علي اضمار القول، وليس بوقف لمن فتحها علي تقدير: بان؛ لان «ان» متعلقة بما قبلها، وموضعها اما نصب او جر، وهي قراءة الجماعة.
 {ورسوله} [] كاف، ان رفع «ورسوله» عطفا علي مدخول «ان» قبل دخولها؛ اذ هو قبلها رفع علي الابتداء، او رفع عطفا علي الضمير المستكن في «برء»، اي: برء هو ورسوله، وان رفع علي الابتداء، والخبر محذوف تقديره: ورسوله برء منهم، وحذف الخبر؛ لدلالة ما قبله عليه، فعليه يحسن الوقف علي «المشركين»، ولا يحسن علي «ورسوله»، وقد اجتمع القراء علي رفع «ورسوله» الا عيسي بن عمر، وابن ابي اسحاق ()؛ فانهما كانا ينصبان، فعلي مذهبهما يحسن الوقف علي «ورسوله»، ولا يحسن علي «المشركين»؛ لان «ورسوله» عطف علي لفظ الجلالة، او علي انه مفعول معه، وقرا الحسن (): «ورسوله» بالجر؛ علي انه مقسم به، اي: ورسوله ان الامر كذلك، وحذف جوابه؛ لفهم المعني، وعليها يوقف علي «المشركين» ايضا، وهذه القراءة يبعد صحتها عن الحسن؛ للايهام، حتي يحكي ان اعرابيا سمع رجلا يقرا: «ورسوله» بالجر فقال الاعرابي: ان كان الله بريءا من رسوله فانا برء، فنفذه القارء الي امير المءمنين عمر بن الخطاب، فحكي الاعرابي الواقعة، فحينءذ امر بتعليم 
 العربية، ويحكي ايضا عن علي كرم الله وجهه وعن ابي الاسود الدءلي. قال ابو البقاء: ولا يكون «ورسوله» عطفا علي «من المشركين»؛ لانه يءدي الي الكفر، وهذا من الواضعات اه سمين، مع زيادة للايضاح ().
 {فهو خير لكم} [] جاءز.
 {غير معجزي الله} [] حسن.
 {بعذاب اليم ()} [] ليس بوقف؛ للاستثناء بعده، وقيل: يجوز بجعل «الا» بمعني: الواو، ويبتدا بها، ويسند اليها.
 {الي مدتهم} [] كاف، ومثله «المتقين»، وقيل: تام.
 {كل مرصد} [] كاف، ومثله «سبيلهم».
 {رحيم ()} [] تام.
 {كلام الله} [] جاءز.
 {مامنه} [] حسن.
 {لا يعلمون ()} [] كاف.
 {المسجد الحرام} [] حسن.
 {فاستقيموا لهم} [] كاف.
 {المتقين ()} [] تام.
 {ولا ذمة} [] حسن.
 {قلوبهم} [] جاءز.
 {فاسقون ()} [] كاف، ومثله «عن سبيله»، وكذا «يعملون».
 {ولا ذمة} [] حسن.
 {المعتدون ()} [] كاف، ومثله «في الدين»، و «يعلمون»، و «اءمة الكفر»، قرا ابن عامر: «انهم لا ايمان لهم» بكسر الهمزة، اي: لا تصديق لهم، والباقون بفتحها ()؛ جمع يمين، يعني: نفي 
 الايمان عن الكفار ان صدرت منهم، وبذلك قال الشافعي، وقال ابو حنيفة: يمين الكافر لا تكون يمينا شرعية ().
 {ينتهون ()} [] كاف، ومثله: «اول مرة»، وقال الاخفش: تام، وخولف في هذا؛ لان ما بعده متعلق بما قبله، وقال بعضهم: الوقف «اتخشونهم»؛ لان اسم الله مبتدا مع الفاء، وخبره «احق»، او «ان تخشوه» مبتدا، و «احق» خبره قدم عليه، والجملة خبر الاول.
 {مءمنين ()} [] كاف.
 {قلوبهم} [] حسن، علي القراءة المتواترة برفع (): «يتوب» مستانفا، وليس بوقف علي قراءة ابن ابي اسحاق (): «ويتوب» بالنصب، علي اضمار: (ان) وجوبا؛ للامر بالواو، فيكون القتال سببا للتوبة.
 {من يشاء} [] كاف.
 {حكيم ()} [] تام.
 {وليجة} [] كاف.
 {بما تعملون ()} [] تام.
 {بالكفر} [] حسن، علي استءناف ما بعده، اي: ما كان لهم ان يعمروه في حال اقرارهم بالكفر، وليس بوقف ان جعل ما بعده جملة في موضع الحال من قوله: «للمشركين»، وعليه فلا يوقف علي «بالكفر»، ولا علي «اعمالهم».
 {خالدون ()} [] تام، ومثله «من المهتدين».
 {في سبيل الله} [] حسن.
 {لا يستوون عند الله} [] احسن منه.
 {الظالمين ()} [] تام؛ لانقطاع ما بعده عما قبله لفظا ومعني.
 {عند الله} [] حسن.
 {الفاءزون ()} [] كاف.
 {وجنات} [] جاءز. 
 {مقيم ()} [] ليس بوقف؛ لان «خالدين» حال مما قبله.
 {ابدا} [] كاف.
 {عظيم ()} [] تام.
 {علي الايمان} [] كاف؛ للابتداء بعده بالشرط.
 {الظالمون ()} [] تام، ولا وقف من قوله: «قل ان كان» الي قوله: «بامره»؛ لعطف المذكورات علي «اباءكم»، وخبر «كان» احب، ولا يوقف علي اسم كان دون خبرها.
 {بامره} [] كاف.
 {الفاسقين ()} [] تام.
 {كثيرة} [] حسن، وقيل: كاف، علي اضمار فعل تقديره: ونصركم يوم حنين، وليس بوقف ان جعل «ويوم حنين» معطوفا علي قوله: «في مواطن»، ومنهم من وقف علي «حنين»؛ لان «ويوم» عطف علي محل «مواطن»؛ عطف ظرف زمان علي ظرف مكان، وذلك جاءز؛ تقول: مررت امامك ويوم الجمعة، وهو جيد.
 {عنكم شيءا} [] جاءز، علي استءناف ما بعده، وليس بوقف ان جعل ما بعده جملة في موضع الحال.
 {بما رحبت} [] جاءز.
 {مدبرين ()} [] حسن، و «ثم»؛ لترتيب الاخبار.
 {وانزل جنودا لم تروها} [] صالح، علي استءناف ما بعده، وليس بوقف ان عطف ما بعده علي ما قبله، ولكنه من عطف الجمل المتغايرة المعني.
 {وعذب الذين كفروا} [] كاف، وكذا «الكافرين»، ومثله «من يشاء».
 {رحيم ()} [] تام.
 {نجس} [] حسن، علي استءناف ما بعده.
 {بعد عامهم هذا} [] كاف، وقيل: تام.
 {ان شاء} [] كاف.
 {حكيم ()} [] تام، ولا وقف الي «صاغرون»؛ لان العطف يصير الاشياء كالشء الواحد.
 {صاغرون ()} [] تام.
 {عزير ابن الله} [] جاءز، ومثله «المسيح ابن الله»، وقيل: كاف؛ لتناهي مقول الفريقين، ورسموا «ابن» بالف في الموضعين؛ لان الف «ابن» انما تحذف اذا وقع (ابن) صفة بين علمين، ونسب
 
 لابيه، فلو نسب لجده، كقولك: محمد بن هشام الزهري لم تحذف الالف؛ لان هشاما جده، او نسب الي امه لم تحذف ايضا، كعيسي ابن مريم، او نسب الي غير ابيه لم تحذف ايضا، كالمقداد ابن الاسود؛ فابوه الحقيقي عمرو، وتبناه الاسود، فهو كزيد ابن الامير، او زيد ابن اخينا ().
 {بافواههم} [] كاف، علي استءناف ما بعده، وليس بوقف ان جعل ما بعده جملة في موضع الحال من «الفريقين»، اي: مضاهين قول الذين كفروا من قبل، وحينءذ لا يوقف من قوله: «وقالت اليهود» الي «يضاهون قول الذين كفروا من قبل»؛ لاتصال الكلام بعضه ببعض.
 {من قبل} [] كاف.
 {اني يءفكون ()} [] تام.
 {والمسيح ابن مريم} [] حسن، وقيل: تام، ان جعل ما بعده مبتدا، وليس بوقف ان جعل حالا، اي: اتخذوه غير مامورين باتخاذه .
 {الها واحدا} [] حسن.
 {يشركون ()} [] كاف، علي استءناف ما بعده، وليس بوقف ان جعل ما بعده جملة في موضع الحال، ومن حيث كونه راس اية يجوز.
 {الكافرون ()} [] تام، علي استءناف ما بعده، وان جعل ما بعده متعلقا بما قبله لم يتم.
 {الا ان يتم نوره} []، وكذا {الدين كله} [] ليس بوقف؛ لان «لو» قد اكتفي عن جوابها بما قبلها.
 {المشركون ()} [] تام.
 {عن سبيل الله} [] حسن، وقال ابو عمرو: تام، ان جعل «والذين يكنزون» في محل رفع بالابتداء، وخبره «فبشرهم»، وليس بوقف ان جعل في محل نصب عطفا علي «ان كثيرا»، وكانه قال: ان كثيرا من الاحبار والرهبان لياكلون، والذين يكنزون ياكلون ايضا ().
 {في سبيل الله} [] ليس بوقف؛ لمكان الفاء.
 {بعذاب اليم ()} [] كاف، ان نصب «يوم» بمحذوف يدل عليه «عذاب»، اي: يعذبون يوم يحمي، او نصب مقدرا، وليس بوقف ان نصب «يوم» بقوله: «اليم»، او «بعذاب»، ولكن نصبه «بعذاب» لا يجوز؛ لانه مصدر قد وصف قبل اخذ متعلقاته، فلا يجوز اعماله، وهذا الشرط في عمله النصب للمفعول به، لا في عمله في الظرف والجار والمجرور؛ لان الجوامد قد تعمل فيه مع عمله في المتعلق، ولو اعمل وصفه: وهو اليم عظيم قدره يوم يحمي عليها. 
 {وظهورهم} [] كاف، علي استءناف ما بعده؛ لان ما بعده قولا محذوفا تقديره: فيقال هذا الكي جزاء ما كنزتم لانفسكم.
 {لانفسكم} [] جاءز.
 {تكنزون ()} [] تام.
 {والارض} [] جاءز.
 {حرم} [] حسن.
 {القيم} [] حسن.
 {انفسكم} [] كاف، علي ان الضمير في «فيهن» يعود علي «اربعة»، فلا يوقف من قوله: «منها اربعة» الي قوله: «انفسكم»، وان جعل الضمير في «فيهن» يعود علي «اثنا عشر» لم يوقف من قوله: «يوم خلق السموات والارض» الي قوله: «ذلك الدين القيم»، قاله يعقوب، ثم قال: والصحيح في ذلك ان عود الضمير لا يمنع الوقف علي ما قبله؛ لان بعض التام والكافي جميعه كذلك، قاله النكزاوي.
 {كافة} [] كاف.
 {المتقين ()} [] تام.
 {في الكفر} [] حسن، لمن قرا: «يضل» بضم الياء وفتح الضاد مبنيا للمفعول، وبها قرا الاخوان ()، وحفص، والباقون مبنيا للفاعل من «اضل » ()، وليس بوقف لمن قرا بفتح الياء وكسر الضاد يجعل الضلالة والزيادة من فعلهم، كانه قال: زادوا في الكفر فضلوا.
 {ما حرم الله} [] حسن.
 {اعمالهم} [] كاف.
 {الكافرين ()} [] تام.
 {الي الارض} [] حسن، وقيل: للاستفهام بعده.
 {من الاخرة} [] احسن منه.
 {الا قليل ()} [] كاف؛ للابتداء بعده بالشرط، وليست «الا» حرف استثناء في الموضعين، وانما هي (ان) الشرطية ادغمت النون في اللام، وسقطت النون في «تنفروا»، وسقوطها علامة الجزم، 
 وجواب الشرط «يعذبكم»، وتقديرهما: ان لم تنفروا، ان لم تنصروه.
 {قوما غيركم} [] حسن، ومثله «شيءا».
 {قدير ()} [] كاف.
 {ان الله معنا} [] حسن.
 {فانزل الله سكينته عليه} [] كاف، ان جعل الضمير في «عليه» للصديق  رضي الله عنه  وهو المختار، كما روي عن سعيد بن جبير، وان جعل الضمير في «عليه» للنبي  صلي الله عليه وسلم  لم يكف الوقف عليه.
 {السفلي} [] تام، لمن قرا: «وكلمة الله» بالرفع، وبها قرا العامة ()، وهي احسن؛ لانك لو قلت: وجعل كلمة الله هي العليا بالنصب عطفا علي مفعولي «جعل» لم يكن حسنا، وليس بوقف لمن قراه بالنصب عطفا علي «كلمة الذين كفروا هي السفلي»، وبها قرا علقمة، والحسن، ويعقوب ()، قال ابو البقاء: وهو ضعيف لثلاثة اوجه:
 احدها: وضع الظاهر موضع المضمر، كقول الشاعر:
 لا اري الموت يسبق الموت شء ... نغص الموت ذا الغني والفقيرا ()
 اذ لو كان كذلك لكان «وجعل كلمته هي العليا»، وقراءته بالنصب –اذن جاءزة معروفة في كلام العرب.
 الثاني: ان فيه دلالة علي ان «كلمة الله» كانت سفلي، فصارت عليا، وليس كذلك.
 الثالث: توكيد مثل ذلك ب «هي» بعيد؛ اذ ليس القياس ان تكون اياها، وقيل: ليست توكيدا؛ لان المضمر لا يءكد المظهر ()، اه سمين. 
 {هي العليا} [] كاف، علي القراءتين ().
 {حكيم ()} [] تام؛ للابتداء بالامر، وانتصب «خفافا وثقالا» علي الحال من فاعل «انفروا».
 {في سبيل الله} [] حسن.
 {تعلمون ()} [] كاف، ومثله «الشقة»؛ علي استءناف ما بعده، اي يقولون: بالله لو استطعنا، او «بالله» متعلق ب «سيحلفون».
 {معكم} [] حسن.
 {يهلكون انفسهم} [] احسن منه.
 {لكاذبون ()} [] كاف، وزعم بعضهم ان الوقف علي «عفا الله عنك »، وغره ان الاستفهام افتتاح كلام، وليس كما زعم؛ لشدة تعلق ما بعده به، ووصله بما بعده اولي، وقول من قال: لابد من اضمار شء تكون «حتي» غاية له، اي: وهلا تركت الاذن لهم حتي يتبين لك العذر الكلام في غنية عنه، ولا ضرورة تدعو اليه؛ لتعلق ما بعده به.
 {الكاذبين ()} [] كاف، ومثله «وانفسهم»، و «بالمتقين»، و «يترددون».
 {لاعدوا له عدة} [] وصله بما بعده اولي؛ لحرف الاستدراك بعده، قرا العامة (): «عدة» بضم العين وتاء التانيث، اي: من الماء والزاد والراحلة، وقرء (): «لاعدوا له عدة» بفتح العين وضمير له عاءد علي الخروج.
 {فثبطهم} [] جاءز.
 {القاعدين ()} [] كاف، قيل: هو من كلام بعضهم لبعض، وقيل: من كلام النبي  صلي الله عليه وسلم ، والقاعدون: النساء والصبيان.
 {يبغونكم الفتنة} [] حسن، علي ان الواو للاستءناف، وليس بوقف ان جعلت الجملة حالا من مفعول «يبغونكم»، او من فاعله، ورسموا «ولا اوضعوا» بزيادة الف بعد لام الف كما تري، ولا تعلم زيادتها من جهة اللفظ، بل من جهة المعني؛ لانهم يرسمون ما لا يتلفظ به
 {سماعون لهم} [] كاف، ومثله «بالظالمين»، وكذا «كارهون».
 {ولا تفتني} [] حسن، نزلت في الجد بن قيس، قال له النبي  صلي الله عليه وسلم : «هل لك في جلاد بني الاصفر؟» () وكان لهم بنات لم يكن في وقتهن اجمل منهن، فقال الجد بن قيس: اءذن لي في التخلف، 
 ولا تفتني بذكر بنات بني الاصفر؛ فقد علم قومي اني لا اتمالك عن النساء اذا رايتهن. واختلف في الابتداء بقوله: «اءذن لي»، فالكساءي يبدا بهمزتين الثانية منهما ساكنة، ومن ادرج الالف في الوصل ابتدا بهمزة مكسورة بعدها ياء ساكنة؛ لان القاعدة في الابتداء بالهمز: ان يكتب الساكن بحسب حركة ما قبله اولا، او وسطا، او اخر نحو: (اءذن، واءتمن، والباساء، واقرا، وجءناك، وهء، والمءتون، وتسءهم)؛ لان اللفظ يكتب بحروف هجاءية مع مراعاة الابتداء به والوقف عليه ().
 {سقطوا} [] حسن، معناه: في الاثم الذي حصل بسبب تخلفهم عن النبي  صلي الله عليه وسلم .
 {بالكافرين ()} [] كاف.
 {تسءهم} [] حسن؛ للابتداء بالشرط.
 {فرحون ()} [] تام .
 {لنا} [] جاءز.
 {مولانا} [] حسن.
 {المءمنون ()} [] كاف.
 {الحسنيين} [] حسن، يعني: الغنيمة، او الشهادة.
 {او بايدينا} [] حسن.
 {فتربصوا} [] احسن منه؛ للابتداء بعد ب «انا».
 {متربصون ()} [] احسن منهما، وقيل: لا وقف من قوله: «قل هل تربصون» الي «متربصون»؛ لان ذلك كله داخل تحت المقول المامور به، والوقف علي المواضع المذكورة في هذه الاية؛ للفصل بين الجمل المتغايرة المعني. 
 {لن يتقبل منكم} [] جاءز.
 {فاسقين ()} [] كاف، ومثله «كارهون».
 {ولا اولادهم} [] حسن، ان جعل «في الحياة الدنيا» متصلا بالعذاب، كانه قال: انما يريد الله ليعذبهم بها، اي: بالتعب في جمعها وانفاقها كرها، وهو قول ابي حاتم، وقيل: ليس بوقف؛ لان الاية من التقديم والتاخير؛ لاتصال الكلام بعضه ببعض، اي: فلا تعجبك اموالهم ولا اولادهم في الحياة الدنيا انما يريد الله ليعذبهم بها، اي: في الاخرة، وهذا الشرط معتبر في قوله: «واولادهم» الاتي ().
 {وهم كافرون ()} [] حسن، ومثله: «انهم لمنكم» الاول.
 {يفرقون ()} [] كاف، ومثله «يجمحون».
 {في الصدقات} [] حسن، وهو حرقوص بن زهير التميمي ذو الخويصرة راس الخوارج.
 {رضوا} [] جاءز؛ للفصل بين الشرطين، وجواب الاول لا يلزم فيه المقارنة بخلاف الثاني، فجاء ب «اذا» الفجاءية، وانهم اذا لم يعطوا فاجا سخطهم، ولم يكن تاخيره لما جبلوا عليه من محبة الدنيا والشره في تحصيلها، ومفعول «رضوا» محذوف، اي: رضوا ما اعطوا ().
 {يسخطون ()} [] كاف.
 {حسبنا الله} [] حسن، ومثله «ورسوله»؛ علي استءناف ما بعده، وقيل: ليس بوقف؛ لان من قوله: «ولو انهم رضوا» الي «راغبون» متعلق ب «لو»، وجواب «لو» محذوف تقديره: لكان خيرا لهم، وقيل جوابها: وقالوا، والواو زاءدة، وهذا مذهب الكوفيين، وقوله: «سيءتينا الله من فضله ورسوله انا الي الله راغبون» هاتان الجملتان كالشرح لقوله: «حسبنا الله»، ولذلك لم يتعاطفا؛ لانهما كالشء الواحد؛ لاتصال منع العطف، قاله السمين.
 {راغبون ()} [] تام.
 {وابن السبيل} [] جاءز؛ لان ما بعده منصوب في المعني بما قبله؛ لانه في معني المصدر المءكد، اي: فرض الله هذه الاشياء عليكم فريضة.
 {فريضة من الله} [] كاف.
 {حكيم ()} [] تام.
 {هو اذن} [] حسن، وكاف ان نون «اذن»، و «خير» ورفعا ()، ومن قرا: «قل هو اذن خير» 
 بخفض الراء علي الاضافة، وهي القراءة المتواترة () كان وقفه علي «منكم» حسنا علي القراءتين.
 {ويءمن للمءمنين} [] كاف، لمن قرا: «ورحمة» بالرفع مستانفا، اي: وهو رحمة، وليس بوقف لمن رفعها عطفا علي «اذن»، وكذا من جرها عطفا علي «خير» ()، والمعني: اننا نقول ما شءنا، ثم ناتي فنعتذر فيقبل منا، فقال الله: «قل اذن خير لكم»، اي: ان كان الامر علي ما تقولون فهو خير لكم، وليس الامر كما تقولون، ولكنه يءمن بالله ويءمن للمءمنين، اي: انما يصدق المءمنين.
 {امنوا منكم} [] كاف، ومثله «اليم»، وكذا «ليرضوكم»، علي استءناف ما بعده.
 {مءمنين ()} [] تام.
 {خالدا فيها} [] كاف، ومثله «العظيم».
 {بما في قلوبهم} []، و {قل استهزءوا} []، و {ما تحذرون ()} []، و {ونلعب} [] كلها وقوف كافية.
 {تستهزءون ()} [] حسن.
 {لا تعتذروا} [] احسن منه، وقيل: تام.
 {بعد ايمانكم} [] كاف، سواء قرء: «تعف» بضم التاء مبنيا للمفعول، اي: هذه الذنوب، او قرء: «تعذب» بضم التاء مبنيا للمفعول ايضا، «طاءفة» ناءب الفاعل، وبها قرا مجاهد ()، وقرء: «نعف» بنون العظمة، و «نعذب» كذلك، «طاءفة» بالنصب علي المفعولية، وبها قرا عاصم، وقرا الباقون: «ان يعف تعذب» مبنيا للمفعول، ورفع «طاءفة» علي النيابة، والناءب في الاول الجار بعده (). 
 {مجرمين ()} [] حسن، ومثله «من بعض»؛ لانه لو وصل بما بعده لكانت الجملة صفة لبعض، وهي صفة لكل المنافقين.
 {ايديهم} [] جاءز.
 {فنسيهم} [] كاف، ومثله «الفاسقون».
 {خالدين فيها} [] جاءز.
 {هي حسبهم} [] حسن.
 {ولعنهم الله} [] احسن منه.
 {مقيم ()} [] ليس بوقف؛ لتعلق ما بعده بما قبله، وقيل: حسن؛ لكونه راس اية، وذلك علي قطع الكاف في قوله: «كالذين» عما قبلها، اي: انتم كالذين؛ فالكاف في محل رفع خبر مبتدا محذوف.
 {واولادا} [] جاءز.
 {بخلاقهم} [] ليس بوقف؛ لاتساق ما بعده علي ما قبله.
 {كالذي خاضوا} [] كاف، علي استءناف ما بعده.
 {والاخرة} [] جاءز.
 {الخاسرون ()} [] كاف.
 {والمءتفكات} [] حسن، ومثله «بالبينات»؛ للابتداء بعد بالنفي.
 {يظلمون ()} [] تام.
 {اولياء بعض} [] جاءز.
 {ورسوله} [] حسن.
 {سيرحمهم الله} [] احسن منه، وقيل: كاف؛ للابتداء ب «ان».
 {عزيز حكيم ()} [] تام، ولا وقف من قوله: «وعد الله» الي «عدن»، فلا يوقف علي «الانهار»؛ لان «خالدين» حال مما قبله، ولا علي «فيها»؛ لاتساق ما بعده علي ما قبله.
 {في جنات عدن} [] كاف، ومثله «اكبر».
 {العظيم ()} [] تام؛ لانتهاء صفة المءمنين بذكر ما وعدوا به من نعيم الجنات.
 {واغلظ عليهم} [] جاءز.
 {وماواهم جهنم} [] حسن.
 
 {وبءس المصير ()} [] كاف.
 {ما قالوا} [] حسن، حلف الجلاس بن سويد من المنافقين ان كان محمد صادقا فنحن شر من الحمير.
 {بما لم ينالوا} [] كاف، وكذا من فضله؛ للابتداء بالشرط مع الفاء.
 {يك خيرا لهم} [] كاف؛ للابتداء بالشرط ايضا، وللفصل بين الجملتين.
 {والاخرة} [] كاف؛ للابتداء بالنفي.
 {ولا نصير ()} [] تام.
 {من الصالحين ()} [] حسن، ومثله «معرضون».
 {يكذبون ()} [] تام.
 {الغيوب ()} [] كاف، ان جعل «الذين» خبر مبتدا محذوف، او مبتدا خبره «سخر الله منهم»، وليس بوقف ان جعل بدلا من الضمير في «نجواهم»، ولا وقف من قوله: «الذين يلمزون» الي قوله: «سخر الله منهم»، فلا يوقف علي «في الصدقات»، ولا «علي جهدهم»، ولا علي «فيسخرون منهم»؛ لان خبر المبتدا لم يات، وهو «سخر الله منهم».
 والوقف علي {سخر الله منهم} [] جاءز.
 {اليم ()} [] كاف.
 {او لا تستغفر لهم} [] جاءز؛ للابتداء بالشرط.
 {فلن يغفر الله لهم} [] كاف، ومثله «ورسوله».
 {الفاسقين ()} [] تام، ولا وقف من قوله: «فرح المخلفون» الي قوله: «في الحر»، فلا يوقف علي «رسول الله»، ولا علي «في سبيل الله».
 {في الحر} [] كاف، ومثله «اشد حرا»؛ لان جواب «لو» محذوف، اي: لو كانوا يفقهون حرارة النار لما قالوا: «لا تنفروا في الحر»، ولو وصل لفهم ان نار جهنم لا تكون اشد حرا ان لم يفقهوا ذلك.
 {يفقهون ()} [] كاف، ومثله «كثيرا»؛ لان «جزاء» اما مفعول له، او مصدر لفعل محذوف، اي: يجزون جزاء.
 {يكسبون ()} [] كاف، ومثله «معي عدوا»، وقيل: لا وقف من قوله: «فقل لن تخرجوا» الي «مع الخالفين»؛ لان ذلك كله داخل في القول.
 {اول مرة} [] جاءز.
 {مع الخالفين ()} [] كاف، والوقف علي «قبره»، و «فاسقون»، و «واولادهم»، و «كافرون»، و «مع القاعدين»، و «مع الخوالف»، و «لا يفقهون» كلها وقوف كافية.
 
 {وانفسهم} [] جاءز .
 {لهم الخيرات} [] كاف.
 {المفلحون ()} [] تام.
 {خالدين فيها} [] كاف.
 {العظيم ()} [] تام.
 {ليءذن لهم} [] تام، عند نافع، وقال غيره: ليس بتام؛ لان قوله: «وقعد الذين» معطوف علي «وجاء».
 {ورسوله} [] كاف.
 {اليم ()} [] تام، ولا وقف من قوله: «ليس علي الضعفاء» الي قوله: «ورسوله»، فلا يوقف علي «المرضي»، ولا علي «حرج»؛ لاتساق الكلام.
 {ورسوله} [] كاف؛ للابتداء بالنفي، ومثله «من سبيل»، وكذا «رحيم»، وجاز الوقف عليه ان عطف ما بعده عليه؛ لكونه راس اية، وقيل: «تام» علي انه منقطع عما بعده؛ لان الذي بعده نزل في العرباض بن سارية واصحابه، ولا وقف من قوله: «ولا علي الذين» الي قوله: «ما ينفقون»، فلا يوقف علي قوله: «عليه»؛ لان قوله: «تولوا» علة ل «اتوك»، ولا علي «حزنا»؛ لان قوله: «الا يجدوا» مفعول من اجله، والعامل فيه «حزنا»، فيكون «الا يجدوا» علة العلة، يعني: انه علل فيض الدمع بالحزن، وعلل الحزن بعدم وجدان النفقة، وهو واضح ()، انظر: السمين.
 {ما ينفقون} [] تام.
 {اغنياء} [] جاءز؛ لان «رضوا» يصلح ان يكون مستانفا ووصفا.
 {الخوالف} [] حسن.
 {لا يعلمون ()} [] تام، علي استءناف ما بعده.
 {اليهم} [] حسن.
 {لا تعتذروا} [] احسن منه.
 {لن نءمن لكم} [] احسن منهما.
 {من اخباركم} [] كاف؛ لاستيفاء بناء المفاعيل الثلاث: الاول «نا»، والثاني «من اخباركم»، و «من» زاءدة، والثالث حذف اختصارا؛ للعلم به، والتقدير: نبانا الله من اخباركم كذا.
 {ورسوله} [] حسن. 
 {تعملون ()} [] كاف، وقيل: تام.
 {لتعرضوا عنهم} [] جاءز، ومثله «فاعرضوا عنهم»، وكذا «انهم رجس وماواهم جهنم»، وما بعده منصوب بما قبله في المعني؛ لانه اما مفعول له، او مفعول لمحذوف، اي: يجزون جزاء.
 {لترضوا عنهم} [] كاف؛ للابتداء بالشرط مع الفاء.
 {الفاسقين ()} [] تام.
 {علي رسوله} [] كاف، ومثله «حكيم».
 {الدواءر} [] حسن، وقيل: كاف.
 {السوء} [] كاف.
 {عليم ()} [] تام.
 {الرسول} [] كاف.
 {قربة لهم} [] حسن.
 {في رحمته} [] كاف.
 {رحيم ()} [] تام.
 {باحسان} [] ليس بوقف؛ لان قوله: «رضي الله عنهم» خبر «والسابقون»، فلا يفصل بين المبتدا والخبر بالوقف. وكان عمر بن الخطاب يري ان الواو ساقطة من قوله: «والذين اتبعوهم»، ويقول: ان الموصول صفة لما قبله، حتي قال له زيد بن ثابت: انها بالواو، فقال: اءتوني بثان، فاتوه به، فقال له: تصديق ذلك في كتاب الله في:
    
 {واخرين منهم لما يلحقوا بهم} [الجمعة: ].
    
 {والذين جاءوا من بعدهم} [الحشر: ].
    
 {والذين امنوا من بعد وهاجروا} [].
 وروي انه سمع رجلا يقرءها بالواو، فقال: ابي فدعاه، فقال: اقرانيه رسول الله  صلي الله عليه وسلم ، وانك لتبيع القرظ بالينبع، قال: صدقت، وان شءت قل: «شهدنا، وغبتم، ونصرنا، وخذلتم، واوينا، وطردتم»، ومن ثم قال عمر: لقد كنت اري انا رفعنا رفعة لا يرفعها احد بعدنا ().
 {ورضوا عنه} [] صالح.
 {ابدا} [] اصلح.
 {العظيم ()} [] تام. 
 {منافقون} [] كاف، ان جعل «وممن حولكم» خبرا مقدما، و «منافقون» مبتدا مءخرا، و «من الاعراب»؛ لبيان الجنس، او جعل «ومن اهل المدينة» خبرا مقدما، والمبتدا بعده محذوفا قامت صفته مقامه، والتقدير: ومن اهل المدينة قوم مردوا علي النفاق، ويجوز حذف هذا المبتدا الموصوف بالفعل، كقولهم: منا ظعن ومنا اقام؛ يريدون: منا جمع ظعن وجمع اقام، ويكون الموصوف بالتمرد منافقو المدينة، ويكون من عطف المفردات اذا عطفت خبرا علي خبر، وليس بوقف ان جعلت «مردوا» جملة في موضع النعت لقوله: «منافقون»، اي: وممن حولكم من الاعراب منافقون مردوا علي النفاق ().
 {ومن اهل المدينة} [] جاءز، والاولي وصله بما بعده؛ لتعلقه به.
 {لا تعلمهم} [] حسن، وكذا «نحن نعلمهم».
 {عظيم ()} [] تام، وقيل: كاف؛ لان قوله: «واخرون» معطوف علي قوله: «منافقون» ان وقف علي «المدينة»، ومن لم يقف كان معطوفا علي قوم المقدر، او خبر مبتدا محذوف، اي: ومنهم اخرون.
 {واخر سيءا} [] جاءز.
 {ان يتوب عليهم} [] كاف.
 {رحيم ()} [] تام، فلما تاب عليهم قالوا: يا رسول الله خذ اموالنا لله، وتصدق بها، فقال رسول الله  صلي الله عليه وسلم : «ما امرت في اموالكم بشء» ()، فانزل الله تعالي: «خذ من اموالهم» الاية.
 {وصل عليهم} [] كاف؛ للابتداء ب «ان»، وكذا «سكن لهم»، ومثل ذلك «عليم»، و «الرحيم».
 {والمءمنون} [] حسن.
 {تعملون ()} [] كاف، وما بعده عطف علي الاول، اي: ومنهم اخرون.
 {واما يتوب عليهم} [] كاف، ومثله «حكيم» علي استءناف ما بعده، وهو مبتدا محذوف 
 الخبر، تقديره: منهم، او فيما يتلي عليكم، او فيما يقص عليكم؛ علي قراءة من قرا: «والذين» بغير واو، وبالواو عطفا علي ما قبله؛ لانه عطف جملة علي جملة، فكانه استءناف كلام علي اخر، وليس بوقف علي قراءة نافع، وابن عامر بغير واو ()، وان اعرب بدلا من قوله: «واخرون مرجون».
 {من قبل} [] جاءز.
 {الحسني} [] كاف.
 {لكاذبون ()} [] تام، ان لم تجعل «لا تقم فيه ابدا» خبر قوله: «والذين اتخذوا»، وليس وقفا ان جعل «الذين» مبتدا، وخبره «لا يزال بنيانهم»، فلا يوقف عليه، ولا علي شء قبل الخبر، ومن حيث كونه راس اية يجوز.
 {ابدا} [] حسن؛ للابتداء بلام الابتداء، او جواب قسم محذوف، وعلي التقديرين يكون «لمسجد» مبتدا، و «اسس» في محل رفع نعتا له، و «احق» خبره، وناءب الفاعل ضمير «المسجد» علي حذف مضاف، اي: اسس بنيانه.
 {ان تقوم فيه} [] حسن، ان جعل «فيه» الثانية خبرا مقدما، و «رجال» مبتدا مءخر، وليس وقفا ان جعل صفة «لمسجد»، و «رجال» فاعل بها، وهو اولي من حيث ان الوصف بالمفرد اصل، والجار قريب من المفرد، انظر: السمين.
 {ان يتطهروا} [] كاف.
 {المطهرين ()} [] تام.
 {ورضوان خير} [] ليس بوقف؛ لعطف ما بعده علي ما قبله.
 {في نار جهنم} [] كاف.
 {الظالمين ()} [] تام، علي ان قوله: «لا تقم فيه ابدا» خبر «الذين»، او علي تقدير: ومنهم الذين، فان جعلت «لا يزال» خبر «الذين» فلا يتم الوقف علي «الظالمين».
 {قلوبهم} [] كاف.
 {حكيم ()} [] تام.
 {الجنة} [] جاءز.
 {والقران} [] كاف؛ للابتداء بعد بالشرط، والاستفهام التقريري، اي: لا احد اوفي بعهده من الله تعالي، فاخلافه لا يجوز علي الله تعالي؛ اذ اخلافه لا يقدم عليه الكرام، فكيف بالغني الذي لا 
 يجوز عليه قبيح قط؟!
 {من الله} [] جاءز.
 {بايعتم به} [] كاف.
 {العظيم ()} [] تام، ان رفع ما بعده علي الاستءناف، او نصب علي المدح، وليس بوقف ان جر بدلا من «المءمنين»، ومن حيث كونه راس اية يجوز، ولا وقف من قوله: «التاءبون» الي «لحدود الله»، ولم يات بعاطف بين هذه الاوصاف؛ لمناسبتها لبعضها الا في صفة الامر بالمعروف والنهي عن المنكر؛ لتباين ما بينهما، فان الامر طلب فعل، والنهي طلب ترك، وقيل: الواو واو الثمانية؛ لانها دخلت في الصفة الثامنة، كقوله: {وثامنهم كلبهم} [الكهف: ]؛ لان الواو تءذن بان ما بعدها غير ما قبلها، والصحيح انها للعطف.
 {لحدود الله} [] حسن.
 {وبشر المءمنين ()} [] تام؛ للابتداء بالنفي.
 {الجحيم ()} [] كاف.
 {وعدها اياه} [] حسن، وقال نافع: تام.
 {تبرا منه} [] حسن.
 {حليم ()} [] تام.
 {ما يتقون} [] كاف.
 {عليم ()} [] تام.
 {والارض} [] جاءز.
 {ويميت} [] كاف؛ للابتداء بالنفي.
 {ولا نصير ()} [] تام.
 {فريق منهم} [] جاءز، والاولي وصله؛ لتنوع توبة التاءبين، والتوبة تشعر بذنب، واما النبي فملازم للترقي، فتوبته رجوع من طاعة الي اكمل منها ().
 {ثم تاب عليهم} [] كاف، ومثله «رحيم»، علي استءناف ما بعده، وليس بوقف ان عطف علي قوله: «والانصار»، ومن حيث كونه راس اية يجوز.
 {خلفوا} [] جاءز؛ لان المعني: لقد تاب الله علي النبي وعلي الثلاثة، ويرتقي لدرجة الحسن بهذا التقدير. 
 {الا اليه} [] جاءز، و «ثم»؛ لترتيب الاخبار.
 {ليتوبوا} [] كاف.
 {الرحيم ()} [] تام، ومثله «الصادقين».
 {عن نفسه} [] حسن، وقال احمد بن موسي: تام.
 {عمل صالح} [] كاف.
 {المحسنين ()} [] كاف، وقال ابو حاتم، لا احب الوقف علي «المحسنين»؛ لان قوله: «ولا ينفقون نفقة» معطوف علي «ولا ينالون»، وقيل: تام، علي استءناف ما بعده، وليس بوقف ان عطف ما بعده علي قوله: «لا يصيبهم»، ومن حيث كونه راس اية يجوز.
 {الا كتب لهم} [] ليس بوقف؛ لان لام «ليجزيهم الله» (لام كي)، وهي لا يبتدا بها؛ لانها متعلقة بما قبلها، وقال ابو حاتم السجستاني: تام؛ لان اللام لام قسم حذفت منه النون تخفيفا، والاصل: (ليجزينهم) فحذفوا النون وكسروا اللام بعد ان كانت مفتوحة، فاشبهت في اللفظ (لام كي)، فنصبوا بها كما نصبوا ب (لام كي)، قال ابو بكر بن الانباري: وهذا غلط؛ لان لام القسم لا تكسر ولا ينصب بها، ولو جاز ان يكون معني «ليجزيهم» (ليجزينهم) –لقلنا: والله ليقم عبد الله بتاويل، والله ليقومن. وهذا معدوم في كلام العرب، واحتج بان العرب تقول في التعجب: اكرم بعبد الله فيجزمونه؛ لشبهه لفظ الامر، وقال ابو بكر بن الانباري: وليس هذا بمنزلة ذاك؛ لان التعجب عدل الي لفظ الامر، ولام القسم لم توجد مكسورة قط في حال ظهور اليمين، ولا في اضماره، قال بعضهم: ولا نعلم احدا من اهل العربية وافق ابا حاتم في هذا القول، واجمع اهل العلم باللسان علي ان ما قاله وقدره في ذلك خطا لا يصح في لغة ولا قياس، وليست هذه لام قسم، قال ابو جعفر: ورايت الحسن بن كيسان ينكر مثل هذا علي ابي حاتم، اي: يخطءه فيه، ويعيب عليه هذا القول، ويذهب الي انها (لام كي) متعلقة بقوله: «كتب» اه نكزاوي، مع زيادة للايضاح، ويقال مثل ذلك في نظاءره ().
 {ما كانوا يعملون ()} [] تام.
 {كافة} [] حسن.
 ولا وقف من قوله: «فلولا نفر» الي «يحذرون»، فلا يوقف علي «في الدين»؛ لعطف ما بعده علي ما قبله، ولا علي «اذا رجعوا اليهم»؛ لانه لا يبتدا بحرف الترجي؛ لانها في التعلق ك (لام كي).
 {يحذرون ()} [] تام.
 {غلظة} [] حسن. 
 {المتقين ()} [] تام.
 {هذه ايمانا} [] كاف، ومثله «يستبشرون».
 {الي رجسهم} [] حسن.
 {كافرون ()} [] تام، علي قراءة من قرا: «او لا ترون» بالتاء الفوقية، يعني به: المءمنين؛ لانه استءناف واخبار، ومن قرا بالتحتية لم يقف علي «كافرون» ()؛ لان ما بعده راجع الي الكفار، وهو متعلق به، وايضا فان الواو واو عطف دخلت عليها همزة الاستفهام.
 {او مرتين} [] كاف، وكذا «ولا هم يذكرون»، علي استءناف ما بعده، وليس بوقف ان عطف علي ما قبله، ومن حيث كونه راس اية يجوز.
 {ثم انصرفوا} [] حسن، وقال الفراء: كاف؛ لان المعني عنده: واذا ما انزلت سورة فيها ذكر المنافقين وعيبهم قال بعضهم لبعض: هل يراكم من احد ان قمتم، فان لم يرهم احد خرجوا من المسجد ().
 {صرف الله قلوبهم} [] ليس بوقف؛ لان ما بعده متصل بالصرف ان جعل خبرا، وان جعل دعاء عليهم جاز.
 {لا يفقهون ()} [] تام.
 {من انفسكم} [] كاف، وقرء: «من انفسكم» بفتح الفاء ()، اي: من اشرفكم، من النفاسة، وقيل: الوقف علي «عزيز»؛ لانه صفة «رسول»، وفيه تقديم غير الوصف الصريح، وهو من انفسكم؛ لانه جملة علي الوصف الصريح، وهو عزيز؛ لانه مفرد، ومنه: {وهذا كتاب انزلناه مبارك} [الانعام: ] ف «انزلناه» جملة، و «مبارك» مفرد، ومنه: {يحبهم ويحبونه} [الماءدة: ]، وهي غير صريحة؛ لانها جملة مءولة بمفرد، وقوله: {اذلة علي المءمنين اعزة علي الكافرين} [] صفتان صريحتان؛ لانهما مفردتان كما تقدم، وقد يجاب بان «من انفسكم» متعلق ب «جاءكم»، وجوز الحوفي ان يكون «عزيز» مبتدا، و «ما عنتم» خبره، والارجح انه صفة «رسول»؛ لقوله بعد ذلك: «حريص»، فلم يجعله خبرا لغيره، وادعاء كونه خبر مبتدا محذوف لا حاجة اليه؛ فقوله: «حريص عليكم» خطاب 
 لاهل مكة، و «بالمءمنين رءوف رحيم» عام لجميع الناس، و «بالمءمنين» متعلق ب «رءوف»، ولا يجوز ان تكون المسالة من التنازع؛ لان من شرطه تاخر المعمول عن العاملين، وان كان بعضهم قد خالف، ويجيز زيدا ضربته، فنصب زيدا بعامل مضمر وجوبا تقديره: ضربت زيدا ضربته، وانما كان الحذف واجبا؛ لان العامل مفسر له، وقيل: نصب زيدا بالعامل المءخر، وقال الفراء: الفعل عامل في الظاهر المتقدم، وفي الضمير المتاخر، اه من الشذور ().
 {حريص عليكم} [] حسن، وقال ابو عمرو: كاف.
 {رءوف رحيم ()} [] كاف، وقال ابو عمرو: تام، ولم يجمع الله بين اسمين من اسماءه تعالي لاحد غير رسول الله  صلي الله عليه وسلم .
 {حسبي الله} [] جاءز، ومثله «الا هو»، وكذا «عليه توكلت»، والجمهور علي جر الميم من «العظيم» صفة ل «العرش»، وقرا ابن محيصن برفعها نعتا ل «رب» (). قال ابو بكر الاصم: وهذه القراءة احب الي؛ لان جعل «العظيم» صفة له تعالي اولي من جعله صفة ل «العرش».
 {العظيم ()} [] تام. 
  سورة يونس
  عليه السلام 
 مكية
 الا قوله: {فان كنت في شك} [] الايتين، او الثلاث، قال ابن عباس: فيها من المدني: {ومنهم من يءمن به} [] الاية، نزلت في اليهود بالمدينة.
 [ايها:] وهي ماءة وعشر ايات في الشامي، وتسع في عد الباقين، اختلافهم في ثلاث ايات:
    
 {مخلصين له الدين} [] عدها الشامي.
    
 {لنكونن من الشاكرين ()} [] لم يعدها الشامي .
    
 {وشفاء لما في الصدور} [] وعدها الشامي، وكلهم لم يعدوا «الر»، و «المر» في الست سور.
  وكلمها: الف وثمانماءة واثنتان وثلاثون كلمة.
  وحروفها: سبعة الاف وخمسماءة وسبعون وستون حرفا.
 وفيها ما يشبه الفواصل وليس معدودا باجماع موضع واحد، وهو: {ولقد بوانا بني اسراءيل} [].
 {الر} [] تقدم ما يغني عن اعادته في سورة البقرة.
 {الحكيم ()} [] تام؛ للابتداء بالاستفهام الانكاري.
 {ان انذر الناس} [] حسن، سواء اعربنا «ان اوحينا» اسم كان، و «عجبا» الخبر، او عكسه، والتقدير: اكان ايحاءنا بالانذار والتبشير الي رجل منهم عجبا، و «ان انذر الناس» تفسيرا، وجعلت «كان» تامة، و «ان اوحينا» بدلا من «عجبا» بدل اشتمال، او كل من كل، وجعل هذا نفس العجب مبالغة ().
 {ان لهم قدم صدق عند ربهم} [] احسن مما قبله، وليس بوقف علي قول من يقول: ان قوله: «قال الكافرون» جواب «ان اوحينا»، وهذا اشارة الي الوحي، قاله ابو حاتم، والمراد بالقدم الصدق: محمد  صلي الله عليه وسلم ، وهي مءنثة، يقال: قدم حسنة، قال حسان:
 لنا القدم الاولي اليك وخلفنا ... لاولنا في طاعة الله تابع () 
 اي: ما تقدم لهم في السءدد.
 {لساحر مبين ()} [] اتم مما قبله.
 {علي العرش} [] حسن، ومثله في الحسن «يدبر الامر».
 {الا من بعد اذنه} [] كاف، ومثله «فاعبدوه»، وكذا «تذكرون».
 {جميعا} [] حسن، سواء اعرب «جميعا» حال من المضاف اليه، وهو الكاف، وهو صحيح؛ لوجود شرطه، وهو كون المضاف صالحا للعمل في الحال، ومثله «حقا» لمن قرا: «انه يبدا الخلق» بكسر الهمزة، وليس بوقف لمن قرا بفتحها، وهو ابو جعفر يزيد بن القعقاع؛ فانه كان يقرا (): «انه» بفتح الهمزة، فعلي قراءته لا يوقف علي «حقا»؛ لان ما قبلها عامل فيها، بل يوقف علي «وعد الله»، ثم يبتدء «حقا انه يبدا الخلق»، وقال ابو حاتم: موضع «ان» بالفتح نصب بالوعد؛ لانه مصدر مضاف لمفعوله، فكانه قال: وعد الله له. فعلي قوله لا يوقف علي ما قبل «حقا»، ولا علي ما بعده، وقيل: موضعه رفع، اي: حقا انه يبدا الخلق، كما قال الشاعر:
 احقا عباد الله ان لست داخلا ... ولا خارجا الا علي رقيب () 
 فرفع (ان) بعد (حقا)؛ لانها لا تكسر بعد (حقا)، ولا بعد ما هو بمعناها، وقيل: موضعها جر؛ علي اضمار حرف الجر، اي: وعد الله حقا بانه، وقرء (): «وعد الله» فعل وفاعل.
 {ثم يعيده} [] فيه ما مر في براءة من ان لام «ليجزي» (لام كي).
 {بالقسط} [] تام؛ لفصله بين ما يجزي به المءمنون، وما يجزي به الكافرون، وهو من عطف الجمل.
 {يكفرون ()} [] تام.
 {والحساب} [] حسن، سءل ابو عمرو عن «الحساب» اتنصبه، ام تجره؟ اي: هل تعطفه علي عدد فتنصبه، او علي السنين فتجره؟ فقال: لا يمكن جره؛ اذ يقتضي ذلك ان يعلم عدد الحساب، ولا يقدر احدا ان يعلم عدده.
 {الا بالحق} [] كاف، علي قراءة «نفصل» بالنون، وليس بوقف لمن قرا بالتحتية ()؛ لان الكلام يكون متصلا؛ لان ما بعده راجع الي اسم الله تعالي في قوله: «ما خلق الله ذلك» فلا يقطع منه.
 {يعلمون ()} [] تام، ومثله «يتقون»، ولا وقف من قوله: «ان الذين لا يرجون» الي «يكسبون»، فلا يوقف علي «الدنيا»؛ لاتساق ما بعده علي ما قبله، ولا علي «واطمانوا بها» كذلك، ولا علي «الغافلون»؛ لان «اولءك» خبر «ان»، فلا يفصل بين اسمها وخبرها بالوقف، وكثيرا ما تكون اية تامة، وهي متعلقة باية اخري في المعني؛ لكونها استثناء، والاخري مستثني منها، او حالا مما قبلها، وان جعل «اولءك» مبتدا، و «ماواهم» مبتدا ثانيا، و «النار» خبر الثاني، والثاني وخبره خبر «اولءك» كان الوقف علي «غافلون» كافيا.
 {يكسبون ()} [] تام.
 {بايمانهم} [] حسن.
 {في جنات النعيم ()} [] تام عند احمد بن موسي.
 {سبحانك اللهم} [] حسن، قال سفيان: اذا اراد احد من اهل الجنة ان يدعو بالشء اليه قال: سبحانك اللهم. فاذا قالوها مثل بين يديه؛ فهي علامة بين اهل الجنة وخدمهم، فاذا ارادوا الطعام قالوها اتاهم حالا ما يشتهون، فاذا فرغوا حمدوا الله تعالي، فذلك قوله: «واخر دعواهم ان الحمد لله رب العالمين» (). 
 {فيها سلام} [] احسن مما قبله؛ لان الجملتين، وان اتفقتا فقد اعترضت جملة معطوفة اخري ؛ لان قوله: «واخر دعواهم» معطوف علي «دعواهم» الاول، ف «دعواهم» مبتدا، و «سبحانك» منصوب بفعل مقدر لا يجوز اظهاره هو الخبر، والخبر هنا هو نفس المبتدا، والمعني: ان دعاءهم هذا اللفظ، فدعوي يجوز ان تكون بمعني الدعاء، ويدل عليه «اللهم»؛ لانه نداء في معني: يا الله، ويجوز ان يكون هذا الدعاء بمعني العبادة؛ فدعوي مصدر مضاف للفاعل.
 {رب العالمين ()} [] تام.
 {اجلهم} [] حسن؛ للفصل بين الماضي والمستقبل، اي: ولو يعجل الله للناس الشر في الدعاء كاستعجالهم بالخير لهلكوا.
 {يعمهون ()} [] تام.
 {او قاءما} [] حسن، ومثله «مسه»، وزعم بعضهم ان الوقف علي قوله: «فلما كشفنا عنه ضره مر» ليس بشء؛ لان المعني: استمر علي ما كان عليه من قبل ان يمسه الضر، ونسي ما كان فيه من الجهد والبلاء، ونسي سءاله ايانا.
 {يعملون ()} [] تام، عند ابي عمرو.
 {لما ظلموا} [] ليس بوقف؛ لعطف «وجاءتهم» علي «ظلموا»، اي: لما حصل لهم هذان الامران: مجء الرسل بالبينات، وظلمهم اهلكوا.
 {وما كانوا ليءمنوا} [] حسن، والكاف من «كذلك» في موضع نصب علي المصدر المحذوف، اي: مثل ذلك الجزاء وهو الاهلاك.
 {نجزي القوم المجرمين ()} [] كاف، ومثله «تعملون».
 {بينات} [] ليس بوقف؛ لان «قال» جواب «اذا» فلا يفصل بينهما.
 {او بدله} [] حسن، وقال ابو عمرو: كاف.
 {من تلقاء نفسي} [] جاءز؛ للابتداء ب «ان» النافية، وتقدم ان «تلقاءي» من المواضع التسعة التي زيدت فيها الياء، كما رسمت في مصحف عثمان.
 {ما يوحي الي} [] حسن، وقال ابو عمرو: كاف؛ للابتداء ب «اني».
 {عظيم ()} [] تام.
 {ما تلوته عليكم} [] جاءز، علي قراءة قنبل: «ولادراكم به» بغير نفي ()؛ فهو استفهام واخبار بايقاع الراية من الله تعالي، فهو منقطع من النفي الذي قبله، وليس بوقف لمن قرا: «ولا ادراكم» 
 بالنفي ()؛ لانه معطوف علي ما قبله من قوله: «ما تلوته عليكم»؛ فهو متعلق بالتلاوة، وادخل معها في النفي، فلا يقطع منها، وقرا ابن عباس، والحسن، وابن سيرين، وابو رجاء (): «ولا ادراتكم به» بهمزة ساكنة بعد الراء مبدلة من الف، والالف منقلبة عن ياء؛ لانفتاح ما قبلها، وهي لغة لعقيل حكاها قطرب، وقيل: الهمزة اصلية، وان اشتقاقه من الدرء، وهو: الدفع.
 {ولا ادراكم به} [] جاءز، علي القراءتين ().
 {من قبله} [] كاف؛ للابتداء بالاستفهام بعده.
 {افلا تعقلون ()} [] تام.
 {باياته} [] كاف.
 {المجرمون ()} [] تام.
 {ولا ينفعهم} [] ليس بوقف؛ لان ما بعده من مقول الكفار.
 {عند الله} [] كاف؛ لانتهاء مقولهم، ومثله «ولا في الارض».
 {عما يشركون ()} [] تام.
 {فاختلفوا} [] حسن.
 {يختلفون ()} [] تام، والمعني: ولولا كلمة سبقت من ربك لاهلك الله اهل الباطل، وانجي اهل الحق.
 {اية من ربه} [] جاءز؛ لان «الامر» مبتدا بالفاء، ومثله «الغيب لله».
 {فانتظروا} [] ارقي منهما؛ لان جواب الامر منقطع لفظا متصل معني.
 {من المنتظرين ()} [] تام.
 {في اياتنا} [] حسن، ومثله «اسرع مكرا».
 {ما تمكرون ()} [] تام، سواء قرء بالفوقية، ام بالتحتية ().
 {في البر والبحر} [] حسن، وقرء: «ينشركم» من النشر والبث، «ويسيركم» من التسيير ()؛ 
 لان «حتي» للابتداء اذا كان بعدها اذا الا قوله: «حتي اذا بلغوا النكاح»؛ فانها لانتهاء الابتداء، وجواب اذا قوله: «جاءتها ريح».
 {من كل مكان} [] حسن، ومثله «له الدين»، لان «دعوا الله» جواب سءال مقدر، كانه قيل: فما كان حالهم في تلك الشدة؟ قيل: دعوا الله، ولم يدعوا سواه.
 {من الشاكرين ()} [] كاف، ومثله «بغير الحق».
 {علي انفسكم} [] تام لمن قرا: «متاع» باضمار مبتدا محذوف تقديره: هو متاع، او ذلك متاع، وكذا لو نصب بمحذوف، اي: تبغون متاع، او رفع «بغيكم» علي الابتداء، و «علي انفسكم» في موضع الخبر، وفيه ضمير عاءد علي المبتدا تقديره: انما بغيكم مستقر علي انفسكم، وهو متاع، ف «علي» متعلقة بالاستقرار، وكذا لو رفع «بغيكم» علي الابتداء، والخبر محذوف تقديره: انما بغيكم علي انفسكم من اجل متاع الحياة مذموم، وليس بوقف ان رفع خبرا عن قوله: «بغيكم»، و «علي انفسكم» متعلق بالبغي، فلا ضمير في قوله: «علي انفسكم»؛ لانه ليس بخبر المبتدا، فهو ظرف لغو، او نصب «متاع» ب «بغيكم»، او نصب علي انه مفعول من اجله، اي: من اجل متاع، وبالنصب قرا حفص عن عاصم؛ علي ان «متاع» ظرف زمان، اي: زمن متاع، وقرا باقي السبعة : «متاع» بالرفع ().
 {تعملون ()} [] تام، ولا وقف من قوله: «انما مثل» الي «والانعام»، فلا يوقف علي قوله: «فاختلط»، وزعم يعقوب الازرق انه هنا، وفي الكهف تام؛ علي استءناف ما بعده جملة مستانفة من مبتدا وخبر، وفي هذا الوقف شء من جهة اللفظ والمعني، فاللفظ ان «نبات» فاعل بقوله: «فاختلط» اي: فنبت بذلك المطر انواع من النبات يختلط بعضها ببعض، وفي المعني تفكيك الكلام المتصل الصحيح، والمعني الفصيح، وذهاب الي اللغو والتعقيد.
 {والانعام} [] حسن؛ لان «حتي» ابتداءية تقع بعدها الجمل، كقوله:
 فما زالت القتلي تمج دماءها ... بدجلة حتي ماء دجلة اشكل () 
 والغاية معني لا يفارقها كما تقدم في قوله: {حتي يقولا انما نحن فتنة} [].
 {قادرون عليها} [] ليس بوقف؛ لان «اتاها» جواب «اذا».
 {كان لم تغن بالامس} [] حسن، والكاف في «كذلك» نعت لمصدر محذوف، اي: مثل هذا التفصيل الذي فصلناه في الماضي فصله في المستقبل ل «قوم يتفكرون».
 {يتفكرون ()} [] تام.
 {والله يدعو الي دار السلام} [] جاءز.
 {مستقيم ()} [] تام.
 {وزيادة} [] حسن، وقيل: كاف، وقيل: تام. قال الحسن: الحسني: العمل الصالح. والزيادة: الجنة، وقيل: النظر الي وجه الله الكريم، كما روي عن صهيب قال: قال رسول الله  صلي الله عليه وسلم : «اذا دخل اهل الجنة الجنة نودوا: ان يا اهل الجنة ان لكم عند الله موعدا اريد ان انجزكموه، فيقولون: ما هو؟! الم تبيض وجوهنا؟ الم تزحزحنا عن النار؟ الم تدخلنا الجنة؟ فيكشف الحجاب، فينظرون اليه، فوالله ما اعطاهم شيءا هو احب اليهم منه» ()، وقيل: واحدة من الحسنات بواحدة، وزيادة تضعف عشرة امثالها الي سبعماءة ضعف ().
 {ولا ذلة} [] كاف.
 {اصحاب الجنة} [] جاءز؛ لان قوله: «هم فيها» يصلح ان يكون جملة مستقلة مبتدا وخبرا، ويصلح ان يكون «اصحاب» خبرا، و «هم فيها» خبرا ثانيا؛ فهما خبران ل «اولءك»، نحو: الرمان حلو حامض.
 {خالدون ()} [] تام؛ لان «والذين كسبوا» مبتدا، و «جزاء» مبتدا ثان، وخبره «بمثلها». 
 {ذلة} [] حسن، ومثله «من عاصم»؛ لان الكاف لا تتعلق ب «عاصم»، مع تعلقه ب «ذلة» قبلها معني؛ لان رهق الذلة: سواد الوجه وتغيره، وكون وجوههم مسودة، وهو حقيقة، لا مجازا، وكني بالوجه عن الجملة؛ لكونه اشرفها، ولظهور السرور فيه ().
 {مظلما} [] حسن، وقيل: كاف.
 {اصحاب النار} [] جاءز، وفيه ما تقدم.
 {خالدون ()} [] تام، وانتصب «يوم» بفعل محذوف، اي: اذكركم، او خوفهم.
 {مكانكم} [] ليس بوقف؛ لعطف «انتم وشركاءكم»؛ لان «مكانكم» اسم فعل بمعني: اثبتوا، فاكد وعطف عليه «انتم وشركاءكم» و «مكانكم» اسم فعل لا يتعدي، ولهذا قدر فاثبتوا؛ لان اسم الفعل ان كان الفعل لازما كان لازما، وان كان متعديا كان متعديا، نحو: عليك زيدا لما ناب مناب الزم –تعدي. وقال ابن عطية: «انتم» مبتدا، والخبر مخزيون او مهانون، فيكون «مكانكم» قد تم، ثم يبتدء: «انتم وشركاءكم»، وهذا لا ينبغي ان يقال؛ لان فيه تفكيكا لافصح كلام، ومما يدل علي ضعفه قراءة من قرا (): «وشركاءكم» بالنصب علي المعية، والناصب له اسم الفعل.
 {انتم وشركاءكم} [] جاءز؛ للعدول مع الفاء.
 {فزيلنا بينهم} [] حسن.
 {تعبدون ()} [] احسن مما قبله.
 {لغافلين ()} [] كاف.
 {ما اسلفت} [] حسن، ومثله «الحق».
 {يفترون ()} [] تام، ولا وقف من قوله: «قل من يرزقكم» الي قوله: «ومن يدبر الامر»، فلا يوقف علي «الارض»؛ لان بعده الدلاءل الدالة علي فساد مذهبهم، واعترافهم بان الرازق، والمالك، والمخرج، والمدبر هو الله تعالي امر لا يمكنهم انكاره.
 {ومن يدبر الامر} [] جاءز.
 {فسيقولون الله} [] كاف؛ لان الامر يبتدء بالفاء.
 {افلا تتقون ()} [] كالذي قبله.
 {ربكم الحق} [] حسن.
 {الا الضلال} [] احسن منه.
 {تصرفون ()} [] كاف، ومثله «لا يءمنون»، وكذا «ثم يعيده» الاول. 
 {تءفكون ()} [] تام عند ابي عمرو.
 {الي الحق} [] كاف، ومثله «للحق» علي استءناف ما بعده.
 {الا ان يهدي} [] حسن، وقال ابو عمرو: كاف؛ للاستفهام بعده، وقال بعضهم: «فما لكم»، ثم يبتدء «كيف تحكمون»، اي: علي اي حالة تحكمون ان عبادتكم الاصنام حق وصواب؟!
 {كيف تحكمون ()} [] تام، استفهام اخر، فهما جملتان انكر في الاولي، وتعجب من اتباعهم من لا يهدي ولا يهتدي، وانكر في الثانية حكمهم الباطل، وتسوية الاصنام برب العالمين.
 {الا ظنا} [] كاف، ومثله «شيءا».
 {بما يفعلون ()} [] تام، ولا وقف من قوله: «وما كان» الي قوله: «لا ريب فيه»، قال نافع: تام، ويكون التقدير: هو من رب العالمين، قاله النكزاوي.
 {العالمين ()} [] كاف؛ للابتداء بالاستفهام بعده.
 {افتراه} [] جاءز.
 {صادقين ()} [] كاف.
 {تاويله} [] حسن، وتام عند احمد بن جعفر.
 {من قبلهم} [] جاءز.
 {الظالمين ()} [] كاف.
 {من لا يءمن به} [] حسن.
 {بالمفسدين ()} [] كاف.
 {ولكم عملكم} [] حسن.
 {مما تعملون ()} [] كاف.
 {يستمعون اليك} [] حسن.
 {لا يعقلون ()} [] كاف.
 {ينظر اليك} [] حسن.
 {لا يبصرون ()} [] تام.
 {شيءا} [] الاولي وصله؛ للاستدراك بعده.
 {يظلمون ()} [] كاف، قرا الاخوان بتخفيف «لكن»، ومن ضرورة ذلك كسر النون؛ لالتقاء الساكنين وصلا، ورفع «الناس»، والباقون بالتشديد ونصب «الناس» (). 
 {يتعارفون بينهم} [] حسن.
 {مهتدين ()} [] كاف.
 {مرجعهم} [] جاءز، و «ثم»؛ لترتيب الاخبار.
 {ما يفعلون ()} [] تام.
 {ولكل امة رسول} [] حسن، وقيل: كاف؛ لان جواب «اذا» منتظر.
 {لا يظلمون ()} [] كاف، ومثله «صادقين».
 {الا ما شاء الله} [] حسن، ومثله «لكل امة اجل».
 {ولا يستقدمون ()} [] تام.
 {او نهارا} [] حسن.
 {المجرمون ()} [] كاف.
 {امنتم به} [] حسن، التقدير: قل لهم يا محمد عند نزول العذاب: تءمنون به –قالوا: نعم، قال: يقال لكم الان: تءمنون وقد كنتم بالعذاب تستعجلون استهزاء به، وليس شء من العذاب يستعجله عاقل؛ اذ العذاب كله مر المذاق.
 {تستعجلون ()} [] كاف، ومثله «عذاب الخلد».
 {تكسبون ()} [] تام.
 {احق هو} [] حسن، الضمير في «هو» عاءد علي العذاب، قيل: الوقف علي «الحق» بجعل السءال والجواب والقسم كلاما واحدا، وقيل: «اي وربي»، ثم يبتدا: «انه الحق» علي الاستءناف، فان جعل قوله: «انه الحق» جواب القسم، اي: اي وربي انه لحق، فلا يجوز الوقف علي «وربي»؛ لان القسم واقع علي قوله: «انه الحق»، «اي: نعم والله؛ لان «اي» بمعني: نعم في القسم خاصة، فلا يفصل منه، وقيل: علي «اي»، وقيل: علي «احق»، والوقف علي «انه لحق» تام، ان جعل «وما انتم بمعجزين» مستانفا، وليس بوقف ان جعل معطوفا، و «ما» حجازية، او تميمية.
 {بمعجزين ()} [] تام.
 {لافتدت به} [] حسن، ومثله «العذاب».
 {بالقسط} [] تام، ومثله «لا يظلمون».
 {والارض} [] حسن، «وعد الله حق» الاولي وصله؛ لحرف الاستدراك بعده.
 {لا يعلمون ()} [] كاف.
 {ترجعون ()} [] تام؛ للابتداء بعده ب «يا» النداء .
 {للمءمنين ()} [] كاف.
 
 {فبذلك فليفرحوا} [] حسن، ويزيد حسنا عند من خالف بين التحتية والفوقية في الحرفين ().
 {مما يجمعون ()} [] كاف.
 {وحلالا} [] حسن؛ للابتداء بعد بالاستفهام، وهو ما حرموا من الحرث والانعام، والبحيرة الساءبة، والوصيلة، والحام، قل الله اذن لكم بهذا التحريم والتحليل، و «ام» بمعني: بل، اي: بل علي الله تفترون التحليل والتحريم، وهو حسن بهذا التقدير، وليس بوقف ان جعلت «ام» متصلة.
 {تفترون ()} [] كاف.
 {يوم القيامة} [] حسن، وقال ابو عمرو: كاف.
 {علي الناس} [] ليس بوقف؛ لحرف الاستدراك بعده.
 {لا يشكرون ()} [] تام.
 {اذ تفيضون فيه} [] حسن، وقيل: كاف، وقيل: تام.
 {ولا في السماء} [] كاف، ان قرء ما بعده بالرفع بالابتداء، وكذا ان جعل الاستءناف منقطعا عما قبله، اي: وهو مع ذلك في كتاب مبين، والعرب تضع الا في موضع الواو، ومنه قول القاءل:
 وكل اخ مفارقه اخوه ... لعمر ابيك الا الفرقدان ()
 اي: والفرقدان، ومن ذلك قوله: {وما كان لمءمن ان يقتل مءمنا الا خطا} [النساء: ] قال ابو عبيدة: «الا» بمعني الواو؛ لانه لا يحل للمءمن قتل المءمن عمدا ولا خطا، وهنا لو كان متصلا لكان بعد النفي تحقيقا، واذا كان كذلك وجب ان لا يعزب عن الله تعالي مثقال ذرة واصغر واكبر منهما 
 الا في الحالة التي استثناها، وهو الا في كتاب مبين فيعزب، وهو غير جاءز، بل الصحيح الابتداء ب «الا» علي تقدير الواو واي، وهو ايضا في كتاب مبين، وقال ابو شامة: ويزول الاشكال ايضا بان تقدر قبل قوله: «الا في كتاب مبين» ليس شء من ذلك الا في كتاب مبين، ويجوز الاستثناء من «يعزب»، ويكون «يعزب» بمعني: يبين ويذهب المعني لم يبن شء عن الله تعالي بعد خلقه له الا وهو في اللوح المحفوظ مكتوب ().
 {يحزنون ()} [] تام، ان رفع «الذين» علي الابتداء، والخبر «لهم البشري»، او جعل «الذين» في محل رفع خبر مبتدا محذوف، اي: هم الذين، او نصب باعني مقدرا، وليس بوقف في خمسة اوجه، وهي كونه نعتا علي موضع «اولياء»، او بدلا من الموضع ايضا، او بدلا من «اولياء» علي اللفظ، او علي اضمار فعل لاءق، والجر بكونه بدلا من الهاء في «عليهم»، ففي اعراب «الذين» ثمانية اوجه: اربعة في الرفع، وثلاثة في النصب، وواحد في الجر.
 {يتقون ()} [] تام، ان لم يجعل «لهم البشري» خبرا لقوله: «الذين»، وليس بوقف ان جعل خبرا.
 {وفي الاخرة} [] حسن، وقيل: تام، والمعني: لهم البشري عند الموت، واذا خرجوا من قبورهم، وقال عطاء: لهم البشري في الحياة الدنيا عند الموت تاتيهم الملاءكة بالرحمة والبشارة من الله تعالي، وتاتي اعداء الله بالغلظة والفظاظة، وفي الاخرة عند خروج روح المءمن تعرج بها الي الله تعالي تزف كما تزف العروس، تبشر برضوان الله تعالي، وفي الحديث: «لا نبوة بعدي الا المبشرات» قيل: يا رسول الله وما المبشرات؟ قال: «الرءيا الصالحة يراها، المءمن او تري له» ()، وفيه: «اذا اقترب الزمان لم تكد رءيا المءمن تكذب، فاصدقهم رءيا اصدقهم حديثا» ().
 {لا تبديل لكلمات الله} [] حسن.
 {العظيم ()} [] تام.
 {ولا يحزنك قولهم} [] اتم، ثم يبتدء «ان العزة»، وان كان من المستحيل ان يتوهم احد ان هذا من مقول المشركين؛ اذ لو قالوا ذلك لم يكونوا كفارا، ولما حزن النبي  صلي الله عليه وسلم ، بل هو مستانف ليس من مقولهم، بل هو جواب سءال مقدر، كان قاءلا قال: لم لا يحزنه قولهم، وهو مما يحزن؟ فاجيب بقوله: 
 «ان العزة لله جميعا» ليس لهم منها شء، ولو وصل لتوهم عود الضمير الي الاولياء، وقول الاولياء: لا يحزن الرسول، بل هو مستانف تسلية عن قول المشركين، وليس بوقف لمن قرا (): «ان العزة» بفتح الهمزة، وبها قرا ابو حيوة علي حذف لام العلة، اي: لا يحزنك قولهم لاجل ان العزة لله. وبالغ ابن قتيبة، وقال فتح: ان كفر وغلو علي ان ان تصير معمولة لقولهم؛ اذ لو قالوا ذلك لم يكونوا كفارا، كما تقدم.
 {جميعا} [] حسن.
 {العليم ()} [] تام.
 {ومن في الارض} [] حسن، ومثله «شركاء»؛ للنفي بعده، اي: ما يعبدون من دون الله شركاء.
 {الا الظن} [] كاف.
 {يخرصون ()} [] تام.
 {مبصرا} [] كاف.
 {يسمعون ()} [] تام.
 {سبحانه } [] حسن.
 {هو الغني} [] احسن منه، اي: عن الاهل والولد.
 {وما في الارض} [] كاف؛ للابتداء بالنفي، اي: ما عندكم حجة بهذا القول.
 {من سلطان بهذا} [] حسن.
 {ما لا تعلمون ()} [] كاف، ومثله «لا يفلحون»، و «متاع في الدنيا».
 {يكفرون ()} [] تام.
 {نبا نوح} [] جاءز، ولا يوصل بما بعده؛ لانه لو وصل لصار «اذ» ظرفا ل «اتل»، بل هو ظرف لمقدر، اي: اذكر اذ قال، ولا يجوز نصب «اذ» ب «اتل»؛ لفساده؛ اذ «اتل» مستقبل، و «اذ» ظرف لما مضي.
 {توكلت} [] حسن.
 {وشركاءكم} [] احسن منه، لمن نصب «شركاءكم» عطفا علي «امركم»، وبه قرا العامة، ومن قرا: «شركاءكم» بالرفع مبتدا محذوف الخبر، اي: وشركاءكم فليجمعوا امرهم كان الوقف علي «امركم» كافيا، وليس بوقف ان جعل «وشركاءكم» بالرفع عطفا علي الضمير في «اجمعوا»، وهي قراءة 
 شاذة رويت عن الحسن ()، وهي مخالفة للمصحف الامام الذي تقوم به الحجة؛ لان في القراءة بالرفع الواو، وهي ليست في المصحف الامام، وكذا لا يوقف علي «امركم» ان نصب «شركاءكم» بفعل مضمر، اي: وادعوا شركاءكم، او نصب مفعولا معه، اي: مع شركاءكم ().
 {عليكم غمة} [] جاءز، علي استءناف ما بعده، وليس بوقف ان جعل ما بعده معطوفا علي «فاجمعوا».
 لم يوقف علي «امركم»، ولا علي «شركاءكم»، ولا علي «غمة»؛ لاتساق بعضها علي بعض، وقرء بالجر علي حذف المضاف، وابقاء المضاف اليه مجرورا علي حاله، كقوله:
 اكل امرء تحسبين امرا ... ونار توقد بالليل نارا ()
 اي: وكل نار، اي: وامر شركاءكم، فحذف امرا، وابقي ما بعده علي حاله.
 {ولا تنظرون ()} [] كاف.
 {من اجر} [] جاءز، ومثله «علي الله».
 {من المسلمين ()} [] كاف.
 {خلاءف} [] حسن، ومثله «باياتنا».
 {المنذرين ()} [] كاف؛ لان «ثم» لترتيب الاخبار؛ لانها جاءت في اول القصة.
 {بالبينات} [] ليس بوقف؛ لمكان الفاء.
 {من قبل} [] حسن؛ لان «كذلك» منقطع لفظا متصل معني.
 {المعتدين ()} [] كاف، ومثله «قوما مجرمين»، و «لسحر مبين».
 {لما جاءكم} [] حسن، علي اضمار اي: تقولون للحق لما جاءكم هذا سحر، قال تعالي: «اسحر هذا»، فدل هذا علي المحذوف قبله. 
 {اسحر هذا} [] تام، ان جعلت الجملة بعده استءنافية، لا حالية، اي: اسحر هذا الذي جءت به من معجز العصا واليد، وكان تاما؛ لانه اخر كلام موسي  عليه السلام .
 {الساحرون ()} [] كاف.
 {في الارض} [] حسن؛ للابتداء بالنفي.
 {بمءمنين ()} [] كاف، ومثله «عليم»، وكذا «ملقون».
 {ما جءتم به} [] حسن، لمن قرا (): «السحر» بالمد علي الاستفهام خبر مبتدا محذوف، اي: هو السحر، او مبتدا والخبر محذوف، اي: السحر هو، وليس بوقف لمن قرا (): «السحر» علي الخبر، لا علي الاستفهام علي البدل من «ما» في قوله: «ما جءتم به»؛ لاتصاله بما قبله، وبالمد قرا ابو عمرو بن العلاء علي جهة الانكار عليهم؛ لان موسي عليه السلام لم يرد ان يخبر السحرة انهم اتوا بسحر؛ لانهم يعلمون ان الذي اتوا به سحر، ولكنه اراد الانكار عليهم، فلو اراد اخبارهم بالسحر لما قالوا له: انت ساحر، وقد جءت بالسحر لقال لهم: ما جءتم به هو السحر علي الحقيقة، وليس بوقف لمن قراه بهمزة وصل؛ لان «ما» بمعني: الذي مبتدا خبره «السحر»، والوقف عنده «السحر»، وفي الوجه الاول: «سيبطله» ().
 {سيبطله} [] حسن.
 {المفسدين ()} [] كاف، ومثله «المجرمون».
 {ان يفتنهم} [] حسن.
 {في الارض} [] جاءز؛ لاتصال ما بعده به من جهة المعني.
 {المسرفين ()} [] كاف، ومثله «مسلمين».
 {توكلنا} [] حسن.
 {الظالمين ()} [] جاءز، وقيل: ليس بوقف؛ للعطف، ومن حيث كونه راس اية يجوز.
 {الكافرين ()} [] كاف، وقيل: تام.
 {بيوتا} [] جاءز.
 {واقيموا الصلاة} [] حسن؛ للفصل بين الامرين؛ لان قوله: «وبشر» خطاب لمحمد  صلي الله عليه وسلم ، وان اريد به موسي فلا بد من العدول. 
 {المءمنين ()} [] كاف.
 {في الحياة الدنيا} [] ليس بوقف؛ لان قوله: «ليضلوا» متعلق بقوله: «اتيت».
 {عن سبيلك} [] كاف، وقيل: تام؛ لان موسي استانف الدعاء، فقال: «ربنا اطمس علي اموالهم واشدد علي قلوبهم فلا يءمنوا»، قال ابن عباس: صارت دراهمهم حجارة منقوشة صحاحا واثلاثا وانصافا، ولم يبق معدن الا طمس الله عليه، فلم ينتفع به احد، «واشدد علي قلوبهم» اي: امنعها من الايمان فلا يءمنوا، ولا حجة بدعاء موسي علي فرعون بما ذكر علي جواز الدعاء علي الظالم بسوء الخاتمة؛ للفرق بين الكافر الميءوس منه، والمءمن العاصي المقطوع له بالجنة، اما اولا او ثانيا، بل يجوز الدعاء علي الظالم بعزله؛ لزوال ظلمه بذلك كان ظلما له، او لغيره، او بمءلمات في جسده، ولا يجوز الدعاء عليه بسوء الخاتمة، ولا بفقد اولاده، ولا بوقوعه في معصية ().
 {الاليم ()} [] حسن.
 {فاستقيما} [] كاف.
 {فاستقيما} [] تام.
 {بغيا وعدوا} [] حسن.
 {حتي اذا ادركه الغرق} [] ليس بوقف؛ لان قال جواب اذا، فلا يفصل بينها وبين جوابها.
 {قال امنت} [] حسن لمن قرا: «انه» بكسر الهمزة، علي الاستءناف، وبها قرا حمزة، والكساءي، ويحيي بن وثاب، والاعمش، وقرا ابن كثير، وابو عمرو، ونافع، وعاصم بفتحها ()؛ لان «ان» منصوبة به؛ لان الفعل لا يلغي اذا قدر علي اعماله، وعلي قراءته بفتحها لا يوقف علي «امنت».
 {بنو اسراءيل} [] جاءز.
 {من المسلمين ()} [] كاف، وقيل: تام؛ لان ما بعده ليس من كلام فرعون. قال السدي: بعث الله ميكاءيل، فقال له: اتءمن الان وقد عصيت قبل؟ وروي ان جبريل سد فاه عند ذلك بحال البحر، ودسه به مخافة ان تدركه الرحمة، وليس هذا رضا بالكفر؛ لان سده سد باب الاحتمال البعيد، ولا يلزم من ادراك الرحمة له صحة ايمانه؛ لانه في حالة الياس؛ لانه لم يكن مخلصا في ايمانه، ولم يكره جبريل ايمانه، وانما فعل ذلك غضبا لله تعالي، لا رضا بكفره؛ لان الرضا به كفر ().
 {المفسدين ()} [] كاف. 
 {لمن خلفك اية} [] حسن.
 {لغافلون ()} [] تام.
 {ورزقناهم من الطيبات} [] حسن؛ للابتداء بالنفي مع الفاء، ومثله «جاءهم العلم».
 {يختلفون ()} [] تام.
 {من قبلك} [] حسن.
 {الحق من ربك} [] جاءز.
 {من الممترين ()} [] كاف، علي استءناف النهي بعده، وليس بوقف ان جعل ما بعده معطوفا علي ما قبله.
 {من الخاسرين ()} [] تام.
 {لا يءمنون ()} [] ليس بوقف؛ لان «لو» تعلقها بما قبلها، اي: لو جاءتهم كل اية لا يءمنون.
 {الاليم ()} [] تام عند يعقوب، وليس بجيد؛ لان الكلام متصل بعضه ببعض، وكذا عنده فنفعها ايمانها، وجعل يعقوب الاستثناء منقطعا من غير الجنس، والتقدير: لكن قوم يونس، فقوم يونس لم يندرجوا في قوله: «قرية»، والي الانقطاع ذهب سيبويه، والفراء ، والاخفش، وقيل: متصل، كانه قيل: ما امنت قرية من القري الهالكة الا قوم يونس؛ وهم اهل نينوي من بلاد الموصل كانوا يعبدون الاصنام، فبعث الله اليهم سيدنا يونس  عليه السلام ، فاقاموا علي تكذيبه سبع سنين، وتوعدهم بالعذاب بعد ثلاثة ايام، فلم يرجعوا حتي دنا الموعد، فغامت السماء غيما اسود ذا دخان شديد، فهبط حتي غشي مدينتهم، فهابوا فطلبوا يونس فلم يجدوه، فايقنوا صدقه؛ فلبسوا المسوح، وبرزوا الي الصعيد بانفسهم ونساءهم وصبيانهم ودوابهم، وفرقوا بين كل والدة وولدها، فحن بعضها الي بعض، وعلت الاصوات والضجيج، واخلصوا التوبة، واظهروا الايمان، وتضرعوا الي الله تعالي فرحمهم وكشف عنهم، وكان يوم عاشوراء يوم الجمعة. اه بيضاوي ()
 {الي حين ()} [] تام.
 {جميعا} [] جاءز.
 {مءمنين ()} [] كاف.
 {الا باذن الله} [] حسن، وقال ابو عمرو: كاف، لمن قرا: «ونجعل الرجس» بالنون، وحسن لمن قراه بالتحتية؛ لتعلقه بما قبله (). 
 {لا يعقلون ()} [] كاف.
 {والارض} [] حسن، يجوز في «ماذا» ان تكون كلمة واحدة استفهاما مبتدا، «وفي السموات» خبره، ويجوز ان تكون «ما» وحدها مبتدا، و «ذا» كلمة وحدها، وذا: اسم موصول بمعني: الذي، «وفي السموات» صلتها، وهو خبر المبتدا، وعلي التقدير فالمبتدا والخبر في محل نصب باسقاط الخافض.
 {لا يءمنون ()} [] كاف، ومثله «من قبلهم»، وكذا «من المنتظرين».
 {والذين امنوا} [] تام، علي ان الكاف في محل رفع، اي: الامر كذلك يحق علينا ننج المءمنين، وعلي انها في محل نصب نعتا لمصدر محذوف، اي: انجاء مثل ذلك يحق علينا ننج المءمنين، فيوقف علي «كذلك»، ثم يبتدا به؛ لتعلقه بما بعده من جهة المعني فقط، وعلي انها متعلقة بما قبلها، كانه قال: ننجي رسلنا والذين امنوا كذلك، فالتشبيه من تمام الكلام. والوقف علي «كذلك»، ولا يبتدا بها؛ لعدم تعلق ما بعدها بما قبلها، ورسموا «ننج المءمنين» بحذف الياء بعد الجيم كما نري.
 {ننج المءمنين ()} [] تام.
 {يتوفاكم} [] حسن.
 {وامرت ان اكون من المءمنين ()} [] كاف، ان جعل ما بعده بمعني: وقيل لي ان اقم وجهك، اي: واوحي الي ان اقم، ف «ان اقم» معمولة بقوله: «وامرت» مراعي فيها المعني؛ لان معني قوله: ان اكون كن من المءمنين؛ فهما امران، وجوز سيبويه ان توصل بالامر والنهي، والغرض وصل «ان» بما تكون معه في معني المصدر، والامر والنهي دالان علي المصدر دلالة غيرهما من الافعال ().
 {حنيفا} [] جاءز، وهو حال من الضمير في «اقم»، او من المفعول.
 {من المشركين ()} [] كاف.
 {ولا يضرك} [] حسن؛ للابتداء بالشرط، وهي جملة استءنافية، ويجوز ان تكون معطوفة علي جملة الامر، وهي «اقم»، فتكون داخلة في صلة «ان» بوجهيها، اعني: كونها تفسيرية، او مصدرية.
 {من الظالمين ()} [] تام، ومثله «الا هو»؛ للابتداء بالشرط، وكذا «فلا راد لفضله» عند احمد بن جعفر.
 {الرحيم ()} [] اتم منهما.
 {من ربكم} [] حسن، ومثله «لنفسه». وقال يحيي بن نصير النحوي: لا يوقف علي الاول من المقابلين والمزدوجين حتي يءتي بالثاني، والاولي الفصل بالوقف بينهما، ولا يخلط احدهما مع 
 الاخر.
 {فانما يضل عليها} [] احسن مما قبله.
 {وما انا عليكم بوكيل ()} [] تام، يجوز في «ما» ان تكون حجازية، او تميمية لخفاء النصب في الخبر.
 {حتي يحكم الله} [] صالح؛ لاحتمال الواو، وللاستءناف والعطف، والوصل اظهر؛ لشدة اتصال المعني.
 {وهو خير الحاكمين ()} [] تام.
 
  سورة هود
  عليه السلام 
 مكية
 الا قوله: {واقم الصلاة طرفي النهار} [] الاية، وقيل الا قوله: {فلعلك تارك} [] الاية، وقوله: {اولءك يءمنون به} [] فمدني.
 [ايها:] وهي ماءة اية واحدي وعشرون اية في المدني الاخير، والمكي، والبصري. واثنتان في الاول، والشامي. وثلاث في الكوفي، واختلافهم في سبع ايات:
    
 {اني برء مما تشركون ()} [] عدها الكوفي، ولم يعدها الباقون.
    
 {يجادلنا في قوم لوط ()} [] لم يعدها البصري، وكلهم عد الي «قوم لوط».
    
 {من سجيل} [] عدها المدني الاخير، والمكي.
    
 {منضود ()} [] لم يعدها المدني الاخير، والمكي.
    
 {ان كنتم مءمنين} [] عدها المدنيان، والمكي.
    
 {ولا يزالون مختلفين ()} [] لم يعدها المدنيان، والمكي.
    
 {انا عاملون ()} [] لم يعدها المدني الاخير، والمكي.
  وكلمها: الف وتسعماءة وخمس عشرة كلمة.
  وحروفها: سبعة الاف وخمسماءة وتسعة وستون حرفا، كحرف سورة يونس عليهما السلام.
 وفيها مما يشبه الفواصل وليس معدودا منها باجماع ستة مواضع:
    
 {وما يعلنون} [].
    
 {فسوف تعلمون} [].
    
 {وفار التنور} [].
    
 {فينا ضعيفا} [].
    
 {سوف تعلمون} [].
    
 {ذلك يوم مجموع} [].
 {الر} [] تام، ان جعل «كتاب» خبر مبتدا محذوف تقديره: هذا كتاب، كما قال الشاعر:
 وقاءلة خولان فانكح فتاتهم ... واكرومة الحيين خلو كما هيا ()
 اراد: هذه خولان، وكذا ان جعل «كتاب» مبتدا حذف خبره، وليس بوقف ان جعل «الر» مبتدا، 
 و «كتاب» خبره؛ لانه لا يفصل بين المبتدا وخبره بالوقف، وكذا ان جعلت «الر» مقسما بها، وما بعدها جواب. ولا وقف من قوله: «كتاب احكمت اياته» الي قوله: «الا الله»؛ فلا يوقف علي «خبير» ان جعل موضع «ان لا تعبدوا» نصبا ب «فصلت»، او ب «احكمت»؛ لان «ان» بعده في محلها الحركات الثلاث: الرفع، والنصب، والجر، والعامل فيها اما «فصلت» وهو المشهور، واما «احكمت» عند الكوفيين، فتكون المسالة من الاعمال؛ لان المعني: احكمت؛ لءلا تعبدوا، اوفصلت؛ لءلا تعبدوا؛ فالرفع علي انها مبتدا محذوف الخبر، او خبر مبتدا محذوف، اي: تفصيله: ان لا تعبدوا الا الله، او هو ان لا تعبدوا، والنصب فصلت ان لا تعبدوا، فتكون «ان» تفسيرية، والجر فصلت بان لا تعبدوا، والوقف علي «خبير» كاف ان رفع ما بعده مبتدا، وليس بوقف ان نصب تفسيرا لما قبله، او جر كما تقدم، ومعني «احكمت اياته» بالفضل، ثم «فصلت» بالعدل، او احكمت اياته في قلوب العارفين، ثم فصلت احكامه علي ابدان العارفين، وخص بالاحكام في قوله: «منه ايات محكمات»، وعمم هنا؛ لانه اوقع العموم بمعني الخصوص، كقولهم: اكلنا طعام زيد؛ يريدون: بعضه، قاله ابن الانباري. ولا يوقف علي «بشير»؛ لان قوله: «وان استغفروا ربكم» معطوف علي ما قبله، داخل في صلة «ان».
 {الا الله} [] حسن، وقيل: كاف.
 {فضله} [] كاف؛ للابتداء بعده بالشرط، ومثله: «كبير».
 {الي الله مرجعكم} [] صالح؛ لاحتمال الواو بعده للحال، والاستءناف.
 {قدير ()} [] كاف.
 {منه} [] حسن، وقيل: كاف.
 {ثيابهم} [] ليس بوقف؛ لان عامل «حين» قوله بعد «يعلم»، اي: الا يعلم سرهم وعلنهم حين يفعلون كذا، وهذا معني واضح، وقيل: يجوز؛ لءلا يلزم تقييد علمه تعالي بسرهم وعلنهم بهذا الوقت الخاص، وهو تعالي عالم بذلك في كل وقت، وهذا غير لازم؛ لانه اذا علم سرهم وعلنهم في وقت التغشية التي يخفي السر فيها، فاولي في غيرها، وهذا بحسب العادة، قاله السمين.
 {وما يعلنون} [] كاف.
 {بذات الصدور ()} [] تام.
 {علي الله رزقها} [] جاءز.
 {ومستودعها} [] كاف.
 {مبين ()} [] تام، اي: في اللوح المحفوظ قبل ان يخلقها، و «مستقرها» هو ايام حياتها، و «مستودعها» هو القبر، قاله الربيع. ويدل علي هذا التفسير قوله في وصف الجنة حسنت مستقرا ومقاما وفي وصف النار انها ساءت مستقرا ومقاما، قاله النكزاوي.
 
 {احسن عملا} [] حسن.
 {سحر مبين ()} [] كاف.
 {ما يحبسه} [] حسن، وقيل: كاف، وقيل: تام.
 {مصروفا عنهم} [] حسن، علي استءناف ما بعده.
 {يستهزءون ()} [] تام.
 {كفور ()} [] كاف، ومثله: «السيءات عني»، و «فخور» علي ان الاستثناء منقطع بمعني: لكن الذين صبروا، ف «الذين» مبتدا، والخبر «اولءك لهم مغفرة»، وهو قول الاخفش، وقال الفراء: هو متصل، وعليه فلا يوقف علي «فخور»، بل علي «الصالحات»، وعلي قول الاخفش لا يوقف علي «الصالحات»؛ لفصله بين المبتدا وخبره.
 {كبير ()} [] تام.
 {معه ملك} [] حسن.
 {انما انت نذير} [] احسن منه.
 {وكيل ()} [] كاف.
 {افتراه} [] جاءز.
 {صادقين ()} [] كاف، رسموا جميع ما في كتاب الله من قوله: «فان لم» بنون الا قوله هنا: «فالم يستجيبوا لكم» فهو بغير نون اجماعا.
 {بعلم الله} [] ليس بوقف؛ لاتساق الكلام ما بعده علي ما قبله.
 {مسلمون ()} [] تام.
 {لا يبخسون ()} [] كاف.
 {الا النار} [] حسن.
 {فيها} [] احسن منه، علي قراءة من رفع: «وباطل» علي الاستءناف، خبره مقدم ان كان من عطف الجمل، ولفظة «ما» من قوله: «ما كانوا» هي المبتدا، وان كان «باطل» خبرا بعد خبر، ارتفع «ما» ب «باطل» علي الفاعلية، وهي قراءة العامة، وليس بوقف علي قراءة ابن مسعود، وانس (): «وباطلا» بالنصب، اي: وكانوا يعملون باطلا فيها، وكذا ليس وقفا لمن قرا (): «وبطل».
 {يعملون ()} [] تام. 
 {شاهد منه} [] كاف، وقيل: تام، اي: ويتلو القران شاهد من الله تعالي، وهو جبريل، وهذا علي قراءة العامة برفع «كتاب»، ومن نصبه وبها قرا محمد بن الساءب الكلبي عطفا علي الهاء في «يتلوه» ()، اي : ويتلو القران، وكتاب موسي شاهد من الله وهو جبريل، فوقفه «ورحمة»، وعن علي كرم الله وجهه قال: (ما من رجل من قريش الا وقد نزلت فيه الاية والايتان، فقال رجل من قريش: فانت اي شء نزل فيك؟ فقال: «ويتلوه شاهد منه». ()، وقيل: الشاهد لسانه  صلي الله عليه وسلم ، وفي الشاهد اقوال كثيرة؛ كلها توجب الوقف علي «منه».
 {يءمنون به} [] كاف؛ للابتداء بالشرط.
 {موعده} [] حسن، ومثله: «في مرية منه» علي قراءة: «انه» بكسر الهمزة، وليس بوقف لمن فتحها؛ وهو عيسي بن عمر ().
 {من ربك} [] وصله؛ لحرف الاستدراك بعده.
 {لا يءمنون ()} [] تام.
 {كذبا} [] حسن، وقيل: كاف.
 {علي ربهم} [] الاول كاف، علي استءناف ما بعده.
 {علي ربهم} [] الثاني، قال محمد بن جرير: تم الكلام، ثم قال الله تعالي: «الا لعنة الله علي الظالمين»، فعلي قوله لا يوقف علي «الظالمين»؛ لان الله انما لعن الظالمين الذين وصفهم خاصة بقوله: «الذين يصدون عن سبيل الله» الاية ().
 {كافرون ()} [] كاف.
 {في الارض} [] حسن؛ للابتداء بالنفي.
 {من اولياء} [] تام عند نافع، وكذا «العذاب»، ثم يبتدا: «ما كانوا يستطيعون السمع وما كانوا يبصرون»، اي: لم يكونوا يستمعون القران، ولا ما ياتي به رسول الله  صلي الله عليه وسلم ؛ لشدة العداوة، فلذلك كانت «ما» نفيا، ولذلك حسن الوقف علي «العذاب»، وقيل: «ما» بمعني: الذي، ومعها حرف جر محذوف، اي: يضاعف لهم العذاب بما كانوا يستطيعون السمع، فلما حذفت الباء تخفيفا وصل الفعل فنصب، وعلي هذا لا يوقف علي «العذاب» (). 
 {يبصرون ()} [] كاف، علي القولين في «ما».
 {انفسهم} [] جاءز.
 {يفترون ()} [] كاف.
 لا وقف بين {لا جرم انهم} []؛ لانكارهم البعث، وانهم يستحقون النار، كانه قال: حق وجوب النار لهم. وقال الفراء: «جرم» مع «لا» كلمة واحدة، معناها: لا بد، فحينءذ لا يوقف علي «لا» دون «جرم».
 {الاخسرون ()} [] تام.
 {اصحاب الجنة} [] جاءز.
 {خالدون ()} [] تام.
 {والسميع} [] حسن.
 {مثلا} [] احسن منه.
 {تذكرون ()} [] تام.
 {الي قومه} [] كاف، لمن قرا: «اني لكم» بكسر الهمزة، علي اضمار القول، وبها قرا نافع، وابن عامر، وعاصم، وحمزة؛ علي ان قوله: «ان لا تعبدوا الا الله» متعلق بما بعد «اني»، وليس بوقف لمن فتحها، وجعلها متعلقة ب «ارسلنا»، وبفتحها قرا ابن كثير، وابو عمرو، والكساءي؛ لان «ان لا تعبدوا» بدل من قوله: «اني لكم» ().
 {مبين ()} [] كاف، علي ان ما بعده في موضع رفع خبر مبتدا محذوف، وليس بوقف ان جعل بدلا مما قبله.
 {الا الله} [] حسن.
 {اليم ()} [] كاف.
 {بادي الراي} [] جاءز، وقيل: حسن؛ للابتداء بالنفي.
 {من فضل} [] احسن منه.
 {كاذبين ()} [] كاف.
 {فعميت عليكم} [] حسن، قرا الاخوان: «فعميت» بضم العين وتشديد الميم، والباقون بالفتح والتخفيف (). 
 {لها كارهون ()} [] حسن، ومثله: «مالا»، وكذا «علي الله» علي استءناف ما بعده، وليس بوقف ان عطف علي ما قبله.
 {امنوا} [] حسن.
 {ملاقو ربهم} [] ليس بوقف؛ لحرف الاستدراك بعده.
 {تجهلون ()} [] كاف، وكذا «ان طردتهم»، وكذا «تذكرون».
 {اني ملك} [] جاءز.
 {لن يءتيهم الله خيرا} [] حسن، وقيل: كاف، وقيل: تام، وقيل: ليس بوقف؛ لان قوله: «ولا اقول للذين تزدري اعينكم» الخ جوابه «اني اذا لمن الظالمين»، وقوله: «الله اعلم بما في انفسهم» اعتراض بينهما.
 {جدالنا} [] جاءز.
 {الصادقين ()} [] كاف، والوقف علي «ان شاء»، و «بمعجزين»، و «ان يغويكم»، اي: يضلكم، كلها وقوف كافية. والوقف علي «ان انصح لكم» علي ان في الاية تقديما وتاخيرا، وتقدير الكلام: ان كان الله يريد ان يغويكم لا ينفعكم نصحي ان اردت ان انصح لكم؛ فجواب الشرط الاول محذوف، او الشرط الثاني هو جواب الشرط الاول. قال ابو البقاء: حكم الشرط اذا دخل علي الشرط ان يكون الشرط الثاني والجواب جوابا للشرط الاول؛ لان الشرط الثاني معمول للاول؛ لانه مقيد له، نحو: ان اتيتني ان كلمتني –اكرمتك؛ فقولك: ان كلمتني اكرمتك جواب ان اتيتني، واذا كان كذلك صار الشرط مقدما في الذكر، مءخرا في المعني، حتي ان اتاه ثم كلمه لم يجب الاكرام، ولكن ان كلمه ثم اتاه وجب الاكرام، علي المرتضي من اقوال في توالي شرطين ثانيهما قيد للاول، مع جواب واحد كقوله:
 ان تستعينوا بنا ان تذعروا تجدوا ... منا معاقل عز زانها كرم ()
 اي: ان تستعينوا بنا مذعورين، ومثله: {ان وهبت نفسها للنبي ان اراد النبي ان يستنكحها} [الاحزاب: ]، وظاهر القصة يدل علي عدم اشتراط تقدم الشرط الثاني علي الاول، وذلك ان ارادته عليه الصلاة والسلام للنكاح انما هو مرتب علي هبة المراة نفسها له، وكذا الواقع في القصة لما وهبت اراد نكاحها، ولم يرو انه اراد نكاحها فوهبت، وهو يحتاج الي جواب، اه سمين.
 قال الزمخشري: لا يسند الي الله هذا الفعل ولا يوصف بمعناه، وللمعتزلي ان يقول، ولا يتعين ان تكون «ان» شرطية، بل هي نافية، والمعني: ما كان الله يريد ان يغويكم. قال ابو حيان: قلت لا اظن 
 احدا يرضي بهذه المقالة، وان كانت توافق مذهبه، وقيل: في الاية اضمار، اي: ولا ينفعكم نصحي ان اردت ان انصح لكم ان كان الله في مقدوره اضلالكم؛ فعلي هذا يوقف علي «لكم»، ثم يبتدء: «ان كان الله يريد ان يغويكم هو ربكم»، اي: فهو ربكم، فيكون قد حذف الفاء في هذا القول من جواب الشرط، كما قال الشاعر:
 من يفعل الحسنات الله يشكرها ... والشر بالشر عند الله مثلان ()
 اي: فالله يشكرها، فعلي هذا القول لا يوقف علي «يغويكم»؛ لان ما بعده جواب الشرط، وانما اتي ب «ان» الشرطية دون الواو؛ لاختلاف الفاعل في المحلين، وانما سقنا هذا برمته؛ لنفاسته؛ لبيان هذا الوقف، ولو اراد الانسان استقصاء الكلام في بيانه لاستفرغ عمره ولم يحكم امره، انظر: السمين.
 {واليه ترجعون ()} [] كاف؛ لان «ام» بمعني: الف الاستفهام.
 {افتراه} [] حسن.
 {مما تجرمون ()} [] كاف.
 {من قد امن} [] ليس بوقف؛ لمكان الفاء.
 {يفعلون ()} [] كاف.
 {ووحينا} [] جاءز.
 {ظلموا} [] حسن، علي استءناف ما بعده؛ لان «ان» كالتعليل لما قبلها.
 {مغرقون ()} [] كاف.
 {سخروا منه} [] حسن، وقيل: كاف؛ لانه جواب «كلما»، وقوله: «قال» مستانف علي تقدير سءال ساءل.
 {كما تسخرون ()} [] كاف، ومثله: «فسوف تعلمون»؛ لان «فسوف» للتهديد، فيبدا بها الكلام؛ لانها لتاكيد الواقع ان جعلت «من» في محل رفع بالابتداء، والخبر «يخزيه»، وليس بوقف لمن جعلها في موضع نصب مفعولا لقوله: «تعلمون» وليست راس اية؛ لتعلق ما بعدها بما قبلها، ولا يفصل بين العامل والمعمول بالوقف.
 {مقيم ()} [] كاف؛ لان «حتي» للابتداء اذا كان بعدها (اذا).
 {التنور} [] ليس بوقف؛ لان «قلنا» جواب «اذا».
 {زوجين اثنين} [] جاءز، ثم يبتدء «واهلك»، اي: واهلك الله من الهلاك جميع الخلاءق الا من سبق عليه القول؛ فما بعد الاستثناء خارج مما قبله، يعني: ابليس ومن امن، قاله ابو العلاء الهمداني. 
 {واهلك} [] ليس بوقف؛ لان الوقف يشعر بانه امر بحمل جميع اهله، وتعلق الاستثناء ايضا يوجب عدم الوقف.
 {ومن امن} [] تام اتفاقا؛ للابتداء بالنفي، وايضا «من» مفعول به عطف علي مفعول «احمل».
 {الا قليل ()} [] اتم.
 {ومرساها} [] كاف، ومثله: «رحيم»، وكذا «كالجبال».
 {في معزل} [] حسن، ان جعل ما بعده علي اضمار قول، وليس بوقف ان جعل متصلا ب «نادي»، ومعني «في معزل» اي: من جانب من دين ابيه، وقيل: من السفينة.
 {مع الكافرين ()} [] كاف.
 {من الماء} [] حسن.
 {من امر الله} [] جاءز، علي ان الاستثناء منقطع، اي: لكن من رحمة الله معصوم، والصحيح انه متصل.
 والوقف علي {من رحم} [] حسن، وقال ابو عمرو: كاف، وخبر «لا» محذوف، اي: لا عاصم موجود، ولا يجوز ان يكون الخبر «اليوم»؛ لان ظرف الزمان لا يكون خبرا عن الجثة، ويجوز ان يكون الفاعل بمعني المفعول، والمفعول بمعني الفاعل، كقوله: ... {من ماء دافق ()} [الطارق: ] اي: مدفوق، و {عيشة راضية ()} [] اي: مرضية.
 {من المغرقين ()} [] كاف، وكذا «اقلعي».
 {وغيض الماء} [] جاءز، ومثله: «الامر».
 {واستوت علي الجودي} [] كاف، والواو بعده؛ للاستءناف، لا للعطف؛ لانه فرغ من صفة الماء وجفافه.
 {الظالمين ()} [] تام.
 {من اهلي} [] حسن.
 {وان وعدك الحق} [] احسن مما قبله.
 {الحاكمين ()} [] كاف.
 وكذا {ليس من اهلك} [] كاف، علي قراءة من قرا: «انه عمل غير صالح» برفع «عمل» وتنوينه وفتح الميم، وبها قرا ابن كثير، ونافع، وعاصم، وابو عمرو، وحمزة، وابن عامر ()؛ وذلك علي ان الضمير في «انه» الثاني يعود الي السءال، كانه قال: سءالك يا نوح اياي ان انجيه كافرا ما ليس لك به 
 علم عمل غير صالح، فعلي هذا يحسن الوقف علي «من اهلك»، ويحسن الابتداء بما بعده؛ لانه منقطع مما قبله، وليس بوقف علي ان الضمير في «انه» عاءد علي ابن نوح، والتقدير: ان ابنك ذو عمل غير صالح، فحذف (ذو)، واقيم «عمل» مقامه، كما تقول: عبد الله اقبال وادبار، اي: ذو اقبال وادبار، وليس بوقف ايضا علي قراءة الكساءي (): «انه عمل غير صالح» بالفعل الماضي بكسر الميم وفتح اللام، ونصب «غير» نعتا لمصدر محذوف تقديره: انه عمل عملا غير صالح، فلا يوقف علي «من اهلك»؛ لان الضمير في «انه» الثاني يعود علي الضمير في «انه ليس من اهلك» الاول، فبعض الكلام متصل ببعضه، فوصله بما قبله اولي؛ لانه مع ما قبله كلام واحد، وهذا غاية في بيان هذا الوقف،،، ولله الحمد ().
 {ما ليس لك به علم} [] كاف، علي استءناف ما بعده، ومثله: «الجاهلين».
 {به علم} [] حسن؛ للابتداء بالشرط.
 {من الخاسرين ()} [] كاف، ومثله: «ممن معك»، وقيل: تام؛ لان «وامم» مبتدا محذوف الصفة وهي المسوغة؛ للابتداء بالنكرة، اي: وامم منهم، او مبتدا، ولا تقدر صفة، والخبر «سنمتعهم» في التقديرين، والمسوغ التفصيل.
 {اليم ()} [] تام.
 {نوحيها اليك} [] حسن، ومثله: «من قبل هذا».
 {فاصبر} [] احسن مما قبله؛ للابتداء ب «ان».
 {للمتقين ()} [] تام؛ لانتهاء القصة.
 {اخاهم هودا} [] جاءز.
 {اعبدوا الله} [] حسن، ومثله: «غيره»؛ للابتداء بالنفي، اي: ما انتم في عبادتكم الاوثان الا مفترون.
 و {مفترون ()} [] كاف.
 {اجرا} [] حسن، ومثله: «فطرني»، وقيل: كاف، علي استءناف الاستفهام.
 {تعقلون ()} [] كاف.
 {ثم توبوا اليه} [] ليس بوقف؛ لان جواب الامر لم يات بعد، وكذا لا يوقف علي «مدرارا»؛ لعطف ما بعده علي ما قبله، والعطف يصير الشيءين كالشء الواحد.
 {الي قوتكم} [] كاف. 
 {مجرمين ()} [] كاف.
 {ببينة} [] حسن، ومثله: «عن قولك».
 {بمءمنين ()} [] كاف، ومثله: «بسوء»، وقيل: تام؛ لانه اخر كلامهم.
 {من دونه} [] جاءز.
 {ثم لا تنظرون ()} [] كاف، ومثله: «وربكم»، وكذا «بناصيتها»، و «مستقيم»، و «اليكم»، كلها وقوف كافية.
 {قوما غيركم} [] جاءز؛ لاستءناف ما بعده، وليس بوقف ان جعل حالا.
 {شيءا} [] كاف.
 {حفيظ ()} [] تام.
 {برحمة منا} [] جاءز؛ لان التقدير: وقد نجيناهم.
 {غليظ ()} [] تام.
 {عنيد ()} [] كاف، وقيل: تام.
 {ويوم القيامة} [] كاف؛ للابتداء بالاستفهام بعده، ومثله: «كفروا ربهم».
 {قوم هود ()} [] تام؛ لانتهاء القصة.
 {اخاهم صالحا} [] جاءز، ومثله: «اعبدوا الله».
 {غيره} [] حسن، علي القراءتين؛ رفعه نعت ل «اله» علي المحل، وجره نعت له علي اللفظ ().
 {واستعمركم فيها} [] جاءز.
 {ثم توبوا اليه} [] كاف.
 {مجيب ()} [] تام.
 {قبل هذا} [] حسن، علي استءناف الاستفهام، وان كان داخلا في القول.
 {اباءنا} [] حسن.
 {مريب ()} [] كاف، ومثله: «ان عصيته»، وكذا «غير تخسير».
 {لكم اية} [] جاءز، ومثله: «في ارض الله»، وقيل: حسن.
 {بسوء} [] ليس بوقف؛ لمكان الفاء.
 {قريب ()} [] كاف.
 {فعقروها} [] جاءز، ومثله: «ثلاثة ايام». 
 {مكذوب ()} [] كاف.
 {برحمة منا} [] ليس بوقف؛ لعطف ما بعده علي ما قبله.
 {ومن خزي يومءذ} [] كاف، ومثله: «العزيز».
 {جاثمين ()} [] ليس بوقف، ان جعل ما بعده نعتا لما قبله، او بدلا من الضمير في «اصبحوا»، وان جعلت الكاف متعلقة بمحذوف كان تاما.
 {كان لم يغنوا فيها} [] حسن، ومثله: «كفروا ربهم».
 {لثمود ()} [] تام.
 {قالوا سلاما} [] حسن، اي: سدادا من القول، والمعني: سلمنا سلاما، او قولا ذا سلامة لم يقصد به حكاية.
 {قال سلام} [] جاءز، و «سلام» خبر مبتدا محذوف، اي: امري وامركم سلام، او مبتدا محذوف الخبر، اي: عليكم سلام.
 {حنيذ ()} [] كاف.
 {لا تخف} [] جاءز، وقال نافع: تام، وخولف؛ لان الكلام متصل.
 {قوم لوط ()} [] كاف؛ علي استءناف ما بعده، وليس بوقف ان جعل ما بعده جملة في موضع الحال.
 {فضحكت} [] تام، علي ان لا تقديم في الكلام ولا تاخير، ويكون المعني: انهم لما لم ياكلوا من طعام ابراهيم  صلي الله عليه وسلم  خافهم، فلما تبينوا ذلك في وجهه –قالوا: لا تخف، فضحكت امراته سرورا بالبشارة بزوال الخوف، وهذا قول السدي. والرسل هنا: جبريل، وميكاءيل، واسرافيل ذكره جماعة من المفسرين، وقال قتادة: ضحكت من غفلة القوم، وقد جاءهم العذاب. وقال وهب: ضحكت تعجبا من ان يكون لها ولد وقد هرمت، وقيل: ضحكت حين اخبرتهم الملاءكة انهم رسل، وقيل: كانت قالت لابراهيم سينزل بهءلاء القوم عذاب، فلما جاءت الرسل سرت بذلك، وقيل: ضحكت من ابراهيم؛ اذ خاف من ثلاثة وهو يقوم بماءة رجل. وقال مجاهد: ضحكت بمعني: حاضت. قال الفراء: لم اسمعه من ثقة، ووجهه انه كناية. وقال الجمهور: هو الضحك المعروف. وقيل: هو مجاز معبر به عن طلاقة الوجه وسروره بنجاة اخيها لوط وهلاك قومه ().
 {فبشرناها باسحاق} [] كاف، لمن قرا: «يعقوب» بالرفع بالابتداء، والتقدير: ويعقوب من وراء اسحاق، وبها قرا ابن كثير، وابن عامر، وابو عمرو، ونافع، والكساءي، وابو بكر عن عاصم ()، 
 او رفع «يعقوب» علي انه فاعل، اي: واستقر لها من وراء اسحق يعقوب، وجاءز لمن قراه بالنصب () عطفا علي موضع «باسحاق» اي: فبشرناها باسحاق ووهبنا لها يعقوب، ومراد من نصب لم يدخل يعقوب في البشارة؛ لانه يفسد ان ينسق علي «اسحق» الاول؛ لدخول من بينهما؛ اذ لا يجوز مررت بعبد الله ومن بعده محمد، ومن نصب لم يرد هذا الوجه، وانما اراد ان يضمر فعلا ينصبه به، كما تقول: مررت بعبد الله ومن بعده محمدا، علي معني: وجزت من بعده محمدا. وليس بوقف ان جر «يعقوب» تقديرا، والمعني: فبشرناها باسحاق وبيعقوب، وضعف؛ للفصل بين واو العطف والمعطوف بالظرف، وهذا بعيد، والصحيح انه منصوب بفعل مقدر دل عليه المظهر، والتقدير: واتيناها من وراء اسحاق يعقوب؛ فيعقوب ليس مجرورا عطفا علي اسحاق؛ لانه متي كان المعطوف عليه مجرورا اعيد مع المعطوف الجار.
 {ومن وراء اسحاق يعقوب ()} [] حسن، ومثله: «شيخا».
 {عجيب ()} [] كاف.
 {من امر الله} [] حسن.
 {اهل البيت} [] كاف.
 {مجيد ()} [] تام.
 {وجاءته البشري} [] صالح، علي ان جواب «لما» محذوف، اي: اقبل يجادلنا، ف «يجادلنا» حال من فاعل «اقبل»، وليس بوقف ان جعل جوابها «يجادلنا»، وكذا ان جعل «يجادلنا» حالا من ضمير المفعول في «جاءته».
 {في قوم لوط ()} [] كاف، وقيل: تام، وهو راس اية في غير البصري؛ وذلك ان لوطا لم يعرف انهم ملاءكة، وعلم من قومه ما هم عليه من اتيان الفاحشة؛ لانهم كانوا في احسن حال، فخاف عليهم، وعلم انه يحتاج الي المدافعة عن اضيافه ().
 {منيب ()} [] تام.
 {اعرض عن هذا} [] حسن، ومثله : «امر ربك».
 {غير مردود ()} [] كاف، ومثله: «عصيب»، اي: شديد. 
 {اليه} [] حسن، ومثله: «السيءات»، وكذا «هن اطهر لكم».
 {ضيفي} [] كاف، علي استءناف الاستفهام.
 {رشيد ()} [] كاف.
 {من حق} [] جاءز.
 {ما نريد ()} [] حسن، وهو اتيان الذكورة.
 {شديد ()} [] كاف، وجواب «لو» محذوف تقديره: لبطشت بكم.
 {لن يصلوا اليك} [] حسن، ومثله: «بقطع من الليل» علي قراءة من قرا: «الا امراتك» بالرفع بدلا من «احد»، وبها قرا ابن كثير، وابو عمرو ()، وليس بوقف لمن قرا بالنصب استثناء من قوله: «فاسر باهلك»، وهي قراءة الباقين ()، ويجوز نصبه استثناء من «واحد». والوقف علي «الليل»، كما قرء (): «ما فعلوه الا قليلا» بالنصب.
 {الا امراتك} [] حسن، علي القراءتين (). قال قتادة، والسدي: خرجت الملاءكة من عند ابراهيم نحو قرية لوط، فاتوا لوطا نصف النهار وهو في ارض له يعمل فيها، وقد قال الله لهم: لا تهلكوهم حتي يشهد عليهم فاستضافوه، فانطلق بهم، فلما مشي ساعة قال لهم: اما بلغكم امر هذه القرية؟ قالوا: وما امرهم؟ قال: اشهد بالله لشر اهل قرية في الارض عملا، فدخلوا معه منزله، ولم يعلم بذلك احد الا اهل بيت لوط  عليه السلام ، فخرجت امراته فاخبرت قومها، وقالت: ان في بيت لوط رجالا ما رايت مثل وجوههم قط، فجاء قومه يهرعون اليه، اي: يسرعون في المشي، فقال لهم حين حضروا، وظنوا انهم غلمان: هءلاء بناتي هن اطهر لكم من نكاح الرجال، يعني: بالتزويج، ولعله في ذلك الوقت كان تزويجه بناته من الكفرة جاءز، كما زوج النبي  صلي الله عليه وسلم  ابنته من عتبة بن ابي لهب والعاصي بن الربيع قبل الوحي، وكانا كافرين، وقيل: اراد نساء امته، كما قرء في الشاذ (): «النبي اولي بالمءمنين من 
 انفسهم وازواجه امهاتهم وهو اب لهم» انتهي النكزاوي. قال ابن عباس: اغلق لوط بابه والملاءكة معه وهم يعالجون سور الدار، فلما رات الملاءكة ما لقي لوط من الكرب بسببهم –قالوا: يا لوط انا رسل ربك لن يصلوا اليك؛ فافتح الباب، ودعنا واياهم، ففتح الباب، فاستاذن جبريل ربه في عقوبتهم فاذن له، فقام في الصورة التي خلقه الله عليها، فنشر جناحه وضرب وجوههم، فطمس اعينهم فاعماهم، فصاروا لا يعرفون الطريق ولا يهتدون الي بيوتهم، فانصرفوا وهم يقولون: النجاة النجاة؛ سحرونا ().
 {ما اصابهم} [] حسن، ومثله: «موعدهم الصبح»؛ فهو منقطع عما قبله، وذلك انه روي ان الملاءكة لما قالت للوط عليه السلام: انهم يهلكون في الصبح قال لهم لوط: لا تءخروهم الي الصبح، كانه يريد العجلة قالوا له: «اليس الصبح بقريب»، وانما قربوا عليه؛ لان قلوب الابدال لا تحتمل الانتظار.
 و {بقريب ()} [] كاف.
 {منضود ()} [] حسن، ان نصب «مسومة» بفعل مقدر، وليس بوقف ان نصب نعتا ل «الحجارة»، كانه قال: وامطرنا عليهم حجارة مسومة.
 {عند ربك} [] كاف.
 {ببعيد ()} [] تام؛ لانتهاء القصة.
 {اخاهم شعيبا} [] جاءز، ومثله: «من اله غيره»، علي القراءتين ()؛ رفعه نعتا ل «اله» علي المحل، وجره نعت له علي اللفظ.
 {والميزان} [] حسن، ومثله: «بخير»، اي: برخص الاسعار.
 {محيط ()} [] كاف.
 {بالقسط} [] حسن، ومثله: «اشياءهم».
 {مفسدين ()} [] تام.
 {مءمنين} [] كاف، ورسموا: «بقيت الله» بالتاء المجرورة كما تري.
 {بحفيظ ()} [] حسن.
 {ما نشاء} [] كاف، ورسموا: «نشءا» بواو والف بعد الشين كما تري.
 {الرشيد ()} [] كاف.
 {رزقا حسنا} [] تام، وفي الكلام حذف تقديره: ورزقني منه رزقا حسنا، افتامرونني ان اعصيه مع هذه النعم التي له علي؟! 
 {انهاكم عنه} [] تام.
 {ما استطعت} [] حسن.
 {الا بالله} [] كاف، ومثله: «انيب».
 {او قوم صالح} [] حسن.
 {ببعيد ()} [] كاف.
 {ثم توبوا اليه} [] حسن.
 {ودود ()} [] كاف.
 {ضعيفا} [] حسن؛ للابتداء ب «لولا»، ومثله: «لرجمناك».
 {بعزيز ()} [] كاف، ومثله: «من الله» فصلا بين الاستخبار والاخبار.
 {ظهريا} [] كاف، ومثله: «محيط».
 {اني عامل} [] حسن، ثم يبتدء «سوف تعلمون»؛ لانه وعيد، فهو منقطع عما قبله، و «تعلمون» ليس بوقف، ولا راس اية؛ لان «من» في موضع نصب مفعول «تعلمون»، وان جعلت «من» في محل رفع بالابتداء، والخبر «يخزيه»، قال الفضل بن العباس: كان تاما، وراس اية ايضا علي الاستءناف، ورد بانه ليس راس اية اجماعا، ويجوز ان تكون «من» استفهامية، وما بعدها الخبر، اي: سوف تعلمون الشقي الذي ياتيه عذاب يخزيه، والذي هو كاذب، ام غيرهما ().
 {ومن هو كاذب} [] حسن، ومثله: «وارتقبوا».
 {رقيب ()} [] كاف.
 {برحمة منا} [] حسن، ومثله: «جاثمين»، ان جعلت الكاف متعلقة بمحذوف، وليس بوقف ان جعلت ما بعدها متعلقا بما قبلها بدلا من «جاثمين»، او حالا من الضمير في «اصبحوا».
 {كان لم يغنوا فيها} [] حسن.
 {بعدت ثمود ()} [] تام.
 {وسلطان مبين ()} [] ليس بوقف؛ لان حرف الجر وما بعده موضعه نصب ب «ارسلنا».
 {وملءه} [] جاءز.
 {امر فرعون} [] حسن، وقيل: كاف.
 {برشيد ()} [] كاف، علي استءناف ما بعده، وليس بوقف ان جعل ما بعده في موضع الحال.
 {يوم القيامة} [] جاءز. 
 {النار} [] حسن.
 {المورود ()} [] كاف.
 {لعنة} [] ليس بوقف؛ لان «ويوم القيامة» معطوف علي موضع «في هذه»، كانه قال: والحقوا لعنة في الدنيا، ولعنة يوم القيامة.
 {ويوم القيامة} [] تام، ويبتدء «بءس الرفد»، وقيل: لعنة واحدة في الدنيا ويوم القيامة بءس ما يوعدون به؛ فهي لعنة واحدة، وهذا لا يصح؛ لانه يءدي الي اعمال «بءس» فيما تقدم عليها، وذلك لا يجوز؛ لعدم تصرفها، اما لو تاخر لجاز ().
 {المرفود ()} [] كاف.
 {نقصه عليك} [] جاءز.
 {وحصيد ()} [] كاف.
 {انفسهم} [] حسن.
 {امر ربك} [] كاف، وكذا «تتبيب»، وكذا «ظالمة».
 {شديد ()} [] تام.
 {الاخرة} [] حسن.
 {مجموع} [] ليس بوقف؛ لان «الناس» مرفوع به، كانه قال: مجموع الناس له، اي: فيه، اي: ستجمع له الناس.
 {له الناس} [] جاءز.
 {مشهود ()} [] كاف.
 {معدود ()} [] جاءز.
 {الا باذنه} [] تام عند نافع.
 {وسعيد ()} [] كاف.
 {ففي النار} [] جاءز.
 {وشهيق ()} [] ليس بوقف؛ لان «خالدين» حال مقدرة مما قبله، و «الارض» ليس بوقف؛ لحرف الاستثناء بعده.
 {ما شاء ربك} [] كاف، ومثله: «فعال لما يريد»، وفي هذا الاستثناء اربعة عشر قولا اظهرها: انه استثناء من قوله: «ففي النار»، «وفي الجنة»، اي: الا لزمان الذي شاءه الله، فلا يكونون في النار ولا 
 في الجنة، وهو الزمان الذي يفصل الله فيه بين الخلق يوم القيامة؛ لانه زمان يخلو فيه الشقي والسعيد من دخول النار والجنة، او ان «الا» بمعني: قد، اي: قد شاء ربك. انظر: السمين.
 {ففي الجنة} [] ليس بوقف؛ لان «خالدين» حال، فلا يفصل بين الحال وذيها.
 {والارض} [] ليس بوقف ؛ لحرف الاستثناء بعده.
 {الا ما شاء ربك} [] الثاني –حسن، ان نصب «عطاء» بفعل مضمر، اي: يعطون عطاء، وليس بوقف ان نصب بما قبله؛ لان المصدر يعمل فيه معني ما قبله، ومعني «عطاء»: اعطاء، ك (نباتا، اي: انباتا.
 {غير مجذوذ ()} [] تام، ومثله: «هءلاء»؛ للابتداء بالنفي.
 {من قبل} [] كاف.
 {غير منقوص ()} [] تام.
 {فاختلف فيه} [] كاف، ومثله: «لقضي بينهم».
 {مريب ()} [] تام، علي قراءة من شدد النون والميم، وقرء: «ان» مخففة، و «لا» اسمها، واعمالها مخففة ثابت في لسان العرب؛ ففي كتاب سيبويه: (ان زيدا لمنطلق) بتخفيف (ان)، فبالتخفيف قرا نافع، وابن كثير، وابو بكر عن عاصم. والباقون بالتشديد ()، وقرا ابن عامر، وعاصم، وحمزة (): «لما» هنا مشددة، وفي يس: {وان كل لما جميع لدينا} [يس: ]، وفي الزخرف: {وان كل ذلك لما متاع الحياة الدنيا} [الزخرف: ]، وفي الطارق: {ان كل نفس لما عليها حافظ ()} [الطارق: ]. قال صاحب الكشاف: اعجب كلمة كلمة لما ان دخلت علي ماض كانت ظرفا، وان دخلت علي مضارع كانت حرفا جازما، نحو: لما يخرج، وتكون اسما مبنيا؛ لاتحاده بين كونه اسما وكونه حرفا، ك (مذ)، فانه مبني حال الاسمية؛ لمجيءه اسما علي صورة الحرف، فكذلك (لما).
 {اعمالهم} [] كاف.
 {خبير ()} [] تام؛ للابتداء بعده بالامر.
 {ومن تاب معك} [] حسن.
 {ولا تطغوا} [] احسن مما قبله.
 {بصير ()} [] تام. حكي عن بعض الصالحين: انه راي النبي  صلي الله عليه وسلم  في المنام، فقال له: يا 
 رسول الله روي عنك انك قلت: شيبتني هود واخواتها ()، فما الذي شيبك في هود؟ اقصص الانبياء، او هلاك الامم؟ فقال: لا، ولكن قوله تعالي: {فاستقم كما امرت} [] اي: لان الاستقامة درجة بها تمام الامر وكماله، وهي مقام لا يطيقه الا الاكابر، قاله الفخر الرازي.
 {فتمسكم النار} [] حسن، ومثله: «من اولياء».
 {ثم لا تنصرون ()} [] تام.
 {من الليل} [] كاف، ومثله: «السيءات». قال مجاهد: الحسنات هي: سبحان الله، والحمد لله، ولا اله الا الله، والله اكبر.
 {للذاكرين ()} [] كاف.
 {واصبر} [] جاءز.
 {المحسنين ()} [] تام.
 {ممن انجينا منهم} [] حسن، ومثله: «فيه».
 {مجرمين ()} [] تام، ومثله: «مصلحون»، اي: ما كان الله ليهلكهم وهذه حالتهم.
 {امة واحدة} [] حسن.
 {خلقهم} [] تام، ان جعل قوله: «ولذلك خلقهم» بمعني: وللاختلاف في الشقاء والسعادة خلقهم، وان قدرته بمعني: {وتمت كلمة ربك لاملان جهنم من الجنة والناس اجمعين ()} []، ولذلك خلقهم؛ علي التقديم والتاخير كان الوقف علي من «رحم ربك» كافيا، وابتدات «ولذلك خلقهم» الي «اجمعين»، ويكون الوقف علي «اجمعين» كافيا، قاله النكزاوي.
 {كلمة ربك} [] ليس بوقف؛ لان «لاملان» تفسير للكلمة، فلا يفصل بين المفسر والمفسر بالوقف.
 {اجمعين ()} [] تام.
 {فءادك} [] حسن.
 {الحق} [] ليس بوقف؛ لان «وموعظة» معطوفة علي «الحق».
 والوقف علي {وموعظة} [] حسن، ان جعل ما بعدها منصوبا بفعل مقدر، او جعل «وذكري» مبتدا، والخبر ما بعدها، وليس بوقف ان رفع ما بعدها عطفا عليها. 
 {للمءمنين ()} [] كاف.
 {علي مكانتكم} [] حسن.
 {عاملون ()} [] احسن مما قبله.
 {وانتظروا} [] جاءز.
 {منتظرون ()} [] تام.
 {والارض} [] جاءز، ومثله: «فاعبده».
 {وتوكل عليه} [] كاف.
 {تعملون ()} [] تام.
 
  سورة يوسف
  عليه السلام 
 مكية
 الا اربع ايات؛ من اولها ثلاث ايات، والرابعة قوله: {* لقد كان في يوسف} [] الاية.
 [ايها:] وهي ماءة واحدي عشرة اية اجماعا.
 وفيها مما يشبه الفواصل وليس معدودا باجماع اربعة مواضع:
    
 {منهن سكينا} [].
    
 {معه السجن فتيان} [].
    
 {يات بصيرا} [].
    
 {لاولي الالباب} [].
  وكلمها: الف وسبعماءة وستة وسبعون كلمة.
  وحروفها: سبعة الاف وماءة وستة وستون حرفا.
 {الر} [] تقدم؛ هل هي مبنية كاسماء الاعداد؟ او معربة ولها محل من الاعراب؟! تقدم ما يغني عن اعادته.
 {المبين ()} [] تام، ومثله: «تعقلون».
 {هذا القران} [] حسن.
 {الغافلين ()} [] تام، ان قدرت: اذكر اذ قال يوسف، فان جعلت «اذ» داخلة في الصلة، اي: لمن الغافلين ذلك الوقت فلا يتم الكلام علي الموصول دون الصلة، والمعتمد ان العامل في «اذ» «قال يا بني»؛ اذ تبقي علي وضعها الاصلي من كونها ظرفا لما مضي، وحينءذ فلا يوقف علي «ساجدين»، اي: قال يعقوب يا بني وقت قول يوسف له: كيت وكيت، وهذا اسهل الوجوه؛ اذ فيه ابقاء «اذ» علي كونها ظرفا ماضيا.
 والوقف علي {ساجدين ()} []، و {مبين ()} [] و {واسحاق} [] وقوف كافية.
 {حكيم ()} [] تام.
 {للساءلين ()} [] كاف، ان علق «اذ » باذكر مقدرا، وليس بوقف ان علق «اذ» بما قبلها.
 {ونحن عصبة} [] كاف، ومثله: «مبين»، ولا يكره الابتداء بما بعدها؛ اذ القارء ليس معتقدا معناه، وانما هو حكاية قول قاءل حكاه الله عنه.
 {وجه ابيكم} [] ليس بوقف؛ لعطف ما بعده علي ما قبله.
 {صالحين ()} [] كاف.
 {لا تقتلوا يوسف} [] جاءز.
 
 {في غيابة الجب} [] ليس بوقف؛ لان «يلتقطه» جواب الامر، وقرا نافع: «غيابات الجب» في الموضعين، والباقون بالافراد ().
 {فاعلين ()} [] كاف، ومثله: «لناصحون».
 {ويلعب} [] حسن.
 {لحافظون ()} [] كاف، ومثله: «غافلون»، و «لخاسرون».
 {في غيابة الجب} [] يبني الوقف علي «الجب» علي اختلاف التقادير؛ فان جعل جواب «لما» محذوفا تقديره: فعلوا به ما اجمعوا عليه من الاذي، او سروا بذهابهم به واجماعهم علي ما يريدون. والواو في «واوحينا» عاطفة علي ذلك المقدر، ولم يجعل «واوحينا» جواب «لما»؛ لعدم صحته؛ وذلك ان الايحاء كان بعد القاءه في الجب، فليس مرتبا علي عزمهم علي ما يريدون، وانما يترتب الجواب المقدر، وبهذا يحسن الوقف علي «الجب»، ويحسن ايضا علي استءناف «واوحينا»، ولم يجعل داخلا تحت جواب «لما»، وليس بوقف ان جعل جواب «لما» «قالوا يا ابانا انا ذهبنا»، او جعل جواب «لما» قوله: «واوحينا»، علي مذهب الكوفيين ان الواو زاءدة، اي: فلما ذهبوا به اوحينا، وعلي هذين التقديرين لا يوقف علي «الجب».
 {وهم لا يشعرون ()} [] كاف.
 {يبكون ()} [] جاءز، ومثله: «فاكله الذءب»؛ للابتداء بالنفي.
 {صادقين ()} [] كاف.
 {بدم كذب} [] جاءز.
 {امرا} [] حسن.
 {فصبر جميل} [] تام، اي: فصبري صبر جميل: ف «صبري» مبتدا، و «صبر» خبره، و «جميل» صفة حذف المبتدا وجوبا؛ لنيابة المصدر مناب الفعل؛ اذ جء به بدلا من اللفظ بفعله.
 {علي ما تصفون ()} [] كاف.
 {دلوه} [] حسن.
 {هذا غلام} [] احسن مما قبله.
 {بضاعة} [] كاف. 
 {بما يعملون ()} [] تام.
 {معدودة} [] حسن، والواو بعده تصلح للعطف وللحال، اي: وقد كانوا فيه من الزاهدين، وهو تام عند ابي عمرو.
 {ولدا} [] كاف.
 {من تاويل الاحاديث} [] حسن.
 {غالب علي امره} [] ليس بوقف؛ لحرف الاستدراك بعده.
 {لا يعلمون ()} [] حسن.
 {وعلما} [] جاءز.
 {المحسنين ()} [] كاف.
 {هيت لك} [] حسن، ومثله: «معاذ الله»، و «مثواي».
 {الظالمون ()} [] كاف، ومثله: «وهمت به»، وبهذا الوقف يتخلص القارء من شء لا يليق بنبي معصوم ان يهم بامراة، وينفصل من حكم القسم قبله في قوله: «ولقد همت»، ويصير «وهم بها» مستانفا؛ اذ الهم من السيد يوسف منفي؛ لوجود البرهان. والوقف علي «برهان ربه»، ويبتدء «كذلك»، اي: عصمته كذلك؛ فالهم الثاني غير الاول، وقيل: الوقف علي «وهم بها»، وان الهم الثاني كالاول، اي: ولقد همت به وهم بها كذلك، وعلي هذا «لولا ان راي برهان ربه» متصل بقوله: «لنصرف عنه»، اي: اريناه البرهان؛ لنصرف عنه ما هم به، وحينءذ الوقف علي «الفحشاء»، قيل: قعد منها مقعد الرجل من المراة، فتمثل له يعقوب  عليه السلام  عاضا اصبعه، يقول: يوسف يوسف. وفي الاتقان: لولا ان راي برهان ربه. اخرج ابن ابي حاتم عن ابن عباس في قوله: «لولا ان راي برهان ربه» قال: راي اية من كتاب الله نهته مثلت له في جدار الحاءط، وتقدير الكلام: لولا ان راي برهان ربه لواقعها، ولا يرد علي هذا «وما ابرء نفسي»؛ لانه لم يدع براءة نفسه من كل عيب، وان برء من هذا العيب، او قاله في ذلك هضما لنفسه، والوقف علي هذا علي «الفحشاء»؛ لاتصال الكلام بعضه ببعض فلا يقطع، وقد ذكروا في معني البرهان: وهم يوسف بها اشياء لا يحسن اسنادها، ولا اسناد مثلها الي الانبياء صلوات الله وسلامه عليهم اجمعين، والكلام علي ذلك يستدعي طولا اضربنا عنه تخفيفا، وفيما ذكر غاية،،، ولله الحمد ()
 {المخلصين ()} [] كاف.
 {لدي الباب} [] حسن. 
 {اليم ()} [] كاف.
 {عن نفسي} [] حسن.
 {من اهلها} [] ليس بوقف؛ لتعلق التفصيل الذي بعده بما قبله.
 {من الكاذبين ()} [] جاءز، ومثله: «من الصادقين»، وفي الحديث عن ابن عباس، انه تكلم اربعة وهم صغار: «ابن ماشطة ابنة فرعون، وشاهد يوسف، وصاحب جريج، وعيسي ابن مريم» ().
 {من كيدكن} [] جاءز.
 {عظيم ()} [] تام.
 {عن هذا} [] حسن، ومثله: «لذنبك».
 {الخاطءين ()} [] كاف.
 {عن نفسه} [] جاءز.
 {حبا} [] حسن.
 {مبين ()} [] كاف.
 {عليهن} [] حسن.
 {حاش لله} [] حسن، وقرا ابو عمرو: «حاشا» بالالف وصلا، وغيره بغيرها ().
 {ما هذا بشرا} [] جاءز.
 {كريم ()} [] كاف، وقال يحيي بن نصير النحوي: تام.
 {لمتنني فيه} [] كاف، ومثله: «فاستعصم»، وقيل: تام.
 {من الصاغرين ()} [] كاف.
 {مما يدعونني اليه} [] حسن.
 {من الجاهلين ()} [] كاف.
 {فاستجاب له ربه} [] جاءز عند نافع؛ لان الماضي بعده بمعني الامر، فكانه قال: رب اصرف عني كيدهن.
 و {كيدهن} [] كاف، وكذا «العليم».
 {حتي حين ()} [] تام. 
 {فتيان} [] حسن، ومثله: «خمرا» فصلا بين القصتين مع اتفاق الجملتين.
 {الطير منه} [] حسن، ومثله: «بتاويله».
 {المحسنين ()} [] كاف، وكذا «من قبل ان ياتيكم»، وكذا «علمني ربي»، وقال
 الاخفش: تام.
 {كافرون ()} [] كاف.
 {ويعقوب} [] حسن، وقيل: كاف؛ للابتداء بالنفي بعده.
 {من شء} [] كاف.
 {وعلي الناس} [] ليس بوقف؛ لتعلق ما بعده استدراكا، وعطفا.
 {لا يشكرون ()} [] تام.
 {القهار ()} [] كاف.
 {من سلطان} [] تام.
 {الا لله} [] حسن، ومثله: «الا اياه».
 {ذلك الدين القيم} [] وصله اولي.
 {لا يعلمون ()} [] تام.
 {فيسقي ربه خمرا} [] حسن؛ للفصل بين الجوابين، مع اتفاق الجملتين، ومثله: «من راسه»؛ لان قوله: «قضي الامر» جواب قولهما: «ما راينا»، وذلك انهما رجعا عن الرءيا، لما فسرها السيد يوسف عليه الصلاة والسلام قالا كذبنا وما راينا شيءا، فقال لهما: «قضي الامر الذي فيه تستفتيان».
 {تستفتيان ()} [] تام، وافرد الامر، وان كان امر هذا غير امر هذا التخصيص، احدهما بالخطاب بعد الفراغ منهما بالجواب.
 {عند ربك} [] جاءز، ومثله: «ذكر ربه».
 {بضع سنين ()} [] تام.
 {واخر يابسات} [] كاف، ومثله: «تعبرون»، و «اضعاث احلام»، و «بعالمين».
 {فارسلون ()} [] تام باتفاق.
 {واخر يابسات} [] الثاني ليس بوقف؛ لحرف الترجي، وهو في التعلق ك (لام كي).
 {يعلمون ()} [] كاف.
 {دابا} [] جاءز، وكذا «تاكلون»، و «تحصنون»، و «يغاث الناس» لمن قرا: «وفيه تعصرون» بالتاء الفوقية؛ لرجوعه من الغيبية الي الخطاب، وليس بوقف لمن قراه بالتحتية (). 
 {وفيه يعصرون ()} [] كاف.
 {اءتوني به} [] حسن، ومثله: «ايديهن».
 {عليم ()} [] تام.
 {عن نفسه} [] حسن، ومثله: «من سوء»، وكذا «عن نفسه».
 {لمن الصادقين ()} [] تام عند من جعل قوله: «ليعلم اني لم اخنه بالغيب» من كلام يوسف، وانما اراد: ليعلم العزيز اني لم اخنه بالغيب، وقد كان مجاهد يقول ذلك ؛ ليعلم الله اني لم اخنه بالغيب، وليس بوقف لمن جعل ذلك من كلام العزيز، وتجاوزه احسن، ومن حيث كونه راس اية يجوز. واما من جعله من كلامها فالوقف علي «الصادقين» حسن. وقال ابن جريج: ان في الكلام تقديما وتاخيرا، اي: ان ربي بكيدهن عليم؛ ذلك ليعلم اني لم اخنه بالغيب، وعلي هذا فلا يوقف علي «الصادقين»، وجعل الوقف علي قوله «بالغيب» كافيا، وقال: ان يوسف تكلم بهذا الكلام قبل خروجه من السجن، وخولف في هذا، قالوا: لانه لو كان كافيا لكسرت «ان»، قلت: وهذا لا يلزمه؛ لانه ابتدا «وان الله»، اي بتقدير: اعلموا ان الله ().
 {الخاءنين ()} [] كاف، وقيل: تام.
 {وما ابرء نفسي} [] حسن، فيه حذف، اي: وما ابرء نفسي عن السوء.
 {لامارة بالسوء} [] احسن، علي ان الاستثناء منقطع، اي: ولكن رحمة ربي هي التي تصرف الاساءة، وليس بوقف ان جعل متصلا مستثني من الضمير المستكن في امارة بالسوء، اي: الا نفسا رحمها ربي، فيكون اراد بالنفس: الجنس، وفيه ايقاع «ما» علي من يعقل، والمشهور خلافه.
 {رحيم ()} [] تام.
 {استخلصه لنفسي} [] حسن، ومثله: «امين».
 {خزاءن الارض} [] جاءز.
 {عليم ()} [] كاف.
 {ليوسف في الارض} [] جاءز؛ لان قوله: «يتبوا» يصلح مستانفا وحالا، اي: مكنا له متبءا منزلا.
 {حيث يشاء} [] كاف، لمن قراه بالتحتية، وجاءز لمن قراه بالنون (). 
 {من نشاء} [] جاءز.
 {المحسنين ()} [] كاف، ومثله: «يتقون»، وكذا «منكرون»، و «من ابيكم»؛ للابتداء بالاستفهام.
 {اوفي الكيل} [] جاءز.
 {المنزلين ()} [] كاف؛ للابتداء بالشرط، ومثله: «ولا تقربون»، و «لفاعلون»، و «يرجعون».
 {منا الكيل} [] جاءز، ومثله: «نكتل».
 {لحافظون ()} [] كاف.
 {من قبل} [] حسن؛ لانتهاء الاستفهام الي الاخبار، وكذا «حفظا».
 {الراحمين ()} [] كاف، ومثله: «ردت اليهم»؛ لانتهاء جواب «لما».
 {نبغي} [] كاف. واثبت القراء الياء في «نبغي» وصلا ووقفا، وفي «ما» وجهان: يجوز ان تكون نافية، والتقدير: يا ابانا ما نبغي منك شيءا، وعليها يكون الوقف كافيا. ويجوز ان تكون استفهامية مفعولا مقدما واجب التقديم؛ لان له صدر الكلام، فكانهم قالوا: اي شء نبغي ونطلب، وقال بعضهم: ان مع نبغي فاء محذوفة، فيصير التقدير: ما نبغي فهذه بضاعتنا ردت الينا، فلا يحسن الوقف علي «نبغي»؛ لان قوله: «ردت الينا» توضيح لقولهم: «ما نبغي» فلا يقطع منه، وفي هذا غاية في بيان هذا الوقف،،، ولله الحمد
 {كيل بعير} [] جاءز.
 {كيل يسير ()} [] كاف.
 {موثقا من الله} [] ليس بوقف؛ لان جواب الحلف لم يات؛ لان يعقوب لما كان غير مختار لارسال ابنه علق ارساله باخذ الموثق عليهم، وهو الحلف بالله؛ اذ به تءكد العهود وتشدد، ولتاتنني جواب الحلف. قال السجاوندي: وقف بعضهم بين «قال»، وبين «الله» في قوله: «قال الله» وقفة لطيفة؛ لان المعني: قال يعقوب الله علي ما نقول وكيل، غير ان السكتة تفصل بين القول والمقول، فالاحسن ان يفرق بينهما بقوة الصوت اشارة الي ان «الله» مبتدا بعد القول، وليس فاعلا ب «قال»، كما تقدم في الانعام في: {قال النار} [الانعام: ]؛ اذ الوقف لا يكون الا لمعني مقصود، والا كان لا معني له؛ لشدة التعلق، وكان النص عليه مع ذلك كالعدم، وكان الاولي وصله، ويمكن ان يقال: ان له معني، وهو كون الجملة بعد «قال» ليست من مقول الله، وليس لفظ الجلالة فاعلا به، بل الفاعل ضمير «يعقوب»، و «الله» مبتدا، و «وكيل» الخبر، والجملة في محل نصب مقول قول «يعقوب» (). 
 {الا ان يحاط بكم} [] حسن، ومثله: «وكيل»، و «متفرقة»، و «من شء»، و «الا الله»، و «عليه توكلت» كلها حسان.
 {المتوكلون ()} [] كاف، وقال ابو عمرو: تام.
 {ابوهم} [] جاءز؛ لان جواب «لما» محذوف تقديره: سلموا باذن الله.
 {قضاها} [] حسن.
 {لما علمناه} [] ليس بوقف؛ لتعلق ما بعده به استدراكا وعطفا.
 {لا يعلمون ()} [] كاف.
 {اخاه} [] جاءز.
 {يعملون ()} [] كاف.
 {في رحل اخيه} [] جاءز عند نافع.
 {لسارقون ()} [] كاف، وقال ابو عمرو: تام.
 {تفقدون ()} [] كاف.
 {صواع الملك} [] جاءز.
 {به زعيم ()} [] كاف، ومثله: «سارقين»، وكذا «كاذبين».
 {جزاءه} [] الثاني حسن، والكاف في محل نصب نعت مصدر محذوف، اي: مثل ذك الجزاء؛ وهو الاسترقاق.
 {نجزي الظالمين ()} [] كاف.
 {اخيه} [] الثاني حسن.
 {كدنا ليوسف} [] كاف؛ للابتداء بالنفي، وكذا «الا ان يشاء الله» لمن قرا «نرفع» بالنون او بالياء، لكن الاول اكفي؛ لان من قرا بالنون انتقل من الغيبية الي التكلم، واستءناف اخبار، ومن قرا بالياء جعله كلاما واحدا، فلا يقطع بعضه من بعض ().
 {من نشاء} [] كاف، علي القراءتين ().
 {عليم ()} [] تام، اي: وفوق جميع العلماء عليم؛ لانه من العام الذي يحصصه الدليل، ولا يدخل الباري في عمومه.
 {من قبل} [] كاف، ومثله: «ولم يبدها لهم»، وقيل: لا يجوز؛ لان ما بعده يفسر الضمير في 
 «اسرها»، فهذا بمنزلة الاضمار في «ان».
 {انتم شر مكانا} [] كاف، قال قتادة: هي الكلمة التي اسرها يوسف في نفسه، اي: انتم شر مكانا في السرقة؛ لانكم سرقتم اخاكم وبعتموه.
 {بما تصفون ()} [] كاف.
 {فخذ احدنا مكانه} [] حسن، علي استءناف ما بعده، وليس بوقف ان جعل ما بعده داخلا في القول.
 {متاعنا عنده} [] ليس بوقف؛ لتعلق «اذ» بما قبلها.
 {لظالمون ()} [] تام.
 {نجيا} [] حسن، يبني الوقف علي «موثقا من الله»، والوصل علي اختلاف المعربين في «ما»، وخبرها من قوله: «ما فرطتم»، وفيها خمسة اوجه:
 وهي كونها مصدرية مبتدا، والخبر «من قبل»، او مصدرية ايضا مبتدا، والخبر «في يوسف»، او زاءدة مءكدة، او مصدرية في محل نصب، او مصدرية في محل نصب ايضا، فان جعلت مصدرية في محل رفع مبتدا، والخبر «من قبل»، اي: وقع من قبل تفريطكم في يوسف كان كافيا، وكذا ان جعلت مصدرية في محل رفع مبتدا، او الخبر قوله: «في يوسف»، اي: وتفريطكم كاءن او مستقر في يوسف، فيتعلق الظرفان، وهما: «من قبل»، و «في يوسف» بالفعل الذي هو فرطتم، او جعلت زاءدة للتوكيد، فيتعلق الظرف بالفعل بعدها، اي: ومن قبل فرطتم في يوسف، وليس بوقف ان جعلت «ما» مصدرية محلها نصب معطوفة؛ علي ان «اباكم» قد اخذ، اي: الم تعلموا اخذ ابيكم الميثاق وتفريطكم في يوسف. وليس بوقف ايضا ان جعلت مصدرية محلها نصب عطفا علي اسم «ان»، اي: الم تعلموا ان اباكم، وان تفريطكم من قبل في يوسف، وحينءذ يكون في خبر (ان) هذه المقدرة وجهان: احدهما: هو «من قبل». والثاني: هو «في يوسف». وليس بوقف ايضا ان جعلت مصدرية، علي ان محلها نصب ب «تعلموا» بتقدير: الم تعلموا ان اباكم قد اخذ عليكم موثقا من الله وانتم تعلمون تفريطكم في يوسف ().
 {في يوسف} [] كاف؛ للابتداء بالنفي مع الفاء.
 {او يحكم الله لي} [] جاءز؛ لان الواو تصلح للحال والاستءناف.
 {الحاكمين ()} [] تام.
 {ان ابنك سرق} [] حسن، ومثله: «بما عملنا».
 {حافظين ()} [] كاف. 
 {اقبلنا فيها} [] حسن، علي استءناف ما بعده.
 {لصادقون ()} [] كاف.
 {امرا} [] حسن.
 {فصبر جميل} [] احسن مما قبله.
 {جميعا} [] حسن.
 {الحكيم ()} [] كاف.
 {علي يوسف} [] جاءز، علي انقطاع ما بعده.
 {كظيم ()} [] كاف، والوقف علي «الهالكين»، و «الي الله» كافيان.
 {ما لا تعلمون ()} [] اكفي منهما.
 {من روح الله} [] حسن.
 {الكافرون ()} [] تام.
 {مزجاة} [] ليس بوقف؛ للعطف بالفاء، ومعني «مزجاة»: مدفوعة يدفعها عنه كل احد، والفها منقلبة عن واو.
 {علينا} [] كاف، ومثله: «المتصدقين»، و «جاهلون».
 {لانت يوسف} [] حسن.
 {قال انا يوسف وهذا اخي} [] احسن مما قبله.
 {قد من الله علينا} [] كاف.
 {المحسنين ()} [] اكفي منه.
 {لخاطءين ()} [] كاف.
 {لا تثريب عليكم} [] بيان بين به ان قوله: «اليوم» ليس ظرفا لقوله: «لا تثريب»، وانما هو متعلق بمحذوف، اي: ادعوا، ثم استانف «اليوم يغفر الله لكم» بشرهم بالمغفرة؛ لما اعترفوا بذنبهم، وتابوا فتيب عليهم، وقيل: متعلق بقوله: «لا تثريب». والوقف علي «اليوم»، قاله نافع، ويعقوب، ثم ابتدا «يوسف»، فقال: «يغفر الله لكم»، فدعا لهم بالمغفرة لما فرط منهم، قال ابو حيان ردا علي الزمخشري: قوله: ان «اليوم» متعلق بقوله: «لا تثريب عليكم». اما كون «اليوم» متعلقا ب «تثريب»، فهذا لا يجوز؛ لان التثريب مصدر، وقد فصل بينه وبين معمول بقوله: «عليكم». و «عليكم» اما ان يكون خبرا، او صفة ل «تثريب»، ولا يجوز الفصل بينهما؛ لان معمول المصدر من تمامه، وايضا لو كان «اليوم» متعلقا ب «تثريب» لم يجز بناءه، وكان يكون من قبيل الشبيه بالمضاف معربا منونا، وبناءه هنا علي قلة، انظر المعني، ومعني «لا تثريب»: لا تعيير، ولا باس، ولا لوم، ولاذكركم ذنبكم بعد اليوم. واصل
 
 التثريب: الفساد، وهي لغة اهل الحجاز، ومنه قوله  صلي الله عليه وسلم : «اذا زنت امراة احدكم فليحدها الحد، ولا يثربها» () اي: لا يعيرها بالزنا. ثم دعا لهم يوسف بالمغفرة، وجعلهم في حل، فقال: «يغفر الله لكم وهو ارحم الراحمين». وقد قال  صلي الله عليه وسلم  يوم فتح مكة: «ماذا تظنون؟» قالوا: خيرا، اخ كريم وابن اخ كريم، وقد قدرت: فكن خير اخذ، فقال: «وانا اقول كما قال اخي يوسف لا تثريب عليكم اليوم يغفر الله لكم» ().
 {الراحمين ()} [] كاف، وقيل: تام.
 {يات بصيرا} [] حسن.
 {اجمعين ()} [] تام.
 {تفندون ()} [] كاف، ومثله: «القديم»، قيل: ارادوا بذلك حبه ليوسف.
 {فارتد بصيرا} [] حسن، والبشير: هو اخوه يهوذا، وهو الذي جاء بقميص الدم، واعطاه يعقوب في نظير البشارة كلمات كان يرويها عن ابيه عن جده، وهن: يا لطيفا فوق كل لطيف، الطف بي في اموري كلها كما احب، ورضني في دنياي واخرتي ().
 {ما لا تعلمون ()} [] كاف.
 {ذنوبنا} [] حسن.
 {خاطءين ()} [] كاف، وكذا «استغفر لكم ربي».
 {الرحيم ()} [] تام.
 {اوي اليه ابويه} [] جاءز؛ لانتهاء جواب «لما».
 {امنين ()} [] حسن.
 {سجدا} [] جاءز، ومثله: «من قبل»، و «حقا»، و «من السجن»، علي استءناف ما بعده، ولم يقل «من الجب» استعمالا للكرم؛ لءلا يذكر اخوته صنيعهم.
 {بيني وبين اخوتي} [] كاف؛ للابتداء ب «ان»، ومثله: «لما يشاء». 
 {الحكيم ()} [] تام.
 {من تاويل الاحاديث} [] كاف، ان نصب «فاطرا» بنداء ثان، او نصب باعني مقدرا، وليس بوقف ان جعل نعتا لما قبله، او بدلا منه.
 {والارض} [] جاءز، ومثله: «والاخرة».
 {مسلما} [] ليس بوقف؛ لعطف ما بعده علي ما قبله.
 {بالصالحين ()} [] تام.
 {نوحيه اليك} [] حسن؛ للابتداء بالنفي.
 {وهم يمكرون ()} [] كاف، وقيل: تام.
 {بمءمنين ()} [] كاف.
 {من اجر} [] حسن.
 {للعالمين ()} [] كاف.
 {في السماوات} [] جاءز، علي قراءة عكرمة (): «والارض» بالرفع مبتدا، والخبر جملة «يمرون عليها»، وكذا من قرا بالنصب ()؛ علي الاشتغال، اي: يطءن الارض، ويروي عن ابن جريج: انه كان ينصب «الارض» بفعل مقدر، اي: يجوزون الارض، وهذه القراءة ضعيفة في المعني؛ لان الايات في السموات وفي الارض، والضمير في «عليها» للاية، فتكون «يمرون» حالا منها. وقال ابو البقاء: حالا منها، «ومن السموات»، فيكون الحال من شيءين، وهذا لا يجوز؛ لانهم لا يمرون في السموات الا ان يراد: يمرون علي اياتها، فعلي هذه القراءة الوقف علي «السموات» ايضا، وكذا من نصبها ب «يمرون»، وليس بوقف لمن جرها عطفا علي ما قبلها.
 {يمرون عليها} [] حسن، علي استءناف ما بعده، وليس بوقف ان جعل ما بعده جملة في موضع الحال.
 {معرضون ()} [] كاف، وقيل: تام، وكذا «مشركون»، و «لا يشعرون».
 {ادعو الي الله} [] حسن، تقدم انه  صلي الله عليه وسلم  كان يتعمد الوقف علي ذلك، ثم يبتدء «علي بصيرة انا ومن اتبعني» ان اجعل «انا» مبتدا، و «علي بصيرة» خبرا. وليس بوقف ان جعل «علي بصيرة» متعلقا 
 ب «ادعوا»، و «انا» توكيدا للضمير المستكن في «ادعو». و «من اتبعني» معطوف علي ذلك الضمير، والمعني: ادعو انا اليها، ويدعو اليها من اتبعني علي بصيرة. قال ابن مسعود: من كان مستنا فليستن باصحاب نبيه الذين اختارهم الله لصحبته، ويتمسك باخلاقهم. وليس بوقف ايضا ان جعل «علي بصيرة» حالا من ضمير «ادعو»، و «انا» فاعلا بالجار والمجرور الناءب عن ذلك المحذوف.
 {انا ومن اتبعني} [] حسن، اتفق علماء الرسم علي اثبات الياء في «اتبعني» هنا خاصة، كما هو كذلك في جميع المصاحف العثمانية.
 {وما انا من المشركين ()} [] تام.
 {من اهل القري} [] كاف، ومثله: «من قبلهم»؛ للابتداء بلام الابتداء، وكذا «اتقوا» لمن قرا: «تعقلون» بالتاء الفوقية ().
 {تعقلون ()} [] تام.
 {نصرنا} [] حسن لمن قرا: «فننجي» مخففا، ولا يوقف علي «نشاء»، وليس بوقف لمن قرا: «فنجي» مشددا، ويوقف علي «نشاء»، وهو كاف ().
 الضماءر الثلاثة في «وظنوا انهم قد كذبوا» للرسل. ومعني التشديد في «كذبوا»: ان الرسل تيقنوا ان قومهم قد كذبوهم، والتخفيف ان الرسل توهموا ان نفوسهم قد كذبوهم فيما اخبروهم به من النصر او العقاب، وانكرت عاءشة رضي الله عنها قراءة التخفيف بهذا التاويل؛ فان رسول الله  صلي الله عليه وسلم  لم يوعد بشء اخلف فيه، وعاءشة قالت: معاذ الله لم تكن الرسل لتظن ان لا نصر لهم في الدنيا. ومعاذ الله ان تنسب الي شء من ذلك؛ لتواتر هذه القراءة. واحسن ما وجهت به هذه القراءة ان الضمير في وظنوا عاءد الي المرسل اليهم؛ لتقدمهم، وان الضمير في «انهم»، و «كذبوا» عاءد علي الرسل، اي: وظن المرسل اليهم ان الرسل قد كذبوا، اي: كذبهم من ارسلوا اليهم بالوحي، وبنصرهم عليهم (). 
 {المجرمين ()} [] كاف، وقيل: تام.
 {لاولي الالباب} [] حسن.
 {كل شء} [] ليس بوقف؛ لان ما بعده منصوب بالعطف علي ما قبله، وقرا حمران بن اعين، وعيسي الكوفي (): «تصديق»، و «تفصيل»، و «هدي ورحمة» برفع الاربعة، اي: ولكن هو تصديق. والجمهور بنصب الاربعة.
 {يءمنون ()} [] تام. قال ابن عطاء: لا يسمع سورة يوسف محزون الا استروح. 
  سورة الرعد
 مكية
 الا قوله: {ولا يزال الذين كفروا} [] الاية، {ويقول الذين كفروا لست مرسلا} [] الاية. وقيل: مدنية الا قوله: {ولو ان قرانا} [] الايتين.
 [ايها:] وهي اربعون وثلاث ايات في الكوفي، واربع في المدنيين، وخمس في البصري، وسبع في الشامي. اختلافهم في خمس ايات:
    
 {لفي خلق جديد} [] لم يعدها الكوفي.
    
 {قل هل يستوي الاعمي والبصير} [] عدها الشامي.
    
 {ام هل تستوي الظلمات والنور} [] لم يعدها الكوفي.
    
 {اولءك لهم سوء الحساب} [] عدها الشامي.
    
 {من كل باب ()} [] لم يعدها المدنيان.
  وكلمها: ثمانماءة وخمس وخمسون كلمة.
  وحروفها: ثلاثة الاف حرف وخمسماءة وستة احرف.
 وفيها مما يشبه الفواصل، وليس معدودا باجماع موضع واحد، وهو قوله: {وهم يكفرون بالرحمن} [].
 {المر} [] تقدم الكلام علي مثلها. قال ابو روق (): هذه الحروف التي في فواتح السور عزاءم الله، والوقف عليها تام؛ لان المراد معني هذه الحروف، وقيل: هي قسم، كانه قال: والله ان تلك ايات الكتاب، فعلي هذا التقدير لا يوقف عليها، وقيل: اراد بها التوراة، والانجيل، والكتب المتقدمة، قاله النكزاوي.
 {ايات الكتاب} [] تام، ان جعل «الذي» مبتدا، و «الحق» خبره، وليس بوقف ان جعل «والذي» في محل جر بالعطف علي «الكتاب»، وحينءذ لا وقف علي ما قبل «الذي»، وكذا ان جر «الذي» بالقسم وجوابه ما قبله، ولا وقف علي ما قبل «الذي»، وكذا ان جعل «الذي» صفة للكتاب. 
 قال ابو البقاء: وادخلت الواو في لفظه، كما ادخلت في النازلين والطيبين، يعني: ان الواو تدخل علي الوصف، كما هو في بيت خرنق بنت هفان في قولها حين مدحت قومها:
 لا يبعدن قومي الذين هم ... سم العداة وافة الجزر
 والنازلين بكل معترك ... والطيبين معاقد الازر ()
 فعطفت الطيبين علي النازلين، وهما صفتان لقوم معينين.
 {الحق} [] كاف، علي انه خبر مبتدا محذوف، اي: هو الحق، وكذا ان جعل «الذي» مبتدا، و «الحق» خبرا، وان جعل «المر» مبتدا، و «تلك ايات» خبرا، و «الذي انزل» عطف عليه جاز الوقف علي «من ربك»، ثم يبتدء «الحق»، اي: هو الحق، وكذا ان جعل «الحق» مبتدا، و «من ربك» خبره، او علي ان «من ربك الحق» كلاهما خبر واحد. وليس بوقف ان جر «الحق» علي انه نعت ل «ربك»، وبه قرء شاذا ()، وعليها لا يوقف علي «الحق»؛ لانه لا يفصل بين النعت والمنعوت بالوقف، فتلخص ان في الحق خمسة اوجه: احدها خبر اول او ثان، او هو وما قبله خبر، او خبر مبتدا محذوف، او صفة للذي اذا جعلناه معطوفا علي «ايات».
 {لا يءمنون ()} [] تام.
 {ترونها} [] حسن، علي ان «بغير عمد» متعلق ب «رفع»، اي: رفع السموات بغير عمد ترونها؛ فالضمير من «ترونها» يعود علي «عمد»، كانه قال: للسموات عمد، ولكن لا تري، وقال ابن عباس: انها بعمد، ولكن لا ترونها، قال: وعمدها جبل ق المحيط بالدنيا، وهو من زبرجد اخضر من زبرجد الجنة، والسماء مقبية فوقه كالقبة، وخضرتها من خضرته، فيكون «ترونها» في موضع الصفة ل «عمد»، والتقدير: بغير عمد مرءية، وحينءذ فالوقف علي «السموات» كاف، ثم يبتدء: «بغير عمد ترونها»، اي: ترونها بلا عمد. وقال الكواشي: الضمير في «ترونها» يعود الي «السموات»، اي: ترون السموات قاءمة بغير عمد، وهذا ابلغ في الدلالة علي القدرة الباهرة، واذا الوقف علي «عمد»؛ ليبين احد التاويلين من الاخر، ثم يبتدء: «ترونها»، اي: ترونها كذلك. ف «ترونها» مستانف، فيتعين ان لا عمد لها البتة ؛ لانها سالبة تفيد نفي الموضوع. وان قلنا: ان «ترونها» صفة تعين ان لها عمدا، وحاصله انهما شيءان: احدهما 
 انتفاء العمد والرءية معا، اي: لا عمد، فلا رءية سالبة تصدق بنفي الموضوع؛ لانه قد ينفي الشء؛ لنفي اصله، نحو: {لا يسالون الناس الحافا} [البقرة: ] اي: انتفي الالحاف؛ لانتفاء السءال الثاني، ان لها عمدا، ولكن غير مرءية، كما قال ابن عباس: ما يدريك انها بعمد لا تري ().
 {علي العرش} [] جاءز، ومثله: «والقمر».
 {مسمي} [] حسن.
 {الايات} [] ليس بوقف؛ لحرف الترجي، وهو في التعلق ك (لام كي).
 {توقنون ()} [] تام.
 {وانهارا} [] كاف، ومثله: «اثنين يغشي الليل النهار».
 {يتفكرون ()} [] تام.
 {متجاورات} [] كاف، ان جعل «وجنات» مبتدا، وخبره محذوف تقديره: وفيها جنات. وليس بوقف ان عطفت «جنات» علي «قطع»، وكذا ليس بوقف ان جر «جنات» عطفا علي ما عمل فيه «سخر»، اي: وسخر لكم جنات من اعناب، وبها قرا الحسن البصري ()، وعليها يكون الوقف علي «متجاورات» كافيا. ويجوز ان يكون مجرورا حملا علي «كل»، اي: ومن كل الثمرات، ومن جنات.
 {من اعناب} [] كاف، لمن رفع ما بعده بالابتداء.
 {وغير صنوان} [] جاءز، لمن قرا: «تسقي» بالتاء الفوقية، و «يفضل» بالتحتية، او بالنون، او قرا: «يسقي» بالتحتية، و «نفضل» بالنون، فان قرءا معا بالتحتية وهي قراءة حمزة، والكساءي ()  كان كافيا، وكذا «بماء واحد»، لمن قرا: و «نفضل» بالنون ()، وكذا «في الاكل».
 {يعقلون ()} [] تام.
 {جديد} [] كاف.
 {كفروا بربهم} [] جاءز، ومثله: «في اعناقهم»، و «اصحاب النار»؛ لعطف الجمل مع تكرار «اولءك»؛ للتفضيل دلالة علي عظم الامر.
 {خالدون ()} [] تام. 
 {المثلات} [] كاف، و «المثلات»: العقوبة، واحدتها: مثلة.
 {علي ظلمهم} [] كاف، علي استءناف ما بعده.
 {العقاب ()} [] تام.
 {من ربه} [] حسن.
 {انما انت منذر} [] كاف، علي استءناف ما بعده. وجعل الهادي غير محمد  صلي الله عليه وسلم ، وفسر الهادي بعلي كرم الله وجهه؛ لقوله فيه: «والله لان يهدي الله بك رجلا واحدا خير لك من حمر النعم» (). وليس بوقف ان جعل الهادي محمدا  صلي الله عليه وسلم ، والمعني: انما انت منذر وهاد، وضعف عطف «هاد » علي «منذر»؛ لان فيه تقديم معمول اسم الفاعل عليه؛ لكونه فرعا في العمل عن الفعل، والعطف يصير الشيءين كالشء الواحد، فلا يوقف علي «منذر». وقد وقف ابن كثير علي «هاد»، و {واق ()} []، و {وال ()} [] هنا، و {باق} [النحل: ] باثبات الياء وقفا ووصلا، وحذفها الباقون وصلا ووقفا، ومعني «هاد»، اي: داع يدعوهم الي الله تعالي، لا بما يطلبون. وفي الحديث: «ان وليتموها ابا بكر فزاهد في الدنيا راغب في الاخرة، وان وليتموها عمر فقوي امين لا تاخذه في الله لومة لاءم، وان وليتموها عليا فهاد مهتد» ().
 {وما تزداد} [] تام، ومثله: «بمقدار»، و «المتعال».
 {ومن جهر به} [] حسن؛ للفصل بين المتقابلات، ومثله يقال في «مستخف بالليل وسارب بالنهار» حسنه ابو حاتم، وابو بكر، والظاهر انهما انما حسناه؛ لاستغناء كل جملة عما بعدها لفظا، او ليفرقا بين علم الله وعلم غيره، واباه غيرهما، وقال: كله كلام واحد، فلا يفصل بينهما، وانظر ما وجهه.
 {ومن خلفه} [] حسن، اذا كانت «من» بمعني الباء، اي: يحفظونه بامر الله. وان علق «من امر الله» بمبتدا محذوف، اي: هو من امر الله كان الوقف علي «يحفظونه»، ثم يبتدء «من امر الله» علي ان معني ذلك: الحفظ من امر الله، اي: من قضاءه، قال الشاعر:
 امام وخلف المرء من لطف ربه ... كوال تنفي عنه ما هو يحذر ()
 وقال الفراء: المعني فيه علي التقديم والتاخير، اي: له معقبات من امر الله بين يديه ومن خلفه يحفظونه، وعلي هذا لا يوقف علي «من خلفه». 
 {من امر الله} [] كاف، علي الوجوه كلها؛ فان قلت: كيف يتعلق حرفان متحدان لفظا ومعني بعامل واحد، وهما: «من» الداخلة علي «من بين يديه»، و «من» الداخلة علي «من امر الله»؟ فالجواب: ان «من» الثانية مغايرة للاولي في المعني، كما ستعرفه، اه سمين. و «المعقبات»: ملاءكة الليل والنهار؛ لانهم يتعاقبون، وانما انث لكثرة ذلك منهم، نحو: نسابة، وعلامة. وقيل: ملك معقب، وملاءكة معقبة، وجمع الجمع معقبات، قاله الصاغاني في (العباب) في اللغة ().
 {ما بانفسهم} [] تام؛ للابتداء بالشرط ، ومثله: «فلا مرد له».
 {من وال ()} [] كاف.
 {الثقال ()} [] جاءز؛ لاختلاف الفاعل، مع اتفاق اللفظ.
 {من خيفته} [] حسن، علي استءناف ما بعده، وليس بوقف ان عطف ما بعده علي ما قبله.
 {من يشاء} [] صالح، ومثله: «في الله»؛ لاحتمال الواو الحال والاستءناف.
 {المحال ()} [] كاف، علي استءناف ما بعده وهو راس اية، و «المحال» بكسر الميم: القوة والاهلاك، وبها قرا العامة ()، وقرا الاعرج والضحاك بفتحها ().
 {دعوة الحق} [] تام؛ لانتهاء جدال الكفار، وجدالهم في اثبات الهة مع الله تعالي.
 {ليبلغ فاه} [] جاءز.
 {وما هو ببالغه} [] تام؛ للابتداء بالنفي.
 {في ضلال ()} [] تام.
 {طوعا وكرها} [] حسن، علي استءناف ما بعده، وليس بوقف ان جعل ما بعده معطوفا علي «من» اي: ولله ينقاد من في السموات والارض طوعا وكرها. 
 {والاصال (()} [] تام، ومثله: «قل الله».
 {ولا ضرا} [] كاف.
 {والبصير} [] ليس بوقف؛ لعطف ام علي ما قبلها.
 {والنور} [] كاف؛ لان «ام» بمعني الف الاستفهام، وهو اوضح في التوبيخ علي الشرك.
 {الخلق عليهم} [] حسن، وقال ابو عمرو: كاف.
 {كل شء} [] كاف.
 {القهار ()} [] تام، علي استءناف ما بعده؛ استءناف اخبار منه تعالي بهذين الوصفين: الوحدانية، والقهر. وليس بوقف ان جعل «وهو الواحد القهار» داخلا تحت الامر ب «قل».
 {زبدا رابيا} [] حسن، ومثله: «زبد مثله»، ومثله «والباطل».
 {جفاء} [] جاءز؛ لان الجملتين وان اتفقتا فكلمة «اما» للتفصيل بين الجمل، وذلك من مقتضيات الوقف، وقد فسر بعضهم الماء بالقران، والاودية بالقلوب، وان بعضها احتمل شيءا كثيرا، وبعضها لم يحتمل شيءا، والزبد مثل الكفر؛ فانه وان ظهر وطفا علي وجه الماء لم يمكث، والهداية التي تنفع الناس تمكث، وهو تفسير بغير الظاهر ().
 {فيمكث في الارض} [] حسن، وقيل: كاف.
 {الامثال ()} [] تام، وهو راس اية، وهو من وقوف النبي  صلي الله عليه وسلم  كان يتعمد الوقف عليها، ويبتدء «للذين استجابوا»، ومثله: في التمام «لربهم الحسني»، وهي الجنة.
 {لافتدوا به} [] حسن، وقال ابو عمرو: كاف، علي استءناف ما بعده.
 {سوء الحساب} [] جاءز.
 {جهنم} [] كاف.
 {المهاد ()} [] تام.
 {كمن هو اعمي} [] حسن، وقال ابو عمرو: كاف.
 {الالباب ()} [] تام، ان جعل «الذين» مبتدا، وخبره «اولءك لهم عقبي الدار»، وكذلك ان جعل «الذين» في محل رفع خبر مبتدا محذوف تقديره: هم الذين، وكاف ان جعل «الذين» في محل نصب بتقدير: اعني الذين. وليس بوقف ان جعل «الذين» نعتا لما قبله، او بدلا منه، او عطف بيان.
 {الميثاق ()} [] كاف، عند ابي حاتم، ومثله: «سواء الحساب». قال شيخ الاسلام: وجاز الوقف عليهما وان كان ما بعدهما معطوفا علي ما قبلهما لطول الكلام. قال الكواشي: وليس هذا 
 العذر بشء؛ لان الكلام وان طال لا يجوز الوقف في غير موضع الوقف المنصوص عليه، بل يقف عند ضيق النفس، ثم يبتدء من قبل الموضع الذي وقف عليه علي ما جرت عليه عادة اصحاب الوقف. ولا وقف من قوله: «والذين صبروا» الي «عقبي الدار»؛ فلا يوقف علي «علانية»، ولا علي «السيءة».
 {عقبي الدار ()} [] كاف، وقيل: تام، ان جعل «جنات» مبتدا، وما بعده الخبر، او خبر مبتدا محذوف. وليس بوقف ان جعل «جنات» بدلا من «عقبي»، ومن حيث كونه راس اية يجوز.
 {وذرياتهم} [] تام عند نافع، والواو في «والملاءكة» للاستءناف. قال مقاتل: يدخلون الجنة في مقدار يوم وليلة من ايام الدنيا ثلاث مرات، معهم التحف والهدايا من الله تعالي. «ومن كل باب» راس اية في غير المدنيين، والكوفي، تقول الملاءكة: «سلام عليكم بما صبرتم» ().
 {صبرتم} [] جاءز.
 {فنعم عقبي الدار ()} [] تام، والمخصوص بالمدح محذوف، اي: ف «نعم عقبي الدار»: الجنة، او ف «نعم عقبي الدار»: الصبر.
 {ويفسدون في الارض} [] ليس بوقف؛ لان قوله: «اولءك» خبر «والذين ينقضون»، فلا يفصل بين المبتدا والخبر بالوقف.
 {لهم اللعنة} [] جاءز.
 {ولهم سوء الدار ()} [] تام.
 {ويقدر} [] حسن، ومثله: «بالحياة الدنيا»؛ للابتداء بالنفي.
 {الا متاع ()} [] تام.
 {من ربه} [] كاف، ومثله: «من اناب» ان جعل ما بعده مبتدا خبره ما بعده، او خبر مبتدا محذوف تقديره: هم الذين. وليس بوقف ان جعل بدلا من «الذين» قبله، ومن حيث كونه راس اية يجوز.
 {بذكر الله} [] الاولي كاف؛ للابتداء باداة التنبيه.
 {القلوب ()} [] تام، ان جعل ما بعده مبتدا، والخبر «طوبي لهم». وليس بوقف ان جعل «الذين امنوا» بدلا من «الذين» قبله؛ لان البدل والمبدل منه كالشء الواحد؛ فلا يوقف علي «بذكر الله»، ولا علي «طوبي لهم».
 {وحسن ماب ()} [] تام. 
 {اوحينا اليك} [] كاف، علي استءناف ما بعده.
 {بالرحمن} [] حسن، وكاف عند ابي حاتم.
 {الا هو} [] حسن، وقال ابو عمرو: كاف.
 {متاب ()} [] تام، ان جعل جواب «لو» محذوفا. وليس بوقف ان جعل مقدما، والتقدير: ولو ان قرانا سيرت به الجبال، او كذا وكذا لكان هذا القران، او امنوا، كما قال الشاعر:
 فلو انها نفس تموت سوية ... ولكنها نفس تساقط انفسا ()
 اي: لو ان نفسي تموت في مرة واحدة –لاسترحت، او لهان علي، ولكنها تخرج قليلا قليلا، فحذف؛ لدلالة الكلام عليه، ومن قال معناه: وهم يكفرون بالرحمن، وان اجيبوا الي ما سالوا؛ لشدة عنادهم، فلا يوقف علي «الرحمن».
 {الموتي} [] كاف، ومثله: «جميعا» الاول، وكذا الثاني. ولا وقف الي قوله: «وعد الله».
 {الميعاد ()} [] تام.
 {ثم اخذتهم} [] كاف؛ للابتداء بالتوبيخ.
 {عقاب ()} [] تام.
 {بما كسبت} [] كاف. وقال الاخفش: تام؛ لان «من» استفهامية مبتدا خبرها محذوف تقديره: كمن ليس كذلك من شركاءهم التي لا تضر ولا تنفع، وما بعده مستانف، وجاءز لمن جعل قوله: «وجعلوا» حالا باضمار: قد.
 {شركاء} [] جاءز، ومثله: «قل سموهم»، وتام عند احمد بن جعفر؛ للاستفهام.
 {من القول} [] كاف، ومثله: «مكرهم» لمن قرا: «وصدوا» ببناءه للفاعل. وليس بوقف لمن قرا ببناءه للمفعول، اي: بضم الصاد؛ لعطفه علي «زين»، وبها قرا الكوفيون هنا، وفي قوله:
 {وكذلك زين لفرعون سوء عمله وصد عن السبيل} [غافر: ]، وباقي السبعة ببناءهما للفاعل ().
 {من هاد ()} [] كاف، ومثله: «في الحياة الدنيا». 
 {اشق} [] حسن، وقال ابو عمرو: لاتفاق الجملتين مع النفي في الثانية.
 {من واق ()} [] تام.
 {المتقون} [] حسن، ان جعل «مثل» مبتدا محذوف الخبر، اي: فيما نقص عليك مثل الجنة، وكذا ان جعل «تجري» مستانفا، او جعل لفظة «مثل» زاءدة، فيقال: الجنة التي وعد المتقون كيت وكيت. وليس بوقف ان جعل مبتدا خبره «تجري». قال الفراء: وجعله خبرا خطا عند البصريين ؛ قال: لان المثل لا تجري من تحته الانهار، وانما هو من صفات المضاف اليه، وشبهته ان المثل هنا بمعني الصفة، وهذا الذي ذكره ابو البقاء نقل نحوه الزمخشري، ونقل غيره عن الفراء في الاية تاويلين:
 احدهما: علي حذف لفظة انها، والاصل صفة الجنة انها تجري، وهذا منه تفسير معني لا اعراب، وكيف يحذف انها من غير دليل؟!
 والثاني: ان لفظة «مثل» زاءدة، والاصل: الجنة تجري من تحتها الانهار، وزيادة «مثل» كثيرة في لسانهم، ومنه: {ليس كمثله شء} [الشوري: ]، {فان امنوا بمثل ما امنتم به} [البقرة: ]. وكذا ليس «المتقون» وقفا ان جعل «تجري» حالا من الضمير في «وعد»، اي: وعدها مقدرا جريان انهارها، او جعل «تجري» تفسيرا؛ للمثل فلا يفصل بين المفسر والمفسر بالوقف، كما يءخذ من عبارة السمين.
 {الانهار} [] جاءز، ووصله اولي؛ لان ما بعده تفسير لما قبله.
 {وظلها} [] تام عند من جعل «تجري» خبر المثل باضمار «ان»، اي: ان تجري.
 {اتقوا} [] جاءز، والوصل احسن؛ لان الجمع بين الحالتين ادل علي الانتباه.
 {النار ()} [] تام.
 {انزل اليك} [] جاءز.
 {بعضه} [] حسن.
 {ولا اشرك به} [] جاءز.
 {ماب ()} [] تام.
 {عربيا} [] حسن.
 {من العلم} [] ليس بوقف؛ للفصل بين الشرط وجوابه؛ لان اللام في «ولءن» مءذنة بقسم مقدر قبلها، ولذلك جاء الجواب «مالك».
 {ولا واق ()} [] تام.
 {وذرية} [] كاف؛ للابتداء بالنفي.
 {الا باذن الله} [] قال ابو حاتم ويحيي بن نصير النحوي: تم الكلام، ومثله: «لكل اجل
 
 كتاب».
 {ويثبت} [] كاف.
 {الكتاب ()} [] تام، قال الضحاك: يمحو الله ما يشاء من ديوان الحفظة ما ليس فيه ثواب ولا عقاب، ويثبت ما فيه ثواب او عقاب.
 وسءل الكلبي عن هذه الاية، فقال: يكتب القول كله حتي اذا كان يوم الخميس طرح منه كل شء ليس فيه ثواب ولا عقاب، نحو: اكلت وشربت، ودخلت وخرجت وهو صادق، ويثبت ما كان فيه الثواب، او عليه العقاب ()، اه نكزاوي.
 واتفق علماء الرسم علي رسم «يمحوا» هنا بالواو والالف مرفوع بضمة مقدرة علي الواو المحذوفة؛ لالتقاء الساكنين، فالواو هنا ثابتة خطا محذوفة لفظا، وقد حذفت لفظا وخطا في اربعة مواضع استغناء عنها بالضمة، ولالتقاء الساكنين، وهي:
    
 {ويدع الانسان} [الاسراء: ].
    
 {ويمح الله الباطل} [الشوري: ].
    
 {يوم يدع الداع} [القمر: ].
    
 {سندع الزبانية ()} [العلق: ].
 وما ثبت خطا لا يحذف وقفا، ورسموا ايضا «واما نرينك» «ان» وحدها كلمة و «ما» وحدها كلمة، وجميع ما في كتاب الله من ذكر «اما» فهو بغير نون كلمة واحدة.
 {وعلينا الحساب ()} [] تام.
 {من اطرافها} [] حسن، ومثله: «لحكمه».
 {الحساب ()} [] تام.
 {من قبلهم} [] ليس بوقف؛ لمكان الفاء.
 {جميعا} [] حسن، ومثله: «كل نفس».
 {عقبي الدار ()} [] تام.
 {لست مرسلا} [] حسن، ومثله: «وبينكم» لمن قرا: «ومن عنده» بكسر ميم «من» وكسر الدال. و «علم الكتاب» جعلوا «من» حرف و «عنده» مجرور بها، وهذا الجار خبر مقدم، و «علم» مبتدا مءخر، وبها قرا علي، وابي، وابن عباس، وعكرمة، وابن جبير، وعبد الرحمن بن ابي بكر، والضحاك، وابن ابي اسحاق، ومجاهد، ورويس. والضمير في «عنده» لله تعالي، وهي قراءة مروية عن النبي  صلي الله عليه وسلم  
 شاذة فوق العشر (). وليس بوقف لمن قرا: «ومن عنده» بفتح الميم والدال، و «علم» بكسر العين فاعل بالظرف، او مبتدا وما قبله الخبر، وهي قراءة العامة ()، وعليها فالوقف اخر السورة؛ لاتصال الكلام بعضه ببعض، ولا يوقف علي «بينكم»؛ لانه تعالي عطف «ومن عنده علم الكتاب» في الشهادة علي اسمه تعالي. وقرا الحسن وابن السميفع (): «من عنده علم الكتاب» ب «من» الجارة، و «علم» مبني للمفعول، و «الكتاب» ناءب الفاعل، وعليها يحسن الوقف علي «بينكم». وقرء (): «علم الكتاب» بتشديد «علم». قال ابو عبيدة: لو صحت هذه القراءة لما عدوناها الي غيرها، والضمير في هذه القراءات لله تعالي.
 {الكتاب ()} [] تام. 
  سورة ابراهيم
  عليه السلام 
 مكية
 الا قوله تعالي: {الم تر الي الذين بدلوا نعمة الله كفرا} [] الايتين فمدني.
 [ايها:] وهي احدي وخمسون اية في البصري، واثنان في الكوفي، واربع في المدنيين والمكي، وخمس في الشامي، اختلافهم في سبع ايات:
    
 {لتخرج الناس من الظلمات الي النور} [].
    
 {ان اخرج قومك من الظلمات الي النور} [] لم يعدهما الكوفي والبصري.
    
 {وعاد وثمود} [] لم يعدها الكوفي والشامي.
    
 {بخلق جديد ()} [] عدها المدني الاول والكوفي والشامي.
    
 {وفرعها في السماء ()} [] لم يعدها المدني الاول.
    
 {وسخر لكم الليل والنهار ()} [] لم يعدها البصري.
    
 {عما يعمل الظالمون} [] عدها الشامي.
  وكلمها: ثمانماءة واحدي وثلاثون كلمة.
  وحروفها: ثلاثة الاف واربعماءة وثلاثون حرفا.
 وفيها مما يشبه الفواصل، وليس معدودا باجماع اربعة مواضع:
    
 {وسخر لكم الشمس والقمر داءبين} [].
    
 {الي اجل قريب} [].
    
 {غير الارض والسموات} [].
    
 {سرابيلهم من قطران} [].
 {الر} [] تقدم الكلام عليه، ولا وقف من اولها الي «الحميد»، وهو تام لمن قرا: «الله» بالرفع علي الابتداء، والخبر «الذي له ما في السموات». وليس بوقف لمن قرا بالجر بدلا مما قبله، او عطف بيان. قرا نافع، وابن عامر برفع الجلالة، والباقون بالجر ().
 {وما في الارض} [] تام.
 {شديد ()} [] كاف لمن رفع ما بعده مبتدا خبره «اولءك»، او قطع علي الذم، او نصب باضمار فعل تقديره: اذم، وليس بوقف ان جر صفة ل «الكافرين»، او بدلا، او عطف بيان، ومن حيث كونه 
 راس اية يجوز. ومن جعل «الذين يصدون» مجرورا لمحل وقف علي «عوجا»، وابتدا «اولءك في ضلال بعيد».
 {بعيد ()} [] تام.
 {ليبين لهم} [] كاف؛ لان قوله: «فيضل» حكم مبتدا اخر خارج عن تعليل الارسال، قاله السجاوندي. وقرا العامة: «بلسان» بزنة (كتاب)، اي: بلغة قومه، وقرء (): «بلسن قومه» بكسر اللام وسكون السين، قيل: هما بمعني واحد، وقيل: اللسان يطلق علي العضو المعروف وعلي اللغة، واما اللسن فخاص باللغة، ذكره ابن عطية. قال الجلال: كل ثلاثي ساكن الوسط يجوز تحريكه. قال شيخ شيوخنا الاجهوري: بشروط ثلاثة: صحة عينه، وصحة لامه، وعدم التضعيف. فان اعتلت عينه نحو: سود، او لامه نحو: عمي، او كان مضعفا نحو: عن جمع اعن، لم يجز ضم عينه اه. فمن ذكر اللسان قال في جمعه: السنة، كحمار او احمرة، ومن انث قال في جمعه: السن، كذراع واذرع، وقد لسن بالكسر فهو لسن والسن، وقوم لسن بضم اللام، انظر: شرحه علي الفية العراقي. والضمير في «قومه» يعود علي «رسول» المذكور، وقيل: يعود علي محمد  صلي الله عليه وسلم ، قاله الضحاك. وغلط؛ اذ يصير المعني: ان التوراة وغيرها نزلت بلسان العرب؛ ليبين لهم محمد التوراة وغيرها ().
 {ويهدي من يشاء} [] كاف، ولم يفصل بينهما؛ لان الجمع بينهما ادل علي الانتباه.
 {الحكيم ()} [] تام.
 {بايام الله} [] كاف؛ للابتداء ب «ان».
 {شكور ()} [] اكفي مما قبله ان نصب «اذ» باذكر مقدرة، فيكون من عطف الجمل، ويحتمل ان يكون عطفا علي «اذ انجاكم من ال فرعون».
 {سوء العذاب} [] ليس بوقف؛ لان «ويذبحون» معطوف عليه، واتي بالواو هنا، ولم يات بها في البقرة؛ لان العطف بالواو يدل علي المغايرة؛ فان سوم سوء العذاب كان بالذبح وبغيره، ولم يات بها في البقرة؛ لانه جعل الفعل تفسيرا لقوله: «يسومونكم».
 {نساءكم} [] كاف، علي استءناف ما بعده.
 {عظيم ()} [] تام.
 {لازيدنكم} [] جاءز عند نافع.
 {لشديد ()} [] كاف. 
 {جميعا} [] ليس بوقف؛ لان الفاء مع «ان» جزاء «ان تكفروا»؛ فلا يفصل بين الشرط وجزاءه.
 {حميد ()} [] كاف، وقيل: تام؛ للابتداء بالاستفهام.
 {وثمود} [] كاف، ان جعل «والذين» مبتدا خبره «لا يعلمهم». وان جعل «والذين» في موضع خفض عطفا علي «قوم نوح» كان الوقف علي من بعدهم كافيا.
 {لا يعلمهم الا الله} [] تام؛ عند نافع.
 {في افواههم} [] جاءز، ومثله: «بما ارسلتم به».
 {اليه مريب ()} [] كاف.
 {افي الله شك} [] ليس بوقف؛ لان ما بعده نعت لما قبله.
 {والارض} [] جاءز؛ فصلا بين الاستخبار والاخبار علي ان ما بعده مستانف، وليس بوقف ان جعل جملة في موضع الحال مما قبله.
 {مسمي} [] حسن، ومثله: «مثلنا» علي استءناف ما بعده؛ لان «تريدون» لا يصلح وصفا ل «بشر»؛ فالاستفهام مقدر، اي: اتريدون.
 {اباءنا} [] حسن.
 {بسلطان مبين ()} [] تام، وقيل: حسن.
 {الا بشر مثلكم} [] ليس بوقف؛ للاستدراك بعده، ولجواز الوقف مدخل لقوم.
 {من عباده} [] كاف؛ للابتداء بالنفي، ومثله: «باذن الله».
 {المءمنون ()} [] كاف.
 {سبلنا} [] كاف.
 {علي ما اذيتمونا} [] حسن.
 {المتوكلون ()} [] تام.
 {في ملتنا} [] جاءز.
 {الظالمين ()} [] ليس بوقف.
 {من بعدهم} [] تام عند نافع، وابي حاتم.
 {وعيد ()} [] كاف.
 {واستفتحوا} [] حسن، ان لم يبتدا به، والا فلا يحسن الوقف؛ لما فيه من الابتداء بكلمة، والوقف عليها .
 {جبار عنيد ()} [] كاف، وقيل: لا يوقف عليه؛ لان جملة «من وراءه جهنم» في محل جر صفة ل «جبار».
 
 {جهنم} [] كاف، علي استءناف ما بعده، وكذا ان عطف علي محذوف تقديره: يدخلها ويسقي. وليس بوقف ان عطف ما بعده علي ما قبله.
 {صديد ()} [] حسن، علي استءناف ما بعده، والا بان جعلت جملة «يتجرعه» صفة لما او حالا من الضمير في «يسقي»، فلا يوقف علي «صديد».
 {وما هو بميت} [] كاف.
 {غليظ ()} [] تام.
 {مثل الذين كفروا بربهم} [] تام، علي ان خبر «مثل» محذوف، اي: فيما يتلي عليكم، او يقص. قال سيبويه، وقال ابن عطية: «مثل» مبتدا، و «اعمالهم» مبتدا ثان، و «كرماد» خبر الثاني، والجملة خبر الاول. قال ابو حيان: وهذا –عندي ارجح الاقوال. وكذا يوقف علي «بربهم» ان جعلت «واعمالهم» جملة مستانفة علي تقدير سءال، كانه قيل: كيف مثلهم؟ فقيل: اعمالهم كرماد، كما تقول: زيد عرضه مصون، وماله مبذول، فنفس عرضه مصون هو نفس صفة زيد. وليس بوقف ان جعل خبر «مثل» قوله: «اعمالهم»، او جعل «مثل» مبتدا، او «اعمالهم» بدل منه؛ بدل كل من كل ().
 {في يوم عاصف} [] جاءز، علي استءناف ما بعده، و «عاصف» علي تقدير: عاصف ريحه، ثم حذف ريحه، وجعلت الصفة لليوم مجازا، والمعني: ان الكفار لا ينتفعون باعمالهم التي عملوها في الدنيا اذا احتاجوا اليها في الاخرة؛ لاشراكهم بالله، وانما هي كرماد ذهبت به ريح شديدة الهبوب فمزقته في اقطار الارض لا يقدرون علي جمع شء منه، فكذلك الكفار ()، قاله الكواشي.
 {علي شء} [] كاف.
 {البعيد ()} [] تام.
 {بالحق} [] حسن؛ للابتداء بالشرط، ومثله: «جديد».
 {وما ذلك علي الله بعزيز ()} [] احسن منهما؛ لان به تمام الكلام.
 {تبعا} [] حسن؛ للابتداء بالاستفهام.
 {من شء} []، و {لهديناكم} []، و {ام صبرنا} [] كلها وقوف حسان.
 {من محيص ()} [] تام. لما فرغ من محاورة الاتباع لرءساءهم الكفرة ذكر محاورة الشيطان واتباعه من الانس. ولا وقف من قوله: «وقال الشيطان» الي قوله: «من قبل»؛ لان ذلك كله داخل في القول؛ لانها قصة واحدة.
 وقيل: يوقف علي «فاخلفتكم»، و «فاستجبتم لي»، و «لوموا انفسكم»، و «ما انتم بمصرخي»؛ 
 للابتداء ب «اني»، ولا يقال: الابتداء ب «اني كفرت» رضا بالكفر؛ لانا نقول ذاك اذا كان القارء يعتقد معني ذلك، وليس هو شيءا يعتقده الموحد، انما هو حال مقول الشيطان، ومن كره الابتداء بقوله: «اني كفرت»، يقول: نفي الاشراك واجب كالايمان بالله تعالي، وهو اعتقاد نفي شريك الباري، وذلك هو حقيقة الايمان، قال الله تعالي: {فمن يكفر بالطاغوت ويءمن بالله فقد استمسك بالعروة الوثقي} [البقرة: ]. و «ما» في قوله: «بما اشركتموني» يحتمل ان تكون مصدرية، ومعني «اني كفرت»: اني تبرات اليوم من اشراككم اياي من قبل؛ هذا اليوم في الدنيا، ويحتمل ان تكون موصولة، والعاءد محذوف، والتقدير: اني كفرت من قبل، اي: حين ابيت السجود لادم بالذي اشركتمونيه، وهو الله تعالي ().
 {من قبل} [] تام عند ابي عمرو؛ لانه اخر كلام الشيطان، وحكي الله ما سيقوله في ذلك اليوم لطفا من الله بعباده؛ ليتصوروا ذلك، ويطلبوا من الله تعالي النجاة منه ومن كل فتنة، وهذا غاية في بيان هذا الوقف،،، ولله الحمد.
 وطالما قلد بعض القراء بعضا، ولم يصيبوا حقيقته.
 {لهم عذاب اليم ()} [] تام.
 {باذن ربهم} [] حسن.
 {سلام ()} [] تام.
 {في السماء ()} [] حسن، علي استءناف ما بعده. وليس بوقف ان جعل ما بعده في موضع الصفة ل «شجرة». والكلمة الطيبة هي: شهادة ان لا اله الا الله. وفي الحديث: عن ابن عباس قال: قال رسول الله  صلي الله عليه وسلم : «ان لله عمودا من نور اسفله تحت الارض السابعة، وراسه تحت العرش، فاذا قال العبد: اشهد ان لا اله الا الله وان محمدا عبده ورسوله اهتز ذلك العمود، فيقول الله: اسكن. فيقول: كيف اسكن ولم تغفر لقاءلها؟»، فقال  صلي الله عليه وسلم : «اكثروا من هز العمود» ()، والكلمة الخبيثة هي: الشرك. والشجرة الخبيثة هي: الحنظلة ().
 {باذن ربها} [] حسن؛ لانه اخر وصف الشجرة.
 {يتذكرون ()} [] تام. 
 {من فوق الارض} [] كاف؛ للابتداء بالنفي.
 {من قرار ()} [] تام.
 {وفي الاخرة} [] حسن، ومثله: «الظالمين».
 {ما يشاء ()} [] تام.
 {كفرا} [] حسن.
 {دار البوار ()} [] تام عند نافع؛ علي ان «جهنم» منصوب بفعل مضمر، ويكون من باب اشتغال الفعل عن المفعول لضميره. وليس بوقف ان جعلت «جهنم» بدلا من قوله: «دار البوار»؛ لانه لا يفصل بين البدل والمبدل منه، او عطف بيان لها، ويصلح ايضا ان يكون «يصلونها» حالا لقوله: «واحلوا قومهم» اي: احلوا قومهم صالين جهنم ().
 {يصلونها} [] كاف عند ابي حاتم؛ لانه جعل «جهنم» بدلا من «دار البوار»، فان جعل مستانفا كان الوقف علي «دار البوار» كافيا.
 {وبءس القرار ()} [] تام.
 {عن سبيله} [] كاف.
 {الي النار ()} [] تام، ومثله: «ولا خلال».
 {رزقا لكم} [] حسن، والوقف علي «بامره»، و «الانهار»، و «داءبين»، و «النهار» كلها وقوف حسان، وانما حسنت هذه الوقوف مع العطف؛ لتفصيل النعم، وتنبيها علي الشكر عليها.
 {سالتموه} [] تام، علي قراءة «كل» بالاضافة الي «ما»؛ وهي قراءة العامة علي ان «ما» اسم ناقص، او نكرة موصوفة، ارادوا: اتاكم من كل ما سالتموه، اي: لو سالتموه. وان قرات: «من كل» بالتنوين جاز الوقف عليها؛ لان معني «ما» في هذا الوقف: النفي، كانه قال: واتاكم من كل، يعني: ما تقدم ذكره مما لم تسالوه؛ وذلك اننا لم نسال الله شمسا ولا قمرا ولا كثيرا من نعمه، وهي قراءة سلام بن المنذر ()؛ فمن اضاف جعل «ما» بمعني: الذي، ومن وقف علي «كل» جعل «ما» نافية.
 {لا تحصوها} [] تام عند نافع.
 {كفار ()} [] تام. 
 {امنا} [] حسن.
 {الاصنام ()} [] تام.
 {من الناس} [] حسن.
 {فانه مني} [] تام عند نافع؛ للابتداء بالشرط فصلا بين النقيضين مع اتحاد الكلام. وقال ابن نصير النحوي: اذا كان خبر «ان» «مختلفين» لم استحسن الوقف علي احدهما حتي اتي بالاخر؛ فقوله: «فمن تبعني فانه مني» لم استحسن الوقف عليه حتي اقول: «ومن عصاني فانك غفور رحيم».
 {رحيم ()} [] كاف.
 {المحرم} [] حسن، وقيل: ليس بوقف؛ لان «ليقيموا» متعلق ب «اسكنت»، و «ربنا» دعاء معترض.
 {يشكرون ()} [] كاف، ومثله: «ونعلن»، و «في السماء»، و «اسحاق» كلها وقوف كافية.
 {لسميع الدعاء ()} [] اكفي مما قبله؛ للابتداء بالنداء، و «من ذريتي» كذلك للنداء بعده عند احمد بن جعفر، اي: واجعل من ذريتي من يقيم الصلاة.
 {ربنا وتقبل دعاء ()} [] كاف، وراس اية. قرا ابو عمرو، وحمزة، وورش، والبزي باثبات الياء وصلا وحذفها وقفا، والباقون يحذفونها وصلا ووقفا ().
 {الحساب ()} [] تام.
 {الظالمون} [] حسن، لمن قرا: «نءخرهم» بالنون ().
 {الابصار ()} [] ليس بوقف؛ لان «مهطعين مقنعي» حالان من المضاف المحذوف، اي: اصحاب الابصار، اي: تشخص فيه ابصارهم، وقيل: «مهطعين» منصوب بفعل مقدر، اي: تبصر مهطعين، والاهطاع: الاسراع في المشي.
 {مقنعي رءوسهم} [] جاءز، علي استءناف النهي.
 {طرفهم} [] كاف. وقال ابو حاتم: تام، وخولف؛ لان قوله: «وافءدتهم» يصلح ان يكون من صفات اهل المحشر، اي: قلوبهم خالية عن الكفر، ويحتمل ان يكون صفة الكفرة في الدنيا، اي: قلوبهم خالية من الخير.
 {هواء ()} [] تام. 
 {العذاب} []، و {قريب} [] ليسا بوقف؛ لان قوله: «نجب» جواب «اخرنا».
 {ونتبع الرسل} [] كاف.
 {من قبل} [] جاءز؛ للابتداء بالنفي.
 {من زوال ()} [] تام؛ لان ما بعده خطاب لغيرهم، فان جعل قوله: «وسكنتم» معطوفا علي «اقسمتم»، وجعل الخطابات لجهة واحدة، فلا يتم الوقف علي «زوال».
 {فعلنا بهم} [] جاءز.
 {الامثال ()} [] كاف.
 {مكرهم} [] جاءز، ومثله: «وعند الله مكرهم».
 {الجبال ()} [] كاف، ومثله: «وعده رسله»، وكذا «ذو انتقام»، وقيل: تام ان جعل العامل في الظرف مضمرا، فان جعل العامل فيه «ذو انتقام»، اي: ينتقم يوم تبدل، لم يتم الوقف؛ للفصل بين العامل والمعمول.
 {والسموات} [] حسن.
 {القهار ()} [] كاف، علي استءناف ما بعده.
 {في الاصفاد ()} [] جاءز، ومثله: «من قطران».
 {النار ()} [] ليس بوقف؛ لاتصال الكلام بما قبلها. وقال ابو حاتم: اللام لام قسم، وليست (لام كي).
 {ما كسبت} [] حسن.
 {الحساب ()} [] تام.
 {للناس} [] جاءز، علي ان ما بعده معطوف علي محذوف يدل عليه ما تقدم تقديره: واعلمنا به؛ لينذروا به، او فعلنا ذلك؛ لينذروا به، او هذه عظة كافية؛ ليوعظوا، ولينذروا به دل علي المحذوف الواو، والاكثرون علي ان الوقف علي اخر السورة تام.
 
  سورة الحجر
 مكية
 [ايها:] تسع وتسعون اية اجماعا، وليس فيها شء مما يشبه الفواصل.
  وكلمها: ستماءة واربع وخمسون كلمة.
  وحروفها: الفان وسبعماءة وواحد وسبعون حرفا.
 {الر} [] تقدم الكلام عليها.
 {مبين ()} [] تام.
 {مسلمين ()} [] كاف؛ للامر بعده.
 {الامل} [] جاءز؛ للابتداء بالتهديد؛ لانه يبتدا به الكلام لتاكيد الواقع، وقيل: ليس بوقف؛ لان ما بعده جواب لما قبله.
 {يعلمون ()} [] تام؛ للابتداء بالنفي.
 {معلوم ()} [] كاف.
 {وما يستاخرون ()} [] تام.
 {لمجنون ()} [] جاءز؛ لان «لوما» بمعني: لولا، والاستفهام له الصدارة، وجواب «لوما» في سورة ن: {ما انت بنعمة ربك بمجنون ()} [القلم: ]، ولا مانع من تعلق اية باية ليست من السورة، وانما صح ذلك؛ لان القران كله كسورة واحدة، كما صرحوا من ان {لايلاف قريش ()} [قريش: ] متعلق بقوله: {فجعلهم كعصف ماكول ()} [الفيل: ].
 {بالملاءكة} [] ليس بوقف؛ لان ما بعده شرط قد قام ما قبله مقام جوابه.
 {من الصادقين ()} [] تام؛ لانه اخر كلام المستهزءين.
 {الا بالحق} [] حسن؛ للابتداء بالنفي.
 {منظرين ()} [] تام.
 {الذكر} [] جاءز، ان جعل الضمير في «له» للنبي  صلي الله عليه وسلم ، ويتم المعني، وهو قول شاذ؛ لانه لم يتقدم له ذكر، فيعود الضمير عليه، اي: يحفظ محمدا  صلي الله عليه وسلم  ان يناله سوء، اي: وان لمحمد لحافظون له من الشياطين تكفل بحفظه، وقيل: تقدم له ذكر في قوله: {يا ايها الذي نزل عليه الذكر} []، وفي: {لو ما تاتينا بالملاءكة} []. وان جعل الضمير في «له» للقران، وهو الذكر، اي: وانا للقران لحافظون له من الشياطين؛ فهو تكفل بحفظه، فلا يعتريه زيادة ولا نقص، ولا تحريف ولا تبديل بخلاف غيره من الكتب المتقدمة؛ فانه تعالي لم يتكفل بحفظها، ولذلك وقع فيها الاختلاف، وعلي هذا فلا يحسن الوقف
 
 عليه، كحسنه في الوجه الاول؛ لان الكلام يكون متصلا ().
 {لحافظون ()} [] تام.
 {في شيع الاولين ()} [] كاف، ومثله: «يستهزءون».
 {المجرمين ()} [] حسن، ان جعل الضمير في «نسلكه» عاءدا علي التكذيب المفهوم من قوله: «يستهزءون». وليس بوقف ان جعل الضمير في «نسلكه» للذكر، وقوله: «لا يءمنون» به تفسير له، فلا يفصل بين المفسر والمفسر بالوقف.
 {لا يءمنون به} [] حسن عند بعضهم؛ لان ما بعده متصل بما قبله؛ اذ هو تخويف وتهديد لمشركي قريش في تكذيبهم واستهزاءهم.
 {سنة الاولين ()} [] كاف.
 {يعرجون ()} [] ليس بوقف؛ لان قوله : «لقالوا» جواب «لو»، وان كان راس اية.
 {ابصارنا} [] جاءز.
 {مسحورون ()} [] تام.
 {للناظرين ()} [] كاف، علي استءناف ما بعده. وليس بوقف ان جعل ما بعده معطوفا علي ما قبله.
 {شيطان رجيم ()} [] ليس بوقف؛ للاستثناء بعده، ولجواز الوقف مدخل ل «قوم».
 {شهاب مبين ()} [] كاف.
 {رواسي} [] حسن، ومثله: «موزون».
 {برازقين ()} [] تام.
 {خزاءنه} [] حسن؛ لاتفاق الجملتين مع الفصل.
 {بقدر معلوم ()} [] كاف، ومثله: «فاسقيناكموه»، وقيل: جاءز؛ لان الواو بعده تصلح للابتداء وللحال. و «بخازنين»، و «نحيي»، و «نميت»، و «الوارثون»، و «المستاخرين»، و «يحشرهم» كلها وقوف كافية.
 {حكيم عليم ()} [] تام.
 {مسنون ()} [] جاءز.
 {السموم ()} [] كاف، ومثله: «مسنون»، و «ساجدين».
 {اجمعون ()} [] ليس بوقف؛ للاستثناء بعده. 
 {الا ابليس} [] جاءز.
 {الساجدين ()} [] كاف، ثم ابتدا قال: يا ابليس، ومثله: «مع الساجدين» الثاني الي قوله: «مسنون».
 {فانك رجيم ()} [] جاءز.
 {الدين ()} [] كاف، وكذا «يبعثون».
 {من المنظرين ()} [] ليس بوقف؛ لتعلق «الي» بما قبلها.
 {المعلوم ()} [] كاف، وهي النفخة الاولي، وبها تموت الخلق كلهم ().
 {اجمعين ()} [] ليس بوقف، وان كان راس اية؛ للاستثناء بعده، ولا يفصل بين المستثني والمستثني منه.
 {المخلصين ()} [] حسن.
 {مستقيم ()} [] كاف؛ للابتداء ب «ان»، ومثله: «من الغاوين».
 {اجمعين ()} [] كاف، علي استءناف ما بعده.
 {ابواب} [] جاءز.
 {مقسوم ()} [] تام؛ فصلا بين ما اعد لاهل النار، وما اعد لاهل الجنة.
 {وعيون ()} [] حسن؛ لان التقدير: يقال لهم ادخلوها.
 {امنين ()} [] كاف، ومثله: «متقابلين»، وكذا «نصب».
 {بمخرجين ()} [] تام.
 {الغفور الرحيم ()} [] ليس بوقف؛ لان قوله: «وان عذابي» معطوف علي «اني».
 {الاليم ()} [] تام.
 {عن ضيف ابراهيم ()} [] حسن؛ لانه لو وصله بما بعده لصار «اذ» ظرفا لقوله: «ونبءهم»، وذلك غير ممكن.
 {فقالوا سلاما} [] حسن، وهو مقتطع من جملة محكية ب «قالوا»، فليس منصوبا به؛ لان القول لا ينصب المفردات، وانما ينصب ثلاثة اشياء الجمل نحو قال: اني عبد الله، والمفرد المراد به لفظه، نحو يقال له: ابراهيم، او قلت زيدا، اي: قلت هذا اللفظ، والمفرد المراد به الجملة نحو: قلت قصيدة وشعرا، او اقتطع من جملة كقوله: 
 اذا ذقت فاها قلت طعم مدامة ... معتقة مما تجء به التجر ()
 او كان المفرد مصدرا، نحو : قلت قولا او صفة، نحو: حقا او باطلا؛ فانه يتسلط عليه القول. وسليم ينصبون بالقول مطلقا، اي: بلا شرط تقول: قلت عمرا منطلقا، وقل ذا مشفقا، ونحو ذلك. واما غيرهم فلا يجري القول مجري الظن الا بشروط: ان يكون مضارعا، مبدوا بتاء بعد اداة الاستفهام، غير مفصول عنها بغير ظرف او مجرور او معمول، وذلك نحو: اتقول زيدا منطلقا؟ واغتفر الفصل بالحرف نحو: اعندك تقول عمرا مقيما؟ وبالمجرور نحو: افي الدار تقول زيدا جالسا؟ وبالمفعول نحو: ازيدا تقول منطلقا؟ ف «سلاما» منصوب بمقدر تقديره: سلمت سلاما من السلامة، او سلمنا سلاما من التحية، وقيل: سلاما نعت لمصدر محذوف تقديره: فقالوا: قولا سلاما.
 {انا منكم وجلون ()} [] كاف، ومثله: «بغلام عليم»، وكذا «الكبر»، و «تبشرون».
 {بالحق} [] جاءز.
 {القانطين ()} [] كاف، ومثله: «الضالون»، و «المرسلون».
 {مجرمين ()} [] ليس بوقف؛ للاستثناء، ولجواز الوقف مدخل ل «قوم».
 {الا ال لوط} [] حسن.
 {انا لمنجوهم اجمعين ()} [] ليس بوقف؛ للاستثناء.
 {قدرنا} [] جاءز، وقيل: ليس بوقف؛ لان «انها» واسمها وخبرها في محل نصب مفعول «قدرنا»، وانما كسرت الهمزة من «انها» لدخول اللام في خبرها.
 {الغابرين ()} [] كاف.
 {فلما جاء ال لوط المرسلون ()} [] ليس بوقف؛ لان «قال» بعده جواب «لما».
 {منكرون ()} [] كاف.
 {يمترون ()} [] جاءز، ومثله: «واتيناك بالحق».
 {وانا لصادقون ()} [] كاف.
 {بقطع من الليل} [] جاءز، ومثله: «واتبع ادبارهم»، ومثله: «منكم احد»، وهذا مخالف لما في سورة هود؛ لان ذاك بعده استثناء، وهذا ليس كذلك.
 {حيث تءمرون ()} [] حسن. 
 {ذلك الامر} [] ليس بوقف؛ لان ما بعده، وهو ان «دابر» بدل من «ذلك» اذا قلنا: «الامر» عطف بيان، او بدل من لفظ «الامر» سواء قلنا: انه بيان، او بدل مما قبله، او حذف منه الجار، اي: بان دابر، وحينءذ ففيه الخلاف المشهور بين الخليل وسيبويه، هل هو في محل نصب، او جر؟
 {مصبحين ()} [] حسن.
 {يستبشرون ()} [] جاءز، ومثله: «تفضحون».
 {ولا تخزون ()} [] حسن، ومثله: «العالمين».
 {فاعلين ()} [] تام؛ للابتداء بلام القسم، و «عمرك» مبتدا خبره محذوف وجوبا تقديره: لعمرك قسمي، والوقف علي «لعمرك» قبيح؛ لان ما بعده جواب له.
 {يعمهون ()} [] كاف، علي استءناف ما بعده.
 {مشرقين ()} [] جاءز، اي: كان الهلاك حين اشرقت الشمس.
 {فجعلنا عاليها سافلها} [] جاءز، علي استءناف ما بعده.
 {من سجيل ()} [] كاف.
 {للمتوسمين ()} [] جاءز.
 {مقيم ()} [] كاف.
 {للمءمنين ()} [] تام؛ لتمام القصة.
 {لظالمين ()} [] ليس بوقف؛ للعطف بالفاء.
 {فانتقمنا منهم} [] جاءز.
 {مبين ()} [] تام.
 {المرسلين ()} [] جاءز، ومثله: «معرضين»، وكذا «امنين».
 {مصبحين ()} [] ليس بوقف؛ لاتصال المعني.
 {يكسبون ()} [] تام؛ لتمام القصة.
 {الا بالحق} [] حسن، ومثله: «لاتية».
 {الصفح الجميل ()} [] كاف؛ وهو العفو من غير عتاب.
 {الخلاق العليم ()} [] تام.
 {العظيم ()} [] كاف.
 {ازواجا منهم} [] حسن، علي استءناف النهي، وليس بوقف ان جعل النهي الثاني معطوفا علي النهي الذي قبله.
 {ولا تحزن عليهم} [] احسن مما قبله؛ لاستءناف الامر، وان جعل النهي الثالث معطوفا علي الاول لم يفصل بينهما بوقف.
 
 {للمءمنين ()} [] كاف.
 {المبين ()} [] حسن ان علقت الكاف بمصدر محذوف تقديره: اتيناك سبعا من المثاني ايتاء كما انزلنا، او انزالا كما انزلنا، او انزلنا عليهم العذاب كما انزلنا؛ لان «اتيناك» بمعني: انزلنا عليك، او علقت بمصدر محذوف، العامل فيه مقدر تقديره: متعناهم تمتيعا كما انزلنا، وليس بوقف ان نصب بالنذير، اي: النذير عذابا كما انزلنا علي المقتسمين، وهم: قوم صالح؛ لانهم قالوا: «لنبيتنه واهله»، فاقسموا علي ذلك ().
 {المقتسمين ()} [] ليس بوقف؛ لان «الذين» من نعتهم، او بدل. «المقتسمين» هم: عظماء كفار قريش؛ اقسموا علي طريق مكة يصدون عن النبي  صلي الله عليه وسلم ، فمنهم من يقول: الذي جاء به محمد سحر، ومنهم من يقول: اساطير الاولين، ومنهم من يقول: هو كهانة. فانزل الله بهم خزيا، وانزل: {وقل اني انا النذير المبين () كما انزلنا علي المقتسمين ()} [، ]، او هم اليهود؛ فقد جري علي بني قريظة، وبني النضير ما جري، وجعل المتوقع بمنزلة الواقع، وهو من الاعجاز؛ لانه اخبار بما سيكون، وقد كان ().
 {عضين ()} [] كاف.
 {اجمعين ()} [] ليس بوقف؛ لان ما بعده مفعول ثان لقوله: «لنسالنهم».
 {يعملون ()} [] تام، وكذا «المشركين»، ومثله: «المستهزءين» ان جعل «الذي» مبتدا خبره «فسوف يعلمون».
 {يعلمون ()} [] تام، وليس بوقف ان جعل صفة ل «المستهزءين»، ويكون الوقف علي «الها اخر»، وكذا لا يوقف علي «المستهزءين» ان جعل «الذين» بدلا من «المستهزءين».
 {الها اخر} [] حسن؛ للابتداء بالتهديد والوعيد علي استهزاءهم، وجعلهم الها مع الله.
 {بما يقولون ()} [] جاءز، ومثله: «بحمد ربك».
 {من الساجدين ()} [] كاف؛ للابتداء بالامر.
 {واعبد ربك} [] ليس بوقف؛ لاتصال ما بعده بما قبله؛ لان العبادة وقتت بالموت، اي: دم علي التسبيح والعبادة حتي ياتيك الموت.
 {اليقين ()} [] تام. 
  سورة النحل
 مكية
 الا قوله: {وان عاقبتم} [] الي اخرها فمدني، انزلت حين قتل حمزة بن عبد المطلب  رضي الله عنه  ().
 [ايها:] وهي ماءة وثماني وعشرون اية اجماعا.
  وكلمها: الف وثمانماءة واحدي واربعون كلمة.
  وحروفها: سبعة الاف وسبعماءة وسبعة احرف، وفيها مما يشبه الفواصل وليس معدودا منها باجماع تسعة مواضع:
    
 {وما يعلنون} [] الثاني، والاول راس اية بلا خلاف.
    
 {وما يشعرون} [].
    
 {لهم فيها ما يشاءون} [].
    
 {الملاءكة طيبين} [].
    
 {ما يكرهون} [].
    
 {افبالباطل يءمنون} [].
    
 {هل يستوون} [].
    
 {وما عند الله باق} [].
    
 {متاع قليل} [].
 {فلا تستعجلوه} [] تام، لمن قرا (): «تشركون» بالفوقية، ومن قرا (): بالتحتية كان اتم. قال ابو عبد الله ابراهيم بن محمد بن عرفة نفطويه العرب (): تقول اتاك الامر وهو متوقع بعد، ومنه اتي 
 امر الله، اي: اتي امر وعده فلا تستعجلوه وقوعا.
 {يشركون ()} [] تام.
 {من عباده} [] جاءز، علي ان ما بعده بدل من مقدر محذوف، اي يقال لهم: ان انذروا قومكم، قاله نافع، وليس بوقف ان ابدل «ان انذروا» من قوله: «بالروح»، او جعلت تفسيرية بمعني: اي.
 {فاتقون ()} [] تام.
 {بالحق} [] حسن.
 {يشركون ()} [] كاف، ومثله: «مبين»، وكذا «والانعام خلقها». وقيل: الوقف علي «لكم»؛ فعلي الاول «الانعام» منصوبة ب «خلقها» علي الاشتغال، وعلي الثاني منصوبة بفعل مقدر معطوف علي «الانسان».
 {دفء ومنافع} [] كاف عند ابي عمرو، ومثله: «ومنها تاكلون» علي استءناف ما بعده، وكذا «تسرحون».
 {الا بشق الانفس} [] كاف.
 {رحيم ()} [] تام، علي استءناف ما بعده، وليس بوقف ان عطف علي ما قبله، اي: وخلق الخيل لتركبوها وزينة، وهو تام. قال التتاءي: قال مالك: احسن ما سمعت في الخيل والبغال والحمير انها لا تءكل؛ لان الله تعالي قال فيها: {لتركبوها وزينة} [النحل: ]، وقال في الانعام: {لتركبوا منها ومنها تاكلون ()} [غافر: ]؛ فذكر الخيل والبغال والحمير للزينة، وذكر الانعام للركوب والاكل.
 {ما لا تعلمون ()} [] تام عند ابي حاتم، ويعقوب.
 {قصد السبيل} [] جاءز.
 {ومنها جاءر} [] حسن؛ ف «قصد السبيل»: طريق الجنة، و «منها جاءر»: طريق النار. قال قتادة: «قصد السبيل»: حلاله وحرامه وطاعته، و «منها جاءر»: سبيل الشيطان. وقال ابن المبارك، وسهل بن عبد الله: «قصد السبيل»: السنة، و «منها جاءر»: اهل الاهواء والبدع. وقرء شاذا (): «ومنكم جاءر»، وهي مخالفة للسواد.
 {اجمعين ()} [] تام.
 {ماء} [] جاءز، علي ان «لكم» مستانف، و «شراب» مبتدا، وان جعل في موضع الصفة متعلقا 
 بمحذوف صفة ل «ماء»، و «شراب» مرفوع به، فلا وقف.
 {فيه تسيمون ()} [] كاف، علي قراءة من قرا: «ننبت» بالنون، وهي اعلي من قراءته بالتحتية، وبها قرا عاصم (). وقيل: كاف ايضا علي قراءته بالنون، او بالتحتية ().
 {ومن كل الثمرات} [] كاف، ومثله «يتفكرون».
 {والنهار} [] حسن، لمن رفع ما بعده بالابتداء، او الخبر. وليس بوقف لمن نصبه ()، وعليه فوقفه علي «بامره»، وعلي قراءة حفص (): «والنجوم مسخرات» برفعهما فوقفه علي «والقمر».
 {لقوم يعقلون ()} [] كاف، ان نصب ما بعده بالاغراء، اي: اتقوا ما ذرا لكم.
 {مختلفا الوانه} [] حسن.
 {يذكرون ()} [] كاف.
 {تلبسونها} [] حسن.
 {مواخر فيه} [] جاءز؛ لانه في مقام تعداد النعم.
 {تشكرون ()} [] كاف.
 {وسبلا} [] ليس بوقف؛ لحرف الترجي، وهو في التعلق ك (لام كي).
 {تهتدون ()} [] جاءز؛ لكونه راس اية.
 {وعلامات} [] تام عند الاخفش. قال الكلبي: اراد بالعلامات: الطرق بالنهار، والنجوم بالليل. وقال السدي: و «بالنجم هم يهتدون» يعني: الثريا، وبنات نعش، والجدي، والفرقدان بها يهتدون الي القبلة، والطرق في البر والبحر. قال قتادة: انما خلق الله النجوم لثلاثة اشياء: زينة للسماء، ومعالم للطرق، ورجوما للشياطين، فمن قال غير هذا فقد تكلف ما لا علم له به (). 
 {يهتدون ()} [] تام.
 {كمن لا يخلق} [] حسن؛ للاستفهام بعده، وجء ب «من» في الثاني؛ لاعتقاد الكفار ان لها تاثير، فعوملت معاملة اولي العلم، كقوله:
 بكيت علي سرب القطا اذ مررن بي ... فقلت ومثلي بالبكاء جدير
 اسرب القطا هل من يعير جناحه ... لعلي الي من قد هويت اطير ()
 فاوقع علي السرب (من) لما عاملها معاملة العقلاء.
 {تذكرون ()} [] كاف، ومثله «لا تحصوها».
 {رحيم ()} [] تام.
 {وما تعلنون ()} [] كاف؛ علي قراءة عاصم [هو وما بعده] () بالتحتية، وحسن لمن قرا: «تعلنون» بالفوقية، وما بعده بالتحتية ().
 {لا يخلقون شيءا} [] جاءز. 
 {وهم يخلقون ()} [] كاف، اذا رفعت «اموات» علي انه خبر مبتدا محذوف، اي: هم اموات. وليس بوقف ان جعل «اموات» خبرا ثانيا لقوله: «وهم يخلقون»، وكذا ان جعل «يخلقون»، و «اموات» خبرين. وليس «يخلقون» بوقف ايضا ان جعل «والذين» مبتدا، او «اموات» خبرا، والتقدير: والذين هذه صفتهم اموات غير احياء؛ لانها اصنام، ولذلك وصفها بالموت وما يشعرون. وليس بوقف؛ لان «ايان» ظرف منصوب ب «يشعرون»، وقيل: منصوب بما بعده، لا بما قبله؛ لانه استفهام، وقيل: «ايان» ظرف لقوله: «الهكم اله واحد» يعني: ان الاله واحد يوم القيامة، ولم يدع احد الالهية في ذلك اليوم بخلاف الدنيا؛ فانه قد وجد فيها من ادعي ذلك، وعلي هذا فقد تم الكلام علي «يشعرون» الا ان هذا القول مخرج ل «ايان» عن موضوعها، وهي اما شرط، واما استفهام الي محض الظرفية.
 {ايان يبعثون ()} [] تام، ومثله «اله واحد».
 {منكرة} [] جاءز.
 {مستكبرون ()} [] كاف، ووقف الخليل وسيبويه علي «لا»؛ وذلك ان «لا» عندهما رد لمن انكر البعث. وقال اهل الكوفة: «جرم» مع «لا» كلمة واحدة معناها: لا بد، وحينءذ لا يوقف علي «لا».
 {وما يعلنون} [] كاف، ومثله «المستكبرين».
 {ماذا انزل ربكم} [] ليس بوقف؛ لان «قالوا» جواب «ماذا»، فلا يفصل بينهما بالوقف. و «ما» و «ذا» كلمة واحدة استفهام مفعول ب «انزل»، ويجوز ان تكون «ما» وحدها كلمة مبتدا، و «ذا» بمعني: الذي خبر «ما»، وعاءدها في «انزل» محذوف، اي: اي شء انزل ربكم؟ فقيل: انزل اساطير الاولين.
 {الاولين ()} [] حسن، ان جعلت اللام في «ليحملوا» لام الامر الجازمة للمضارع. وليس بوقف ان جعلت لام العاقبة والصيرورة، وهي التي يكون ما بعدها نقيضا لما قبلها، اي: لان عاقبة قولهم ذلك؛ لانهم لم يقولوا اساطير الاولين ليحملوا؛ فهو كقوله: {ليكون لهم عدوا وحزنا} [القصص: ]، و «كاملة» حال.
 {يوم القيامة} [] جاءز بتقدير: ويحملون من اوزار الذين يضلونهم.
 {بغير علم} [] كاف.
 {ما يزرون ()} [] تام.
 {من فوقهم (} [] جاءز، ومثله: «لا يشعرون»، و «يخزيهم»، و «تشاقون فيهم» كلها وقوف جاءزة.
 {الكافرين ()} [] تام، ان جعل «الذين» مبتدا خبره «فالقوا السلم»، وزيدت الفاء في
 
 الخبر، او جعل خبر مبتدا محذوف، وكاف ان نصب علي الذم، وليس بوقف ان جر صفة ل «الكافرين»، او ابدل مما قبله، او جعل بيانا له.
 {ظالمي انفسهم} [] جاءز، ان جعل ما بعده مستانفا، وليس بوقف ان جعل خبر «الذين»، او عطف علي «الذين تتوفاهم».
 {من سوء} [] تام عند الاخفش؛ لانقضاء كلام الكفار. ف «من سوء» مفعول «نعمل» زيدت فيه «من»، اي: ما كنا نعمل سوءا، فرد الله او الملاءكة عليهم ب «بلي»، اي: كنتم تعملون السوء. وقيل: الوقف علي «بلي»، والاول اوجه.
 {بما كنتم تعملون ()} [] كاف، وقيل: وصله اولي؛ لمكان الفاء بعده.
 {خالدين فيها} [] كاف عند ابي حاتم، وعند غيره جاءز.
 {المتكبرين ()} [] تام.
 {انزل ربكم} [] كاف؛ لان «قالوا» مستانف.
 {خيرا} [] تام، اي: قالوا انزل خيرا؛ ف «خيرا» مفعول «انزل»، فان قلت: لم رفع «اساطير»، ونصب «خيرا»؟ قلت: فصلا بين جواب المقر وجواب الجاحد، يعني: ان المتقين لما سءلوا اطبقوا الجواب علي السءال بينا مكشوفا مفعولا؛ للانزال، فقالوا: «خيرا»، وهءلاء عدلوا بالجواب عن السءال، فقالوا: «اساطير الاولين». وليس هو من الانزال في شء، وليس «خيرا» بوقف ان جعل ما بعده جملة مندرجة تحت القول مفسرة لقوله: «خيرا»، وذلك ان الخير هو الوحي الذي انزل الله فيه ان من احسن في الدنيا بالطاعة فله حسنة في الدنيا، وحسنة في الاخرة، وكذا ان جعل بدلا من قوله: «خيرا» ().
 {حسنة} [] كاف، ومثله «خير».
 {المتقين ()} [] تام، ان رفع «جنات» خبر مبتدا محذوف، اي: لهم جنات، او جعل مبتدا، و «يدخلونها» في موضع الخبر. وجاءز ان رفعت «جنات» نعتا، او بدلا مما قبلها؛ لكونه راس اية. وقول السخاوي، وغيره: وان رفعت «جنات» ب «نعم» لم يوقف علي «المتقين» مخالف لما اشترطوه في فاعل «نعم» من انه لا يكون الا معرفا ب (ال)، نحو: نعم الرجل زيد، او مضافا لما فيه (ال)، نحو: فنعم عقبي الدار، ولنعم دار المتقين كما هنا، اي: غالبا. ومن غير الغالب قوله في الحديث: «نعم عبد الله خالد ابن الوليد» ()، ويجوز كونها فيه. 
 {الانهار} [] حسن.
 {ما يشاءون} [] جاءز.
 {المتقين ()} [] تام، ان رفع «الذين» بالابتداء، والخبر «يقول».
 {طيبين} [] جاءز، علي استءناف ما بعده، وليس بوقف ان جعل ما بعده متعلقا بما قبله، و «طيبين» حال من مفعول «تتوفاهم».
 {سلام عليكم} [] ليس بوقف؛ لان «ادخلوا» مفعول «يقولون»، اي: تقول خزنة الجنة: ادخلوا الجنة بما كنتم تعملون.
 {تعملون ()} [] تام.
 {او ياتي امر ربك} [] كاف، ومثله «من قبلهم»، و «يظلمون»، و «ما عملوا» كلها وقوف كافية.
 {يستهزءون ()} [] تام.
 {ولا اباءنا} [] كاف، ومثله «من شء»، و «من قبلهم» كلها كافية.
 {المبين ()} [] تام.
 {الطاغوت} [] كاف، ومثله «الضلالة».
 {المكذبين ()} [] تام.
 {من يضل} [] كاف، ومثله «من ناصرين».
 {جهد ايمانهم} [] ليس بوقف؛ لان ما بعده جواب القسم، كانه قال: قد حلفوا لا يبعث الله من يموت.
 {من يموت} [] كاف؛ لانه انقضاء كلام الكفار، ثم يبتدء «بلي» يبعث الله الرسول؛ ليبين لهم الذي يختلفون فيه، ولحديث: «كل نبي عبدي ولم يك ينبغي له ان يكذبني» (). وقال نافع: من يموت بلي؛ لان «بلي» رد لكلامهم، وتكذيب لقولهم، وما بعدها منصوب بفعل مضمر، اي: وعدكم الله وعدا.
 {لا يعلمون ()} [] جاءز. 
 {الذي يختلفون فيه} [] ليس بوقف؛ لعطف ما بعده علي ما قبله.
 {كاذبين ()} [] تام.
 {كن} [] حسن، لمن قرا (): «فيكون» بالرفع، وليس بوقف لمن نصب «فيكون» ().
 {فيكون ()} [] تام، علي القراءتين ().
 {حسنة} [] كاف، وقال يحيي بن سلام: الحسنة هي المدينة المشرفة، «ولاجر الاخرة اكبر» يعني: الجنة، نزلت في صهيب، وبلال، وخباب، وعمار بن ياسر عذبهم المشركون بمكة، واخرجوهم من ديارهم، ولحق منهم طاءفة الحبشة، ثم بواهم الله دار الهجرة، وجعلهم انصارا «لنبوءنهم في الدنيا حسنة» انزلهم المدينة، واطعمهم الغنيمة؛ فهذا هو الثواب في الدنيا ().
 {اكبر} [] جاءز. وجواب «لو» محذوف، اي: لو كانوا يعلمون لما اختاروا الدنيا علي الاخرة، ولو وصله لصار قوله: «ولاجر الاخرة» معلقا بشرط ان «لو كانوا يعلمون»، وهو محال، قاله السجاوندي.
 {لو كانوا يعلمون ()} [] تام، ان جعل «الذين» بعده خبر مبتدا محذوف، اي: هم الذين. وكاف، ان نصب بتقدير: اعني. وجاءز، ان رفع بدلا من «الذين» قبله، وكذا لو نصب بدلا من الضمير في «لنبوءنهم».
 {يتوكلون ()} [] تام.
 {اليهم} [] جاءز، ومثله: «لا تعلمون»، ان جعل «بالبينات والزبر» متعلقا بمحذوف صفة ل «رجالا»؛ لان «الا» لا يستثني بها شيءان دون عطف، او بدلية. وما ظن غير ذلك معمولا لما قبل «الا» قدر له عامل، او انه متعلق بمحذوف جوابا لسءال مقدر يدل عليه ما قبله، كانه قيل: بم ارسلوا؟ فقيل: ارسلوا بالبينات والزبر؛ ف «البينات» متعلق ب «ارسلنا» داخلا تحت حكم الاستثناء مع «رجالا»، اي: وما ارسلنا الا رجالا بالبينات؛ فقد استثني ب «الا» شيءان: احدهما «رجالا»، والاخر «بالبينات». وليس بوقف ان علق ب «نوحي»؛ لان ما بعد «الا» لا يتعلق بما قبلها، وكذا ان علق بقوله: «لا تعلمون» علي ان الشرط في معني: التبكيت والالزام، كقول الاجير: ان كنت عملت لك فاعطني حقي.
 {والزبر} [] كاف. 
 {ما نزل اليهم} [] صالح.
 {يتفكرون ()} [] تام؛ للابتداء بالاستفهام بعده. ولا وقف من قوله: «افامن الذين» الي «رحيم»؛ فلا يوقف علي قوله: «بهم الارض»، وتجاوزه اولي، وكذا «لا يشعرون»، ومثله «بمعجزين»، وكذا «علي تخوف»؛ للعطف علي «كل» ب «او».
 {رحيم ()} [] تام.
 {من شء} [] جاءز، ومثله: «والشماءل».
 {سجدا لله} [] حسن.
 {داخرون ()} [] تام.
 {من دابة} [] جاءز.
 {والملاءكة} [] ارقي مما قبله، اي: وتسجد له الملاءكة طوعا.
 {لا يستكبرون ()} [] كاف، علي استءناف ما بعده، وليس بوقف ان جعل ما بعده جملة في موضع الحال، ومن حيث كونه راس اية يجوز.
 {من فوقهم} [] جاءز.
 {ما يءمرون (()} [] تام، ومثله «الهين اثنين»؛ للابتداء ب «انما».
 {اله واحد} [] جاءز، وكره بعضهم الابتداء بما بعده؛ لان الرهبة لا تكون الا من الله تعالي، فاذا ابتدا ب «فاياي » فكانه اضاف الرهبة الي نفسه في ظاهر اللفظ، وان كان معلوما ان الحكاية من الله تعالي، كما تقدم في اول البقرة.
 {فارهبون ()} [] كاف.
 {والارض} [] جاءز.
 {واصبا} [] حسن؛ للابتداء بالاستفهام. «واصبا» اي: داءما.
 {تتقون ()} [] تام.
 {فمن الله} [] حسن.
 {تجارون ()} [] كاف، و «ثم»؛ لترتيب الاخبار مع شدة اتصال المعني.
 {يشركون ()} [] كاف، ان جعلت (اللام) لام الامر بمعني: التهديد. وليس بوقف ان جعلت للتعليل، اي: انما كان غرضهم بشركهم كفران النعمة، وكذا ان جعلت للصيرورة والمال، اي: صار امرهم ليكفروا وهم لم يقصدوا بافعالهم تلك ان يكفروا، بل ال امرهم ذلك الي الكفر بما انعم عليهم (). 
 {بما اتيناهم} [] حسن.
 {فسوف تعلمون ()} [] كاف، ومثله «مما رزقناكم»، وكذا «تفترون».
 {سبحانه} [] تام، علي استءناف ما بعده، وليس بوقف ان عطف ما بعده علي «لله البنات»، اي: ويجعلون لهم ما يشتهون، ويصير «ولهم ما يشتهون» مفعول «ويجعلون»؛ فلا يوقف علي «سبحانه». قال الفراء: فجعله منصوبا عطفا علي «البنات» يءدي الي تعدي فعل الضمير المتصل وهو واو «ويجعلون» الي ضميره المتصل، وهو (هم) في «لهم». قال ابو اسحاق: وما قاله الفراء خطا؛ لانه لا يجوز تعدي فعل الضمير المتصل، ولا فعل الظاهر الي ضميرهما المتصل الا في باب ظن واخواتها من افعال القلوب، وفي فقد وعدم؛ فلا يجوز زيد ضربه، ولا ضربه زيد، اي: ضرب نفسه، ولا ضربتك، ولا ضربتني، بل يءتي بدل الضمير المنصوب بالنفس، فتقول: ضربت نفسك، وضربت نفسي، ويجوز زيد ظنه قاءما، وظنه زيد قاءما، وزيد فقده وعدمه، وفقده وعدمه زيد، ولا يجوز تعدي فعل الضمير المتصل الي ظاهره في باب من الابواب؛ فلا يجوز زيد ضربه، اي: ضرب نفسه. وفي قوله: الي ضميرهما المتصل قيدان: احدهما: كونه ضميرا؛ فلو كان ظاهرا كالنفس لم يمنع نحو: زيد ضرب نفسه، وضرب نفسه زيد. والثاني: كونه متصلا؛ فلو كان منفصلا جاز نحو: زيد ما ضرب الا اياه، وما ضرب زيد الا اياه. وعلل هذه المسالة وادلتها مذكورة في غير هذا الموضوع ()، انظرها في: شرح التسهيل، قاله السمين مع زيادة للايضاح.
 {ما يشتهون ()} [] كاف.
 {مسودا} [] ليس بوقف؛ لان ما بعده من تتمته.
 {كظيم ()} [] كاف، علي استءناف ما بعده، وليس بوقف ان جعل ما بعده في موضع الحال، ومن حيث كونه راس اية يجوز.
 {ما بشر به} [] جاءز.
 {في التراب} [] حسن؛ للابتداء باداة التنبيه، وذكر الضمير في «به»، و «يمسكه» حملا علي لفظ «ما»، وان كان اريد به الانثي.
 {ما يحكمون ()} [] تام.
 {مثل السوء} [] حسن، قال الكواشي: السوء بالفتح: الرداءة والفساد. وبالضم: الضر والمكروه. وقيل: بالفتح الصفة، وبالضم المضرة والمكروه، ولا تضم السين من قوله: {ما كان ابوك امرا سوء} [مريم: ]، ولا من {وظننتم ظن السوء} [الفتح: ]؛ لانه ضد قولك: رجل صدق، وليس للسوء هنا معني من عذاب او بلاء فيضم، راجعه في: سورة براءة ان شءت. 
 {ولله المثل الاعلي} [] كاف.
 {الحكيم ()} [] تام. ولا وقف الي قوله: «مسمي»؛ فلا يوقف علي «بظلمهم»؛ لان جواب «لو» لم يات، ولا علي «من دابة»؛ للاستدراك بعده.
 {الي اجل مسمي} [] صالح.
 {ولا يستقدمون ()} [] تام.
 {ما يكرهون} [] كاف، ومثله «الحسني».
 {النار} [] ليس بوقف؛ لعطف ما بعده علي ما قبله.
 {مفرطون ()} [] تام.
 {اعمالهم} [] جاءز، ومثله «فهو وليهم اليوم».
 {عذاب اليم ()} [] تام.
 {اختلفوا فيه} [] ليس بوقف؛ لان ما بعده نصب علي انهما مفعول من اجله عطف علي «ليبين»، والناصب لهما «انزلنا».
 {يءمنون ()} [] تام.
 {ماء} [] ليس بوقف؛ لمكان الفاء.
 {بعد موتها} [] حسن.
 {يسمعون ()} [] تام.
 {لعبرة} [] جاءز، لمن قرا (): «نسقيكم» بالنون استءنافا؛ لانه لا يجوز ان تكون الجملة خبر مبتدا محذوف، اي: هي، اي: العبرة نسقيكم.
 ويجوز ان تكون مفسرة للعبرة، كانه قيل: كيف العبرة؟ فقيل: نسقيكم من بين فرث ودم لبنا خالصا؛ لانه اذا استقر علف الدابة في كرشها طبخته فكان اسفله فرثا، واوسطه لبنا، واعلاه دما، سبحانه من عظيم! ما اعظم قدرته! ()
 {للشاربين ()} [] تام ان جعل ما بعده مستانفا متعلقا ب «تتخذون»، وجاءز ان جعل معطوفا 
 علي «مما في بطونه»، اي: ونسقيكم مما في بطونه، ونسقيكم من ثمرات النخيل والاعناب، والوقف علي هذا علي قوله: «والاعناب ».
 {ورزقا حسنا} [] كاف.
 {يعقلون ()} [] تام.
 {بيوتا} [] ليس بوقف؛ لعطف ما بعده علي ما قبله.
 {يعرشون ()} [] كاف، ومثله «ذللا».
 {مختلف الوانه} [] حسن، يخرج من افواه النحل؛ وذلك ان العسل ينزل من السماء، فينبت في اماكن، فياتي النحل فيشربه، ثم ياتي الخلايا التي تصنع له، والكوي التي تكون في الحيطان، فيلقيه في الشمع المهيا للعسل في الخلايا كما يتوهمه بعض الناس؛ ان العسل من فضلات الغذاء، وانه قد استحال في المعدة عسلا. ونزل من السماء عشرة اشياء مع العسل، قاله الكواشي.
 قال ابن حجر: فعلي انه يخرج من فم النحل فهو مستثني من القء، وعلي انه من دبرها فهو مستثني من الروث، وقيل: من ثقبتين تحت جناحها فلا استثناء الا بالنظر الي انه كاللين، وهو من غير الماكول نجس. اه، قال السمين: نقلوا في العسل التذكير والتانيث، وجاء القران علي التذكير في قوله: «من عسل مصفي»، وكني بالعسيلة عن الجماع؛ لمشابهتهما.
 قال عليه الصلاة والسلام: «لا حتي تذوقي عسيلته ويذوق عسيلتك» ()، «ومختلف الوانه» حسن، ان جعل الضمير في «فيه» للقران، اي: في القران من بيان الحلال والحرام والعلوم شفاء للناس، وليس بوقف ان اعيد علي العسل المذكور ().
 {فيه شفاء للناس} [] كاف.
 {يتفكرون ()} [] تام.
 {يتوفاكم} [] حسن.
 {شيءا} [] كاف. 
 {قدير ()} [] تام.
 {في الرزق} [] كاف؛ للابتداء بعد بالنفي، ولاختلاف الجملتين.
 {فهم فيه سواء} [] كاف، المالك والمملوك الكل مرزوقون. قال بعضهم في الرزق:
 ولا تقولن لي فضل علي احد ... الفضل لله ما للناس افضال ()
 {يجحدون ()} [] كاف، وقيل: تام.
 {ازواجا} [] جاءز، ومثله «حفدة».
 {من الطيبات} [] كاف؛ للابتداء بالاستفهام.
 {يكفرون ()} [] كاف، ومثله «لا يستطيعون»، وكذا «الامثال».
 {وانتم لا تعلمون ()} [] تام. ولا وقف من قوله: «ضرب الله» الي قوله: «وجهرا»، فلا يوقف علي «لا يقدر»، ولا علي «حسنا»؛ للعطف في كل.
 {سرا وجهرا} [] جاءز.
 {هل يستوون} [] حسن؛ لانه من تمام القول.
 {لا يعلمون ()} [] كاف.
 {رجلين} [] جاءز. «احدهما ابكم»، وهو: ابو جهل. و «الذي يامر بالعدل» عمار بن ياسر العنسي بالنون نسبة الي (عنس)، و (عنس) حي من مذحج، وكان حليفا لبني مخزوم رهط ابي جهل، وكان ابو جهل يعذبه علي الاسلام، ويعذب امه سمية، وكانت مولاة لابي جهل، فقال لها يوما: انما امنت بمحمد؛ لانك تحبيه لجماله، ثم طعنها بحربة في قلبها فماتت، فهي اول شهيد في الاسلام ()، وقيل: (الكل) الصنم عبدوه، وهو لا يقدر علي شء، فهو كل علي مولاه يحمله اذا ظعن، ويحوله من مكان الي اخر، فقال الله: هل يستوي هذا الصنم (الكل)، ومن يامر بالعدل فهو استفهام، ومعناه: التوبيخ، فكانه قال: لا تسووا بين الصنم وبين الخالق جل جلاله، وفي الكلام حذف المقابل؛ لقوله: «احدهما ابكم»، كانه قيل: والاخر ناطق فيما له، وهو خفيف علي مولاه اينما يوجهه يات بخير، وحذفت الياء من يات بخير تخفيفا، كما حذفت في قوله: «يوم يات لا تكلم نفس»، او حذفت علي توهم الجازم، قرا طلحة وعلقمة (): «اينما يوجه» بهاء واحدة ساكنة للجزم، والفعل مبني للمفعول، 
 وقرء (): «اينما توجه» فعلا ماضيا، فاعله ضمير «الابكم» ()، انظر: السمين.
 {علي مولاه} [] جاءز؛ لان الجملة بعد صفة «احدهما».
 {اينما يوجهه لا يات بخير} [] حسن.
 {هل يستوي هو} [] ليس بوقف؛ لان «ومن» معطوف علي الضمير المستكن في «يستوي»، وهو توكيد له.
 {بالعدل} [] صالح؛ لان ما بعده يصلح مستانفا وحالا.
 {مستقيم ()} [] تام.
 {والارض} [] حسن؛ للابتداء بعد بالنفي.
 {او هو اقرب} [] كاف.
 {قدير ()} [] تام.
 {شيءا} [] جاءز، علي استءناف ما بعده، وليس بوقف ان عطف علي ما قبله.
 {تشكرون ()} [] تام.
 {في جو السماء} [] كاف؛ للابتداء بالنفي.
 {الا الله} [] اكفي منه.
 {يءمنون ()} [] تام.
 {سكنا} [] جاءز.
 {اقامتكم} [] حسن، علي استءناف ما بعده.
 {الي حين ()} [] كاف.
 {ظلالا} [] جاءز، ومثله «اكنانا».
 {الحر} [] ليس بوقف؛ لانه لم يعد الفعل بعده، كما اعاده في الذي قبله، وانما اراد: تقيكم الحر والبرد، فاجتزا بذكر «الحر»؛ لان ما يقي من الحر يقي من البرد.
 {باسكم} [] جاءز.
 {عليكم} [] ليس بوقف؛ لحرف الترجي بعده، وهو في التعلق ك (لام كي).
 {تسلمون ()} [] تام؛ للابتداء بالشرط، ومثله «المبين».
 {ينكرونها} [] جاءز. قال السدي: نعمة الله يعني: نبوة محمد  صلي الله عليه وسلم ، ثم ينكرونها. وقيل: هو 
 قول الشخص: لولا فلان لكان كذا، ولولا فلان لما كان كذا. وفي الحديث: «اياكم ولو فانها تفتح عمل الشيطان» ().
 {الكافرون ()} [] تام، ومثله «يستعتبون»، وكذا «ينظرون»، ولا وقف من قوله: «واذا راي» الي قوله: «من دونك».
 {من دونك} [] جاءز.
 {اليهم القول} [] ليس بوقف؛ لان ما بعده خطاب العابدين للمعبودين، واجهوا من كانوا يعبدونهم بانهم كاذبون.
 {لكاذبون ()} [] كاف.
 {السلم} [] جاءز.
 {يفترون ()} [] تام، ومثله «يفسدون» ان نصب «اذ» باذكر مقدرا، فيكون من عطف الجمل مفعولا به.
 {من انفسهم} [] حسن، وقال نافع: تام.
 {علي هءلاء} [] حسن.
 {تبيانا لكل شء} [] ليس بوقف؛ لان ما بعده منصوب بالعطف علي ما قبله.
 {للمسلمين ()} [] تام، ورسموا «وايتاءي» بزيادة ياء بعد الالف كما تري.
 {ذي القربي} [] كاف.
 {والبغي} [] اكفي، وقيل: صالح؛ لان ما بعده يصلح مستانفا وحالا.
 {تذكرون ()} [] تام.
 {اذا عاهدتم} [] حسن، ومثله «بعد توكيدها».
 {كفيلا} [] كاف، ومثله «تفعلون».
 {انكاثا} [] حسن؛ لان الاستفهام بعده مقدر، اي: اتتخذون، وقيل: الاستفهام لا يضمر ما لم يات بعده «ام»، وليس في الاية ذكر «ام»، واجاز الاخفش حذفه اذا كان في الكلام دلالة عليه، 
 وان لم يكن بعده «ام»، وجعل منه: {وتلك نعمة تمنها علي} [الشعراء: ].
 {دخلا بينكم} [] ليس بوقف؛ لان «ان» موضعها نصب بما قبلها.
 {هي اربي من امة} [] كاف؛ للابتداء ب «انما»، ومثله «يبلوكم الله به»، وقال نافع: تام.
 {تختلفون ()} [] تام.
 {امة واحدة} [] ليس بوقف؛ للاستدراك بعده.
 {ويهدي من يشاء} [] كاف.
 {تعملون ()} [] تام، علي استءناف النهي بعده عن اتخاذ الايمان علي العموم سواء كانت في مبايعة، او قطع حقوق ماليه ام لا، «دخلا بينكم» ليس بوقف ايضا؛ لان {فتزل} [] منصوب علي جواب النهي، فلا يفصل منه.
 {بعد ثبوتها} [] ليس بوقف؛ لعطف ما بعده علي ما قبله.
 {عن سبيل الله (} [] جاءز.
 {عظيم ()} [] تام.
 {ثمنا قليلا} [] كاف؛ للابتداء ب «انما».
 {تعلمون ()} [] كاف، ومثله «ينفد»، وكذا «باق» علي قراءة من قرا (): «ولنجزينه» بالنون؛ لعدوله عن المفرد الي الجمع لفظا، مع انهما ضميرا: «من»، ومن قراه بالتحتية فوصله احسن ().
 {يعملون ()} [] تام.
 {وهو مءمن} [] ليس بوقف؛ لان جواب الشرط لم يات بعد، ومثله في عدم الوقف «طيبة»؛ لعطف ما بعده علي جواب الشرط.
 {يعملون ()} [] تام؛ للابتداء بالشرط.
 {الرجيم ()} [] كاف، علي استءناف ما بعده.
 {علي الذين امنوا} [] جاءز.
 {يتوكلون ()} [] كاف. 
 {مشركون ()} [] تام.
 {مكان اية} [] ليس بوقف؛ لان «قالوا» جواب «اذا»، فلا يفصل بين الشرط وجوابه، وقوله: «والله اعلم بما ينزل» جملة اعتراضية بين الشرط وجوابه.
 {مفتر} [] كاف.
 {لا يعلمون ()} [] تام.
 {ليثبت الذين امنوا} [] حسن، ان جعل موضع «وهدي» رفعا علي الاستءناف، وليس بوقف ان جعل موضعه نصبا.
 {للمسلمين ()} [] تام.
 {انما يعلمه بشر} [] تام، وجملة «لسان الذي» مستانفة. وقيل: حال من فاعل «يقولون»، اي: يقولون ذلك والحالة هذه، اي: علمهم باعجمية هذا البشر، واياته عربية هذا القران كانت تمنعهم من تلك المقالة، قاله ابو حيان. قال ابن عباس: كان في مكة غلام اعجمي لبعض قريش يقال له: بلعام، فكان رسول الله  صلي الله عليه وسلم  يعلمه الاسلام، ويوقفه عليه، فقال المشركون: انما يعلمه بلعام النصراني، فنزلت علي النبي  صلي الله عليه وسلم  هذه الاية. وقيل: غير ذلك ().
 {اعجمي} [] جاءز.
 {مبين ()} [] تام.
 {لا يءمنون بايات الله} [] ليس بوقف؛ لان خبر «ان» لم يات بعد، وهو «لا يهديهم الله».
 وقوله: {لا يهديهم الله} [] قيل: كاف، علي استءناف ما بعده، وجاءز ان جعل ما بعده في موضع الحال.
 {اليم ()} [] تام.
 {بايات الله} [] جاءز.
 {الكاذبون ()} [] تام؛ لان «من كفر» في محل رفع، وهو شرط محذوف الجواب؛ لدلالة جواب «من شرح» عليه، والمعني: من كفر بالله فعليهم غضب الا من اكره، ولكن من شرح بالكفر صدرا، فعليهم غضب، وان جعل «من» بدلا من «الذين لا يءمنون»، او من «الكاذبون» لم يتم الوقف علي «الكاذبون». ولم يجز الزجاج الا ان تكون بدلا من «الكاذبون»، انظر: ابا حيان. 
 {مطمءن بالايمان} [] ليس بوقف؛ لتعلق ما بعده به استدراكا وعطفا.
 {غضب من الله} [] كاف، علي استءناف ما بعده.
 {عظيم ()} [] كاف.
 {علي الاخرة} [] ليس بوقف؛ لعطف «وان» علي «بانهم»؛ لان موضعها نصب بما قبلها.
 {الكافرين ()} [] تام.
 {وابصارهم} [] جاءز.
 {الغافلون ()} [] تام.
 {الاخرة} [] جاءز، ان جعل «انهم» متصل بفعل محذوف تقديره: لا جرم انهم يحشرون في الاخرة، والا فليس بوقف.
 {الخاسرون ()} [] كاف.
 {وصبروا} [] حسن، وكذا «لغفور رحيم»، ان نصب «يوم» بفعل مقدر تقديره: اذكر يوم، فهو مفعول به، وكذا يجوز نصبه ب «رحيم»، ولا يلوم من ذلك تقييد رحمته تعالي بالظرف؛ لانه اذا رحم في هذا اليوم فرحمته في غيره اولي واحري، قاله السمين. وحينءذ فلا يوقف علي «رحيم».
 {ما عملت} [] جاءز.
 {لا يظلمون ()} [] تام. ولا وقف من قوله: «وضرب الله» الي «يصنعون»، فلا يوقف علي «مطمءنة»، ولا علي «من كل مكان»، ولا علي «بانعم الله».
 {يصنعون ()} [] كاف.
 {فاخذهم العذاب} [] جاءز.
 {ظالمون ()} [] تام.
 {طيبا} [] جاءز.
 {واشكروا نعمة الله} [] ليس بوقف؛ لان الشرط الذي بعده جوابه الذي قبله.
 {تعبدون ()} [] تام.
 {لغير الله به} [] كاف.
 {رحيم ()} [] تام.
 {الكذب} [] الثاني حسن، لا الاول؛ لان قوله: «هذا حلال وهذا حرام» داخل في حكاية قولهم تفسير للكذب، فلا يفصل بين المفسر والمفسر بالوقف، ولا يوقف علي «حلال»، ولا علي «حرام»؛ لان اللام موضعها نصب بما قبلها.
 {ان الذين يفترون علي الله الكذب} [] ليس بوقف؛ لان خبر «ان» لم يات، وهو «لا يفلحون»
 
 وهو تام.
 {متاع قليل} [] حسن، علي استءناف ما بعده.
 {اليم ()} [] كاف.
 {من قبل} [] حسن.
 {يظلمون ()} [] كاف.
 {واصلحوا} [] قال السجاوندي: ليس بوقف لتكرار «ان» مع اتحاد الخبر. وحسنه ابو العلاء الهمداني.
 {رحيم ()} [] تام.
 {حنيفا} [] كاف، وهو حال من «ابراهيم».
 {من المشركين ()} [] كاف، علي ان «شاكرا» حال من الهاء في «اجتباه»؛ لتعلقه به، كانه قال: اختاره في حال ما يشكر نعمة. ومن جعل «شاكرا» خبر «كان» كان وقفه علي «لانعمه»؛ لتعلقه به. ومن اعرب «شاكرا» بدلا من «حنيفا» فلا يقف علي شء من «ان ابراهيم» الي «لانعمه»؛ لاتصال الكلام بعضه ببعض فلا يقطع.
 {مستقيم ()} [] كاف.
 {واتيناه في الدنيا حسنة} [] حسن، قال ابن عباس: هو الثناء الحسن، وروي عنه انها العافية والعمل الصالح في الدنيا.
 {لمن الصالحين ()} [] حسن.
 {حنيفا} [] جاءز .
 {من المشركين ()} [] تام.
 {اختلفوا فيه} [] كاف. وقال نافع: تام. قال الكلبي: امرهم موسي بالجمعة، وقال: تفرغوا لعبادة الله في كل سبعة ايام يوما واحدا فاعبدوه يوم الجمعة، ولا تعملوا فيه صنعتكم شيءا، واجعلوا ستة ايام لصنعتكم فابوا، وقالوا: لا نريد الا اليوم الذي فرغ الله فيه من الخلق ولم يخلق الله فيه شيءا، وهو يوم السبت، فجعل عليهم وشدد فيه، وجاءهم عيسي بالجمعة فقالوا: لا نريد ان يكون عيد اليهود بعد عيدنا فاتخذوا الاحد، فقال تعالي: «انما جعل السبت علي الذين اختلفوا فيه»، يعني: في يوم الجمعة؛ تركوا تعظيم يوم الجمعة الذي فرض الله تعظيمه عليهم، واستحلوه واختاره نبينا، فدل ذلك علي انه كان في شريعة ابراهيم التي امر الله نبيه باتباعها، وبين ان السبت لم يكن في شريعة ابراهيم عليه الصلاة والسلام (). 
 {يختلفون ()} [] تام.
 {والموعظة الحسنة} [] كاف؛ للابتداء بالامر، وكذا «بالتي هي احسن».
 {عن سبيله} [] جاءز.
 {بالمهتدين ()} [] تام.
 {ما عوقبتم به} [] كاف.
 {للصابرين ()} [] حسن.
 {واصبر} [] جاءز.
 {وما صبرك الا بالله} [] حسن.
 {ولا تحزن عليهم} [] كاف.
 {مما يمكرون ()} [] تام.
 {محسنون ()} [] تام.
 
  سورة الاسراء
 مكية
 الا قوله: {وان كادوا ليفتنونك} [] الايات الثمان فمدني.
 [ايها:] وهي ماءة واحدي عشرة اية في الكوفي، وعشر في عد الباقين، اختلافهم في اية واحدة: {للاذقان سجدا ()} [] عدها الكوفي.
  وكلمها: الف وخمسماءة وثلاثة وثلاثون كلمة.
  وحروفها: ستة الاف واربعماءة وستون حرفا، وفيها مما يشبه الفواصل وليس معدودا باجماع ستة مواضع:
    
 {اولي باس شديد} [].
    
 {ومن قتل مظلوما فقد جعلنا لوليه سلطانا} [].
    
 {الا ان كذب بها الاولون} [].
    
 {او معذبوها عذابا شديدا} [].
    
 {ورحمة للمءمنين} [].
    
 {ونحشرهم يوم القيامة علي وجوههم عميا وبكما وصما} [].
 {من اياتنا} [] كاف.
 {البصير ()} [] تام.
 {وكيلا ()} [] كاف، لمن قرا (): «تتخذوا» بالفوقية، وما بعده منصوب باعني، او بتقدير النداء، اي: يا ذرية من حملنا؛ لانه يصير في الثلاث منقطعا عما قبله، وليس بوقف لمن قراه (): بالتحتية ونصب «ذرية» مفعولا ثانيا؛ ليتخذوا، وكذا ليس بوقف لمن نصب «ذرية» بقوله: «ان لا تتخذوا»، او رفع «ذرية» بدلا من الضمير في «يتخذوا » علي قراءته بالتحتية، وكان وقفه علي ذلك «مع نوح».
 {شكورا ()} [] تام.
 {كبيرا ()} [] كاف.
 {خلال الديار} [] حسن.
 {مفعولا ()} [] كاف، ومثله «نفيرا». 
 {لانفسكم} [] كاف. وقال يحيي بن نصير النحوي: لا يوقف علي احد المقابلين حتي ياتي بالثاني، وكذا كان يقول في كل معادلين.
 {فلها} [] حسن.
 {اول مرة} [] ليس بوقف؛ لان ما بعده موضعه نصب بالنسق علي ما قبله.
 {تتبيرا ()} [] كاف.
 {ان يرحمكم} [] اكفي؛ للابتداء بعده بالشرط. وقال الاخفش: تام، والمعني: ان تبتم وانزجرتم عن المعاصي فعسي ربكم ان يرحمكم، وان عدتم الي المعصية مرة ثالثة عدنا الي العقوبة ().
 {عدنا} [] حسن.
 {حصيرا ()} [] تام.
 {هي اقوم} [] كاف؛ لاستءناف ما بعده. ولا وقف من قوله: «ويبشر» الي «اليما»؛ لاتصال الكلام بعضه ببعض؛ فلا يوقف علي «كبيرا»؛ لعطف «وان» علي ما قبلها.
 {اليما ()} [] تام.
 {بالخير} [] حسن، وحذفوا الواو من اربعة افعال مرفوعة لغير جازم من قوله:
    
 {ويدع الانسان} [].
    
 {ويمح الله الباطل} [الشوري: ].
    
 {يدع الداع} [القمر: ].
    
 {سندع الزبانية ()} [العلق: ].
 اكتفاء بالضمة عن الواو، وقيل: حذفت تنبيها علي سرعة وقوع الفعل، وسهولته علي الفاعل، وشدة قبول المنفعل المتاثر به في الوجود، قاله في الاتقان.
 {عجولا ()} [] تام.
 {ايتين} [] حسن.
 {مبصرة} [] ليس بوقف؛ لان بعده لام العلة.
 {والحساب} [] كاف، وانتصب «كل شء» بفعل مضمر دل عليه ما بعده، كانه قال: وفصلنا كل شء فصلناه، كقول الشاعر:
 اصبحت لا احمل السلاح ولا ... املك راس البعير ان نفرا 
 والذءب اخشاه ان مررت به ... وحدي واخشي الرياح والمطرا ()
 كانه قال: واخشي الذءب اخشاه؛ فهو من باب اشتغال الفعل عن المفعول بضميره، او نصب علي مذهب الكوفيين بالفعل الذي بعده، وكذا «كل شء فصلناه تفصيلا». والوقف علي «تفصيلا» كالذي قبله؛ لان «كل» الثانية منصوبة بفعل مقدر ايضا.
 {في عنقه} [] حسن، لمن قرا: «ويخرج» بالتحتية، اي: يخرج الطاءر كتابا، وهي قراءة ابي جعفر ()، وكذا علي قراءة: «ونخرج» بالنون مضارع اخرج، وبها قرا ابو عمرو ()، وقرا ابن عامر: «يلقاه» بضم الياء التحتية وتشديد القاف مضارع: لقي، بالتشديد، والباقون (): بالفتح والسكون، والتخفيف مضارع: لقي.
 {منشورا ()} [] كاف.
 {كتابك } [] جاءز.
 {حسيبا ()} [] تام؛ للابتداء بعد بالشرط.
 {لنفسه} [] جاءز، والاولي وصله؛ لعطف جملتي الشرط.
 {عليها} [] حسن.
 {وزر اخري} [] كاف؛ للابتداء بالنفي.
 {رسولا ()} [] تام.
 {مترفيها} [] جاءز، لمن قرا: «امرنا» بالمد والتخفيف، وهي قراءة الحسن، وقتادة، ويعقوب ()؛ بمعني: كثرنا. وكذا من قرا: «امرنا» بالقصر والتشديد بمعني: سلطنا من الامارة، وهي 
 قراءة ابي عثمان النهدي، وابي العالية، ومجاهد، وهي شاذة ()، وليس بوقف لمن قرا: «امرنا» بالقصر والتخفيف، اي: امرناهم بالطاعة فخالفوا، وهي قراءة العامة (). قال ابو العالية: وانا اختارها؛ لان المعاني الثلاثة: الامر، والامارة، والكثرة مجتمعة فيها.
 {تدميرا ()} [] كاف، ومثله: «من بعد نوح».
 {بصيرا ()} [] تام.
 {لمن نريد} [] كاف، ومثله «جهنم»؛ لان قوله: «يصلاها» يصلح مستانفا، اي: هو يصلاها، ويصلح حالا من الضمير في «له»، اي: جعلنا جهنم له حال كونه صاليا، قاله السجاوندي.
 {مدحورا ()} [] كاف.
 {وهو مءمن} [] ليس بوقف؛ لان جواب الشرط لم يات بعد.
 {مشكورا ()} [] حسن.
 {كلا نمد} [] جاءز عند يعقوب؛ علي ان ما بعده مبتدا، و «من عطاء ربك» الخبر، وليس بوقف ان جعل «هءلاء وهءلاء» بدلين من «كلا» بدل كل من كل علي جهة التفصيل؛ ف «من عطاء ربك» موصول بما قبله، والمعني: يرزق المءمن والكافر من عطاء ربك.
 {من عطاء ربك} [] كاف.
 {محظورا ()} [] تام.
 {علي بعض} [] حسن.
 {تفضيلا ()} [] تام، ومثله «مخذولا».
 {الا اياه} [] كاف؛ لان قوله: «وبالوالدين احسانا» معه اضمار فعل تقديره: واحسنوا بالوالدين احسانا، او اوصيكم بالوالدين احسانا، وحذف هذا الفعل؛ لان المصدر يدل عليه، وليس بوقف ان جعل «وبالوالدين احسانا» معطوفا علي الاول، وداخلا فيما دخل فيه.
 {احسانا} [] حسن، وقيل: كاف. ولا يوقف علي «الكبر»، ولا علي «كلاهما»؛ لان قوله: «فلا تقل لهما اف» جواب الشرط؛ لان «ان» هي الشرطية زيدت عليها «ما» توكيدا لها، فكانه قال: ان بلغ احدهما، او كلاهما الكبر فلا تقل لهما اف. وقرا حمزة، والكساءي (): «يبلغان»؛ فالالف للتثنية، 
 والنون مشددة مكسورة بعد الف التثنية، فعلي قراءتهما يجوز الوقف علي «الكبر» علي جهة الشذوذ؛ وذلك ان فاعل «يبلغن» متصل به، وهي الالف. وقرا غيرهما (): «يبلغن» ف «احدهما» فاعل «يبلغن»، و «او كلاهما» عطف علي «احدهما».
 {اف} [] حسن، ومثله «تنهرهما».
 {قولا كريما ()} [] كاف.
 {من الرحمة} [] جاءز.
 {صغيرا ()} [] تام.
 {نفوسكم} [] جاءز.
 {صالحين} [] ليس بوقف؛ لان جواب الشرط لم يات بعد.
 {غفورا ()} [] تام.
 {وابن السبيل} [] جاءز.
 {تبذيرا ()} [] كاف.
 {الشياطين} [] جاءز، وقيل: كاف.
 {كفورا ()} [] تام.
 {ترجوها} [] ليس بوقف؛ لان جواب الشرط لم يات بعد، وهو: «فقل لهم قولا ميسورا»، وهو تام. ولا وقف الي «محسورا»؛ فلا يقف علي «عنقك»، ولا علي «كل البسط»؛ لان جواب النهي لم يات بعد.
 {محسورا ()} [] تام.
 {ويقدر} [] كاف.
 {بصيرا ()} [] تام.
 {خشية املاق} [] جاءز، ومثله «واياكم».
 {كبيرا ()} [] كاف.
 {ولا تقربوا الزنا} [] جاءز، وكذا «فاحشة». 
 {سبيلا ()} [] كاف.
 {الا بالحق} [] كاف عند ابي حاتم، وتام عند العباس بن الفضل.
 {سلطانا} [] جاءز، وقيل: كاف علي قراءة من قرا (): «فلا تسرف» بالتاء الفوقية خطابا للولي، اي: فلا تسرف ايها الولي، فتقتل من لم يقتل، او في التمثيل بالقاتل، فعلي هذا التقدير لا يوقف علي «سلطانا»، بل علي «في القتل»، وهو حسن. ومن قرا (): بالتحتية فالوقف عنده علي «منصورا»، وفسره ابن عباس: فلا يسرف ولي المقتول فيقتص لنفسه من غير ان يذهب الي ولي الامر، فيعمل بحمية الجاهلية ويخالف امر الله ().
 وقال غيره: فلا يسرف ولي المقتول فيقتل غير القاتل، او يقتل اثنين بواحد، وقرء (): «لوليه»، ويروي (): «لوليها»، اي: ولي النفس. قال ابو جعفر: وهذه قراءة علي التفسير، فلا يجوز ان يقرا بها؛ لمخالفتها المصحف الامام.
 {في القتل} [] كاف، ومثله «منصورا».
 {اشده} [] حسن، ومثله «بالعهد» علي تقدير مضاف، اي: فان ذا العهد كان مسءولا ان لم يف للمعاهد. وظاهر الاية ان العهد هو المسءول من المعاهد ان يفي به ولا يضيعه ().
 {مسءولا ()} [] كاف، ومثله «المستقيم».
 {تاويلا ()} [] تام.
 {به علم} [] كاف.
 {مسءولا ()} [] تام.
 {مرحا} [] حسن.
 {طولا ()} [] كاف.
 {سيءه عند ربك} [] حسن، علي قراءة من قرا (): «سيءة» بالتانيث والنصب، وجعله خبر 
 كان، وينصب «مكروها» بفعل مقدر تقديره: وكان مكروها، ففصل بينهما؛ لءلا يتوهم انه نعت لما قبله، وليس بوقف ان جعل «مكروها» خبرا ثانيا، واما من قرا: «سيءه» بالرفع والتذكير؛ علي انه اسم كان، و «مكروها» الخبر فالوقف عليه كاف، وبها قرا ابن عامر ()، وعليها فلا يوقف علي «سيءه»؛ لءلا يبتدا بمنصوب لا دليل في الكلام علي اعرابه ولا علي معناه؛ فلا فاءدة فيه، واضاف السيء الي هاء المذكور اشارة الي جميع ما تقدم، وفيه السيء والحسن، ولم يقل مكروهة؛ لان السيءة تءول بتاويل السيء، ويءيد هذه القراءة قراءة عبد الله (): «كل ذلك كان سيءاته مكروها» بالجمع مضافا للضمير ()، راجع السمين.
 {من الحكمة} [] حسن.
 {الها اخر} [] ليس بوقف؛ لان جواب النهي لم يات.
 {مدحورا ()} [] تام.
 {اناثا} [] جاءز.
 {عظيما ()} [] تام.
 {ليذكروا} [] جاءز؛ للابتداء بالنفي.
 {نفورا ()} [] كاف.
 {كما يقولون} [] ليس بوقف؛ لان قوله: «اذا لابتغوا» جواب «لو».
 {سبيلا ()} [] حسن، ومثله «كبيرا» علي استءناف ما بعده.
 {ومن فيهن} [] كاف. قال الحسن: وان من شء فيه روح. وقال ابن عباس: وان من شء حي. وروي موسي بن عبيد عن زيد بن اسلم عن جابر بن عبد الله قال: قال رسول الله  صلي الله عليه وسلم : «الا اخبركم بشء امر به نوح ابنه؟! قال: يا بني امرك ان تقول: سبحان الله وبحمده؛ فانها صلاة الخلق وتسبيحهم وبها يرزقون. قال: وان من شء الا يسبح بحمده» (). وقال المقداد: ان التراب يسبح ما لم 
 يبتل، فاذا ابتل ترك التسبيح، وان الجواهر تسبح ما لم ترفع من مواضعها، فاذا رفعت تركت التسبيح، وان الورق يسبح ما دام علي الشجر، فاذا سقط ترك التسبيح، وان الماء ما دام جاريا يسبح، فاذا ركد ترك التسبيح، وان الثوب يسبح ما دام نظيفا، فاذا اتسخ ترك التسبيح، وان الوحوش اذا صاحت سبحت، فاذا سكتت تركت التسبيح، وان الطير تسبح ما دامت تصيح، فاذا سكتت تركت التسبيح، وان الثوب الخلق لينادي في اول النهار اللهم اغفر لمن افناني اه، النكزاوي. والجمهور علي ان التسبيح بلسان المقال والعقل لا يحيله اذا لم ناخذ الحياة من تصويتها، بل من اخبار الصحابة بذلك؛ اذ خلق الصوت في محل لا يستلزم خلق الحياة والعقل، وتسبيح الجمادات كالطعام والحصي معناه: ان الله تعالي خلق فيه اللفظ الدال علي التنزيه حقيقة؛ اذ لو كان بلسان الحال لم يقل: «ولكن». وقيل: بلسان الحال باعتبار دلالته علي الصانع، وانه منزه عن النقاءص. واضافة التسبيح اليه مجاز؛ لان اللفظ انما يضاف حقيقة لمن قام به ().
 {الا يسبح بحمده} [] ليس بوقف؛ لتعلق ما بعده به استدراكا.
 {تسبيحهم} [] كاف.
 {غفورا ()} [] تام.
 {مستورا ()} [] كاف.
 {وفي اذانهم وقرا} [] حسن، وقيل: كاف؛ للابتداء بالشرط.
 {نفورا ()} [] تام، ومثله «مسحورا».
 {فضلوا} [] جاءز.
 {سبيلا ()} [] كاف، ومثله «جديدا» علي استءناف ما بعده، وجاءز ان علق ما بعده بما قبله.
 {او حديدا ()} [] ليس بوقف؛ لان «او خلقا» منصوب بالعطف علي ما قبله.
 {في صدوركم} [] جاءز. قال عبد الله بن عمر: الموت. وقيل: الجبال (). 
 {من يعيدنا} [] حسن، ومثله «اول مرة»، وقيل: كاف؛ لاختلاف الجملتين؛ لان السين للاستءناف، وقد دخلته الفاء.
 {متي هو} [] كاف، ومثله «قريبا» ان نصب «يوم» بمقدر، اي: يعيدكم يوم يدعوكم، وجاءز ان جعل ظرفا ل «قريبا».
 {بحمده} [] حسن.
 {الا قليلا ()} [] تام.
 {هي احسن} [] حسن، ومثله «ينزغ بينهم».
 {مبينا ()} [] تام.
 {ربكم اعلم بكم} [] كاف، ومثله «يعذبكم».
 {وكيلا ()} [] تام.
 {والارض} [] حسن، ومثله «علي بعض».
 {زبورا ()} [] تام.
 {ولا تحويلا ()} [] كاف، ومثله «عذابا».
 {محذورا ()} [] تام؛ للابتداء بالشرط.
 {شديدا} [] كاف.
 {مسطورا ()} [] تام. قال مقاتل: اما الصالحة فتهلك بالموت، واما الطالحة فبالعذاب. وقال ابن مسعود: اذا ظهر الزنا والربا في قرية اذن الله في هلاكها، كان ذلك في اللوح المحفوظ مكتوبا (). اي: لان المعصية اذا اخفيت لا تتعدي فاعلها، فاذا ظهرت للعامة والخاصة كانت سببا للهلاك بالفقر، والوباء، والطاعون ().
 {الاولون} [] حسن، وقيل: كاف؛ لان الواو للاستءناف.
 {فظلموا بها} [] جاءز.
 {تخويفا ()} [] تام.
 {احاط بالناس} [] حسن، ومثله «للناس»، وكذا «في القران»، وهي شجرة الزقوم التي قال الله فيها: {انها شجرة تخرج في اصل الجحيم ()} [الصافات: ] اي: خلقت من النار. وقيل: هي ابو جهل. وقيل: هي التي تفرع منها ناس في الاسلام وهم ظالمون قد احدثوا فيه ما لا يجوز فيه. وسءل 
 الامام احمد عن شخص منهم: هل تلعنه؟ فقال: هل رايتني العن احدا ().
 {ونخوفهم} [] جاءز، اي: ونخوفهم بشجرة الزقوم، فما يزيدهم التخويف الا طغيانا كبيرا.
 {كبيرا ()} [] تام.
 {لادم} [] جاءز، ومثله: «الا ابليس».
 {طينا ()} [] كاف؛ لاتحاد فاعل فعل قبله وفعل بعده بلا حرف عطف، قاله السجاوندي.
 {كرمت علي} [] جاءز؛ للابتداء بلام القسم.
 {القيامة} [] ليس بوقف؛ لان ما بعده قد قام مقام جواب القسم والجزاء.
 {الا قليلا ()} [] كاف.
 {موفورا ()} [] جاءز، اكد الفعل بمصدره؛ لرفع توهم المجاز فيه، ومثله «بصوتك».
 {وعدهم} [] حسن؛ لتناهي المعطوفات، وللعدول من الخطاب الي الغيبة؛ اذ لو جري علي سنن الكلام الاول لقال: وما تعدهم بالتاء الفوقية.
 {الا غرورا ()} [] تام.
 {سلطان} [] كاف.
 {وكيلا ()} [] تام.
 {من فضله} [] كاف.
 {رحيما ()} [] تام.
 {الا اياه} [] حسن، ومثله: «اعرضتم».
 {كفورا ()} [] كاف، وكذا «وكيلا» علي استءناف ما بعده، وجاءز ان عطف علي حرف الاستفهام؛ وجاز لكونه راس اية.
 {بما كفرتم} [] جاءز.
 {تبيعا ()} [] تام.
 {في البر والبحر} [] جاءز.
 {تفضيلا ()} [] تام. قال ابن عباس: (كل شء ياكل بفيه الا ابن ادم فانه ياكل بيديه) (). وقال الضحاك: كرمه بالنطق والتمييز، «وفضلناهم علي كثير» المراد: جميع من خلقنا غير طاءفة من الملاءكة والعرب قد تضع الاكثر والكثير في موضع الجميع، والكل كما قال: «يلقون السمع واكثرهم كاذبون»، والمراد به: جميع الشياطين. وقال زيد بن اسلم في قوله: «ولقد كرمنا بني ادم»، قالت الملاءكة: 
 ربنا انك اعطيت بني ادم ما ياكلون فيها ويتمتعون ولم تعطنا ذلك فاعطنا في الاخرة، فقال: وعزتي وجلالي، لا اجعل ذرية من خلقت بيدي كمن قلت له: كن فكان ().
 {بامامهم} [] كاف، اي: بنبيهم. وقيل: بكتابهم الذي انزل عليهم. وقيل: كل يدعي بامام زمانهم، وكتاب ربهم، وسنة نبيهم. وقيل: باعمالهم. قال السمين: قال الزمخشري: ومن بدع التفاسير ان الامام جمع (ام)، وان الناس يدعون يوم القيامة بامهاتهم دون اباءهم، وان الحكمة فيه رعاية حق عيسي ابن مريم، واظهار شرف الحسن والحسين، ولءلا تفتضح اولاد الزنا (). اه
 {فتيلا ()} [] كاف، ومثله: «سبيلا»، وكذا «علينا غيره»، و «خليلا»، و «قليلا» كلها وقوف كافية.
 {نصيرا ()} [] تام؛ لان «ان» بمعني: ما، اي: ما كادوا يستفزونك الا ليخرجوك منها.
 {منها} [] كاف.
 {الا قليلا ()} [] كاف، ان نصبت «سنة» بفعل مقدر، اي: سن الله ذلك سنة من قد ارسلنا قبلك، او يعذبون كسنة من قد ارسلنا قبلك، فلما اسقطت الكاف عمل الفعل، وجاءز ان نصبتها بما قبلها؛ لكونها راس اية ().
 {من رسلنا} [] حسن.
 {تحويلا ()} [] تام.
 {الي غسق الليل} [] حسن، ان نصب ما بعده علي الاغراء، اي: الزموا قران الفجر، او وعليك قران الفجر، كذا قدره الاخفش، وتبعه ابو البقاء، والاصول تابي هذا؛ لان اسماء الافعال لا تعمل مضمرة، والاجود الوقف علي «وقران الفجر»؛ لانه معطوف علي الصلاة، اي: اقم الصلاة. و «قران الفجر»، اي: صلاة الفجر ().
 {مشهودا ()} [] كاف، علي استءناف ما بعده، وقطعه عما قبله.
 {نافلة لك} [] حسن، كذا قيل، والاولي وصله؛ لان قوله: «عسي» وعد واجب علي قوله: «فتهجد»، و «عسي» كلمة ترج؛ للاجابة فتوصل بالدعاء.
 {محمودا ()} [] كاف.
 {مخرج صدق} [] حسن. «مدخل»، و «مخرج» بضم الميم فيهما هنا باتفاق القراء، لكن ان 
 اردت المصدر فتحت ميم «مخرج»، و «مدخل»، وان اردت المكان ضممتهما.
 {نصيرا ()} [] تام.
 {الباطل} [] كاف.
 {زهوقا ()} [] تام.
 {للمءمنين} [] حسن.
 {خسارا ()} [] تام.
 {وناي بجانبه} [] جاءز عند بعضهم، والاولي وصله؛ لعطف جملة الظرف علي الجملة قبلها.
 {يءوسا ()} [] كاف.
 {علي شاكلته} [] حسن، اي: علي نيته. وقيل: علي دينه. وقيل: علي طريقته.
 {سبيلا ()} [] تام.
 {عن الروح} [] جاءز؛ للفصل بين السءال والجواب، وكذا يقال في نظير ذلك.
 {من امر ربي} [] حسن. قيل: لم يبين الله تعالي عن اي شء سالوه من امر الروح، فلم يجبهم؛ اذ كان في كتبهم: ان اجابكم عن الروح فليس بنبي. والروح: بعض الانسان، ومنزلتها فيه الاعضاء التي لا يعيش الا بها، فلم يعرف النبي  صلي الله عليه وسلم  عماذا سالوه من امر الروح عن: قدمها او حدوثها، او جوهر او عرض، او هي الانسان الحي او غيره او بعضه. وقيل: اراد بالروح القران، فنزلت الاية. قال ابن عباس: ارسلت قريش الي اليهود يسالونهم في شان محمد، هل هو نبي، ام لا؟ فقالوا: نجده في التوراة كما وصفتموه، وهذا زمانه، ولكن اسالوه عن ثلاث، فان اخبركم بخصلتين ولم يخبركم بالثالثة، فاعلموا انه نبي فاتبعوه وسلوه عن اصحاب الكهف، وذكروا لهم قصتهم، واسالوه عن ذي القرنين؛ فانه كان ملكا، وكان من امره كذا وكذا، واسالوه عن الروح، فان اخبركم عن الثلاث فلا ندري ما هو، فسالته قريش عنها، فقال: «ارجعوا غدا اخبركم»، ولم يقل: ان شاء الله تعالي، ففتر عنه الوحي ثلاثة ايام، وقيل: خمسة عشر يوما، ففرحت قريش، ووجد النبي  صلي الله عليه وسلم  في نفسه فنزل عليه: {ولا تقولن لشء اني فاعل} [الكهف: ] الاية، وهذا تاديب من الله تعالي لنبيه حين سءل، ووعدهم ان يجيبهم غدا، ولم يستثن ().
 {الا قليلا ()} [] تام.
 {اوحينا اليك} [] جاءز.
 {وكيلا ()} [] جاءز؛ لكونه راس اية، ولجواز الوقف مدخل ل «قوم»، اي: ولكن رحمة 
 من ربك غير مذهوب بالقران امتنانا من الله ببقاءه محفوظا ().
 {من ربك} [] كاف.
 {كبيرا ()} [] تام.
 {لا ياتون بمثله} [] ليس بوقف؛ لان ما قبله قد قام مقام جواب «لو»، فكانه قال: لو كان بعضهم لبعض ظهيرا لا ياتون بمثله. و «لا ياتون» جواب القسم المحذوف، وقيل: جواب الشرط، واعتذروا عن رفعه بان الشرط ماض؛ فهو كقوله:
 وان اتاه خليل يوم مسغبة ... يقول لا غاءب مالي ولا حرم ()
 فاجاب الشرط مع تقدم اللام الموطءة في «لءن» الداخلة علي الشرط، وهو دليل للفراء ومن تبعه، وعلي كلا التقديرين ليس بوقف؛ لفصله بين الشرط وجوابه.
 {ظهيرا ()} [] تام.
 {من كل مثل} [] جاءز.
 {كفورا ()} [] كاف.
 {ينبوعا ()} [] جاءز، ومثله «تفجيرا»، و «قبيلا»؛ لان كلا منهما راس اية، وجميع الافعال معطوفة علي ما عملت فيه «حتي»، فكانه قال: حتي تفجر لنا، او تكون لك، او ترقي في السماء ().
 {في السماء} [] جاءز؛ للابتداء بالنفي بعد طول القصة.
 {نقرءه} [] تام؛ لتناهي المعطوفات، ولمن قرا (): «قل سبحان ربي» بالامر، وكاف لمن قرا (): «قال سبحان ربي»؛ لان ما بعده خبر عن الرسول، فهو متصل بذلك.
 {بشرا رسولا ()} [] تام في الموضعين.
 {الهدي} [] ليس بوقف؛ لان فاعل «منع» لم يات بعد، وهو «ان قالوا»، و «ان يءمنوا» 
 مفعول ثان ل «منع»، والتقدير: وما منع الناس من الايمان وقت مجء الهدي اياهم الا قولهم: ابعث الله بشرا رسولا.
 {بشرا رسولا ()} []، و {ملكا رسولا ()} [] في الموضعين تام.
 {مطمءنين} [] ليس بوقف؛ لان ما بعده جواب «لو».
 {وبينكم} [] كاف.
 {بصيرا ()} [] تام.
 {المهتد} [] كاف؛ للابتداء بالشرط. وقرا نافع، وابو عمرو باثبات الياء وصلا وحذفها وقفا هنا، وفي الكهف، وحذفها الباقون في الحالتين ().
 {من دونه} [] كاف؛ لان الواو لا تحتمل الحال والعطف، فكانت استءنافا.
 {وصما} [] حسن.
 {ماواهم جهنم} [] احسن منه؛ لان «كلما» منصوبة بما بعدها، ومعني «خبت»: سكن لهبها بعد ان اكلت لحومهم وجلودهم، فاذا بدلوا غيرها عادت كما كانت.
 {سعيرا ()} [] كاف.
 {ورفاتا} [] ليس بوقف؛ لان ما بعده بقية القول.
 {جديدا ()} [] تام؛ لتمام القول.
 {لا ريب فيه} [] حسن؛ لانتهاء الاستفهام.
 {الا كفورا ()} [] تام.
 {خشية الانفاق} [] كاف.
 {قتورا ()} [] تام.
 {بينات} [] جاءز، ومثله «بني اسراءيل» ان نصب «اذ» باذكر مقدرا، اي: فاسال عن قصة بني اسراءيل اذ جاءهم، سلي نبيه محمدا بما جري لموسي مع فرعون وقومه، وليس بوقف ان جعل «اذ» معمولا ل «اتينا»، ويكون قوله: «فاسال بني اسراءيل» اعتراضا.
 {مسحورا ()} [] كاف.
 {بصاءر} [] حسن. وقال الدينوري: تام، اي: انزلها بصاءر، فبصاءر حال من مقدر بناء علي ان ما بعد «الا» لا يكون معمولا لما قبلها، وقيل: ما قبلها يعمل فيما بعدها وان لم يكن مستثني ولا 
 مستثني منه ولا تابعا له ().
 {لقد علمت} [] ليس بوقف علي القراءتين في «علمت»؛ فقد قرا الجمهور (): «علمت» بفتح التاء علي خطاب موسي لفرعون وتبكيته في قوله: انه مسحور، اي: قد علمت ان ما جءت به ليس سحرا. وقرا الكساءي (): «علمت» بضم التاء، باسناد الفعل لضمير موسي، اي: اني متحقق ان ما جءت به هو منزل من عند الله.
 {مثبورا ()} [] كاف. و «جميعا»، و «الارض»، و «لفيفا» كلها وقوف كافية. قال السجاوندي: ما قبل «لفيفا» بيان وعد الاخرة في المال ، وما بعده بيان حقيقة القران في الحال بانه حق وما جاء به حق ().
 {وبالحق انزلناه} [] حسن؛ للمغايرة بين الحقين؛ فالاول: التوحيد. والثاني: الوعد، والوعيد.
 {وبالحق نزل} [] تام؛ للابتداء بالنفي.
 {ونذيرا ()} [] كاف، ان نصبت «قرانا» بفعل مقدر، فكانه قال: وفرقنا قرانا فرقناه، وليس بوقف ان نصبته عطفا علي ما قبله، ويكون من عطف المفردات، او نصب ب «فرقناه»، او نصب ب «ارسلناك»، اي: وما ارسلناك الا مبشرا ونذيرا، وقرانا، اي: رحمة لهم.
 {علي مكث} [] جاءز، اي: تءدة وتطاول في المدة شيءا بعد شء.
 {تنزيلا ()} [] تام.
 {او لا تءمنوا} [] حسن، ومثله «سجدا» علي استءناف ما بعده، وليس بوقف ان عطف علي «يخرون».
 {سبحان ربنا} [] حسن، و «ان» مخففة من الثقيلة، واللام هي الفارقة، والمعني: ان ما وعد به من ارسال محمد  صلي الله عليه وسلم  وانزال القران عليه قد فعله وانجزه؛ ف «ان» بمعني: قد.
 {لمفعولا ()} [] كاف.
 {يبكون} [] جاءز، وهو حال من الضمير في «ويخرون»، فكانه قال: ويخرون 
 للاذقان باكين.
 {خشوعا (()} [] تام.
 {او ادعوا الرحمن} [] حسن، ثم يبتدء «ايا ما تدعوا»؛ وذلك ان «ايا» منصوبة ب «تدعوا» علي المفعول به، والمضاف اليه محذوف، اي: اي الاسمين، وهما: لفظ الله، والرحمن. و «تدعوا» مجزوم بها، فهي عاملة معمولة.
 {تدعوا} [] ليس بوقف؛ لان ما بعده جواب الشرط.
 {الحسني} [] كاف.
 {ولا تخافت بها} [] جاءز.
 {سبيلا ()} [] تام، علي استءناف ما بعده.
 {ولدا} [] حسن، ومثله «الملك»، وكذا «من الذل».
 {تكبيرا ()} [] تام.
 
  سورة الكهف
 مكية
 الا قوله: {واصبر نفسك} [] الاية فمدني.
 [ايها:] وهي ماءة وخمس ايات في المدنيين والمكي، وست في الشامي، وعشر في الكوفي، واحدي عشرة في البصري.
 اختلافهم في احدي عشرة اية:
    
 {وزدناهم هدي ()} []، «هدي» لم يعدها الشامي.
    
 {ما يعلمهم الا قليل} [] عدها المدني الاخير.
    
 {اني فاعل ذلك غدا ()} [] لم يعدها المدني.
    
 {وجعلنا بينهما زرعا ()} [] لم يعدها المدني الاول والمكي.
    
 {ان تبيد هذه ابدا ()} [] لم يعدها المدني الاخير والشامي.
    
 {من كل شء سببا ()} [] لم يعدها المدني الاول والمكي.
    
 {فاتبع سببا ()} [].
    
 {ثم اتبع سببا ()} [].
    
 {ثم اتبع سببا ()} [] ثلاثتهن عدها الكوفي والبصري.
    
 {عندها قوما} [] لم يعدها المدني الاخير والكوفي.
    
 {بالاخسرين اعمالا ()} [] لم يعدها المدنيان والمكي.
  وكلمها: الف وخمسماءة وسبع وسبعون كلمة.
  وحروفها: ستة الاف وثلاثماءة وستون حرفا.
 فيها مما يشبه الفواصل وليس معدودا باجماع خمسة مواضع:
    
 {باسا شديدا} [].
    
 {بسلطان بين} [].
    
 {بنيانا} []
    
 {مراء ظاهرا} [].
    
 {ولم تظلم منه شيءا} []
 {عوجا ()} [] حسن، وهو راس اية باتفاق، ثم تبتدء: «قيما»، اي: انزله قيما، ف «قيما» حال من الهاء في (انزله) المحذوف دل عليه «انزل» بين الوقف علي «عوجا» ان «قيما» منفصل عن «عوجا»، وقيل: في الاية تقديم وتاخير؛ كانه قال: الحمد لله الذي انزل علي عبده الكتاب قيما ولم يجعل له عوجا،
 
 علي ان «قيما» نصب علي الحال من «الكتاب»، وفيه الفصل بين الحال وذيها بقوله: «ولم يجعل له عوجا»، والاول اولي؛ لانه راس اية، ويخلص به من كراهة الابتداء ب (لام كي)، يقال: في دينه عوج، بكسر العين، وفي العصا عوج، بفتحها، فالفتح في الاجسام والكسر في المعاني.
 {ابدا ()} [] جاءز، وسمه شيخ الاسلام بجاءز، مع ان ما بعده معطوف علي ما قبله؛ لان هذا من عطف الجمل عند بعضهم.
 {ولدا ()} [] تام؛ لانه قد تم قول الكفار وانقضي، ثم استانف: «ما لهم به من علم ولا لاباءهم»؛ وذلك نفي لما قالوه، فهو كالمتعلق به من جهة المعني.
 {ولا لاباءهم} [] حسن، وقيل: تام؛ لانه قد تم الرد عليهم، ثم ابتدا الاخبار عن مقالتهم.
 {من افواههم} [] حسن، وهي مقالتهم اتخذ الله ولدا.
 {الا كذبا ()} [] كاف، وهو راس اية.
 {اسفا ()} [] تام.
 {زينة لها} [] ليس بوقف؛ لان اللام بعده موضعها نصب بالجعل، وكذا: «لنبلوهم»؛ لان «ايهم»، وان كان ظاهرها الاستفهام فهي في المعني متصلة بما قبلها.
 {عملا ()} [] كاف، ومثله: «جرزا»، وقيل: تام لتمام القصة، وايضا الابتداء ب «ام»، وهي بمعني: الف الاستفهام التقريري.
 {عجبا ()} [] تام، قاله العباس بن الفضل علي ان «اذ» بمعني: اذكر اذ اوي، وخولف في هذا، فقيل: ان «اذ» هنا متعلقة بما قبلها، فلا يوقف علي «عجبا».
 {من لدنك رحمة} [] جاءز، فصلا بين الدعوتين.
 {رشدا ()} [] كاف، ومثله: «عددا» علي استءناف ما بعده.
 {امدا ()} [] تام، و «اي الحزبين» مبتدا ومضاف اليه، و «احصي» افعل تفضيل خبر و «امدا» تمييز؛ لان الامد هو: الغاية، وهو عبارة عن: المدة، وليس هو: محصيا، بل يحصي، ومثل اعماله في التمييز ايضا: «انا اكثر منك مالا واعز نفرا»، «هم احسن اثاثا ورءيا»، وقيل: «احصي» فعل ماض، و «امدا» مفعول ().
 {بالحق} [] كاف، ومثله: «وزدناهم هدي» علي استءناف ما بعده، وهو راس اية في غير الشامي.
 {علي قلوبهم} [] ليس بوقف. 
 {والارض} [] جاءز.
 {الها} [] حسن، واللام في «لقد» للتوكيد، اي: لقد قلنا اذ دعونا من دونه الها قولا ذا شطط، اي: جور.
 {شططا ()} [] كاف؛ علي استءناف ما بعده.
 {من دونه الهة} [] كاف؛ للابتداء ب «لولا»، وهي هنا للتحضيض؛ بمعني: هلا ياتون علي عبادتهم الاصنام بحجة واضحة، ولا يجوز ان تكون هذه الجملة التحضيضية صفة لالهة لفساده معني وصناعة؛ لانها جملة طلبية.
 {بين} [] حسن.
 {كذبا ()} [] كاف؛ لان «ذا» منصوبة بفعل محذوف، تقديره: فقال بعضهم لبعض وقت اعتزالهم.
 {الا الله} [] تام؛ علي استءناف ما بعده، وليس بوقف ان علق ما بعده بما قبله؛ لان قوله: «فاووا» عند الفراء جواب: «اذ»؛ لانها قد تكون للمستقبل ك «اذا»، ومثل هذا في الكلام: اذا فعلت كذا فانج بنفسك، فلا يحسن الفصل في هذا الكلام دون الفاء؛ لان هنا جملا محذوفة دل عليها ما تقدم مرتبطة بعضها ببعض، والتقدير: فاووا الي الكهف، فالقي الله عليهم النوم، واستجاب دعاءهم، وارفقهم في الكهف باشياء.
 {مرفقا ()} [] كاف، قرا الجمهور بكسر الميم وفتح الفاء، ونافع وابن عامر بالعكس ().
 {ذات اليمين
  .... 
 ذات الشمال} [] حسن.
 {في فجوة منه} [] تام؛ لان «ذلك» مبتدا، و «من ايات الله» الخبر، او «ذلك» خبر مبتدا محذوف، اي: الامر ذلك، و «من ايات الله» حال.
 {من ايات الله} [] حسن.
 {المهتد} [] كاف؛ للابتداء بالشرط، ومثله: «مرشدا».
 {وهم رقود} [] حسن؛ لان ما بعده يصلح مستانفا وحالا، قرا العامة (): «تقلبهم» بالنون، وقرء: بالتحتية، اي: الله، او الملك (). 
 {وذات الشمال} [] حسن؛ لان الجملة بعده تصلح مستانفة وحالا.
 {بالوصيد} [] كاف، والوصيد: باب الكهف، او الفناء، و «باسط» اسم فاعل، حكاية حال ماضية، ولذا عمل في المفعول، لكن يشترط في عمل اسم الفاعل كونه بمعني الحال، او الاستقبال، ومعني حكاية الحال الماضية، ان تقدر كانك موجود في ذلك الزمان، او تقدر ذلك الزمان كانه موجود الان، واسم الفاعل حقيقة في الحال، اذا كان محكوما به نحو: زيد تاءب، واذا كان محكوما عليه فلا يكون حقيقة في الحال، كما في قوله: (والسارق والسارقة فاقطعوا الزانية والزاني فاجلدوا) فانه يقتضي علي هذا ان الامر بالقطع، او الجلد، لا يتعلق الا بمن تلبس بالسرقة، او الزنا، حال التكلم، اي: حال نزول الايتين، لا علي من تلبس بهما بعد، مع ان الحكم عام، قاله ابن عبد السلام ()، وقال السبكي (): اسم الفاعل حقيقة في حال التلبس بالفعل، سواء قارن حال التكلم، حال التلبس، او تقدمه.
 {رعبا ()} [] كاف.
 {بينهم} [] حسن، ومثله: «لبثتم»، وكذا: «او بعض يوم». 
 {اعلم بما لبثتم} [] ليس بوقف، ومثله: «المدينة» لمكان الفاء فيهما.
 {وليتلطف} [] جاءز.
 {احدا ()} [] كاف.
 {في ملتهم} [] جاءز؛ للابتداء بالنفي.
 {ابدا ()} [] كاف، ولا وقف من قوله: «وكذلك اعثرنا عليهم» الي «بينهم امرهم» فلا يوقف علي «حق» لعطف وان علي ما قبلها، ولا علي «لا ريب فيها»؛ لان «اذ» ظرف ل «اعثرنا»، فهي ظرف للاثار عليهم، اي: اعثرنا علي الفتية، او معمولة «ليعلموا»، والاولي ان تكون مفعولا لمحذوف، اي: اذكر اذ يتنازعون بينهم امرهم، فيكون من عطف الجمل: تنازعوا في شان الفتية، فقال المسلمون: نبني عليهم مسجدا، وقال الكفار: نبني عليهم بنيانا علي قاعدة ديننا ().
 {بنيانا} [] حسن، وكذا: «ربهم اعلم بهم».
 {مسجدا ()} [] تام.
 {رابعهم كلبهم} [] جاءز؛ للفصل بين المقالتين.
 {رجما بالغيب} [] حسن، قاله الزجاج.
 {ويقولون سبعة} [] تام؛ لانه اخر كلام المتنازعين في حديثهم، قبل: ظهورهم عليهم، والواو في «وثامنهم»، قيل: هي واو الثمانية، وهي الواقعة بعد السبعة ايذانا بانها عدد تام، وان ما بعدها مستانف كذا قيل، والصحيح: ان الواو للعطف علي الجملة السابقة، اي: يقولون هم سبعة وثامنهم كلبهم، ثم اخبروا اخبارا ثانيا، ان ثامنهم كلبهم، فهما جملتان.
 {وثامنهم كلبهم} [] كاف.
 {قل ربي اعلم بعدتهم} [] جاءز؛ للابتداء بالنفي.
 {الا قليل} [] كاف، وراس اية في المدني الاخير.
 {مراء ظاهرا} [] جاءز.
 {احدا ()} [] تام؛ لتوكيد الفعل بعده بالنون، وما قبله مطلق، رسموا: {لشء} [] بالف بعد الشين كما تري.
 {ذلك غدا ()} [] ليس بوقف؛ لوجود الاستثناء بعده.
 {الا ان يشاء الله} [] تام، اعلم انه لا يصح رجوع الاستثناء لقوله: «اني فاعل ذلك غدا»؛ لان مفعول «يشاء» اما الفعل، واما الترك، فان كان الفعل؛ فالمعني: اني فاعل ذلك غدا، الا ان يشاء الله 
 فعله فلا افعله، ولا يخفي فساده، اذ ما يشاء الله وقوعه وجب وقوعه، وان كان الترك، فهو: فاسد ايضا، من حيث: تعلق النهي به، اذ قوله: «اني فاعل ذلك غدا الا ان يشاء الله» تركه صحيح، لكن تعلق النهي بهذا فاسد، اذ يفيد ان الله نهي عن قول القاءل: اني فاعل ذلك الا ان يشاء الله تركه، مع انه لا ينهي عن ذلك، فتعين ان يرجع الاستثناء للنهي، اي: لا تقولن لشء اني فاعل ذلك غدا، في حال من الاحوال، الا في حال كون القول ملتبسا بذكر الا ان يشاء الله، فهو: استثناء مفرغ، وفيه حذف الباء، وحذف المضاف، قاله شيخ مشايخنا الاجهوري () تغمده الله برحمته ورضوانه.
 {اذا نسيت} [] حسن.
 {رشدا ()} [] كاف.
 {تسعا ()} [] تام.
 {بما لبثوا} [] حسن، ومثله: «الارض».
 {واسمع} [] كاف؛ للابتداء بالنفي، و «من ولي» فاعل، او مبتدا.
 و {من ولي} [] حسن؛ علي قراءة من قرا: «ولا يشرك» بالتحتية ورفع الكاف؛ مستانفا لاختلاف الجملتين، وليس بوقف لمن قراه: بالفوقية وجزم الكاف؛ علي النهي، وحينءذ فلا يوقف من قوله: «ابصر به واسمع»، الي «احدا» (). 
 و {احدا ()} [] تام؛ علي القراءتين ().
 {من كتاب ربك} [] جاءز، ومثله: «لكلماته».
 {ملتحدا ()} [] كاف.
 {والعشي} [] ليس بوقف؛ لان قوله: «يريدون وجهه» في موضع الحال؛ كانه قال: واصبر نفسك مع الذين يدعون ربهم يريدون وجهه، اي: يدعون الله في هذه الحالة.
 {وجهه} [] كاف.
 {ولا تعد عيناك عنهم } [] جاءز؛ لان ما بعده يصلح حالا؛ لان الخطاب للنبي  صلي الله عليه وسلم ، اي: لا تصرف عيناك النظر عن عمار وصهيب وسلمان ونحوهم؛ لما قال المشركون: ان ريح جباههم تءذينا، ويصلح استفهاما محذوفا، اي: اتريد زينة الحياة الدنيا، وقرء (): «ولا تعد» بضم الفوقية، من: اعدي، وقرء (): «ولا تعد»، من: عدي، بالتشديد.
 {الحياة الدنيا} [] حسن، ومثله: «عن ذكرنا»، وكذا: «واتبع هواه».
 {فرطا ()} [] تام.
 {الحق من ربكم} [] حسن، والحق: خبر مبتدا محذوف، تقديره: هذا الحق، او «الحق» مبتدا، و «من ربكم» الخبر، وقرا ابو السمال قعنب (): «وقل الحق» بضم اللام اتباعا لحركة القاف، ونصب: «الحق»، اي: وقل القول الحق.
 {فليكفر} [] كاف، وقال السجاوندي: لا يوقف عليه؛ لانه امر تهديد بدلالة انا اعتدنا، ولو فصل بين الدال والمدلول عليه؛ لصار الامر مطلقا، والامر المطلق للوجوب، فلا يحمل علي غيره، الا بدلالة نظير قوله: «اعملوا ما شءتم».
 {نارا} [] جاءز.
 {سرادقها} [] كاف، والسرادق: حاءط من نار محيط، ولا يوقف علي «كالمهل»؛ لان ما بعده 
 صفة ل «ما».
 {الوجوه} [] حسن.
 {بءس الشراب} [] جاءز.
 {مرتفقا ()} [] تام؛ لتناهي صفة النار، ومثله في التمام «من احسن عملا» ان جعل «انا لا نضيع» خبر «ان» الاولي، ونظير هذا قول الشاعر:
 يكفي الخليفة ان الله سربله ... سربال ملك به ترجي الخواتيم ()
 فجعل «ان» الثانية خبر «ان» الاولي، اي: ان الذين امنوا وعملوا الصالحات لا نضيع اجرهم، او يجازيهم الله علي اعمالهم الحسنة، او لا نترك اعمالهم تذهب ضياعا بل نجازيهم عليها، وليس بوقف ان جعل قوله: «اولءك لهم جنات عدن» خبر «ان» الاولي؛ لان لا يوقف علي اسم دون خبرها، وجملة: «انا لا نضيع» اعتراض بين اسم «ان» وخبرها.
 {واستبرق} [] ليس بوقف؛ لان ما بعده حال مما قبله، وهمزة «استبرق» همزة قطع، وقرا ابن محيصن بوصل الهمزة في جميع القران (). اه سمين.
 {علي الاراءك} [] تام.
 {نعم الثواب} [] كاف.
 {مرتفقا ()} [] تام، ووسم ابو حاتم السجستاني: «نعم الثواب» بالكافي، و «مرتفقا» بالتمام، قال ومعناه: حسنت الجنة مرتفقا، قال الكواشي: ولو وسم «نعم الثواب » بالجاءز و «مرتفقا» بالتمام؛ لكان فيما اراه اوجه، ولا وقف بعد قوله: «ظالم لنفسه» الي «منقلبا» فلا يوقف علي «ابدا» ولا علي «قاءمة» لتعلق بعضه ببعض من جهة المعني.
 {رجلين} [] جاءز.
 {زرعا ()} [] كاف.
 {اتت اكلها} [] جاءز.
 {شيءا} [] كاف.
 والوقف علي: «نهرا»، و «ثمر»، و «نفرا»، و «لنفسه»، و «ابدا» كلها حسان، وضعف قول من كره الابتداء بما يقوله منكر البعث، وهو قوله: «وما اظن الساعة قاءمة»؛ لانه اخبار وحكاية قول قاءلها 
 حكاها الله عنه.
 {منقلبا ()} [] حسن.
 {خلقك من تراب} [] ليس بوقف؛ لان ثم للعطف.
 {رجلا ()} [] كاف؛ لتمام الاستفهام، ولكن ان تلتها جملة صلح الابتداء بها علي بعد، واذا تلاها مفرد كانت عاطفة، فلا يصلح الابتداء بها، وهنا تلتها جملة، واصل: لكنا، (لكن انا) نقلت حركة همزة (انا) الي نون (لكن)، وحذفت الهمزة فالتقي مثلان فادغم، واعرابها: (انا) مبتدا، وهو مبتدا ثان، وهو ضمير الشان، و (الله) مبتدا ثالث، و (ربي) خبر الثالث، والثالث وخبره الثاني، والثاني وخبره خبر الاول، والرابط بين الاول وخبره الياء في (ربي).
 {احدا ()} [] كاف.
 {ما شاء الله} [] جاءز.
 {الا بالله} [] حسن؛ لتمام المقول.
 {وولدا ()} [] جاءز، وجواب: «ان» محذوف، تقديره: ان ترني انا اقل منك مالا وولدا تحتقرني لقلة المال، مع اتحاد القاءل والمقول له، ولا وقف من قوله: «فعسي ربي» الي «طلبا» فلا يوقف علي «من جنتك» ولا علي «من السماء» ولا علي «زلقا» للعطف في كل، واتصال الكلام بعضه ببعض.
 {طلبا ()} [] كاف، والوقف علي «بثمره» و «انفق فيها» و «عروشها» كلها وقوف جاءزة.
 {بربي احدا ()} [] كاف، ومثله: «من دون الله».
 {منتصرا ()} [] تام؛ علي استءناف الجملة بعده، وقطعها عما قبلها بان تقدر هنالك بجملة فعلية، و «الولاية» فاعل بالظرف قبلها، اي: استقرت الولاية لله، علي راي الاخفش من حيث ان الظرف رفع الفاعل، من غير اعتماد علي نفي، او استفهام، ولا يوقف علي «من دون الله» ولا علي «منتصرا» ان جعل «هنالك» من تتمة ما قبله، اي: ولم تكن له فءة ينصرونه من دون الله هنالك ، والابتداء بقوله: الولاية لله، فتكون جملة من مبتدا وخبر، اي: في تلك الحالة يتبين نصر الله وليه، وقرا الاخوان: «الولاية» بكسر الواو ()، وحكي عن ابي عمرو والاصمعي (): ان كسر الواو لحن، قالا ان 
 (فعالة) انما تجء فيما كان صنعة، نحو: خياطة، وتجارة، وعطارة، وحياكة، او معني: متقلدا، نحو: ولاية، وقضاية، و (فعالة) بالفتح؛ للاخلاق الحميدة، نحو: السماحة، والفصاحة، و (فعالة) بالضم؛ لما يطرح من المحتقرات، نحو: كناسة، وغسالة، وليس هنالك تولي امور ().
 {لله الحق} [] تام لمن رفعه، وهو: ابو عمرو والكساءي ()، ورفعه من ثلاثة اوجه، احدها: انه صفة للولاية، الثاني: انه خبر مبتدا محذوف، اي: هو اي ما اوحيناه اليك الحق، الثالث: انه مبتدا، وخبره محذوف، اي: الحق ذلك، وحسن لمن جره صفة للجلالة، وقرا زيد بن علي وابو حيوة (): «لله الحق» نصبا علي المصدر المءكد لمضمون الجملة، نحو: هذا عبد الله الحق لا الباطل ().
 {ثوابا} [] ليس بوقف؛ لعطف «وخير» علي «خير» الاول.
 {عقبا ()} [] تام.
 {الرياح} [] كاف.
 {مقتدرا ()} [] تام.
 {الحياة الدنيا} [] كاف، فصلا بين المعجل الفاني، والمءجل الباقي، مع اتفاق الجملتين لفظا.
 {خير} [] ليس بوقف؛ لتعلق الظرف بما قبله.
 {املا ()} [] تام، وفي الحديث انه  صلي الله عليه وسلم  خرج علي قومه، فقال: «خذوا جنتكم؟! فقالوا: يا رسول الله من عدو حضر، قال: بلي من النار، قالوا: وما جنتنا؟! قال: سبحان الله، والحمد لله، ولا اله الا الله، والله اكبر، ولا حول ولا قوة الا بالله العلي العظيم، فانهن ياتين يوم القيامة مقدمات، ومجنبات، ومعقبات، وهن الباقيات الصالحات» (). 
 {بارزة} [] ليس بوقف؛ لان التقدير: وقد حشرناهم.
 {منهم احدا ()} [] كاف.
 {صفا} [] جاءز، ومثله: «اول مرة»؛ لان «بل» قد يبتدا بها مع ان الكلام متحد.
 {موعدا ()} [] كاف.
 {مما فيه} [] جاءز.
 {الا احصاها} [] كاف؛ لاستءناف ما بعده.
 {حاضرا} [] كاف.
 {احدا ()} [] تام.
 {الا ابليس} [] جاءز.
 {عن امر ربه} [] كاف؛ للابتداء بالاستفهام بعده.
 {من دوني} [] جاءز.
 {وهم لكم عدو} [] تام.
 {بدلا ()} [] كاف.
 {ولا خلق انفسهم} [] حسن، ومن قرا: «وما كنت» بفتح الفوقية، كان احسن، وبها قرا الحسن والجحدري وابو جعفر خطابا للنبي  صلي الله عليه وسلم  ()، وقرا العامة: بضمها.
 {عضدا ()} [] تام.
 {فلم يستجيبوا لهم} [] جاءز.
 {موبقا ()} [] كاف، اي: سجنا، وقال عكرمة: (نهر في النار يسيل نارا، علي حافته حيات مثل البغال الدهم، فاذا ثارت لتاخذهم! استغاثوا بالاقتحام في النار منها) ()، واصل الموبق: الهلاك، يقال: اوبقه، يوبقه، اباقا، اي: اهلكه.
 {مواقعوها} [] جاءز. 
 {مصرفا ()} [] تام.
 {من كل مثل} [] حسن.
 {جدلا ()} [] تام، ومثله: «قبلا».
 {ومنذرين (} [] كاف؛ علي استءناف ما بعده.
 {الحق} [] حسن.
 {هزوا ()} [] تام.
 {يداه} [] كاف.
 {وقرا} [] تام، ومثله: «اذن ابدا».
 {ذو الرحمة} [] كاف، عند ابي عمرو.
 {لعجل لهم العذاب} [] تام.
 {بل لهم موعد} [] حسن.
 {موءلا ()} [] كاف.
 {لما ظلموا} [] حسن.
 {موعدا ()} [] تام.
 {حقبا ()} [] كاف.
 {حوتهما} [] جاءز.
 {سربا ()} [] حسن، ومثله: «غداءنا» و «نصبا» و «الحوت» كلها حسان.
 {الا الشيطان} [] ليس بوقف؛ لان قوله: «ان اذكره» بدل من الهاء في «انسانيه» بدل ظاهر من مضمر.
 {ان اذكره} [] كاف.
 {واتخذ سبيله في البحر} [] كاف، ان جعل عجبا من كلام موسي، ويقوي هذا خبر كان للحوت سربا، ولموسي ولفتاه عجبا؛ فكانه قال: اعجب لسيره في البحر؟! قالوا: وكان مشويا ماكولا بعضه، فلذلك كان مضيه وذهابه عجبا، وليس بوقف ان جعل من تتمة كلام يوشع؛ لان ذلك كلام واحد ().
 {عجبا ()} [] كاف، اي: اعجب لذلك عجبا، فعجبا منصوب علي المصدرية.
 {ما كنا نبغ} [] حسن، حذف: نافع وابو عمرو والكساءي الياء وقفا، واثبتوها وصلا، وابن 
 كثير: اثبتها في الحالتين، والباقون: حذفوها وقفا ووصلا، اتباعا للرسم العثماني علي لغة هذيل يجتزون بالكسرة عن الياء ().
 {علي اثارهما} [] تام.
 {قصصا ()} [] جاءز، اي: يقصان الاثر قصا.
 {من لدنا علما ()} [] كاف، ومثله: «رشدا».
 {معي صبرا ()} [] جاءز، ومثله: «خبرا».
 {صابرا} [] ليس بوقف؛ لعطف ما بعده علي ما قبله.
 {امرا ()} [] كاف.
 {منه ذكرا ()} [] جاءز، ورسموا: {فان اتبعتني فلا تسالني} [] بياء.
 {فانطلقا} [] احسن مما قبله؛ لان «حتي» بعد «اذا» ابتداءية.
 {خرقها} [] حسن.
 {لتغرق اهلها} [] جاءز.
 {امرا ()} [] حسن، ومثله: «صبرا».
 {بما نسيت} [] جاءز.
 {عسرا ()} [] حسن.
 {فانطلقا} [] احسن منه.
 {فقتله} [] جاءز، وقيل: ليس بوقف؛ لان «قال» جواب «اذا».
 {بغير نفس} [] جاءز، فصلا بين الاستخبار والاخبار.
 {نكرا ()} [] كاف، ومثله: «معي صبرا».
 {فلا تصاحبني} [] جاءز، ومثله: «عذرا».
 {فانطلقا} [] احسن، مما قبله.
 {فاقامه} [] جاءز.
 {اجرا ()} [] كاف.
 {بيني وبينك} [] حسن، علي استءناف ما بعده.
 {صبرا ()} [] تام.
 {غصبا ()} [] كاف. 
 {وكفرا ()} [] جاءز.
 {رحما ()} [] كاف.
 {صالحا} [] جاءز، كان ذلك الكنز ذهبا وفضة، ولو سقط الجدار لاخذ، وكان ابوهما صالحا، ذكر انهما حفظا لصلاح ابيهما، ولم يذكر منهما صلاحا، وكان بينهما وبين الاب الذي حفظا به سبعة اباء.
 {رحمة من ربك} [] كاف.
 {عن امري} [] تام، ومثله: «صبرا»؛ لانه اخر القصة.
 {ذي القرنين} [] جاءز.
 {منه ذكرا ()} [] كاف.
 {في الارض} [] حسن، ومثله: «سببا».
 {فاتبع سببا ()} [] احسن منه.
 {حمءة} [] جاءز.
 {قوما} [] كاف، ومثله: «حسنا»، وكذا: «نكرا».
 {جزاء} [] جاءز، لمن قرا بالنصب، وهو: حمزة والكساءي، ووقفا عليها بالالف، وليس بوقف لمن رفع واضاف ().
 {الحسني} [] جاءز، وكذا: «يسرا».
 {سببا ()} [] كاف.
 {سترا ()} [] جاءز، وقد اختلف في الكاف من «كذلك» فقيل: في محل نصب، وقيل: في محل رفع، فان كانت في محل رفع، اي: الامر كذلك، اي: بلغ مطلع الشمس، كما بلغ مغربها، او كما وجد عند مغربها قوما وحكم فيهم، وجد عند مطلعها قوما وحكم فيهم، او كما اتبع سببا الي مغرب الشمس، كذلك اتبع سببا الي مطلعها، وكذلك ان كانت الكاف في محل نصب، اي: فعلنا مثل ذلك فعلي هذه التقديرات التشبيه من تمام الكلام وصار ما بعد الكاف وما قبلها كالكلام الواحد، فيبتدء: «وقد احطنا»، وان لم تكن الكاف لا في محل رفع ولا في محل نصب كان التشبيه مستانفا منقطع لفظا متصل معني، فيبتدء: «كذلك»، اي: علمناهم، ليس لهم ما يستترون به، فالستر بكسر السين: اسم لما 
 يستتر به، واما بالفتح، فهو: مصدر، فكذلك من الكلام الثاني ().
 {خبرا ()} [] كاف، وكذا: «ثم اتبع سببا».
 {قوما} [] ليس بوقف؛ لان الجملة بعده صفة ل «قوما».
 {قولا ()} [] كاف، ومثله: «في الارض».
 {خرجا} [] ليس بوقف.
 {سدا ()} [] كاف، ومثله: «خير» عللا استءناف الامر.
 {فاعينوني بقوة} [] ليس بوقف؛ لان قوله: «اجعل» مجزوم علي جواب الامر ؛ فكانه قال: ان تعينوني اجعل بينكم وبينهم ردما.
 و {ردما ()} [] كاف؛ علي استءناف ما بعده، وان وصلته ب «اتوني» كان الوقف علي: «الحديد» احسن منه، وهي قراءة حمزة، وعلي قراءته يبتدء: «اتوني».
 {قال انفخوا} [] جاءز.
 {نارا} [] ليس بوقف؛ لان «قال» جواب «اذا».
 {قطرا ()} [] كاف، ومثله: «ان يظهروه»، وكذا: «نقبا».
 {رحمة من ربي} [] حسن، واباه بعضهم؛ لان ما بعده ايضا من بقية كلام الاسكندر، وهو قوله: «فاذا جاء وعد ربي» فلا يقطع عما قبله.
 {دكاء} [] كاف.
 {حقا ()} [] تام؛ لانه اخر كلام ذي القرنين.
 {في بعض} [] حسن.
 {جمعا ()} [] كاف، ومثله: «عرضا» اذا جعلت ما بعده منقطعا عما قبله، وليس بوقف ان جر نعتا «للكافرين»، او بدلا منهم، ومن حيث كونه راس اية يجوز.
 {عن ذكري} [] حسن.
 {سمعا ()} [] كاف.
 {اولياء} [] تام، ومثله: «نزلا» و «اعمالا» ان جعل ما بعده مبتدا، او خبر مبتدا محذوف، اي: هم الذين، او في موضع نصب؛ بمعني: اعني، وليس بوقف ان جعل تفسيرا للاخسرين؛ كانه قال: من هم؟ فقال: هم الذين ضل سعيهم، وكذا ان جعل بدلا.
 {صنعا ()} [] تام؛ ان رفع «الذين» بالابتداء، او خبر مبتدا محذوف، او رفع نعتا، او بدلا 
 من الاخسرين، وليس بوقف ان جعل «الذين» مبتدا، والخبر «اولءك الذين كفروا».
 {وزنا ()} [] كاف.
 {هزوا ()} [] تام.
 {نزلا ()} [] ليس بوقف؛ لان «خالدين» منصوب علي الحال مما قبله، فلا يفصل بين الحال وذيها بالوقف، ومن حيث كونه راس اية يجوز.
 {خالدين فيها} [] حسن.
 {حولا ()} [] تام.
 {لكلمات ربي} [] الاولي ليس بوقف؛ لان جواب «لو»، «لنفد» و «لو» الثانية جوابها محذوف تقديره: لم تنفد الكلمات، وهذا هو الاكثر في لسان العرب تاخير جواب «لو»، وليس هو المتقدم عليها خلافا للمبرد، وابي زيد النحوي، والكوفيين.
 والوقف علي: {كلمات ربي} [] الثانية: حسن لوجهين:
 احدهما: حذف جواب «لو».
 والثاني: ان قوله: «ولو جءنا» التفات من ضمير الغاءب الي ضمير المتكلم، وذلك من مقتضيات الوقف وعلاماته.
 {مددا ()} [] تام، ومثله: «مثلكم».
 {يوحي الي} [] جاءز؛ علي قراءة من قرا: «يوحي الي انما» بكسر الهمزة مستانفا، وليس بوقف لمن فتحها وموضعها رفع؛ لانه قد قام مقام الفاعل في «يوحي»، والموحي اليه  صلي الله عليه وسلم  مقصور علي استءثار الله تعالي بالوحدانية، وقول ابي حيان يلزم الزمخشري انحصار الوحي في الوحدانية مردود بانه حصر مجازي باعتبار المقام ().
 {اله واحد} [] كاف؛ للابتداء بالشرط.
 {عملا صالحا} [] ليس بوقف؛ لعطف ما بعده علي ما قبله، وانما وسمه شيخ الاسلام بجاءز اذ عطف الجمل، وان كان في اللفظ منفصلا فهو في المعني متصل، وجاءز لمن قرا: «يشرك» بالرفع مستانفا، اي: ليس يشرك، وفي الحديث: «من حفظ عشر ايات، او عشرين اية من اول سورة الكهف عصم من فتنة الدجال» (). 
 وقال: «من قرا سورة الكهف فهو معصوم ثمانية ايام من كل فتنة، فان خرج الدجال في تلك الايام الثمانية عصمه الله من فتنته» ()، نقله الكواشي.
 وقال الفضيل: (ترك العمل لاجل الناس رياء، والعمل لاجل الناس اشراك، والاخلاص الخلاص من هذين) (). 
  سورة مريم
 مكية
 [ايها:] وهي تسع وتسعون اية في المدني الاخير والمكي، وثمان في عد الباقين، اختلافهم في ثلاث ايات: {كهيعص ()} [] عدها الكوفي، {في الكتاب ابراهيم} [] عدها المدني الاخير، والمكي: {فليمدد له الرحمن مدا} [] لم يعدها الكوفي.
  وكلمها: تسعماءة واثنان وستون كلمة.
  وحروفها: ثلاثة الاف وثمانماءة وحرفان.
 وفيها مما يشبه الفواصل وليس معدودا باجماع اربعة مواضع: «شيءا»، «عتيا»، «الذين اهتدوا هدي»، «لتبشر به المتقين».
 قال الاخفش: كل حرف من هذه الاحرف قاءم بنفسه يوقف علي كل حرف منها والصحيح الوقف علي اخرها؛ لانهم كتبوها كالكلمة الواحدة، فلا يوقف علي بعضها دون بعض (). وقال الشعبي: «لله في كل كتاب سر، وسره في القران فواتح السور» ()، وقد تقدم هل هي مبنية او معربة اقوال؟ فعلي؛ انها معربة الوقف عليها تام؛ لان المراد: معني هذه الحروف علي ان كهيعص خبر مبتدا محذوف، او مبتدا حذف خبره، او في محل نصب باضمار فعل تقديره: اتل، وليست بوقف ان جعلت في موضع رفع علي الابتداء، و «ذكر رحمت» الخبر، او جعلت حروفا اقسم الله بها، فلا يوقف عليها حتي يءتي بجواب القسم؛ الا ان تجعله محذوفا بعده فيجوز الوقف عليها.
 {زكريا ()} [] كاف؛ ان علق «اذ» بمحذوف، وليس بوقف ان جعل العامل فيه «ذكر»، او «رحمت»، وانما اضاف ال «ذكر» الي «رحمت»؛ لانه من اجلها كان.
 {خفيا ()} [] كاف؛ علي استءناف ما بعده، وجاءز ان جعل ما بعده متعلقا بما قبله، وانما اخفي دعاءه عن الناس لءلا يلام علي طلب الولد بعد ما شاخ وكبر سنه وكان يومءذ ابن خمس وتسعين سنة.
 {شقيا ()} [] كاف، ومثله: «وليا» علي قراءة من قرا (): «يرثني ويرث» بالرفع؛ علي الاستءناف والاولي الوصل سواء رفعت ما بعده، او جزمت، فالجزم جواب الامر قبله، ولا يفصل بين 
 الامر وجوابه، والرفع صفة لقوله: «وليا»، اي: وليا وارثا العلم والنبوة، فلا يفصل بين الصفة وموصوفها.
 {من ال يعقوب} [] جاءز.
 {رضيا ()} [] كاف.
 {اسمه يحيي} [] ليس بوقف؛ لان الجملة بعده صفة (غلام).
 {سميا ()} [] كاف، ومثله: «عتيا»، و «شيءا»، و «اية».
 {سويا ()} [] تام، ووقف بعضهم علي «ثلاث ليال»، ثم قال: «سويا»، اي: انك ليس بك خرس ولا علة.
 {وعشيا ()} [] كاف.
 {بقوة} [] حسن.
 {صبيا ()} [] ليس بوقف؛ لان «وحنانا» منصوب عطفا علي الحكم؛ فكانه قال: واتيناه حنانا من لدنا، والحنان: التعطف، ومنه قول الشاعر:
 تقول حنان ما اتي بك هاهنا ... اذو نسب ام انت بالحي عارف ()
 وقال ابو عبيد (): 
 تحنن علي هداك المليك ... فان لكل مقام مقالا ()
 وقال:
 ابا منذر افنيت فاستبق بعضنا ... حنانيك بعض الشر اهون من بعض ()
 وان جعل مصدرا منصوبا بفعل مقدر، نحو: سقيا، ورعيا، جاز الوقف عليه.
 {وزكاة} [] كاف، ومثله: «تقيا» ان نصب ما بعده بفعل مقدر، اي: وجعلناه برا، وليس بوقف ان عطف علي «تقيا»، و «تقيا» خبر ل «كان». 
 {عصيا ()} [] كاف.
 {حيا ()} [] تام، «اذ» ظرف لما مضي لا يعمل فيه «اذكر»؛ لانه مستقبل، بل التقدير: اذكر ما جري لمريم وقت كذا.
 {شرقيا ()} [] جاءز.
 {حجابا} [] حسن.
 {بشرا سويا ()} [] كاف، ومثله: «اعوذ بالرحمن منك»؛ لان قوله: «ان كنت تقيا» شرطا، وجوابه محذوف، دل عليه ما قبله، اي: فاني عاءدة منك ، او فلا تتعرض لي، او فستتعظ، وقيل: ان تقيا كان رجلا فاسقا، فظنت انه هو ذلك الرجل، فمن ذلك تعوذت منه، ويجوز ان تكون للمبالغة، اي: ان كنت تقيا، فاني اعوذ منك، فكيف اذا لم تكن كذلك، فعلي هذا لا يجوز الوقف علي «منك» ().
 {تقيا ()} [] كاف، ومثله: «زكيا»، وكذا «بغيا».
 {علي هين} [] جاءز؛ ان جعلت اللام للقسم، وهو غير جيد؛ لان لام القسم لا تكون الا مفتوحة، وليس بوقف ان جعلت (لام كي) معطوفة علي تعليل محذوف، تقديره: لنبين به قدرتنا ولنجعله، وهو اوضح، وما قاله ابو حاتم السجستاني: من ان اللام للقسم حذفت منه النون تخفيفا، والتقدير: ولنجعلنه. مردود؛ لان اللام المكسورة لا تكون للقسم كما تقدم في براءة.
 {ورحمة منا} [] كاف.
 {مقضيا ()} [] تام.
 {قصيا ()} [] كاف.
 {الي جذع النخلة} [] جاءز، ومثله: «قبل هذا».
 {منسيا ()} [] كاف.
 {الا تحزني} [] حسن.
 {سريا ()} [] كاف.
 من قرا: {تساقط} [] بتشديد السين، وهي قراءة الجمهور غير حفص، اصله: (تتساقط)، فادغمت التاء في السين، وكذا من قرا: «تساقط» بحذف التاء، فعليهما فنصب «رطبا» علي التمييز، واما من قرا (): «تساقط» بضم التاء وكسر القاف، مضارع: ساقط، او: يساقط، بضم الياء وكسر القاف، ف «رطبا» مفعول به، ومن قرا (): «يساقط» بالتحتية؛ جعله للجذع، ومن قرا (): بالفوقية؛ جعله 
 للنخلة ().
 {جنيا ()} [] كاف، واباه بعضهم؛ لان ما بعده جواب الامر، وهو قوله: «فكلي».
 {وقري عينا} [] كاف؛ للابتداء بالشرط مع الفاء.
 {من البشر احدا} [] حسن؛ علي استءناف ما بعده، وليس بوقف ان جعل جواب الشرط «فقولي»، وبين هذا الجواب وشرطه جملة محذوفة تقديرها: فاما ترين من البشر احدا، فسالك الكلام فقولي، وبهذا المقدر يتخلص من اشكال وهو: ان قولها «فلن اكلم اليوم انسيا» كلام فيكون تناقضا؛ لانها كلمت انسيا بكلام.
 {انسيا ()} [] كاف.
 {تحمله} [] حسن؛ بمعني: حاملة له.
 {فريا ()} [] كاف.
 {يا اخت هارون} []، وهارون هذا كان من عباد بني اسراءيل كانت مريم تشبهه في كثرة العبادة، وليس هو: هرون اخا موسي بن عمران، فان بينهما مءينا من السنين، قال ابن عباس: (هو عمران بن ماثان جد عيسي من قبل امه). وقال الكلبي: (كان هرون اخا مريم من ابيها)، وقيل: كان هرون رجلا فاسقا شبهوها به، وقد ذكرت مريم في القران وكرر اسمها في اربعة وثلاثين موضعا ()، ولم يسم في القران من النساء غيرها ().
 {امرا سوء} [] جاءز.
 {بغيا ()} [] كاف، وكذا «فاشارت اليه»، ومثله: «صبيا» 
 {قال اني عبد الله} [] جاءز، ومثله: «نبيا».
 {اين ما كنت} [] حسن، وقيل: كاف.
 {حيا ()} [] حسن، ان نصب «برا» بمقدر، او علي قراءة من قرا (): «وبرا بوالدتي»، وعلي قراءة العامة (): «وبرا» بالنصب عطفا علي «مباركا» من حيث كونه راس اية يجوز.
 {بوالدتي} [] حسن.
 {شقيا ()} [] تام، ومثله: «حيا».
 {ذلك عيسي ابن مريم} [] كاف، لمن قرا: «قول الحق» بالنصب، وهو عاصم وحمزة وابن عامر ()؛ علي ان قول مصدر مءكد لمضمون الجملة، اي: هذا الاخبار عن عيسي ابن مريم ثابت صدق، فهو من اضافة الموصوف الي الصفة، كقولهم: وعد الصدق، اي: الوعد الصدق، وكذا كاف؛ ان رفع «قول» علي قراءة من قراه برفع اللام ()؛ علي انه خبر مبتدا محذوف، اي: ذلك قول الحق، او ذلك الكلام قول الحق، او هو قول الحق، يراد به: عيسي ابن مريم لا ما تدعونه عليه، فليس هو بابن الله تعالي كما تزعم النصاري، ولا لغير رشدة كما تزعم اليهود، وليس بوقف ان رفع «قول» بدلا من «عيسي»؛ لانه لا يفصل بين البدل والمبدل منه بالوقف ().
 {يمترون ()} [] تام.
 {سبحانه} [] حسن، ولو وقف علي «من ولد»، وابتدء: ب «سبحانه» كان الوقف حسنا ايضا.
 {كن} [] جاءز.
 {فيكون ()} [] تام، لمن قرا (): «وان الله» بكسر الهمزة؛ علي الابتداء، او خبر مبتدا محذوف، 
 اي: والامر ان الله، قاله الكساءي. وليس بوقف لمن قرا (): بفتحها، عطفا علي الصلاة، فتكون «ان» في موضع خفض باضمار الجار، اي: واوصاني بالصلاة وبالزكاة وبان الله ربي؛ فعلي هذا لا يوقف علي «فيكون» ولا علي ما بين اول القصة الي هنا، الا علي سبيل التسامح لطول الكلام، وقياس سيبويه: ان هذه الاية تكون من المقدم والمءخر، فتكون «ان» منصوبة بقوله: «فاعبدوه »؛ فكانه قال: فاعبدوا الله؛ لانه ربي وربكم، او نصب «ان» عطفا علي قوله: «اذا قضي امرا»، اي: وقضي بان الله ربي وربكم، فتكون «ان» في محل نصب.
 {فاعبدوه} [] تام، ومثله: «مستقيم».
 {من بينهم} [] حسن؛ لان ما بعده مبتدا.
 {عظيم ()} [] كاف، وقيل: تام.
 {يوم ياتوننا} [] تجاوزه اجود؛ للاستدراك بعده، ولجواز الوقف مدخل لقوم.
 {مبين ()} [] كاف.
 {اذ قضي الامر} [] حسن، ومثله: «وهم في غفلة»، وليس بوقف ان جعلا حالين من الضمير المستتر: «في ضلال مبين»، اي: استقروا في ضلال مبين، علي هاتين الحالتين السيءتين، وكذا ان جعلا حالين من مفعول «انذرهم»، اي: انذرهم علي هذه الحالة وما بعدها، وعلي الاول يكون قوله: «وانذرهم» اعتراضا.
 {لا يءمنون ()} [] تام.
 {ومن عليها} [] جاءز.
 {يرجعون ()} [] تام.
 {في الكتاب ابراهيم} [] جاءز.
 {نبيا ()} [] كاف، ان علق «اذ» ب «اذكر» مقدرا، وليس بوقف ان جعل «اذ» منصوبا ب «كان» او «صديقا»، اي: كان جامعا لمقام الصديقين والانبياء حين خاطب اباه بتلك المخاطبات.
 {عنك شيءا ()} [] كاف.
 {ما لم ياتك} [] حسن.
 {سويا ()} [] كاف، ومثله: «لا تعبد الشيطان»، وكذا «عصيا»، و «وليا»، وقال بعضهم: ليس «وليا» بوقف، وانما الوقف عن «الهتي»، وقال بعضهم: الوقف علي «ابراهيم» ويجعل النداء 
 متعلقا باول الكلام، اي: يا ابراهيم اراغب انت عن الهتي.
 و {عن الهتي} [] تام عند نافع واحمد بن جعفر، ثم يبتدء: «يا ابراهيم»؛ علي الاستءناف.
 {لارجمنك} [] حسن.
 {مليا ()} [] كاف، ومثله: «سلام عليك» للابتداء بسين الاستقبال، ومثله: «ربي»، وكذا «بي حفيا».
 {من دون الله} [] حسن.
 {وادعو ربي} [] جاءز، والوصل اولي؛ لان «عسي» كلمة ترج للاجابة فتوصل بالدعاء.
 {ربي شقيا ()} [] كاف.
 {من دون الله} [] الثاني ليس بوقف؛ لان «وهبنا له» جواب «فلما».
 {ويعقوب} [] حسن؛ لان «كلا» منصوب ب «جعلنا»، ولذلك لم يكن معطوفا علي ما قبله.
 {جعلنا نبيا ()} [] كاف.
 {من رحمتنا} [] حسن.
 {عليا ()} [] كاف.
 {موسي} [] جاءز؛ للابتداء ب «ان»، ومثله: «مخلصا».
 {نبيا ()} [] كاف.
 {الايمن} [] حسن، ومثله: «نجيا».
 {نبيا ()} [] تام.
 {اسماعيل} [] جاءز، ومثله: «صادق الوعد».
 {نبيا ()} [] كاف.
 {بالصلاة والزكاة} [] حسن.
 {مرضيا ()} [] تام.
 {ادريس} [] جاءز.
 {نبيا ()} [] كاف، ومثله : «عليا».
 {مع نوح} [] جاءز.
 {واجتبينا} [] كاف.
 {وبكيا (()} [] كاف.
 {الشهوات} [] جاءز؛ للابتداء بالتهديد.
 {غيا ()} [] جاءز؛ لكونه راس اية، قال عبد الله بن عمرو: الغي؛ واد في جهنم.
 
 {يدخلون الجنة} [] الاولي وصله، وما بعده الي «بالغيب» فلا يوقف علي «شيءا»؛ لان «جنات عدن» بدل من «الجنة» وان نصب «جنات» بفعل مقدر حسن الوقف علي «شيءا»، وكذا يحسن الوقف عليه علي قراءة من قرا: «جنات» بالرفع علي اضمار مبتدا محذوف، تقديره: تلك جنات عدن، وبها قرا ابو حيوة والحسن وعيسي بن عمر والاعمش ()، وقرا العامة بكسر التاء ().
 {بالغيب} [] حسن.
 {ماتيا ()} [] كاف.
 {الا سلاما} [] استثناء منقطع؛ لان: سلام الملاءكة، ليس من جنس اللغو، فهو من قوله:
 ولا عيب فيهم غير ان سيوفهم ... بهن فلول من قراع الكتاءب ()
 يعني ان وجد فيهم عيب فهو هذا، وهذا لا يعده احد عيبا فانتفي عنهم العيب بدليله.
 {وعشيا ()} [] كاف.
 {تقيا ()} [] تام.
 {ربك} [] حسن، ومثله: «ما بين ذلك».
 {نسيا ()} [] تام، ان جعل (رب) خبر مبتدا محذوف، اي: ذلك رب، وجاءز: ان جعل بدلا من «ربك»، وجاوز ان تعلق به ذلك؛ لانه راس اية.
 {وما بينهما} [] كاف، ومثله: «لعبادته».
 {سميا ()} [] تام.
 {اءذا ما مت} [] ليس بوقف؛ لفصله بين القول والمقول، وهما كشء واحد.
 {حيا ()} [] تام.
 {انا خلقناه من قبل} [] لا يحسن الوقف عليه؛ لان «ولم يك شيءا» معطوف علي ما قبله.
 {ولم يك شيءا ()} [] حسن، وقيل: تام.
 {والشياطين} [] جاءز، ومثله: «جثيا».
 {من كل شيعة} [] ليس بوقف؛ لان موضع، اي: نصب، وان كانت في اللفظ مرفوعة، وسال 
 سيبويه الخليل بن احمد عنها؟ فقال: هي مرفوعة علي الحكاية بمنزلة قول الاخطل:
 ولقد اكون من الفتاة بمنزل ... فابيت لا حرج ولا محروم ()
 كانه قال: الذي يقال: لا هو حرج ولا محروم، وكانه في الاية قال: من كل شيعة الذي يقال: ايهم اشد، ومن قرا (): «ايهم» بالنصب، لا يسوغ له الوقف علي «شيعة» علي حالة من الاحوال.
 {عتيا ()} [] جاءز، ومثله: «صليا»؛ لانهما راسا اية.
 {واردها} [] كاف.
 و {مقضيا ()} [] جاءز.
 {جثيا ()} [] تام، ولا وقف الي قوله: «نديا» فلا يوقف علي «بينات»؛ لان: «قال» جواب «اذا» ولا علي «الذين امنوا»؛ لان ما بعده مقول «قال».
 {نديا ()} [] كاف، ومثله: «من قرن»، وكذا «ورءيا»، وكذا «مدا» وجواب «اذا» محذوف، تقديره: اذا راوا العذاب، او الساعة امنوا.
 {واما الساعة} [] جاءز؛ للابتداء بالتهديد.
 {واضعف جندا ()} [] تام، ومثله: «هدي» عند ابي حاتم، وكذا «مردا»، و «ولدا»؛ لانه اخر كلامهم.
 {الغيب} [] ليس بوقف؛ لان «ام» معادلة للهمزة في «اطلع» فلا يفصل بينهما؛ لانهما كالشء الواحد.
 {عهدا ()} [] تام، و «كلا» اتم منه؛ لانها للردع والزجر قاله الخليل وسيبويه، وقال ابو حاتم: هي بمعني (الا) الاستفتاحية، وهذه هي الاولي من لفظ «كلا» الواقع في القران في ثلاثة 
 وثلاثين موضعا في خمس عشرة سورة وليس في النصف الاول منها شء ()، وسءل جعفر بن محمد عن «كلا» لم لم يقع في النصف الاول منها شء؟ فقال: لان معناها الوعيد والتهديد فلم تنزل الا بمكة؛ لان اهلها جبابرة، فهي ميعاد للكفار. واحسن ما قيل في معني: «كلا»؛ انها تنقسم قسمين، احدهما: ان تكون ردعا وزجرا لما قبلها، او تكون بمعني: (الا)، بالتخفيف، فان كانت للردع والزجر حسن الوقف عليها، ويبتدا بما بعدها، وهذا قول الخليل بن احمد، وان كانت بمعني: (الا)، او حقا؛ فانه يوقف علي ما قبلها، ويبتدا بها، وهذا قول ابي حاتم السجستاني، واذا تدبرت جميع ما في القران من لفظ «كلا» وجدته علي ما قاله الخليل كما تقدم.
 {مدا ()} [] جاءز، ولا يوقف علي «يقول» لعطف ما بعده علي ما قبله.
 {فردا ()} [] كاف.
 {عزا ()} [] جاءز.
 {كلا} [] تام؛ لانها للردع، وللزجر كالتي قبلها.
 {ضدا ()} [] تام.
 {ازا ()} [] جاءز، ومثله: «فلا تعجل عليهم».
 {عدا ()} [] كاف؛ ان نصب «يوم» بمضمر، او قطع عما قبله بالاغراء، وجاءز ان نصب ب «نعد لهم» وانما جاز؛ لانه راس اية.
 {وفدا ()} [] جاءز، وانما جاز مع العطف؛ لان هذا من عطف الجمل عند بعضهم.
 {وردا ()} [] حسن؛ لءلا تشتبه بالجملة بعد التي لنفي شفاعة معبوداتهم، وردا لقولهم هءلاء شفعاءنا عند الله بالوصف لهم بالجملة.
 {عهدا ()} [] جاءز، وقيل: تام؛ لانه لو وصل لا يعطف: «وقالوا اتخذ الرحمن ولدا» علي «اتخذ عند الرحمن عهدا» وان كان «اتخذ» موحدا علي لفظ «من» فان قالوا عاءد علي معني: من؛ لان من يصلح للجمع فيءدي اذا الي اثبات الشفاعة لمن قال اتخذ الرحمن ولدا، قاله السجاوندي. وتفيده عبارة ابي حيان فانظرها ان شءت (). 
 {ولدا ()} [] جاءز.
 {ادا ()} [] كاف، ومعني: «ادا»؛ اي: منكرا.
 {يتفطرن منه} [] جاءز، قرا ابو عمرو وابو بكر: بالياء والنون هنا وفي الشوري، وقرا نافع وابن كثير والكساءي وحفص عن عاصم: بالياء والتاء وتشديد الطاء فيهما، وقرا حمزة وابن عامر في هذه السورة بالياء والنون وفي الشوري بالياء والتاء وتشديد الطاء ().
 {هدا ()} [] ليس بوقف؛ لان «ان» موضعها نصب بما قبلها، اي: بان دعوا.
 {ولدا ()} [] كاف، وقيل: تام.
 {ان يتخذ ولدا ()} [] تام، رسموا: «اتي الرحمن» بالياء كما تري.
 {عبدا ()} [] كاف، ومثله: «عدا».
 {فردا ()} [] تام، ومثله: «ودا» وكذا «لدا»؛ اي: شدادا في الخصومة وهم الكفار.
 {من قرن} [] حسن.
 {من احد} [] ليس بوقف لعطف ما بعده باو علي ما قبله.
 اخر السورة تام. 
  سورة طه
 عليه الصلاة والسلام
 مكية
 [ايها:] ماءة وثلاثون واثنتان في البصري، واربع في المدنيين والمكي، وخمس في الكوفي، واربعون في الشامي.
  وكلمها: الف وثلاثماءة واحدي واربعون كلمة.
  وحروفها: خمسة الاف وماءتان وحرفان.
 وفيها مما يشبه الفواصل وليس معدودا باجماع خمسة مواضع: {فاعبدني} []، {ولا براسي} []، {منها جميعا} []، {معيشة ضنكا} []، {لكان لزاما} [].
 {طه ()} [] كاف، لمن جعلها اسما او افتتاحا للسورة، فتكون في موضع نصب بفعل مضمر، تقديره: اتل، او اقرا، وليس بوقف؛ لمن فسر «طه» ب (يا انسان) لاتصاله بما بعده، او سكن الهاء بمعني: طا الارض بقدميك، فهو فعل امر، والهاء مفعول، او للسكت، او مبدلة من الهمزة، اي: قلبوا الهمزة هاء فصار «طه»، وليس «طه» بوقف ان جعل «طه» قسما، جوابه: «ما انزلنا عليك القران لتشقي»، فلا يفصل بين القسم وجوابه، وامال الطاء والهاء حمزة وورش والكساءي، وامال ابو عمرو الهاء فقط، والباقون: بفتحها ().
 {لتشقي ()} [] ليس بوقف؛ للاستثناء بعده.
 {لمن يخشي ()} [] كاف؛ ان نصب ما بعده بفعل مقدر، اي: نزله تنزيلا، وليس بوقف ان نصب «تنزيلا» بدل اشتمال من «تذكرة»، او جعل «تنزيلا» حالا لا مفعولا له؛ لان الشء لا يعلل بنفسه، اذ يصير التقدير: ما انزلنا القران الا للتنزيل.
 {العلا ()} [] كاف، ومثله: «استوي»، ومنهم من يجعل «له ما في السماوات» من صلة «استوي»، وفاعل «استوي» «ما» الموصولة بعده، اي: استوي الذي له ما في السموات، فعلي هذا يكون الوقف علي «العرش» تاما، كذا يروي عن ابن عباس، وانه كان يقف علي العرش وهو بعيد، اذ يبقي قوله: «الرحمن علي العرش» كلاما تاما، ولا يصح ذلك، انظر السمين.
 {الثري ()} [] تام، ومثله: «واخفي».
 {الا هو} [] حسن.
 {الحسني ()} [] تام.
 {حديث موسي ()} [] ليس بوقف؛ لان «اذ» ظرف منصوب بما قبله، وهو: الاتيان، ومن 
 وقف جعل «اذ» ظرفا منصوبا بمحذوف مقدما، اي: اذكر اذ، او بعده، اي: اذ راي نارا كان كيت وكيت.
 {اذ راي نارا} [] جاءز، ومثله: «امكثوا».
 {هدي ()} [] كاف.
 {نودي يا موسي ()} [] حسن، لمن قرا (): «اني» بكسر الهمزة؛ بمعني: القول، وهي تكسر بعده، وليس بوقف لمن فتحها، وهي قراءة ابن كثير وابي عمرو ()، وموضعها رفع؛ لانه قام مقام الفاعل في: «نودي»، وحذف تعظيما.
 {نعليك} [] جاءز؛ للابتداء ب «ان».
 {طوي ()} [] كاف، ومثله: «وانا اخترتك»؛ لمن قرا: «وانا اخترتك» بالتخفيف ()، ف «انا» مبتدا، وليس بوقف علي قراءة حمزة: «وانا اخترناك» بفتح الهمزة، «وانا» بالتشديد عطفا علي (ان) بفتح الهمزة ().
 {لما يوحي ()} [] ليس بوقف؛ لان قوله: «انني انا الله لا اله الا انا» بيان وتفسير للابهام في «لما يوحي» فلا يفصل بين المفسر والمفسر.
 {فاعبدني} [] جاءز، وقيل: لا يجوز للعطف.
 {انني انا الله لا اله الا انا فاعبدني واقم الصلاة لذكري ()} []
 {لذكري ()} [] تام، واستحسن ابو جعفر ان خبر (كاد) محذوف، تقديره: اكاد اظهرها، واتي بها لقربها، الا ان كان اخفي من الاضداد، بمعني: الاظهار، فالوقف علي «اكاد»، والاكثر علي الوصل، وحاصل معني الاية: انه يحتمل الظهور والستر، فاذا كان معناها: الظهور، اتصلت بما بعدها في المعني، وتقديره: اظهرها لتجزي، واذا كان معناها: الستر، تعلقت اللام بما قبلها، اي: هي اتية لتجزي، وهو تفصيل حسن.
 {بما تسعي ()} [] كاف، ومثله: «فتردي». 
 {يا موسي ()} [] كاف.
 {علي غنمي} [] جاءز.
 {اخري ()} [] كاف.
 {يا موسي ()} [] جاءز.
 {تسعي ()} [] كاف.
 {سيرتها الاولي ()} [] كذلك علي استءناف ما بعده، وليس بوقف ان عطف علي «خذها»، وعليه فلا يوقف علي «لا تخف» ولا علي «الاولي».
 {اية اخري ()} [] جاءز؛ ان اضمر فعل بعدها، اي: فعلنا ذلك لنريك من اياتنا، مفعول «لنريك»، والثاني: «الكبري»، او «من اياتنا» المفعول الثاني، و «الكبري» صفة ل «اياتنا»، وهو المختار.
 {الكبري ()} [] تام؛ لاستءناف الامر.
 {طغي ()} [] كاف.
 {من لساني ()} [] ليس بوقف؛ لان قوله: «يفقهوا قولي»، جواب قوله: «واحلل عقدة».
 {يفقهوا قولي ()} [] جاءز، ومثله: «من اهلي» ان نصب «هارون» بفعل مقدر، اي: اخص هرون، وكذا يوقف علي «اهلي» ان جعل «اخي» مبتدا، و «اشدد» خبره، وليس من «اهلي» بوقف ان جعل «هارون» بدلا من «وزيرا»، ويوقف علي «اهلي» ان جعلت همزة «اشدد» همزة وصل، وليس «اهلي»، وكذا «اخي» بوقف علي قراءة ابن عامر (): «اشدد» بفتح همزة المتكلم، وجزم الفعل جوابا للامر في قوله: «واجعل لي وزيرا»؛ فكانه قال: اجعل لي وزيرا اشدد به ازري واشركه، بضم الهمزة وجزم الفعل؛ لانه يجزم «اشدد» جوابا لقوله: «واجعل»، «واشركه» عطف عليه، وعلي قراءته لا يوقف علي «ازري»؛ لعطف ما بعده علي ما قبله، وعلي قراءة غيره فالوقف علي «ازري» حسن؛ وذلك ان «واشركه» دعاء ثان فالوقف فاصل بين الدعوتين، ولا يوقف من قوله: «واجعل لي وزيرا» الي «كثيرا» الثاني؛ لان العطف صيرها كالشء الواحد، وان جعلت همزة «اشدد» همزة وصل جاز ().
 {كثيرا ()} [] الثاني كاف ().
 {بصيرا ()} [] تام. 
 {سءلك يا موسي ()} [] جاءز عند قوم، ثم لا وقف من قوله: «ولقد مننا» الي «اليم» فلا يوقف علي «اخري»؛ للتعليل بعده، ولا علي «يوحي»؛ لان: «ان اقذفيه» تفسير: «ما يوحي» فلا يفصل بين المفسر والمفسر، او «ان» مصدرية ومحلها نصب بدل من «ما» في «ما يوحي».
 {في اليم} [] حسن .
 {بالساحل} [] ليس بوقف؛ لان قوله: «ياخذه»، جواب الامر، وهو قوله: «فليلقه».
 {وعدو له} [] جاءز.
 {محبة مني} [] ليس بوقف؛ لعطف ما بعده علي ما قبله علي قراءة الجمهور، «ولتصنع» بكسر (لام كي) ونصب الفعل، ومن قرا (): «ولتصنع» بسكون اللام والجزم، وقف علي «عيني»، ولو وصله لصار «اذ» ظرفا «لتصنع»، وليس بظرف له، ومن قرا (): «ولتصنع» بفتح التاء والنصب، اي: لتعمل انت يا موسي بمراي مني، فلا يوقف علي «عيني».
 {من يكفله} [] جاءز.
 {ولا تحزن} [] كاف؛ لانه اخر الكلام وراس اية.
 {فتونا} [] حسن، ومثله: «علي قدر يا موسي»، و «لنفسي»، و «باياتي»، و «ذكري».
 {طغي ()} [] جاءز.
 {او يخشي ()} [] كاف.
 {قولا لينا} [] ليس بوقف؛ لحرف الترجي بعده، وهو في التعلق ك (لام كي)، وقرا ابو معاذ (): «قولا لينا» فخفف: لين، كميت وميت، قال السدي: اوحي الله الي موسي ان يذهب الي فرعون هو وهارون، وان يقولا له قولا لينا؛ لعله يتذكر او يخشي، فقال له موسي: هل لك الي ان يرد الله عليك شبابك، ويرد مناكحك، ومشاربك، واذا مت دخلت الجنة، وتءمن، فكان هذا القول اللين، فركن اليه، وقال: مكانك حتي ياتي هامان، فلما جاء، قال له: اتعبد بعد ان كنت تعبد؟ انا اردك شابا؛ فخضبه بالسواد، فكان اول من خضب. وفي الرواية: ليس في القران من الله لفظ (لعل وعسي) الا وقد كان ()، فلما قال تعالي: «لعله يتذكر او يخشي»؛ تذكر وخشي حيث لم ينفعه بعد ان ادركه 
 الغرق ().
 {او ان يطغي ()} [] حسن.
 {لا تخافا} [] جاءز، ومثله: «واري».
 {رسولا ربك} [] ليس بوقف لمكان الفاء.
 {ولا تعذبهم} [] حسن؛ لان «قد» لتوكيد الابتداء، ومثله: «باية من ربك».
 {الهدي ()} [] كاف، ومثله: «وتولي»، وكذا «يا موسي»، و «ثم هدي»، و «الاولي»، و «في كتاب» كلها وقوف كافية.
 {ولا ينسي ()} [] تام؛ لانه اخر كلام موسي، وما بعده من كلام الله مستانف، ف «الذي» خبر مبتدا محذوف، او منصوب باضمار، او مدح، وليس بوقف ان جعل بدلا، او صفة ل «ربي»، وعليهما فلا يوقف علي «في كتاب».
 {سبلا } [] ليس بوقف؛ لعطف ما بعده علي ما قبله.
 {ماء} [] حسن؛ لانه اخر كلام موسي علي القول الثاني، ثم قال تعالي: «فاخرجنا به» الي قوله: «انعامكم».
 {شتي ()} [] كاف، ومثله: «انعامكم».
 {لاولي النهي ()} [] تام، ومثله: «تارة اخري»، و «فكذب وابي»، و «بسحرك يا موسي» كلها وقوف تقرب من التام.
 {بسحر مثله} [] جاءز، ومثله: «موعدا».
 {مكانا سوي ()} [] كاف.
 {يوم الزينة} [] ليس بوقف سواء رفع (): «يوم» او نصب؛ لان قوله: «وان يحشر الناس ضحي» موضع «ان» رفع لمن رفع «يوم»، او نصب لمن نصبها، وقرء شاذا: «وان تحشر» بتاء الخطاب ()، و «وان 
 يحشر» بياء الغيبة ()، ونصب «الناس» في القراءتين، والضمير فيهما لفرعون، اي: وان تحشر يا فرعون، او ان يحشر فرعون الناس ().
 {ثم اتي ()} [] كاف.
 {بعذاب} [] حسن؛ لاختلاف الجملتين.
 {من افتري ()} [] كاف.
 {بينهم} [] جاءز.
 {النجوي ()} [] كاف؛ علي قراءة من قرا: «ان هذان لساحران»؛ علي ان ان حرف جواب كنعم، و «هذان» مبتدا، و «لساحران» خبره، واللام زاءدة، كذا اوله بعضهم بجعل «ان» بمعني: نعم، وحكي ان رجلا قال لابن الزبير: لعن الله ناقة حملتني اليك، فقال: ان وراكبها؛ اي: نعم، ولعن راكبها، وفيه دخول اللام علي خبر المبتدا غير المءكد بان المكسورة، ومثله لا يقع الا ضرورة كقوله:
 ام الحليس لعجوز شهربه ... ترضي من اللحم بعظم الرقبه ()
 {(المثلي ()} [] كاف، ومثله: «صفا»، وكذا «من استعلي»، و «اول من القي».
 {بل القوا} [] جاءز.
 {تسعي ()} [] كاف، ومثله: «خيفة موسي».
 {لا تخف} [] جاءز.
 {الاعلي ()} [] كاف.
 {ما صنعوا} [] حسن، ومثله: «كيد ساحر».
 {حيث اتي ()} [] كاف، وقرء (): «كيد سحر» بغير الف، وعليها يكون الوقف كافيا.
 {سجدا} [] جاءز.
 {برب هارون وموسي ()} [] كاف.
 {قبل ان اذن لكم} [] حسن؛ علي استءناف ما بعده. 
 {علمكم السحر} [] جاءز، لتضمن اللام والنون معني: القسم، كذا قيل، وفيه نظر؛ لان الكلام صادر من واحد، فلا وقف الي «وابقي»، ولو كان صادرا من اثنين؛ لكان الوقف عليه وعلي «جذوع النخل» كذلك.
 {في جذوع النخل} [] حسن؛ للابتداء بلام القسم.
 {عذابا وابقي ()} [] كاف.
 {والذي فطرنا} [] حسن، الواو للقسم، ودليل جوابه ما قبله، وهو: «لن نءثرك علي ما جاءنا من البينات» كما تقول: لن اقوم والله، فما قبل القسم قد كفي عن جوابه، والجواب محذوف، اي: وحق الذي فطرنا لا نءثرك علي الحق، والاصح ان الواو للعطف علي ما جاءنا، اي: وعلي الذي فطرنا لما لاحت لهم حجة الله في المعجز.
 {فاقض ما انت قاض} [] حسن، ومثله: «الحياة الدنيا».
 {خطايانا} [] ليس بوقف؛ لان موضع «ما» نصب بالعطف علي «خطايانا»، اي: ويغفر لنا ما اكرهتنا عليه من السحر، ف «ما» اسم ناقص، ومن جعل «ما» نافية، وقف علي «خطايانا».
 {من السحر} [] تام.
 {وابقي ()} [] تام؛ علي ان ما بعده من كلام الله، وليس بوقف ان جعل من كلام السحرة.
 {مجرما} [] ليس بوقف؛ لان جواب الشرط لم يات بعد.
 {جهنم} [] جاءز؛ علي استءناف ما بعده، وليس بوقف ان كان صفة لها.
 {ولا يحيي ()} [] كاف.
 {الدرجات العلا ()} [] كاف؛ ان رفعت «جنات»؛ علي الاستءناف خبر مبتدا محذوف، وجاءز ان رفعتها بدلا من الدرجات، وانما جاز الوقف؛ لانه راس اية.
 {خالدين فيها} [] حسن.
 {من تزكي ()} [] تام.
 {يبسا} [] كاف؛ علي استءناف ما بعده، وليس بوقف ان جعل صفة لطريقا؛ بمعني: لا تخاف فيه، وكذا ليس بوقف علي قراءة حمزة (): «لا تخف» بالجزم، جواب: الامر، وهو: فاضرب، اي: ان تضرب لهم طريقا في البحر، لا تخف دركا، ثم تبتدء: «ولا تخشي» فلا نافية، اي: وانت لا تخشي غرقا، وان جعلته مجزوما بالعطف علي «لا تخف» لم يوقف علي «دركا»، ويجوز جعل «لا تخاف» جواب 
 الامر، واثبتوا الالف فيه قياسا علي قول الشاعر:
 الم ياتيك والانماء تنمي ... بما لاقت لبون بني زياد ()
 {ولا تخشي ()} [] تام.
 {ما غشيهم ()} [] كاف.
 {واضل فرعون قومه} [] جاءز.
 {وما هدي ()} [] تام؛ للابتداء بالنداء.
 {من عدوكم} [] جاءز، ومثله: «الايمن».
 {والسلوي ()} [] كاف.
 {ولا تطغوا فيه} [] ليس بوقف؛ لان «فيحل» منصوب باضمار «ان» بعد الفاء في جواب النهي
 {غضبي} [] كاف؛ للابتداء بالشرط.
 {فقد هوي ()} [] كاف، ومثله: «ثم اهتدي»، وكذا «يا موسي».
 {علي اثري} [] جاءز.
 {لترضي ()} [] كاف.
 {من بعدك} [] جاءز ؛ علي استءناف ما بعده، وليس بوقف ان عطف ما بعده علي ما قبله.
 {السامري ()} [] كاف، ومثله: «اسفا»، وكذا «وعدا حسنا».
 {العهد} [] حسن؛ لان «ام» بمعني: الف الاستفهام؛ كانه قال: ااردتم ان يحل عليكم.
 {موعدي ()} [] حسن.
 {بملكنا} [] ليس بوقف؛ لحرف الاستدراك، وقرء: بتثليث الميم بفتحها وضمها وكسرها، 
 تقول: ملك الله كل شء ملكا، بضم الميم، وملك غيره الشء ملكا وملكا بفتحها وكسرها، وبهما قرء هنا ().
 {فقذفناها} [] جاءز، ومثله: «السامري».
 {فنسي ()} [] تام؛ للابتداء بالاستفهام.
 {ولا نفعا ()} [] كاف؛ علي ان معطوف «لا» الثانية داخل، وان جعل في معني: النفي المستانف، حسن الوقف علي «قولا»، والاول اقوي في المعني؛ لانه اراد: ان ينفي القول مع ترك الضر والنفع.
 {فتنتم به} [] حسن.
 {واطيعوا امري ()} [] كاف.
 {عاكفين} [] ليس بوقف؛ لان ما بعده علة في زوال ما قبل «حتي»؛ لانهم غيروا عبادتهم الي رجوع موسي.
 و {موسي ()} [] كاف.
 {الا تتبعن} [] جاءز؛ ان هي الناصبة للمضارع، ويسبك مصدرا، اي: ما منعك من اتباعي، اي: اي شء منعك، فموضع ان نصب مفعول ثان لمنع، ولا زاءدة، اي: ما منعك ان تتبعني.
 {افعصيت امري ()} [] كاف.
 {ولا براسي} [] جاءز؛ للابتداء ب (ان).
 {قولي ()} [] كاف، ومثله: «يا سامري»، اسمه: موسي بن ظفر من اهل مصر، كان من القوم الذين يعبدون البقر، ولما هم موسي عليه السلام بقتله اوحي الله اليه لا تقتله انه كان سخيا، وقيل فيه:
 اذا المرء لم يخلق سعيدا من الازل ... فخاب مربيه وخاب المءمل
 فموسي الذي رباه جبريل كافر ... وموسي الذي رباه فرعون مرسل ()
 {لم يبصروا به} [] جاءز، ولم يبلغ درجة التمام؛ لان ما بعده كالجواب.
 {نفسي ()} [] كاف. 
 {لا مساس} [] حسن؛ يعني لا تخالط الناس الي ان تموت.
 {لن تخلفه} [] جاءز، ومثله: «ظلت عليه عاكفا»؛ لان اللام التي بعده معها قسم محذوف؛ فكانه قال: والله لنحرقنه.
 {نسفا ()} [] تام.
 {الا هو} [] حسن.
 {علما ()} [] تام.
 {ما قد سبق} [] حسن، ومثله: «ذكرا»، وكذا «وزرا».
 {خالدين فيه} [] كاف، «خالدين» حال من فاعل يحمل.
 {حملا ()} [] تام؛ ان نصب «يوم» بالاغراء، وجاءز ان نصب بدلا من «يوم القيامة»؛ لانه راس اية.
 {زرقا ()} [] كاف؛ علي استءناف ما بعده، وليس بوقف ان جعل جملة في موضع الحال.
 {عشرا ()} [] كاف.
 {يوما ()} [] تام.
 {نسفا ()} [] كاف؛ علي استءناف ما بعده، وليس بوقف ان جعل معطوفا علي ما قبله.
 {امتا ()} [] كاف؛ ان جعل «يومءذ» متعلقا ب «يتبعون»، وجاءز ان جعل متعلقا بما قبله، قال مجاهد: لا تري فيها عوجا ولا امتا، اي: لا ارتفاعا ولا انخفاضا ().
 {لا عوج له} [] جاءز، ومثله: «للرحمن».
 {الا همسا ()} [] كاف.
 {الشفاعة} [] ليس بوقف؛ لان ما بعد «الا» منصوب بما قبلها، اي: لا تنفع الشفاعة الا الرجل الماذون له في شفاعته.
 {قولا ()} [] تام.
 {وما خلفهم} [] جاءز.
 {علما ()} [] تام.
 {للحي القيوم} [] كاف.
 {ظلما ()} [] تام؛ للابتداء بالشرط.
 {وهو مءمن} [] ليس بوقف؛ لان ما بعده جواب الشرط فلا يفصل بينهما.
 {ولا هضما ()} [] تام، ومثله: «ذكرا».
 {الملك الحق} [] حسن، ومثله: «وحيه»، وكذا «علما»، ومثله: «عزما».
 {الا ابليس ابي ()} [] كاف.
 {ولزوجك} [] جاءز.
 {فتشقي ()} [] كاف، ومثله: «تعري» لمن قرا: «وانك» بكسر الهمزة؛ علي الاستءناف، وبها قرا نافع وعاصم ()، وليس بوقف لمن قراها (): بالفتح؛ لانها محمولة علي ما قبلها من اسم «ان»، اي: ان لك انتفاء الجوع، والعري، وانتفاء الظما، والضحي فيها.
 {ولا تضحي ()} [] كاف.
 {الشيطان} [] جاءز، ومثله: «لا يبلي».
 {فاكلا} [] ليس بوقف؛ لان ما بعد الفاء اوجبه ما قبلها.
 {من ورق الجنة} [] حسن.
 {فغوي ()} [] جاءز، ووصله بما بعده اجود.
 {وهدي ()} [] تام.
 {منها جميعا} [] كاف؛ علي استءناف ما بعده مبتدا، وخبره «عدو» وليس بوقف ان جعل ما بعده جملة في موضع نصب حالا من الضمير في «اهبطا»، اي: اهبطا في هذا الحالة بعضكم لبعض عدو.
 {عدو} [] كاف، ولا وقف من قوله: «فاما» الي «يشقي» فلا يوقف علي «هدي»، ولا علي «هداي»؛ لان فلا جواب «اما» و «اما» هذه كلمتان: (ان) التي للشرط، ودخلت عليها (ما) وهذه خلاف (اما) التي للعطف؛ فانها كلمة واحدة.
 {ولا يشقي ()} [] حسن.
 {ضنكا} [] جاءز، لمن قرا (): «ونحشره» بالنون، ورفع الفعل علي الاستءناف، وليس بوقف علي قراءة [ابان بن ثعلبة في: «اخرين»] () بسكون الراء بالجزم عطفا علي محل جزاء الشرط، 
 وهو الجملة من قوله: «فان له معيشة ضنكا»، فان محلها الجزم، قال في الخلاصة:
 والفعل من بعد الجزا ان يقترن ... بالفا او الواو بتثليث قمن
 وجزم او نصب لفعل اثرفا ... او واو ان بالجملتين اكتنفا ()
 وقرء ايضا: بياء الغيبية ()، قال بعضهم:
 والمعيشة الضنك ان يسلب ال ... عبد القناعة حتي لا يشبع
 {اعمي ()} [] الاولي كاف.
 والثاني ليس بوقف ()؛ لان بعده واو الحالح كانه قال: لم حشرتني اعمي وقد كانت هذه حالتي.
 {بصيرا ()} [] كاف، ومثله: «تنسي».
 {من اسرف} [] ليس بوقف؛ لان ما بعده من تمام شرطه.
 {بايات ربه} [] كاف؛ لان بعده لام الابتداء.
 {وابقي ()} [] تام.
 {في مساكنهم} [] حسن.
 {لاولي النهي ()} [] تام.
 {من ربك} [] ليس بوقف؛ لان جواب: «لولا» لم يات بعد، وهو: «لكان لزاما».
 و {لزاما} [] جاءز، عند بعضهم، اي: وله اجل مسمي، وليس بوقف ان عطف، و «اجل مسمي» علي كلمة، اي: ولولا اجل مسمي، لكان العذاب لازما لهم، واصل اللزام: الاخذ باليد، او عطف علي الضمير المستتر، والضمير عاءد علي الاخذ العاجل المدلول عليه بالسياق، وقد قام الفصل بالخبر مقام التوكيد، والتقدير: ولولا كلمة سبقت من ربك لكان الاخذ العاجل واجل مسمي لازمين لهم، كما كانا لازمين لعاد وثمود، ولم ينفرد الاجل المسمي دون الاخذ العاجل، انظر: السمين.
 {وقبل غروبها} [] حسن، ومثله: «ترضي».
 {ازواجا منهم} [] ليس بوقف ان نصب «زهرة» بدلا من موضع الموصول، او بدلا من محل به، او نصب علي الحال من الهاء في «به»، ويجوز ان تنصب بفعل مقدر، اي: جعلناهم زهرة، او نصبت علي الذم، او نصبت علي المفعول به، اي: متعناهم زهرة الحياة الدنيا، اي: من زهرة، كقوله تعالي: 
 «واختار موسي قومه»، اي: من قومه، وقول الراعي:
 اخترتك الناس اذ رثت خلاءقهم ... واعتل من كان يرجي عنده السول ()
 اي: من الناس؛ فلما حذف من وصل الفعل فنصب.
 {لنفتنهم فيه} [] تام، ومثله: «وابقي».
 {عليها} [] حسن، ومثله: «رزقا».
 و {نرزقك} [] احسن منه.
 {للتقوي ()} [] تام.
 {من ربه} [] كاف ، ومثله: «الاولي».
 {بعذاب من قبله} [] ليس بوقف؛ لان قوله: «لقالوا»، جواب: «لو»، وكذا «لولا ارسلت الينا رسولا»، ليس بوقف؛ لان قوله: «فنتبع» منصوب باضمار ان بعد الفاء؛ لانه في تاويل: (هلا ارسلت الينا رسولا)، وهذا معناه التحضيض والامر، وهو يكون لمن فوق المخاطب سءالا وطلبا.
 {ونخزي ()} [] كاف.
 {فتربصوا} [] حسن؛ لان ما بعده في تاويل الجواب لما قبله، وهو وعيد من الله تعالي فلا يفصل جوابه عنه؛ لانه لتاكيد الواقع، والوقف علي «متربص» احسن؛ لان جملة التهديد داخلة في الامر.
 اخر السورة تام. 
  سورة الانبياء
 مكية
 [مكية] باجماع.
 [ايها:] وهي ماءة واثنتا عشرة اية.
  وكلمها: الف وماءة وثمانية وستون كلمة.
  وحروفها: اربعة الاف وثمانماءة وتسعون حرفا.
 وفيها مما يشبه الفواصل وليس معدودا باجماع موضعان: {بل اكثرهم لا يعلمون} []، ... {ولا يشفعون} []، ولا وقف من اول السورة الي «معرضون»، فلا يوقف علي «حسابهم»؛ لان الجملة بعده في موضع الحال؛ فكانه قال: اقترب للناس حسابهم في حال غفلتهم.
 {معرضون ()} [] كاف، ولا يوقف علي «استمعوه»؛ لان قوله: «وهم يلعبون» جملة في موضع الحال ايضا؛ كانه قال: في حال غفلتهم ولعبهم يجوز ان يكون حالا مما عمل فيه استمع، اي: الا استمعوه لاعبين.
 {يلعبون ()} [] جاءز، وان كان ما بعده منصوبا علي الحال من ضمير «استمعوه» فهي حال بعد حال في هي حال متداخلة.
 {قلوبهم} [] حسن.
 {النجوي} [] كاف، ان جعل ما بعده مرفوعا خبر مبتدا محذوف، او مبتدا وخبره الجملة من قوله: «هل هذا الا بشر مثلكم»، اونصب باعني، او رفع «الذين» بفعل مقدر، تقديره: يقول الذين، وليس بوقف في بقية الاوجه، وحاصلها: ان في محل «الذين» الحركات الثلاث: الرفع والنصب والجر؛ فالرفع من ستة اوجه: احدها: انه بدل من واو «واسروا»، [ثانيها:] اوانه فاعل والواو علامة جمع دلت علي جمع الفاعل، [ثالثها:] او «الذين» مبتدا، [رابعها:] «واسروا» جملة خبرية قدمت علي المبتدا ويعزي هذا للكساءي، [خامسها:] او «الذين» مرفوع بفعل مقدر، تقديره: يقول الذين، [سادسها:] او انه خبر مبتدا محذوف، اي: هم الذين، او مبتدا وخبره الجملة من قوله: «هل هذا الا بشر مثلكم»، والنصب من وجهين، احدهما: الذم، والثاني: اضمار اعني، والجر من وجهين ايضا، احدهما: النعت، والثاني: البدل من الناس، والتقدير: اقترب للناس الذين ظلموا حسابهم وهم في غفلة ويعزي هذا للفراء، وفي رفع «الذين» بفعله وهو: «اسروا» بعد الا انه جمع علي لغة قليلة كما قال الشاعر:
 ولكن ديافي ابوه وامه ... بحوران يعصرن السليط اقاربه () 
 اراد: يعصر اقاربه السليط، فجمع وانما لم يوقف علي «ظلموا»؛ لان قوله: «هل هذا الا بشر» هو: النجوي، كقوله: «فاسرها يوسف في نفسه ولم يبدها لهم قال انتم شر مكانا» والكلمة التي «اسرها» هي قوله: «انتم شر مكانا» وقد علمت ما يخصنا من هذه الاوجه.
 {مثلكم} [] كاف؛ للابتداء بالاستفهام.
 {السحر} [] ليس بوقف؛ لان جملة «وانتم تبصرون» في موضع الحال؛ فكانه قال: وهذه حالتكم.
 {تبصرون ()} [] تام.
 {والارض} [] جاءز.
 {العليم ()} [] كاف.
 {احلام} [] جاءز، ومثله: «افتراه»، و «بل هو شاعر»، وذلك ان كل جملة تقوم بنفسها الا انها ليست تامة، وانما فصل بينها لاختلافهم في مقالاتهم في نسبة السحر اليه.
 {باية} [] ليس بوقف؛ لان موضع الكاف جر علي النعت ل «اية».
 {الاولون ()} [] كاف، ومثله: «اهلكناها»؛ للاستفهام بعدها.
 {افهم يءمنون ()} [] تام.
 {نوحي اليهم} [] حسن.
 {لا تعلمون ()} [] تام.
 {الطعام} [] كاف، ومثله: «خالدين».
 {الوعد} [] ليس بوقف؛ لان ما بعده تفسير له، وهو: النجاة، والاهلاك، وهو: الوعد.
 {المسرفين ()} [] تام.
 {فيه ذكركم} [] حسن.
 {افلا تعقلون ()} [] تام.
 {اخرين ()} [] كاف.
 {باسنا} [] ليس بوقف؛ لان قوله: «اذا هم» جواب: ل «ما».
 {يركضون ()} [] كاف.
 {لا تركضوا} [] جاءز.
 
 {تسالون ()} [] كاف، ومثله: «ظالمين».
 {خامدين ()} [] تام، ومثله: «لاعبين».
 {من لدنا} [] تام؛ ان جعلت «ان»؛ بمعني: ما، اي: ما كنا فاعلين، وليس بوقف ان جعلت «ان» شرطية وجوابها محذوف لدلالة «لو» عليه، والتقدير: لو كنا فاعلين اتخذناه، ولكنا لا نفعل ذلك.
 {فاعلين ()} [] كاف.
 {فيدمغه} [] لبس بوقف؛ لان قوله: «فاذا هو زاهق» تفسير لما يكون من الدمغ؛ وهو: مهلك للشر، فكذلك الحق يهلك الباطل.
 {فاذا هو زاهق} [] حسن.
 {مما تصفون ()} [] تام.
 {والارض} [] حسن، وقيل: كاف ؛ علي استءناف ما بعده بجعل «من» مبتدا، خبره: «لا يستكبرون»، وليس بوقف ان جعل ذلك معطوفا علي ما قبله، ويكون الوقف علي «ومن عنده»، ثم يبتدء: «لا يستكبرون عن عبادته».
 {ولا يستحسرون ()} [] كاف؛ ان جعل «يسبحون» مستانفا، وليس بوقف ان جعل في موضع (مسبحين)؛ اي لا يكلون من التسبيح ولا يسامون ().
 {لا يفترون ()} [] كاف.
 {ينشرون ()} [] تام، نعت ل (الهة ينشرون)؛ اي: يحيون ويخلقون، يقال: انشر الله الموتي، اي: احياهم، ونشروا؛ اي: احيوا، ومنه قول الاعشي اعشي قيس:
 لو اسندت ميتا الي نحرها ... عاش ولم ينقل الي قابر
 حتي يقول الناس مما راوا ... يا عجبا للميت الناشر () 
 اي: الحي بعد موته.
 {لفسدتا} [] كاف.
 {يصفون ()} [] تام.
 {عما يفعل} [] حسن.
 {وهم يسالون ()} [] كاف.
 {الهة} [] حسن، ومثله: «برهانكم»؛ لان هذا مبتدا، والجملة مفعول «قل».
 {وذكر من قبلي} [] حسن، ومثله: «الحق» علي قراءة من قرا بالنصب، وهي قراءة العامة ()، مفعولا لقوله: «لا يعلمون»، او هو مصدر مءكد لمضمون الجملة السابقة كما تقول: هذه عبد الله الحق لا الباطل، ومن قراه بالرفع، وهو الحسن ()؛ علي اضمار مبتدا، اي: هو الحق كما قال الشاعر:
 وقاءلة خولان فانكح فتاتهم ... واكرومة الحيين خلو كما هيا ()
 اي: هذه خولان، جاز الوقف علي «يعلمون».
 {معرضون ()} [] تام.
 {الا نوحي اليه} [] ليس بوقف؛ لان: «انه» قد قامت مقام الفاعل في «يوحي»؛ كانه قال: الا يوحي اليه التوحيد، وان لا يعبد غيره.
 {فاعبدون ()} [] كاف، ومثله: «سبحانه»، وكذا: «مكرمون».
 {لا يسبقونه بالقول} [] تام عند نافع؛ علي استءناف ما بعده.
 {يعملون ()} [] كاف.
 {وما خلفهم} [] حسن.
 {لمن ارتضي} [] احسن منه.
 {مشفقون ()} [] كاف.
 {من دونه} [] ليس بوقف؛ لان جواب الشرط لم يات بعد.
 {جهنم} [] حسن. 
 {الظالمين ()} [] تام.
 {ففتقناهما} [] حسن، والرتق: الفصل، اي: فصل بينهما بالهواء، وقرا ابن كثير (): «الم ير الذين» بغير واو، وعليها فهو احسن مما قبله.
 {حي} [] كاف؛ للاستفهام بعده.
 {يءمنون ()} [] كاف؛ علي استءناف ما بعده، وان عطف علي ما قبله لم يوقف علي قوله: «يءمنون».
 {رواسي} [] ليس بوقف؛ لان قوله: «ان تميد» موضعه نصب بال (جعل)، وقال المبرد: وهو علي حذف مضاف، تقديره: كراهة ان تميد بهم، فحذف (كراهة)، واقيم ما بعدها مقامها، وقال اخرون: اراد لءلا تميد بهم، وكذلك: «سبلا» ليس بوقف؛ وذلك ان قوله: «يهتدون» في معني: ليهتدوا، وهذا اذا جعلت (لعل) من صلة (جعل) الاول، وان جعلت من صلة (جعل) الثاني، كان الوقف علي «بهم» حسنا.
 {يهتدون ()} [] كاف.
 {محفوظا} [] جاءز.
 {معرضون ()} [] تام.
 {والقمر} [] حسن؛ علي استءناف ما بعده، وليس بوقف ان جعلت الجملة في محل نصب حالا من «الشمس والقمر» واستبد الحال بهما دون «الليل والنهار».
 {يسبحون ()} [] تام.
 {الخلد} [] حسن.
 {الخالدون ()} [] تام.
 {الموت} [] حسن.
 {والخير} [] جاءز؛ ان نصب «فتنة» بفعل مقدر، وليس بمرضي؛ لانه يصير المعني: فتنتكم فتنة، وليس بوقف؛ ان نصبت «فتنة» مفعولا لاجله، او مصدرا في موضع الحال، اي: فاتنين، وتجاوزه الي «فتنة» اولي؛ لان (الي) التي بعده من صلة «ترجعون».
 و {ترجعون ()} [] تام.
 {الا هزوا} [] حسن؛ ان جعل قوله: «ان يتخذونك الا هزوا»، وهو الجواب، واذا لم يحتج الي الفاء في الجواب بخلاف ادوات الشرط، فانها اذا كان الجواب مصدرا ب (ما) النافية فلابد من الفاء، 
 نحو: ان تزرنا فلا نسء اليك، وليس بوقف ان جعل جواب: «اذا» محذوفا تقديره: واذ راك الذين كفروا قالوا هذا القول ().
 {يذكر الهتكم} [] حسن، متعلق «يذكر»، محذوف تقديره: بسوء.
 {كافرون ()} [] تام.
 {من عجل} [] حسن، العجل بلغة حمير: الطين.
 {فلا تستعجلون ()} [] كاف، ومثله: «صادقين»، وكذا: «ينصرون»، وجواب: «لو» محذوف، تقديره: لو يعلم الذين كفروا ما ينزل بهم من العذاب يوم القيامة ما استعجلوا به، ولما قالوا متي هذا الوعد ().
 {بغتة} [] جاءز؛ لان ما بعد الفاء تفسير لها، ومثله: «فتبهتهم».
 {ينظرون ()} [] تام.
 {برسل من قبلك} [] ليس بوقف؛ لان ما بعده كالجواب لما قبله، ومعني حاق: وجب ونزل بهم العذاب الذي كانوا يستهزءن بالرسل من اجل الايعاد به.
 {يستهزءون ()} [] تام.
 {من الرحمن} [] كاف، يقال: كلاه الله، يكلءه، كلاءة بالكسر، كذا ضبطه الجوهري، فهو: كالء، ومكلءة، قال ابن هرمة:
 ان سليمي والله يكلءها ... ضنت بشء ما كان يرزءها ()
 {معرضون ()} [] كاف، ومثله: «من دوننا» فصلا بين الاستفهام والاخبار.
 {ولا هم منا يصحبون ()} [] كاف، ومثله: «العمر»، وكذا «من اطرافها». 
 {الغالبون ()} [] تام.
 {بالوحي} [] حسن، قرا ابن عامر (): «ولا تسمع الصم الدعاء» بضم التاء الفوقية وكسر الميم، من: (اسمع) رباعيا، خطابا للنبي  صلي الله عليه وسلم ، ونصب «الصم» مفعولا، والباقون (): بتحتية مفتوحة من: (سمع) ثلاثيا، ورفع «الصم» فاعلا.
 {ما ينذرون ()} [] كاف.
 {من عذاب ربك} [] ليس بوقف؛ لان ما بعده جواب لما قبله.
 {ظالمين ()} [] تام.
 {ليوم القيامة (} [] جاءز.
 {شيءا} [] حسن، ومن قرا (): «مثقال» بالرفع كان احسن.
 {من خردل} [] ليس بوقف؛ لان «اتينا»، جواب الشرط، قرا نافع: «مثقال» بالرفع، والباقون: بنصبها ().
 {بها} [] حسن.
 {حاسبين ()} [] تام.
 {الفرقان} [] حسن، «وضياء» منصوب بفعل مقدر تقديره: وجعلناه ضياء، والفرقان: التوراة، وهو: الضياء، وليس بوقف ان جعلت الواو عاطفة، او زاءدة، وقرا ابن عباس (): «ضياء» بغير واو.
 {للمتقين ()} [] كاف، ان رفع «الذين» خبر مبتدا محذوف، اي: هم الذين، او نصب بتقدير: اعني، او امدح، وليس بوقف ان جعل نعتا، او بدلا. 
 {بالغيب} [] كاف؛ علي استءناف ما بعده، وليس بوقف ان جعل جملة في موضع الحال.
 {مشفقون ()} [] تام.
 {انزلناه} [] كاف؛ للاستفهام بعده.
 {منكرون ()} [] تام.
 {من قبل} [] حسن، ان جعل «اذ قال لابيه» منصوبا ب «عالمين»، وليس بوقف ان جعل «اذ» منصوبا «باياتنا»، او ب «رشده»، والتقدير: ولقد اتينا ابراهيم رشده في الوقت الذي قال فيه لابيه وقومه ما ذكر، وهو بعيد من المعني بهذا التقدير، وحينءذ لا يوقف علي «عالمين» في الوجهين؛ لان «اذ» ان كانت متصلة بالفعل الاول، فلا يجوز الوقف علي ما بعد الناصب دون المنصوب، وكذا ان كانت متصلة بالثاني. انظر: السمين.
 {عالمين ()} [] كاف، «عاكفون»، و «عابدين»، و «مبين»، و «من اللاعبين» كلها وقوف كافية.
 {فطرهن} [] حسن، وقيل: تام.
 {من الشاهدين ()} [] كاف، ومثله: «مدبرين».
 {الا كبيرا لهم} [] ليس بوقف؛ لاتصال حرف الترجي ب (جعلهم) فلا يفصل؛ فكانه قال: جعلهم لهذا.
 {يرجعون ()} [] كاف.
 {(منفعل هذا بالهتنا} [] جاءز؛ علي جعل «من» استفهامية، والجملة من قوله: «انه لمن الظالمين » مستانفة، وليس بوقف ان جعلت «من» موصولة؛ بمعني: الذي، والجملة (من انه ... ) الخ في محل رفع خبر الموصول، والتقدير: الذي فعل هذا بالهتنا انه لمن الظالمين.
 {فتي يذكرهم} [] جاءز؛ علي استءناف ما بعده.
 {ابراهيم ()} [] كاف، ومثله: «يشهدون»، وكذا «يا ابراهيم».
 {قال بل فعله} [] تام؛ اي: فعله من فعله، ابهم ابراهيم عليه الصلاة والسلام الفاعل تعريضا للمعني المقصود الذي اراده، فرارا من الوقوع في الكذب، فهو منقطع عما بعده لفظا ومعني، فهو: تام، قاله الكساءي، وقوله: «كبيرهم هذا» جملة من مبتدا وخبر استءنافية لا تعلق لها بما قبلها، او هي اخبار بان هذا الصنم المشار اليه اكبر الاصنام، وهذا صدق محض، بخلاف ما لو جعل «كبيرهم» فاعلا بفعله، فانه يحتاج الي تاويل ذكروه، وهو: حسن؛ لانه من المعاريض قال رسول الله  صلي الله عليه وسلم : «ان في المعاريض لمندوحة عن الكذب» ()، ومن جوز الكذب في ابطال باطل واحقاق حق! فهو حسن جاءز بالاجماع، فان قلت السءال وقع عن الفاعل لا عن الفعل، فانهم لم يستفهموه عن الكسر، بل عن الكاسر لها، فلم صدر في جوابه بالفعل دون الاسم، قلت الجواب مقدر دل عليه السياق؛ لان «بل» لا تصلح ان يصدر بها الكلام، والتقدير: ما فعلته، بل فعله تلويحا بغيره، وحيث كان السءال مضمرا فالاكثر التصريح بالفعل، ومن غير الاكثر قوله: «يسبح له فيها بالغدو والاصال» في قراءته بالبناء للمفعول ()، ف «رجال» في جواب سءال مقدر تقديره: من يسبحه؟ فقال: يسبحه رجال، قال في الخلاصة:
 ويرفع الفاعل فعل اضمرا ... كمثل زيد في جواب من قرا ()
 وقرء (): «فعله»، اي: فلعله، قال الفراء: فليس فعله فعلا، بل هو التقاء عل حرف عطف، دخل علي عل التي للترجي، وحذفت اللام الاولي فصار فعله، اي: فلعله، ثم حذفت اللام الاولي، 
 وخففت الثانية، واستدل علي مذهبه بقراءة ابن السميفع اليماني: «فعله» بتشديد اللام، والحامل له علي هذا خفاء صدور هذا الكلام من ابراهيم، وهذا مرغوب عنه. انظر: السمين، وهذا غاية في بيان هذا الوقف،،، ولله الحمد ()
 {كبيرهم هذا} [] جاءز؛ لان «كبيرهم» مبتدا، و «هذا» خبره، او نعت «كبيرهم»، او بدل منه، وقوله: «فاسءلوهم» دليل الجواب قد قام مقامه مقدما عليه؛ كانه قال: ان كانوا ينطقون فاسءلوهم، ومعلوم ان الاصنام لا تنطق، وان النطق عليها مستحيل، فما علق بهذا المستحيل من الفعل مستحيل ايضا، فاذا علم استحالة النطق عليها، علم استحالة الفعل ايضا ().
 {ينطقون ()} [] كاف.
 {الظالمون ()} [] جاءز، ومثله: «علي رءوسهم».
 {ينطقون ()} [] كاف.
 {ما هءلاء} []، «ما» حجازية، و «هءلاء» اسمها، و «ينطقون» خبرها، او هي: تميمية لا
 عمل لها.
 {ولا يضركم ()} [] كاف.
 {من دون الله} [] حسن.
 {تعقلون ()} [] كاف.
 {وانصروا الهتكم} [] ليس بوقف؛ لان ما بعده شرط فيما قبله، وما قبله جواب له فان جعل قوله: «وانصروا الهتكم» هو الجواب حسن، الوقف علي «حرقوه»، و «فاعلين»، وعلي «ابراهيم»، و «الاخسرين»، و «للعالمين» كلها وقوف كافية.
 {اسحاق} [] كاف عند نافع ان نصب «نافلة» حالا من «يعقوب» فقط؛ لان النافلة مختصة به؛ لانها ولد الولد بخلاف اسحاق؛ فانه ولد لصلبه، والتقدير: ووهبنا له يعقوب حالة كونه نافلة، ويكون من عطف الجمل، وليس بوقف ان نصب «نافلة» انتصاب المصدر من معني العامل، وهو: «وهبنا» لا من لفظه، فهي كالعاقبة، والعافية فيكون شاملا لاسحاق ويعقوب؛ لانهما زيدا لابراهيم بعد ابنه اسمعيل، فلا يفصل بينهما، وكذا لا يصح الوقف علي اسحاق ان عطف «يعقوب» علي «اسحاق» عطف مفرد علي مفرد من غير اضمار فعل؛ لتعلق ما بعده بما قبله من جهة المعني؛ لانه معطوف علي ما قبله (). 
 {صالحين ()} [] كاف.
 {بامرنا} [] جاءز.
 {فعل الخيرات} [] ليس بوقف؛ لان ما بعده عطف علي ما قبله.
 {الزكاة} [] حسن.
 {عابدين ()} [] تام؛ لانه اخر قصة ابراهيم، وايضا ان قدر «واتينا لوطا»، وان عطف «لوطا»؛ علي الضمير المنصوب في «نجيناه» كان جاءزا من حيث كونه راس اية.
 {وعلما} [] جاءز.
 {الخباءث} [] كاف، ومثله: «فاسقين».
 {في رحمتنا} [] حسن.
 {من الصالحين ()} [] تام؛ لانه اخر القصة، وان قدر مع «اذ» فعل محذوف، اي: واذكر نوحا؛ لتكون كل قصة علي حيالها، كان زيادة في التمام، وان عطف علي «لوطا» كان جاءزا من حيث كونه راس اية.
 {العظيم ()} [] كاف.
 {باياتنا} [] حسن.
 {انهم كانوا قوم سوء} [] جاءز.
 {اجمعين ()} [] تام؛ ان نصب ما بعده بمقدر، وجاءز ان عطف علي «لوطا».
 {في الحرث} [] ليس بوقف؛ لان قوله: «اذ نفشت فيه» ظرف للحكم.
 {غنم القوم} [] جاءز.
 {شاهدين ()} [] حسن.
 {ففهمناها سليمان} [] كاف.
 {حكما وعلما} [] جاءز، ومثله: «الجبال»؛ علي استءناف ما بعده؛ كان قاءلا قال: كيف سخرهن؟ فقال: يسبحن، وليس بوقف ان عطف علي «الجبال».
 {يسبحن والطير} [] حسن؛ علي القراءتين: النصب عطفا علي «الجبال» والرفع عطفا علي الضمير في «يسبحن».
 {فاعلين ()} [] كاف.
 {لبوس لكم} [] ليس بوقف؛ لان ما بعد اللام علة في ايجاب الفعل الذي قبلها، اي: ليكون لبسها وقاية لكم في حربكم، وسببا لنجاتكم من عدوكم.
 {من باسكم} [] حسن.
 
 {شاكرون ()} [] كاف؛ ان نصب «الريح» ()؛ بفعل مضمر، اي: وسخرنا الريح لسليمان، وعلي قراءة عبد الرحمن بن هرمز بالرفع ()؛ فالوقف: تام علي «شاكرون».
 {باركنا فيها} [] حسن.
 {عالمين ()} [] كاف.
 {دون ذلك} [] حسن.
 {حافظين ()} [] تام؛ لانه اخر القصة، «وايوب» منصوب بفعل مضمر، اي: واذكر ايوب.
 {الراحمين ()} [] كاف، ومثله: «ما به من ضر».
 {للعابدين ()} [] تام، قال الحسن وقتادة: احيا الله من مات من اهله، واعطاه مثلهم معهم.
 {وذا الكفل} [] حسن.
 {من الصابرين ()} [] كاف.
 {من الصالحين ()} [] تام؛ ان نصب «ذا النون» بفعل مضمر، اي: واذكر ذا النون.
 {مغاضبا} [] جاءز، ومثله: «نقدر عليه»، وقيل: ليس بوقف؛ لانه يحتاج الي ما بعده ليبين معناه.
 وقال الفراء: «نقدر» بالتخفيف؛ بمعني: نقدر، بالتشديد، اي: لن نقدر عليه العقوبة كما في قول الشاعر:
 ولا عاءذ ذاك الذي قد مضي لنا ... تباركت ما تقدر ويقع فلك الشكر ()
 وقيل معناه: نضيق عليه بسبب مغاضبته ومفارقته لقومه؛ لاجل اباءهم عليه، ولا وقف من قوله: «فنادي» الي «من الظالمين» فلا يوقف علي «انت» ولا علي «سبحانك»؛ لانه كله داخل في حكاية النداء.
 {من الظالمين ()} [] كاف.
 {فاستجبنا له} [] ليس بوقف؛ لاتصال الفجاة بالاجابة.
 {من الغم} [] حسن.
 {المءمنين ()} [] تام؛ لانه اخر القصة. 
 {اذ نادي ربه} [] حسن، اذ اضمر القول بعده ، اي: قال رب لا تذرني فردا، وليس بوقف ان جعلت الجملة متصلة بالنداء؛ لان فيه معني القول.
 {فردا} [] جاءز؛ علي استءناف ما بعده، وليس بوقف ان جعلت الجملة بعده حالا.
 {الوارثين ()} [] كاف، ويجوز: «فاستجبنا له».
 {يحيي} [] ليس بوقف؛ لعطف ما بعده علي ما قبله.
 {زوجه} [] حسن، ومثله: «في الخيرات»، وكذا «ورهبا».
 {خاشعين ()} [] تام؛ لانه اخر قصة.
 {من روحنا} [] حسن؛ المراد بفرجها: فرج القميص، اي: لم يعلق بثوبها ريبة، وفروج القميص اربعة: الكمان، والاعلي، والاسفل.
 {للعالمين ()} [] تام.
 {فاعبدون ()} [] كاف.
 {امرهم بينهم} [] حسن.
 {راجعون ()} [] تام.
 {لسعيه} [] جاءز.
 {كاتبون ()} [] تام.
 {اهلكناها} [] ليس بوقف؛ لان (ان) منصوبة بما قبلها.
 {لا يرجعون ()} [] تام.
 {ينسلون ()} [] حسن؛ علي استءناف ما بعده، وليس بوقف ان جعل جواب «اذا»، اقترب الوعد، والواو زاءدة، وان جعل جوابها: «يا ويلنا» لا وقف من قوله: «حتي اذا فتحت» الي «ظالمين»، وهو: كاف، ومن وقف «فاذا هي واقعة»؛ يعني: يوم القيامة، ثم يبتدء: «شاخصة ابصار الذين كفروا»؛ علي ان الفاء في جواب «اذا» السابقة، و «اذا» الثانية الفجاءية، و «هي» ضمير القصة مبتدا، و «هي» زاءدة، و «ابصار» مبتدا ثان، و «شاخصة» خبره، والجملة خبر عن ضمير القصة ().
 {حصب جهنم} [] جاءز؛ علي استءناف ما بعده، وليس بوقف ان جعل في موضع الحال.
 {واردون ()} [] كاف.
 {الهة} [] ليس بوقف؛ لان قوله: «ما وردوها» جواب «لو».
 {ما وردوها} [] حسن. 
 {خالدون ()} [] كاف.
 {زفير} [] جاءز؛ علي استءناف ما بعده.
 {لا يسمعون ()} [] تام.
 {الحسني} [] ليس بوقف؛ لان «اولءك» خبر «ان».
 {مبعدون ()} [] كاف.
 {حسيسها} [] حسن؛ لان بعده مبتدا خبره «خالدون»، والمبتدا في حكم الانفصال عما قبله.
 {خالدون ()} [] كاف.
 {الاكبر} [] جاءز، قيل الفزع الاكبر: ذبح الموت بين الجنة والنار، وينادي يا اهل الجنة خلود بلا موت، ويا اهل النار خلود بلا موت ().
 {الملاءكة} [] حسن؛ علي استءناف ما بعده، وليس بوقف ان جعل «هذا يومكم» معه اضمار قول، اي: قاءلين لكم هذا يومكم.
 {توعدون ()} [] كاف؛ ان نصب «يوم» بفعل مضمر، وليس بوقف ان نصب بما قبله، والتقدير: وتتلقاهم الملاءكة يوم نطوي السماء ، وحينءذ فلا يوقف علي «الملاءكة» ولا علي «توعدون».
 {للكتب} [] كاف، والسجل: الصحيفة، وقيل: السجل كاتب كان لرسول الله  صلي الله عليه وسلم ، والاول اولي لتعدد كتابه  صلي الله عليه وسلم ، فالكاتب لا يعرف، ولا يحمل كتاب الله علي ما لا يعرف، وقيل السجل: اسم ملك يطوي السماء كطي الملك لكتاب الصحيفة التي يكتب فيها اعمال العباد، فهو مصدر مضاف لفاعله، وقرا الاخوان () وحفص: «للكتب» جمعا، والباقون: «للكتاب» بالافراد ().
 {نعيده} [] كاف؛ ان نصب «وعدا» بفعل مقدر، وليس بوقف ان نصب ب «نعيده».
 {علينا} [] كاف.
 {فاعلين ()} [] تام.
 {من بعد الذكر} [] ليس بوقف؛ لان قوله: «ان الارض» في موضع نصب ب «كتبنا». 
 {الصالحون ()} [] تام، ومثله: «عابدين»، وكذا «للعالمين».
 {يوحي الي} [] ليس بوقف؛ لان «انما» موضعها رفع؛ لانه قد قام مقام الفاعل في «يوحي».
 {اله واحد} [] حسن؛ للابتداء بالاستفهام.
 {مسلمون ()} [] كاف.
 {علي سواء} [] تام للابتداء بالنفي؛ لان (ان) بمعني: ما، اي: ما ادري، و «ما» في قوله: «ما توعدون» فاعل ب (قريب)، اي: ايقرب ما توعدون ام يبعد.
 {ما توعدون ()} [] كاف.
 {من القول} [] جاءز.
 {ما تكتمون ()} [] كاف.
 {الي حين ()} [] تام.
 {بالحق} [] حسن، وقرا حفص: «قال رب» علي الخبر، والباقون: «قل» علي الامر ()؛ لان قوله: «وربنا» مبتدا خارج عن المقول.
 اخر السورة تام. 
  سورة الحج
 مكية
 الا قوله: «ومن الناس من يعبد الله» الايتين، وقيل: الي «خصمان» فمدني.
 [ايها:] وهي سبعون واربع ايات.
  وكلمها: الف وماءتان احدي وتسعون كلمة.
  وحروفها: خمسة الاف وماءة وخمسة وسبعون حرفا.
 وفيها مما يشبه الفواصل وليس معدودا باجماع ثلاثة مواضع:
    
 {لهم ثياب من نار} [].
    
 {فامليت للكافرين} [].
    
 {في اياتنا معاجزين} [].
 {اتقوا ربكم} [] كاف.
 {عظيم ()} [] تام؛ ان نصب «يوم» بفعل مضمر، وليس بوقف ان نصب بما قبله.
 {حملها} [] حسن، ومثله: «سكاري» الاول دون الثاني؛ لان «لكن» لابد ان تقع بين متنافيين، وهما الحالتان: حالة هينة، وهي: الذهول، وعذاب الله، وهو ليس بهين.
 {شديد ()} [] تام.
 {مريد ()} [] كاف.
 {من تولاه} [] ليس بوقف؛ لان قوله: «فانه يضله» موضع (ان) الثانية كموضع الاولي، والاولي ناءب الفاعل ، والثانية عطف عليها.
 {السعير ()} [] تام، ولا وقف من قوله: «يا ايها الناس» الي «لنبين لكم» فلا يوقف علي «من تراب»، ولا علي «غير مخلقة».
 {لنبين لكم} [] حسن، لمن قرا: «ونقر» بالرفع، والواو ليست للعطف بل استءنافية، وبرفعها قرا العامة ()، وليس بوقف لمن قرا: «ونقر»، و «نخرجكم» بالنصب فيهما، وبها قرا عاصم ويعقوب ()؛ تعليل معطوف علي تعليل. 
 {مسمي} [] حسن، ومثله: «اشدكم»، وكذا «من يتوفي».
 {الي ارذل العمر} [] ليس بوقف؛ لان لام التعليل متصلة بما قبلها.
 {شيءا} [] تام.
 {هامدة} [] حسن؛ للابتداء بالشرط.
 {وربت} [] جاءز.
 {بهيج ()} [] كاف، ولا وقف من قوله: «ذلك بان الله هو الحق» الي «من في القبور» فلا يوقف علي «الحق»؛ لان (ان) الثانية معطوفة؛ علي (ان) الاولي، ولا علي «الموتي»، ولا علي «قدير» ولا علي «ريب فيها» للعطف؛ لانه صيرها كالشء الواحد، ومن حيث ان قديرا راس اية يجوز.
 {من في القبور ()} [] تام.
 {منير ()} [] ليس بوقف؛ لان قوله: «ثاني عطفه» حال من الضمير المستكن في «يجادل»، اي: معرضا، وقيل: لاويا عنقه.
 {عن سبيل الله} [] حسن.
 {له في الدنيا خزي} [] كاف، ومثله: «عذاب الحريق»؛ علي استءناف ما بعده.
 {ذلك بما قدمت يداك} [] ليس بوقف؛ لان قوله: «وان الله ليس بظلام» موضع «ان» جر عطفا علي ما في قوله: «بما قدمت يداك» المعني: وبان الله ليس بظلام، وان جعلت «ان» في موضع رفع خبر مبتدا محذوف، اي: والامر ان ... الخ حسن الوقف علي «يداك»، ومثله: علي قراءة من قرا في الشاذ (): «وان الله» بكسر الهمزة علي الابتداء.
 {للعبيد ()} [] تام.
 {علي حرف} [] جاءز، وفيه الفصل بين المفسر والمفسر؛ لان قوله: «فان اصابه» ... الخ تفسير للحرف.
 {اطمان به} [] تام عند نافع.
 {علي وجهه} [] حسن.
 {والاخرة} [] كاف، ومثله: «المبين»؛ علي استءناف ما بعده، واختلف في اعراب: «يدعو» الثانية، وحاصله: ان فيه وجوها عشرة ذكرها ابو حيان، والذي يخصنا منها ثلاثة، وذلك ان «يدعو» اما ان تجعل مسلطة علي الجملة من قوله: «لمن ضره اقرب من نفعه» اولا فان جعلت مسلطة عليها، وان «يدعو» بمعني : يقول، واللام للابتداء، و (من) اسم موصول مبتدا، و «ضره» مبتدا، و «اقرب» 
 خبر الثاني، وخبر (من) محذوف تقديره: يقول للذي ضره اقرب من نفعه الهي، كما قال الشاعر:
 يدعون عنتر والرماح كانها ... اشطان بءر في لبان الادهم ()
 اراد يقول: يا عنيتر، فالجملة في محل نصب ب «يدعو»؛ لانها مسلطة عليها، فلا يوقف علي «يدعو»؛ لتعلق ما بعدها بما قبلها، ولبءس المولي مستانف، ونسب هذا لابي علي الفارسي، وان لم تجعل «يدعو» مسلطة علي الجملة، وان «يدعو» الثانية توكيد، ل «يدعو» الاولي، ولا معمول لها، وفي تكريرها ايذان بانه مقيم علي الضلال؛ فكانه قيل: يدعو من دون الله الذي لا يضره ولا ينفعه، فتكون الجملة معترضة بين المءكد والمءكد، فلا تقتضي مفعولا ثانيا، وعلي هذا يحسن الوقف علي «يدعو»، وقوله: «لمن ضره» مستانف، واللام للابتداء، و (من) مبتدا، و «ضره» مبتدا ثان، و «اقرب» خبر الثاني، والجملة خبر الاول، او الخبر محذوف، دل عليه: «لبءس المولي»، والتقدير: لمن ضره اقرب من نفعه الهه، والجملة صلة، ويجوز ان يكون «يدعو» من متعلق «الضلال»، وان ذلك اسم موصول، بمعني: الذي، عند الكوفيين: اذ يجيزون في اسماء الاشارة كلها ان تكون موصولة، والبصريون: لا يكون عندهم من اسماء الاشارة موصول، الا (ذا) بشرط ان يتقدم عليها (ما)، او (من) الاستفهاميتان، ف «هو» مبتدا، و «الضلال» خبره، والجملة صلة، والموصول وصلته في محل نصب مفعول «يدعو»، والمعني: يدعو الذي هو الضلال البعيد، وهذا تكلف اذ لو كان كذلك لانتصب الضلال، وقوله: «هو» عماد لا يمنع الاعراب، كقوله: «تجدوه عند الله هو خيرا»، ف «خيرا» مفعول ثان، ل «تجدوه»، وعلي هذا يوقف علي «يدعو»، والكلام علي بقية الوجوه يستدعي طولا، اذ لو اراد الانسان استقصاء الكلام لاستفرغ عمره، ولم يحكم امره، وهذا الوقف جدير بان يخص بتاليف، وفيما ذكر كفاية،،، ولله الحمد
 {ولبءس العشير ()} [] تام.
 {الانهار} [] حسن، وقيل: كاف.
 {ما يريد ()} [] تام. 
 {والاخرة} [] ليس بوقف؛ لان جواب الشرط لم يات بعد، وهو «فليمدد»، وهكذا لا وقف الي «ما يغيظ» فلا يوقف علي «السماء»، ولا علي «فلينظر»؛ لان الجملة وان كانت في اللفظ منفصلة فهي في المعني متصلة.
 {ما يغيظ ()} [] كاف.
 {بينات} [] ليس بوقف؛ لان موضع «ان» نصب بما قبلها عطفا علي مفعول «انزلناه»، اي: وانزلنا ان الله يهدي، او علي حذف حرف الجر، اي: ولان الله يهدي من يريد انزلناه، وليس بوقف ايضا ان جعلت» ان الله» خبر «ان» الاولي كقول الشاعر:
 يكفي الخليفة ان الله سربله ... سربال ملك به ترجي الخواتيم ()
 وان جعلت «ان» في محل رفع خبر مبتدا محذوف تقديره: والامر ان الله يهدي، حسن الوقف علي «بينات».
 {من يريد ()} [] تام، ولا وقف من قوله: «ان الذين امنوا»، الي «يوم القيامة»؛ لاتصال الكلام بعضه ببعض في المعني، فلا يوقف علي «والنصاري»، ولا علي «والمجوس»، ولا علي «اشركوا»؛ لان «ان» الثانية خبر «ان» الاولي كما تقدم في البيت.
 {يوم القيامة} [] حسن.
 {شهيد ()} [] تام، ولا وقف من قوله: «الم تر»، الي «الدواب» فلا يوقف علي «والجبال».
 {وكثير من الناس} [] احسن مما قبله؛ علي ان ما بعده مبتدا، وخبره «حق»، او فاعل لفعل محذوف، اي: وسجد كثير من الناس، وابي كثير، فحق عليه العذاب، وليس بوقف ان عطف علي ما قبله، وجعل داخلا في جملة (الساجدين)، اي: وكثير من الكفار يسجدون، وهم اليهود والنصاري، ومع ذلك فالعذاب عليهم.
 {العذاب} [] حسن.
 {من مكرم} [] كاف.
 {ما يشاء (()} [] تام.
 {في ربهم} [] حسن، ومثله: «من نار».
 {الحميم ()} [] جاءز؛ لان «يصهر» يصلح مستانفا وحالا. 
 {ما في بطونهم} [] ليس بوقف؛ لان ما بعده معطوف علي ما قبله.
 {والجلود ()} [] جاءز، وراس اية في الكوفي.
 {من حديد ()} [] كاف.
 {اعيدوا فيها} [] حسن.
 {عذاب الحريق ()} [] تام؛ للابتداء ب «ان».
 {الانهار} [] حسن، ومثله: «من ذهب»، لمن قرا: «ولءلءا» بالنصب، اي: ويءتون لءلءا، وليس بوقف لمن قراه: بالجر ()، عطفا علي محل «من ذهب».
 {ولءلءا} [] حسن.
 {حرير ()} [] كاف.
 {الحميد ()} [] تام؛ لانه اخر القصة.
 {الذي جعلناه للناس} [] حسن، ان رفع «سواء» مبتدا، وما بعده جملة في محل رفع خبر وكذا ان جعل خبرا مقدما، و «العاكف» مبتدا مءخرا، وبالرفع قرا: العامة، وليس بوقف لمن نصب «سواء» مفعولا ثانيا، ل «جعلناه»، وهو حفص ()، او بالرفع علي جعل الجملة مفعولا ثانيا ل «جعلنا» لاتصاله بما قبله، فلا يقطع منه، وخبر «ان الذين كفروا» محذوف، اي: هلكوا.
 {والباد} [] تام في الوجوه كلها.
 {بظلم} [] ليس بوقف؛ لان جواب الشرط لم يات بعد.
 {اليم ()} [] تام.
 {مكان البيت} [] ليس بوقف؛ لان ما بعده منصوب بما قبله، بناء علي ان الخطاب في قوله: «ان لا تشرك بي شيءا»؛ لابراهيم  عليه السلام ، وعلي انه خطاب لنبينا عليه الصلاة والسلام يكون الوقف علي «البيت» تاما ().
 {شيءا} [] حسن؛ علي استءناف الامر. 
 {السجود ()} [] كاف، وقرا الحسن وابن محيصن (): «اذن»، بالمد والتخفيف؛ بمعني: اعلم، وليس بوقف علي ان الخطاب لابراهيم وعليه، فلا يوقف من قوله: «واذ بوانا لابراهيم»، الي «عميق»، فلا يوقف علي «شيءا»، ولا علي «السجود»؛ لان العطف يصيرهما كالشء الواحد، ولا يوقف علي الحجج؛ لان «ياتوك» جواب الامر.
 {عميق ()} [] جاءز، وقيل: لا يجوز؛ لان ما بعد اللام سبب في ايجاب ما قبلها.
 {(منافعلهم} [] ليس بوقف؛ لان ما بعده معطوف علي ما قبله.
 {من بهيمة الانعام} [] جاءز، ومثله: «الباءس الفقير»، وكذا «بالبيت العتيق»، وقيل: الوقف علي ذلك بجعل ذلك مبتدا حذف خبره، او خبر مبتدا محذوف، اي: وذلك لازم لكم، او الامر ذلك، او الزموا ذلك الامر الذي وصفناه، ثم تبتدء: ومن يعظم حرمات الله فهو خير له عند ربه ().
 و {عند ربه} [] جاءز، ومثله: «يتلي عليكم»، وكذا «الاوثان»، وكذا «قول الزور»، وفيه الفصل بين الحال وذيها؛ لان قوله: «حنفاء» حال من فاعل (اجتنبوا)، والاولي وصله، ومثله الوقف علي «لله»؛ لان «غير مشركين به» حال مءكدة، اذ يلزم من كونهم «حنفاء» عدم الاشراك.
 {غير مشركين به} [] تام؛ للابتداء بالشرط.
 {من السماء} [] ليس بوقف؛ لان قوله: «فتخطفه الطير» بيان لما قبله، ولا يوقف علي «الطير»؛ لان «او تهوي» عطف علي (تخطفه).
 {سحيق ()} [] جاءز، وقيل: الوقف علي ذلك اشارة الي اجتناب الرجس والزور .
 {شعاءر الله} [] ليس بوقف؛ لان جواب الشرط لم يات بعد.
 {القلوب ()} [] كاف.
 {اجل مسمي} [] جاءز.
 {العتيق ()} [] تام.
 {بهيمة الانعام} [] حسن.
 {اله واحد} [] جاءز.
 {فله اسلموا} [] حسن.
 {المخبتين ()} [] في محل «الذين» الحركات الثلاث: الرفع والنصب والجر؛ فالرفع من وجهين، والنصب من وجه، والجر من ثلاثة؛ فان رفعت «الذين» خبر مبتدا محذوف، كان الوقف علي 
 «المخبتين» تاما، وكذا ان رفع مبتدا، والخبر محذوف، او جعل في محل نصب بتقدير: اعني، وليس بوقف ان جعل نعتا، او بدلا او بيانا لما قبله.
 {علي ما اصابهم} [] ليس بوقف؛ لان قوله: «والمقيمي الصلاة» عطف علي «الصابرين».
 {ينفقون ()} [] تام، ورسموا: «والمقيمي» بياء كما تري، وانتصب «والبدن» علي الاشتغال؛ فكانه قال: وجعلنا البدن جعلناها، كما قال الشاعر:
 اصبحت لا احمل السلاح ولا ... املك راس البعير ان نفرا
 والذءب اخشاه ان مررت به ... وحدي واخشي الرياح والمطرا ()
 {من شعاءر الله} [] حسن، ومثله: «لكم فيها خير»، ومثله: «صواف»، وتقرا: «صواف» علي ثلاثة اوجه:
    
 «صواف» بتشديد الفاء ()، اي: مصطفة؛ لانها تصف ثم تنحر.
    
 و «صوافي» بالياء، جمع: صافية، اي: خوالص لله، وبها قرا الحسن ().
    
 و «صوافن» بالنون، واحدتها: صافنة، اي: ان البدن تنحر قاءمة، وتشد واحدة من قواءمها، فتبقي قاءمة علي ثلاثة، وبها قرا ابن عباس ()، فعند الحسن يوقف علي الياء، وعند ابن عباس يوقف علي النون، والباقون: يقفون علي الفاء مشددة (). 
 {جنوبها} [] ليس بوقف؛ لان ما بعد الفاء جواب (اذا)، وكذا «فكلوا منها»؛ لان «واطعموا القانع والمعتر» معطوف علي «فكلوا»، ومثله: «سخرناها لكم»؛ لان قوله: «لعلكم تشكرون»؛ معناه: لتشكروا، فانما وقع التسخير للشكر.
 {والمعتر} [] حسن.
 {تشكرون ()} [] تام.
 {منكم} [] حسن.
 {علي ما هداكم} [] جاءز.
 {المحسنين ()} [] تام.
 {عن الذين امنوا} [] كاف.
 {كفور ()} [] تام.
 {بانهم ظلموا} [] حسن.
 {لقدير ()} [] في محل «الذين» الحركات الثلاث: الرفع والنصب والجر؛ فالرفع من وجهين، والنصب من وجه، والجر من ثلاثة، فان رفع خبر مبتدا محذوف، اي: هم الذين، او رفع بالابتداء، والخبر محذوف، او نصب بتقدير: اعني، كان تاما، وليس بوقف ان جعل بدلا من «الذين» الاول ، او نعتا «للذين يقاتلون» فلا يفصل بين البدل والمبدل منه، ولا بين النعت والمنعوت بالوقف.
 {بغير حق} [] ليس بوقف؛ لان قوله: «الا ان يقولوا» موضعه جر صفة ل «حق» فلا يقطع عنه؛ كانه قال: ما اخرجوا من ديارهم، الا بقولهم: ربنا الله.
 {ببعض} [] ليس بوقف؛ لان قوله: «لهدمت» جواب: «لو».
 {وصلوات} [] جاءز، ثم تبتدء: «ومساجد» باضمار خبر، اي: ومساجد كذلك، او باعادة الفعل للتخصيص، اي: لهدمت؛ لان الله خص المساجد بذكر الله، او لان الضمير بعد يعود عليها خاصة كما عاد علي الصلاة في قوله: «واستعينوا بالصبر والصلاة»، وانها ومن جعل الضمير عاءدا علي جميعها؛ اراد: لهدمت كناءس زمن موسي، وصوامع، وبيع زمن عيسي، ومساجد زمن نبينا، وكان الوقف «كثيرا».
 {من ينصره} [] حسن.
 {عزيز ()} [] تام، ان رفع «الذين» بالابتداء، والخبر محذوف، او عكسه، وحسن ان جر بدلا او نعتا لما قبله.
 {المنكر} [] حسن.
 {الامور ()} [] تام.
 
 {واصحاب مدين} [] حسن.
 {وكذب موسي} [] كاف.
 {ثم اخذتهم} [] حسن؛ للابتداء بالتهديد والتوبيخ.
 {نكير ()} [] كاف.
 {وهي ظالمة} [] جاءز.
 {علي عروشها} [] ليس بوقف؛ لان قوله: «وبءر معطلة» مجرور عطفا علي من «قرية» ولا يوقف علي «معطلة»؛ لان قوله: «وقصر» مجرور عطفا علي «بءر».
 {وقصر مشيد ()} [] كاف، وقيل: تام.
 {يسمعون بها} [] جاءز، وقيل: كاف؛ للابتداء ب (ان) مع الفاء.
 {الابصار} [] ليس بوقف؛ لان «لكن» لابد ان تقع بين متباينين، وهنا ما بعدها مباين لما قبلها.
 {في الصدور ()} [] تام.
 {بالعذاب} [] جاءز.
 {وعده} [] حسن.
 {مما تعدون ()} [] تام.
 {ثم اخذتها} [] حسن.
 {المصير ()} [] تام، ومثله: «مبين»، وكذا «كريم».
 {معاجزين} [] اي: مثبطين، ليس بوقف، وهكذا الي «الجحيم»، وهو: تام؛ لتناهي خبر «الذين».
 {ولا نبي} [] ليس بوقف؛ لان حرف الاستثناء بعده، وهو الذي به يصح معني الكلام.
 {في امنيته} [] حسن.
 {ثم يحكم الله اياته} [] كاف، ومثله: «حكيم» ان علقت اللام بعده بمحذوف، وليس بوقف ان علقت ب «يحكم»، وحينءذ لا يوقف علي «اياته»، ولا علي «حكيم»، ولا علي «مرض» لارتباط الكلام بما بعده؛ لان قوله: «والقاسية» مجرور عطفا علي «للذين في قلوبهم مرض».
 {والقاسية قلوبهم} [] تام.
 {بعيد ()} [] جاءز؛ لكونه راس اية.
 {فيءمنوا به} [] ليس بوقف؛ لان قوله: «فتخبت» منصوب عطفا علي ما قبله.
 {فتخبت له قلوبهم} [] حسن، وقال العماني: لا يوقف من قوله: «الجحيم» الي «فتخبت له
 
 قلوبهم»، الا علي سبيل التسامح لارتباط الكلام بعضه ببعض، وذلك ان اللام في: «ليجعل ما يلقي الشيطان»، (لام كي)، وهي متعلقة بما قبلها، واللام في «وليعلم»، (لام كي) ايضا معطوفة علي اللام الاولي، والمعني: ان الله قد احكم اياته وابطل وسوسة الشيبطان بما القاه علي لسان نبيه؛ ليجعل رجوع النبي عما القاه الشيطان محنة، واختبار للمنافقين والقاسية قلوبهم، وليعلم المءمنون ان القران حق لا يمازجه شء ().
 {الي صراط مستقيم ()} [] تام، ومثله: «عقيم» علي استءناف ما بعده.
 {يحكم بينهم} [] حسن، وان كان ما بعده متصلا بما قبله في المعني؛ لكونه بيانا للحكم.
 {في جنات النعيم ()} [] تام.
 {باياتنا} [] ليس بوقف؛ لان ما بعد الفاء خبر لما قبلها، وانما دخلت الفاء في خبر «الذين» لما تضمن المبتدا معني الشرط، كما في قوله: «ان الموت الذي تفرون منه فانه ملاقيكم»، اراد: من فر من الموت لقيه كقوله:
 ومن هاب اسباب المنية يلفها ... ولو رام ان يرقي السماء بسلم ()
 {مهين ()} [] تام.
 {او ماتوا} [] ليس بوقف؛ لان ما بعده خبر «الذين» وان كان معه قسم محذوف.
 {رزقا حسنا} [] حسن.
 {خير الرازقين ()} [] كاف.
 {يرضونه} [] حسن.
 {حليم ()} [] تام، وقيل: الوقف علي ذلك، اي: ذلك لهم. 
 {ثم بغي عليه} [] ليس بوقف؛ لان الذي بعده قد قام مقام جواب الشرط.
 {لينصرنه الله} [] كاف.
 {غفور ()} [] تام، ولا وقف الي «بصير» فلا يوقف علي «ويولج النهار في الليل»؛ لان (ان) في موضعها جر بالعطف علي ما قبلها.
 {بصير ()} [] تام.
 {الحق} [] ليس بوقف، وكذا لا يوقف علي «الباطل»؛ لان «وان الله» موضعها جر بالعطف علي ما قبلها.
 {بصير ()} [] تام.
 {ماء} [] حسن؛ لان قوله: «فتصبح» ليس في جواب الاستفهام في قوله: «الم تر ان الله انزل من السماء ماء فتصبح الارض مخضرة» لا يتسبب عما دخل عليه الاستفهام، وهي رءية المطر ، وانما تسبب ذلك عن نزول المطر نفسه، فلو كانت العبارة: (انزل من السماء ماء فتصبح الارض مخضرة) ثم دخل الاستفهام لصح النصب. انتهي: شذورا، وان المستقبل لا يعطف علي الماضي، وهو: «الم تر» بل «فتصيح» مستانف، ولو كان جوابا لكان منصوبا ب «ان» كقول جميل بن معمر العدوي الشاعر صاحب بثينة:
 الم تسال الربع الخلاء فينطق ... وهل تخبرنك اليوم بيداء سملق ()
 برفع: ينطق، اي: فهو ينطق.
 {مخضرة} [] كاف.
 {خبير ()} [] تام.
 {وما في الارض} [] حسن. 
 {الحميد ()} [] تام، وكذا «سخر لكم ما في الارض» علي قراءة عبد الرحمن بن هرمز (): «والفلك» بالرفع، والاجماع علي خلافها، وليس بوقف علي قراءة العامة (): «والفلك» بالنصب عطفا علي ما قبله.
 {بامره} [] جاءز.
 {الا باذنه} [] حسن.
 {رحيم ()} [] تام.
 {احياكم ثم يميتكم ثم يحييكم} [] في الثلاث جاءز؛ لان كل جملة من الثلاث مستانفة؛ لان «ثم» لترتيب الاخبار لا لترتيب الفعل، كقوله: «الله الذي خلقكم ثم رزقكم ثم يميتكم ثم يحييكم» فوصل هذه اجود.
 {لكفور ()} [] تام.
 {هم ناسكوه} [] جاءز، ومثله: «في الامر».
 {وادع الي ربك} [] كاف.
 {مستقيم ()} [] تام، ومثله: «تعملون»، وكذا «تختلفون».
 {والارض} [] كاف، وكذا «في كتاب».
 {يسير ()} [] تام.
 {به سلطانا} [] ليس بوقف؛ لان قوله: «وما ليس لهم به علم» موضعه نصب بالعطف علي «ما» الاولي.
 {به علم} [] حسن.
 {من نصير ()} [] تام.
 {بينات} [] ليس بوقف؛ لان ما بعده جواب «اذا».
 {المنكر} [] جاءز، وقيل: كاف؛ علي استءناف ما بعده، وليس بوقف ان جعل جملة مفسرة لما قبلها.
 {عليهم اياتنا} [] كاف.
 {من ذلكم} [] تام؛ ان رفعت «النار» بالابتداء ()، وما بعدها خبرا، وعكسه، اي: هي النار، 
 او بنصبها؛ بتقدير: اعني، وبها قرا الضحاك ()، او نصبت علي اشتغال الفعل عن المفعول، وليس بوقف علي قراءتها بالجر ()؛ بدلا من قوله: «بشر»؛ لانه لا يفصل بين البدل والمبدل منه بالوقف.
 {كفروا} [] حسن.
 {المصير ()} [] تام.
 {فاستمعوا له} [] كاف، وليس بوقف ان جعل ما بعده تفسيرا للمثل الي قوله: «يستنقذوه منه».
 {ولو اجتمعوا له} [] حسن.
 {لا يستنقذوه منه} [] تام؛ لانه اخر المثل، ومثله: «المطلوب».
 {حق قدره} [] كاف .
 {عزيز ()} [] تام.
 {ومن الناس} [] حسن، ومثله: «بصير»، وقيل: كاف؛ لان ما بعده يصلح مستانفا وصفة.
 {وما خلفهم} [] حسن.
 {الامور ()} [] تام.
 {واعبدوا ربكم} [] حسن.
 {وافعلوا الخير} [] ليس بوقف؛ لان (لعل) في التعلق ك (لام كي).
 {تفلحون (()} [] كاف.
 {حق جهاده} [] كاف، ومثله: «اجتباكم».
 {من حرج} [] كاف؛ ان نصب «ملة» بالاغراء، اي: الزموا ملة ابيكم، وليس بوقف ان نصب بنزع الخافض، او نصب «ملة» بدلا من «الخير»، وقال الفراء: لا يوقف علي «من حرج»؛ لان التقدير عنده ك «ملة ابيكم» ثم حذفت الكاف؛ لان معني: وما جعل عليكم في الدين من حرج؛ وسع الله عليكم الدين كملة ابيكم، فلما حذفت الكاف انتصبت «ملة» لاتصالها بما قبلها، والقول بان «ملة» منصوبة علي الاغراء اولي؛ لان حذف الكاف لا يوجب النصب، وقد اجمع النحويون: انه اذا قيل زيد كالاسد، ثم حذفت الكاف، لم يجز النصب، وايضا فان قبله «اركعوا واسجدوا» فالظاهر: ان يكون 
 هذا علي الامر، اي: اتبعوا ملة ابيكم ابراهيم، فالي الاول ذهب ابن عباس ومجاهد، قالا: قوله «هو سماكم»؛ اي: الله سماكم المسلمين من قبل، اي: من قبل هذا القران في الكتب كلها، وفي الذكر، وفي هذا القران، وقال الحسن: هو، اي: ابراهيم سماكم المسلمين من قبل، يريد في قوله: «ربنا واجعلنا مسلمين لك ومن ذريتنا امة مسلمة لك»، فاذا هو  صلي الله عليه وسلم  سال الله لهم هذا الاسم؛ فعلي الاول الوقف علي «ما هو سماكم المسلمين من قبل»، وفي هذا تام، وعلي الثاني الوقف علي «هو سماكم المسلمين من قبل»، كاف، وعلي الاول تكون اللام في «ليكون الرسول» متعلقة بمحذوف، وهو المختار من وجهين احدهما: ان قوله: «ربنا واجعلنا مسلمين لك .. » الاية ليس تسمية وانما هو دعاء، والثاني: ورود الخبر ان الله سمانا المسلمين كما روي انه  صلي الله عليه وسلم  قال: «تداعوا بدعوي الله الذي سماكم المسلمين المءمنين عباد الله» ()، وليس بوقف، اي: علي الاول ان علقت اللام بما قبلها. انظر: النكزاوي، وفي كون ابراهيم دعا الله فاستجاب له وسمانا المسلمين ضعف، اذ قوله: «وفي هذا» عطف علي «من قبل» وهذا اشارة الي القران، فيلزم ان ابراهيم سمانا المسلمين في القران، وهو غير واضح؛ لان القران نزل بعد ابراهيم بمدد؛ فبذلك ضعف رجوع الضمير الي ابراهيم، والمختار رجوعه الي الله تعالي، ويدل له قراءة ابي: «سماكم المسلمين» بصريح الجلالة ()، اي: سماكم في الكتب السابقة، وفي هذا القران ايضا، وهذا غاية في بيان هذا الوقف،،، ولله الحمد 
 {الناس (} [] كاف، وقيل: تام.
 {واتوا الزكاة} [] جاءز ومثله: «هو مولاكم»، وقيل: كاف.
 اخر السورة تام.
 
  سورة المءمنون
 مكية
 [ايها:] ماءة اية وثمان عشرة اية في الكوفي، وتسع عشرة في عد الباقين، اختلافهم في اية واحدة: واخاه هارون لم يعدها الكوفي.
  وكلمها: الف وثمانماءة واربعون كلمة.
  وحروفها: اربعة الاف وثمانماءة وحرفان.
 وفيها مما يشبه الفواصل وليس معدودا باجماع موضعان:
    
 {وفار التنور} []
    
 {ذا عذاب شديد} []
 {قد افلح المءمنون ()} [] تام؛ ان جعل «الذين» مبتدا، خبره «اولءك هم الوارثون»، وكذا ان جعل خبر مبتدا محذوف تقديره: هم الذين، وكذا ان نصب بتقدير: اعني، وعلي الاول لا وقف من قوله: «خاشعون» الي «الوارثون»، ومن حيث كونها رءوس ايات يجوز ولا يءثر فيها كون كل منها معطوفا، او نعتا، او بدلا؛ لان الوقف علي رءوس الايات سنة متبعة كما تقدم.
 {الفردوس} [] تام؛ ان جعل ما بعده جملة مستقلة من مبتدا وخبر، وليس بوقف ان جعل في موضع نصب حالا.
 {خالدون ()} [] تام في الحديث: «ما منكم من احد، الا له منزلان، منزل في الجنة، ومنزل في النار، فان مات ودخل النار ورث منزله اهل الجنة، وذلك قوله: (هم الوارثون)» ()، ذكره البغوي بغير سند ().
 {من طين ()} [] كاف، والمراد بالانسان: ادم دون ذريته؛ لانه انسل من طين، وقوله: «جعلناه نطفة» عاءد علي ذريته، وان كان لم يذكر لشهرته، وليس عاءدا علي ادم؛ لانه لم يخلق من نطفة، بل انسل من الطين، اي: استخرج منه، قال امية بن ابي الصلت: 
 خلق البرية من سلالة منتن ... والي السلالة كلها سنعود ()
 {في قرار مكين ()} [سورة المءمنون اية: ] جاءز، ومثله: «لحما» وكذا «اخر».
 {الخالقين ()} [] كاف، ومثله: «لميتون».
 {تبعثون ()} [] تام.
 {طراءق} [] حسن.
 {غافلين ()} [] كاف.
 {في الارض} [] حسن.
 {لقادرون ()} [] كاف.
 {واعناب} [] جاءز، ومثله: «كثيرة».
 {ومنها تاكلون ()} [] كاف؛ علي ان قوله: «وشجرة» منصوب بفعل مضمر تقديره: وانشانا شجرة، او انبتنا شجرة، وليس بوقف ان عطفت «شجرة» علي «جنات»، وحينءذ لا يوقف علي «واعناب» ولا علي «كثيرة» ولا علي «تاكلون».
 {للاكلين ()} [] تام.
 {لعبرة} [] حسن، وقيل: كاف؛ علي استءناف ما بعده، وليس بوقف ان جعل ما بعده متعلقا بما قبله.
 {في بطونها} [] حسن، ومثله: «كثيرة».
 {تاكلون ()} [] جاءز.
 {تحملون ()} [] تام.
 {اعبدوا الله} [] حسن، ومثله: «من اله غيره» علي القراءتين؛ جره نعتا لا علي اللفظ، ورفعه 
 نعتا له علي المحل ().
 {تتقون ()} [] كاف، ورسموا: {الملءا} []، هنا بواو والف بعد اللام كما تري.
 {مثلكم} [] ليس بوقف؛ لان قوله: «يريد» صفة «بشر» فلا يقطع عنه.
 {ان يتفضل عليكم} [] حسن.
 {ملاءكة} [] جاءز؛ للابتداء بالنفي.
 {الاولين ()} [] كاف؛ علي استءناف ما بعده.
 {به جنة} [] جاءز.
 {حتي حين ()} [] كاف، ومثله: «كذبون».
 {ووحينا} [] حسن.
 {التنور} [] ليس بوقف؛ لان قوله: «فاسلك» جواب «فاذا»، وليس راس اية.
 {واهلك} [] وصله اولي؛ لان حرف الاستثناء هو الذي به يصح معني الكلام، فما بعده كالعلة لما قبله، ومنهم من وقف علي «زوجين اثنين» ثم قال: «واهلك»، اي: واهلك الله، من الهلاك جميع الخلاءق، الا من سبق عليه القول منهم، فما بعد الاستثناء خارج مما قبله؛ يعني: ابليس.
 {القول منهم} [] كاف.
 {ظلموا} [] جاءز؛ لان انهم كالتعليل لما قبلها.
 {مغرقون ()} [] كاف، ومثله: «من القوم الظالمين» علي استءناف ما بعده، وجاءز ان عطف علي ما قبله.
 {خير المنزلين ()} [] كاف.
 {لايات} [] جاءز.
 {لمبتلين ()} [] كاف، ومثله: «قرنا اخرين».
 {رسولا منهم} [] ليس بوقف.
 {من اله غيره} [] حسن، وقيل: كاف؛ علي استءناف ما بعده.
 {تتقون ()} [] كاف، ولا وقف من قوله: «وقال الملا من قومه» الي «مما تشربون»، فلا يوقف علي «بلقاء الاخرة» لعطف ما بعده علي ما قبله، ولا علي «واترفناهم في الحياة الدنيا»؛ لان قوله: ما هذا مقول الذين كفروا، فلا يفصل بين القول والمقول، ولا علي «بشر مثلكم»؛ لان ما بعده صفة «بشر» فلا 
 يقطع منه.
 {مما تشربون ()} [] كاف، ومثله: «الخاسرون».
 {وعظاما} [] ليس بوقف؛ لان قوله: «انكم مخرجون» متعلق بما قبله.
 {مخرجون ()} [] جاءز، وقيل: لا وقف الي «بمءمنين»؛ لان الكلام مقول الكفار، فلا يقطع بعضه عن بعض، وان «هيهات هيهات» انكار واستبعاد للبعث بعد ان ماتوا بقولهم: «وما نحن له بمءمنين»، اي: بمصدقين، وفي «هيهات» لغات:
 احداها: (هيهات) بفتح التاء فيهما ().
 الثانية: (هيهات هيهات) بضم التاء فيهما ().
 الثالثة: (هيهات هيهات) بكسر التاء فيهما ().
 الرابعة: (هيهات هيهات) بسكون التاء فيهما ().
 الخامسة: (هيهات هيهات) بالكسر والتنوين، بتقديره: نكره؛ لان اسماء الافعال ما نون منها كان نكرة، وما لم ينون كان معرفة، نحو: (صه) بالسكون، و (صه) بالتنوين ().
 السادسة: (هيهات هيهات) بالرفع والتنوين ().
 السابعة: (هيهاتا هيهاتا) بالنصب والتنوين (). 
 {توعدون ()} [] جاءز، ومثله: «بمبعوثين».
 {بمءمنين ()} [] كاف؛ لانه اخر كلام الكفار، وليس من قوله: «وقال الملا من قومه الذين كفروا وكذبوا» الي قوله: «وما نحن له بمءمنين»، وقف يختار؛ لان ما بينهما حكاية عن قول الكفار، ويجوز الوقف فيما بينهما علي رءوس الاي.
 {بما كذبون ()} [] حسن.
 {نادمين ()} [] كاف.
 {بالحق} [] ليس بوقف لمكان الفاء.
 {غثاء} [] حسن.
 {الظالمين ()} [] كاف، ومثله: «قرونا اخرين»، وكذا «يستاخرون»، و «ثم» لترتيب الاخبار فيبتدا بها اذا جاءت في اول قصة اخري كما هنا.
 {تتري} [] حسن؛ لان «كل ما» يبتدا بها.
 {كذبوه} [] تام، عند الاخفش.
 {بعضا} [] جاءز.
 {احاديث} [] حسن.
 {لا يءمنون ()} [] تام.
 {مبين ()} [] ليس بوقف؛ لان حرف الجر وما بعده موضعه نصب ب «ارسلنا»، فهو
 متصل به.
 {قوما عالين ()} [] كاف.
 {مثلنا} [] جاءز.
 {عابدون ()} [] كاف.
 {من المهلكين ()} [] تام.
 {يهتدون ()} [] كاف؛ علي استءناف ما بعده خبرا اخر، وجاءز ان عطف علي ما قبله.
 {اية} [] كاف، وانما قال اية، ولم يقل ايتين؛ لانها قصة واحدة، وهي ولادتها له من غير ذكر.
 {ومعين ()} [] تام؛ للابتداء بياء النداء، بناء علي ان ما بعده خطاب لنبينا وحده، كقوله: «الذين قال لهم الناس»، وهو نعيم بن مسعود الاشجعي وحده؛ ليدل بذلك علي ان الرسل امروا باكل الطيبات؛ وهو الحلال الذي طيبه الله لاكليه، وليس بوقف لمن قال: انه خطاب لعيسي ابن مريم،
 
 واحتج بما روي ان عيسي كان ياكل من غزل امه، ومن حيث كونه راس اية يجوز.
 {صالحا} [] جاءز، وقيل: كاف.
 {عليم ()} [] تام؛ لمن قرا: «وان هذه»، بكسر الهمزة عطفا علي «اني»، وهو حمزة والكساءي وعاصم، وليس بوقف لمن قرا: بفتحها ()؛ عطفا علي «بما» فتكون ان في موضع خفض، والتقدير: عليم بان هذه، وبها قرا ابن كثير ونافع وابو عمرو، وان نصبت باضمار فعل نحو: واعلموا ان، فتكون (ان) في موضع نصب، كان الوقف علي «عليم» جاءزا.
 {امة واحدة} [] كاف؛ علي استءناف ما بعده.
 {فاتقون ()} [] كاف.
 {زبرا} [] حسن.
 {فرحون ()} [] احسن منه.
 {حتي حين ()} [] كاف، وقد اختلف في (ما) من «انما» هل هي مصدرية؟ حرف واحد، او موصولة؟ فهي حرفان؛ فعلي انها مصدرية حرف واحد هو مذهب الكساءي، رواه خلف عنه، وعليه يوقف علي «بنين»؛ لانه قد حصل بعد فعل الحسبان نسبة من مسند ومسند اليه، نحو: حسبت انما ينطلق زيد وانما يضرب بكر، فينسبك منها ومما بعدها مصدر هو اسم ان، والجملة خبر ان، وقيل: لا يوقف علي «بنين»؛ لان «نسارع» خبر (ان) علي ان «انما» حرفان، و (ما) بمعني: الذي، بدليل عود الضمير من «به» اليها، وهي اسم (ان) وصلتها «نمدهم» و «من مال» حال من الموصول، او بيان له، و «نسارع» خبر (ان) والعاءد محذوف، اي: نسارع لهم به، او فيه، قاله ابو اسحاق وهشام بن معاوية الضرير، كما تقول: ابو سعيد، رويت عن الخدري؛ تريد رويت عنه، فاظهرت الهاء فقلت عن الخدري، قال الشاعر:
 لا اري الموت يسبق الموت شء ... نغص الموت ذا الغني والفقيرا () 
 اي: لا اري الموت يسبقه شء، فاظهر الهاء، وقول من قال: ان «يحسبون» يتعدي لمفعولين، وان «نسارع لهم» المفعول الثاني، والتقدير: ايحسبون ان امدادنا لهم بالمال والبنين مسارعة منا لهم في الخيرات فغلط، ومخالفة لقول ابي حاتم ان (ان) اذا وقعت بعد حسب واخواتها لم تحتج الي مفعول ثان، قال تعالي: «يحسب ان ماله اخلده»، وهنا قد نابت (ان) عن المفعولين، فان كافية عن اسم «يحسبون» وخبرها، فلا يءتي بمفعول ثان بعد (ان)، وقرا (): «انما» بكسر الهمزة؛ علي الاستءناف، وعليها فمفعولا (حسب) محذوفان اقتصارا، او اختصارا، وقرا (): «يسارع» بالتحتية، اي: يسارع الله، او يسارع لهم الذي يمدون به، وقرء: «يسارع» بالتحتية مبنيا للمفعول، وفي «الخيرات» ناءب الفاعل، والجملة خبر (ان)، والعاءد محذوف، اي: يسارع لهم به، وقرء (): «نسرع لهم» بالنون؛ من اسرع والحذف اختصارا ما كان لدليل، والحذف اقتصارا ما كان لغير دليل، وهذا غاية في بيان هذا الوقف،،، ولله الحمد
 {في الخيرات} [] كاف.
 {بل لا يشعرون ()} [] تام، وهو اضراب عن الحسبان المستفهم عنه استفهام تقريع، ولا وقف من قوله: «ان الذين هم من خشية ربهم» الي «راجعون»؛ لان «اولءك يسارعون» خبر «ان الذين هم من خشية ربهم» وما بينهما من رءوس الاي جاءز لطول الكلام، والنفس يضيق عن بلوغ التمام فلا يوقف علي «مشفقون»، ولا علي «يءمنون»، ولا علي «لا يشركون»، ولا علي «راجعون»، لعطف الاسماء المنصوبة علي اسم «ان».
 {سابقون ()} [] تام.
 {الا وسعها} [] حسن، ومثله: «ينطق بالحق».
 {لا يظلمون ()} [] كاف.
 {من هذا} [] حسن، ان جعل الضمير في «ولهم اعمال» للكفار، وتام ان جعل كناية عن المءمنين للفصل بين الكفار والمسلمين. 
 {عاملون ()} [] كاف، ومثله: «يجارون».
 {لا تجاروا اليوم} [] حسن، وكذا «لا تنصرون».
 {تتلي عليكم} [] حسن.
 {تنكصون ()} [] كاف؛ ان نصب «مستكبرين» حالا من فاعل «تهجرون»، وليس بوقف ان جعل حالا من الضمير في «تنكصون» ووقف ابو حاتم علي «مستكبرين» علي ان الضمير في «به» يرجع الي البيت، واستكبارهم به انهم احق به من غيرهم، وانهم ولاته يفتخرون بذلك، وكذا ان جعل من صلة «سامرا»؛ لانهم كانوا يسمرون حول البيت بذكر القران والطعن فيه، ولا يطوفون بالبيت، ومن جعل الضمير في «به» يرجع الي القران، وقف علي «تنكصون»؛ اي: يجعلون سمرهم وحديثهم في القران، ثم يبتدا: «مستكبرين به»، اي: بالقران، واستكبارهم به انهم اذا سمعوه كذبوه وطعنوا فيه.
 {تهجرون ()} [] تام.
 {الاولين ()} [] كاف، ومثله: «منكرون»، وكذا «جنة».
 {بالحق} [] حسن.
 {كارهون ()} [] كاف، وكذا «من فيهن».
 {بذكرهم} [] حسن.
 {معرضون ()} [] صالح.
 {خرجا} [] جاءز.
 {خير الرازقين ()} [] كاف، ومثله: «مستقيم»، وكذا «لناكبون»، و «يعمهون»، «وما يتضرعون».
 {مبلسون ()} [] تام.
 {والافءدة} [] كاف، وكذا «ما تشكرون».
 {في الارض} [] حسن.
 {تحشرون ()} [] كاف.
 {ويميت} [] حسن، ومثله: «النهار».
 {افلا تعقلون ()} [] تام.
 {الاولون ()} [] حسن، ومثله: «لمبعوثون».
 {هذا من قبل} [] كاف.
 {اساطير الاولين ()} [] تام.
 {تعلمون ()} [] حسن.
 
 {((} [] احسن منه، وقال ابو عمرو: كاف.
 {تذكرون ()} [] كاف.
 {العظيم ()} [] حسن.
 {سيقولون لله} [] احسن منه.
 {تتقون ()} [] كاف.
 {تعلمون ()} [] حسن.
 {سيقولون لله} [] احسن منه.
 {تسحرون ()} [] كاف.
 {بالحق} [] جاءز.
 {لكاذبون ()} [] تام.
 {من اله} [] جاءز؛ لانه نفي عام يفيد استغراق الجنس، ولهذا جاء (اذن لذهب كل اله بما خلق).
 {علي بعض} [] كاف؛ للابتداء بالتنزيه.
 {يصفون ()} [] تام، لمن قرا: «عالم» بالرفع، وهو نافع وحمزة والكساءي؛ علي انه خبر مبتدا محذوف، اي: هو عالم، وجاءز؛ لمن قرا: بالجر، وهم الباقون ().
 {يشركون ()} [] تام.
 {ما يوعدون ()} [] ليس بوقف؛ لان قوله: «فلا تجعلني» جواب الشرط، وهو «اما»؛ لانها كلمتان: (ان) التي للشرط، ودخلت عليها (ما)، وهذه خلاف (اما) التي للعطف؛ فانها كلمة واحدة، و «رب» منادي معترض بين الشرط وجوابه.
 {الظالمين ()} [] تام.
 {لقادرون ()} [] كاف.
 {السيءة} [] حسن، والمراد «بالتي هي احسن»: شهادة ان لا اله الا الله، و «السيءة»: الشرك.
 {يصفون ()} [] كاف.
 {ان يحضرون ()} [] تام، ومثله: «كلا»؛ لانها بمعني: الردع والزجر عن طلب الرجوع الي الدنيا، وفي الحديث: «اذا عاين المءمن قالت له الملاءكة نرجعك، فيقول: الي دار الهموم والاحزان، بل 
 قدوما الي الله تعالي، واما الكافر فيقول: ارجعون لعلي اعمل صالحا، فلا يجاب لما سال ولا يغاث» ().
 {هو قاءلها} [] حسن.
 {يبعثون ()} [] تام، ومثله: «ولا يتساءلون»، و «المفلحون»، و «خالدون» علي استءناف ما بعده، وليس بوقف ان جعل ما بعده جملة في موضع الحال مما قبله.
 {كالحون ()} [] تام.
 {تكذبون ()} [] حسن، ومثله: «شقوتنا».
 {ضالين ()} [] كاف، ومثله: «ظالمون»، وكذا «ولا تكلمون».
 {وارحمنا} [] جاءز.
 {الراحمين ()} [] ليس بوقف لمكان الفاء بعده.
 {ذكري} [] حسن، اي: شغلكم الاستهزاء بعمار وسلمان وبلال، لا ان المءمنين انسوهم ذكر الله.
 {تضحكون ()} [] كاف، ومثله: «بما صبروا» لمن كسر همزة «انهم»؛ علي الاستءناف، وهي قراءة الكوفيين الا عاصما، وليس بوقف لمن فتحها ()؛ لانها متعلقة بما قبلها، اذ هي المفعول الثاني ل (جزيت)، بتقدير: اني جزيتهم اليوم بصبرهم الفوز بالجنة مع الامن من الاهوال فلا يقطع ذلك.
 {الفاءزون ()} [] تام.
 {عدد سنين ()} [] جاءز، وقيل: كاف.
 {او بعض يوم} [] جاءز.
 {العادين ()} [] تام، ومثله: «تعلمون»؛ للابتداء بالاستفهام.
 {عبثا} [] ليس بوقف؛ لعطف ما بعده علي ما قبله.
 {لا ترجعون ()} [] تام.
 {الملك الحق} [] حسن، ومثله: «الا هو»؛ ان رفع «رب»؛ علي الابتداء، او خبر مبتدا محذوف، وليس بوقف ان رفع بدلا من «هو».
 {الكريم ()} [] تام. 
 {اخر} [] ليس بوقف؛ لان ما بعده صفة لها فلا يفصل بينهما بالوقف، وكذا لايوقف علي «لا برهان له به»؛ لان الفاء في «فانما»، جواب «من».
 {عند ربه} [] كاف.
 {الكافرون ()} [] تام.
 {وارحم} [] جاءز.
 اخر السورة تام.
 
  سورة النور
 مدنية
 [ايها:] وهي ستون وايتان في المدنيين، والمكي واربع في عد الباقين، اختلافهم في ايتين:
 {بالغدو والاصال ()} []، و {يذهب بالابصار ()} []، وهو الثاني، لم يعدهما المدنيان والمكي، وكلهم عدا: {القلوب والابصار ()} [].
  وكلمها: الف وثلاثماءة وست عشرة كلمة.
  وحروفها: خمسة الاف وستماءة وثمانون حرفا.
 وفيها مما يشبه الفواصل، وليس معدودا باجماع موضعان: «لهم عذاب اليم» [] بعده «في الدنيا والاخرة»، «ولو لم تمسسه نار» [].
 يجوز في «سورة» الرفع والنصب، فبالرفع قرا الامصار ()؛ علي الابتداء، او خبر مبتدا محذوف، اي: هذه سورة، وقرا عيسي بن عمر (): بالنصب؛ علي الاشتغال، اي: انزلنا سورة انزلناها، او بتقدير: اتل سورة، وسوغ الابتداء بالنكرة الوصف المقدر؛ كانه قيل: سورة معظمة انزلناها.
 و {انزلناها} [] جاءز؛ ان كان ما بعده مستانفا، واما الوقف علي «وفرضناها»؛ فان جعل «لعلكم تذكرون» متصلا ب «انزلنا» حسن الوقف عليه، وان جعل متصلا ب «فرضناها» لا يحسن الوقف عليه.
 {مءة جلدة} [] حسن.
 {في دين الله} [] ليس بوقف؛ لان الشرط الذي بعده، ما قبله قد قام مقام جوابه، وهو فعل النهي.
 {واليوم الاخر} [] حسن .
 {من المءمنين ()} [] كاف.
 {او مشركة} [] جاءز، ومثله: «او مشرك».
 {علي المءمنين ()} [] تام. 
 {ثمانين جلدة} [] جاءز، ان كان القاذف حرا، وان كان عبدا اربعين، ولابد ان يكون المقذوف عفيفا من الزنا حتي لو زني في عمره مرة واحدة، وقذفه قاذف فلا حد عليه ().
 {ابدا} [] تام؛ ان جعل الاستثناء من قوله: «الفاسقون» بناء علي ان شهادة القاذف لا تقبل وان تاب، وليس بوقف ان جعل الاستثناء من قوله: «ولا تقبلوا لهم شهادة ابدا» بناء علي ان شهادة القاذف تقبل اذا تاب وان بالتوبة يرتفع اسم الفسق عنه، وسواء تاب بعد اقامة الحد عليه او قبله، لقوله: «الا الذين تابوا» وحاصله: ان الفاسق اما ان يجء تاءبا، واقيم عليه الحد وتاب، او لم يحد ولم يتب ولم يحد، او حد ولم يتب، فالاول: تقبل شهادته مطلقا؛ لانه زال عنه اسم القذف وزال ما ترتب عليه من رد الشهادة، والثاني والثالث: لا تقبل مطلقا، والرابع: اختلف فيه مالك والشافعي واصحاب الراي؛ فمالك يقول: بقبول شهادته في غير ما حد فيه بخصوصه، والشافعي يقول: بقبول شهادته وان فيما حد فيه؛ لان الحدود عنده كفارات للذنوب، واصحاب الراي يقولون: لا تقبل شهادة المحدود وان تاب ().
 {غفور رحيم ()} [] تام؛ علي ساءر الاوجه.
 {الا انفسهم} [] ليس بوقف؛ لان قوله: «فشهادة احدهم» وما بعده خبر «والذين»، ومثله في عدم الوقف «اربع شهادات بالله»؛ لان (ان) جواب القسم، فانها وان كانت مكسورة فان الفعل الاول قد عمل في موضعها، ورفع «اربع» ونصبه يستوي الوقف، قرا العامة (): «اربع» بالنصب علي المصدر، والعامل فيه «شهادة» والناصب للمصدر مصدر مثله، وقرا الاخوان وحفص (): برفع «اربع» خبر قوله: «فشهادة» او «فشهادة» خبر مبتدا محذوف، اي: فالحكم، او الواجب عليه شهادة، او شهادة فاعل بفعل مقدر، اي: فيكفي شهادة (). 
 {الصادقين ()} [] كاف، لمن قرا (): «والخامسة» بالرفع؛ علي الابتداء والخبر فيما بعد، وجاءز لمن نصبها عطفا علي «اربع شهادات»، وبها قرا عاصم ().
 {لعنة الله عليه} [] ليس بوقف؛ لان ما بعده شرط فيما قبله.
 {الكاذبين ()} [] كاف، ومثله: «لمن الكاذبين».
 فمن قرا (): {والخامسة} [] بالرفع؛ علي الابتداء والخبر فيما بعده، كان الوقف علي «الكاذبين» كافيا، ومن قرا (): «والخامسة» بالنصب؛ عطفا علي «اربع» كان جاءزا؛ لكونه راس اية.
 {الصادقين ()} [] تام.
 {ورحمته} [] ليس بوقف؛ لان قوله بعد «وان الله» في موضع رفع عطفا علي ما قبله، وجواب «لولا» محذوف، تقديره: لاهلككم، ونظيره قول امرء القيس:
 فلو انها نفس تموت جميعة ... ولكنها نفس تساقط انفسا ()
 اراد: لو ماتت نفسي في مرة واحدة لاسترحت، ولكنها تخرج قليلا قليلا.
 {تواب حكيم ()} [] تام.
 {لا تحسبوه شرا لكم} [] جاءز، وقيل: كاف.
 {خير لكم (} [] كاف، ومثله: «من الاثم».
 {عظيم ()} [] تام، قرا العامة (): «كبره» بكسر الكاف وضمها، وقيل: الضم في السن 
 والكسر، الا ثم يقال: في المضموم: كبر القوم، اي: اكبرهم سنا، او مكانة، قاله السمين. والمشهور: انه عبد الله بن ابي ابن سلول وسلول ام ابيه ().
 {بانفسهم خيرا} [] ليس بوقف؛ لان قوله: «وقالوا» عطف علي «ظن» داخل تحت «لولا» التحضيضية، اي: هلا ظنوا وقالوا، وفي الاية تنبيه، ودليل علي ان حق المءمن اذا سمع قالة في حق اخيه ان يبني الامر فيه علي ظن حسن، وان لا يصدق في اخيه قول عاءب، ولا طاعن ().
 {افك مبين ()} [] تام.
 {باربعة شهداء} [] جاءز؛ لان (اذ) اجيبت بالفاء فكانت شرطا في ابتداء حكم، فكانت الفاء للاستءناف.
 {الكاذبون ()} [] كاف.
 {في الدنيا والاخرة} [] ليس بوقف؛ لان جواب (لولا) لم يات بعد.
 {عظيم ()} [] كاف؛ ان علق «اذ» ب (اذكر) مقدرا، وكان من عطف الجمل، وجاءز ان علق بما قبله لكونه راس اية.
 {هينا} [] جاءز؛ علي استءناف ما بعده، وليس بوقف ان علق ما بعده بما قبله؛ لان الواو للحال والوصل اولي.
 {عند الله عظيم ()} [] كاف.
 {بهذا} [] جاءز؛ علي استءناف التنزيه، وليس بوقف ان علق ما بعده بما قبله، وجعل داخلا في القول تحت «لولا» التحضيضية، اي: هلا قلتم سبحانك هذا بهتان عظيم.
 و {عظيم ()} [] كاف.
 {لمثله ابدا} [] ليس بوقف؛ لان ما قبله جواب لما بعده.
 {مءمنين ()} [] كاف.
 {لكم الايات} [] جاءز.
 {حكيم ()} [] تام.
 {لهم عذاب اليم } [] ليس بوقف؛ لتعلق الظرف.
 {في الدنيا والاخرة} [] حسن. 
 {لا تعلمون ()} [] كاف، وجواب «لولا» محذوف، تقديره: «لعاقبكم»، ومن قال: ان قوله: «ما زكا منكم»، جواب «لولا» الاولي، فلا وقف حتي ياتي بجواب الثانية.
 {رحيم ()} [] تام.
 {خطوات الشيطان} [] حسن.
 {والمنكر} [] تام.
 {ابدا} [] جاءز.
 {من يشاء} [] كاف.
 {عليم ()} [] تام.
 {في سبيل الله} [] كاف، ومثله: «وليصفحوا»؛ للابتداء باداة التنبيه، وكذا «ان يغفر الله لكم».
 {رحيم ()} [] تام.
 {والاخرة} [] حسن.
 {عظيم ()} [] كاف؛ ان نصب «يوم تشهد» بمقدر، وليس بوقف ان نصب بقوله: «عذاب»، ورد بانه مصدر قد وصف قبل اخذ متلقاته؛ لان من شرطه ان لا يتبع لان معموله من تمامه، فلا يجوز اعماله لان المصدر، واسم الفاعل اذا وصفا فلا يعملون، فلو اعمل وصفه وهو «عظيم» لجاز، اي: عذاب عظيم قدره يوم تشهد عليهم السنتهم وايديهم وارجلهم.
 {يعملون ()} [] كاف؛ علي استءناف ما بعده، ويكون العامل في «يومءذ»، قوله: «يوفيهم»، وان جعل «يومءذ» بدلا من قوله: «يوم تشهد»، كان جاءزا لكونه راس اية.
 {دينهم الحق} [] جاءز.
 {المبين ()} [] تام.
 {للخبيثين} [] جاءز، ومثله: «للخبيثات»، وكذا «للطيبين»، ومثله: «للطيبات» علي استءناف ما بعده.
 {مما يقولون} [] كاف؛ يعني بذلك عاءشة ام المءمنين وصفوان رضي الله عنهما (). 
 {كريم ()} [] تام؛ للابتداء بياء النداء.
 {علي اهلها} [] حسن.
 {تذكرون ()} [] كاف.
 {حتي يءذن لكم} [] حسن، ومثله: «فارجعوا»، وكذا «ازكي لكم».
 {عليم ()} [] تام.
 {متاع لكم} [] كاف.
 {وما تكتمون ()} [] تام.
 {فروجهم} [] جاءز.
 {ازكي لهم} [] كاف، ومثله: «بما يصنعون»؛ علي استءناف ما بعده، وجاءز ان عطف علي ما قبله، ولا يوقف من قوله: «قل للمءمنين» الي «يصنعون»؛ لان العطف يصير الاشياء كالشء الواحد.
 {الا ما ظهر منها} [] كاف.
 {علي جيوبهن} [] حسن، ولا وقف من قوله: «ولا يبدين زينتهن» الي قوله: «عورات النساء»؛ لان العطف صير المعطوفات ولو كثرت كالشء الواحد، ولكن لضيق النفس عن بلوغ اخر المعطوفات، وعن تمام الكلام، يجوز الوقف علي احدها ثم يبتدء به.
 {علي عورات النساء} [] كاف، ومثله: «من زينتهن»، واعلم ان كل ما في كتاب الله تعالي من «يا ايها» يوقف عليه بالالف ، الا في ثلاثة مواضع يوقف عليها بغير الف: {ايها المءمنون} [] هنا، و {يا ايها الساحر} [] في الزخرف، و {ايها الثقلان ()} [] في الرحمن رسمت هذه الثلاثة بغير الف بعد الهاء اتباعا لمصحف عثمان اكتفاء بالفتحة عن الالف.
 {المءمنون} [] ليس بوقف؛ لان حرف الترجي لا يبتدا به؛ لانه في التعلق ك (لام كي).
 {تفلحون ()} [] تام؛ لتناهي المنهيات، ومثله: «واماءكم».
 {(منفضله} [] حسن.
 {واسع عليم ()} [] تام، ومثله: «من فضله»؛ لان «والذين يبتغون» مبتدا، خبره الجملة.
 {ان علمتم فيهم خيرا} [] كاف، فصلا بين الامرين، وهما: «فكاتبوهم»، «واتوهم»؛ لان قوله: «فكاتبوهم»؛ علي الندب، وقوله: «واتوهم من مال الله» علي الايجاب، وهو قول الشافعي، وليس بوقف علي قول من قال: انهما واجبان، وكذا علي قول من قال: ليس بواجب علي السيد ان يكاتب عبده
 
 ولا ان يعطيه شيءا وانما يستحب له ان يسقط عنه شيءا من اخر نجومه وهو قول الامام مالك، والمراد بقوله «خيرا»: المال، او القوة علي الكسب، او الصلاح، او الامانة، والاية تقتضي عدم الامر عند انتفاء الخيرية، وانتفاء الامر يصدق بالجواز ().
 {الذي اتاكم} [] تام؛ «ان اردن تحصنا»؛ اي: او لم يردن، فمفهوم الشرط معطل؛ لان الاكراه لا يكون مع الارادة، فالنهي عن الاكراه مشروط بارادة التعفف، اما ان كانت مريدة للزنا فلا يتصور الاكراه.
 {ان اردن تحصنا} [] ليس بوقف للام العلة بعده.
 {عرض الحياة الدنيا} [] حسن، وقيل: كاف؛ للابتداء بالشرط.
 {غفور رحيم ()} [] تام، ولا وقف من قوله: «ولقد انزلنا»، الي «للمتقين» فلا يوقف علي «مبينات»، ولا علي «من قبلكم» للعطف في كليهما.
 {للمتقين ()} [] اتم مما قبله.
 {والارض} [] حسن.
 {مصباح} [] كاف، ومثله: «في زجاجة».
 {زيتونة} [] جاءز، ومثله: «ولا غربية»، وقيل: كاف؛ علي استءناف ما بعده، وليس بوقف ان جعل صفة ل «شجرة»؛ لان فيه قطع نعت النكرة وهو قليل.
 {نار} [] حسن، ومثله: «علي نور»، وكذا «من يشاء».
 {الامثال للناس} [] كاف.
 {عليم ()} [] تام؛ ان علق «في بيوت»، ب «يسبح» بعد، اي: يسبح رجال في بيوت، ومثله: ان علق بمحذوف، اي: يسبحوه في بيوت، وليس بوقف ان جعل «في بيوت» حالا للمصباح و (الزجاجة والكوكب)، اي: وهي في بيوت اذن الله في بناءها، وليس «عليم» بوقف ايضا ان جعل «في بيوت» صفة لمشكاة، اي: كمشكاة في بيوت، او صفة لمصباح، او صفة لزجاجة، او تعلق ب «توقد»، وعلي هذه الاقوال كلها لا يوقف علي «عليم».
 {فيها اسمه} [] كاف؛ ان لم تعلق قوله: «في بيوت»، ب «يسبح»، والا فليس بوقف؛ لان ما بعده صفة «بيوت».
 {والاصال ()} [] حسن، لمن قرا: «يسبح» بفتح الموحدة، وبها قرا ابن عامر ()، وليس 
 بوقف لمن كسرها ()، والفاعل «رجال»، وعلي قراءة ابن عامر، ففيها ناءب الفاعل، و «رجال» في جواب سءال مقدر فاعل بفعل مقدر؛ كانه قيل: من المسبح؟ فقيل يسبحه رجال، وعلي قراءة الباقين «يسبح» بكسر الموحدة، فوقفه علي «رجال»، ولا يوقف علي «الاصال» للفصل بين الفعل وفاعله، ثم يبتدء: «لا تلهيهم تجارة»، ومن فتح الباء وقف علي «الاصال»، ثم يبتدء: «رجال»، وابن عامر، قد اخذ القران عن عثمان بن عفان قبل ان يظهر اللحن في لسان العرب.
 {عن ذكر الله} [] ليس بوقف؛ لعطف ما بعده علي ما قبله.
 {وايتاء الزكاة} [] جاءز؛ ان جعل «يخافون» مستانفا، وليس بوقف ان جعل نعتا ثانيا ل «رجال»، او حالا من مفعول «تلهيهم»، و «يوما» مفعول به لا ظرف علي الاظهر، و «تتقلب» صفة ل «يوما».
 {والابصار ()} [] كاف؛ ان علقت اللام في «ليجزيهم» بمحذوف تقديره: فعلوا ذلك ليجزيهم احسن ما عملوا، وقال ابو حاتم السجستاني: اصل ليجزيهم (ليجزينهم) بفتح اللام وبنون توكيد، فحذفت النون تخفيفا، ثم كسرت اللام، واعملت (لام كي)؛ لشبهها لها في اللفظ. اه، وردوا علي ابي حاتم: واجمع اهل اللسان علي ان ما قاله ابو حاتم وقدره في ذلك خطا، لا يصح في لغة ولا قياس، وليست هذه لام قسم، قال ابو جعفر: ورايت الحسن بن كيسان ينكر مثل هذا علي ابي حاتم، ويخطءه فيه ويعيب عليه هذا القول، ويذهب الي انها (لام كي)، وحينءذ لا يوقف علي «الابصار»، والمعني: يسحبون ويخافون ليجزيهم ثوابهم .
 {من فضله} [] كاف.
 {بغير حساب ()} [] تام.
 {الظمان ماء} [] حسن؛ لان «حتي» للابتداء اذا كان بعدها «اذا» الا قوله: «حتي اذا بلغوا النكاح» فانها لانتهاء الابتداء كما تقدم عن السجاوندي.
 {فوفاه حسابه} [] كاف، والضمير في «جاءه»، وفي «لم يجده»، وفي «ووجد»، وفي «عنده»، وفي «فوفاه»، وفي «حسابه» الست ترجع الي «الظمان»؛ لان المراد: به الكافر، قاله الزمخشري. وهو حسن.
 {سريع الحساب ()} [] كاف، لمن جعل، «او» بمعني: الواو، كقوله: «ولا تطع منهم اثما او كفورا»؛ اي: وكفورا، والمعني: وكفرهم كظلمات، وجاءز؛ لمن جعله متصلا بما قبله، وان كان بعده 
 حرف العطف؛ لانه راس اية.
 {يغشاه موج} [] حسن؛ علي استءناف ما بعده، وليس بوقف ان جعل ما بعده جملة في موضع النعت لما قبله.
 {من فوقه سحاب} [] كاف؛ لمن قرا (): «ظلمات» بالرفع منونا علي اضمار مبتدا، اي: هي ظلمات، او «ظلمات» مبتدا، والجملة من قوله: «بعضها فوق بعض» خبر ذكره الحوفي، وفيه نظر اذ لا مسوغ للابتداء بهذه النكرة، وليس بوقف لمن قراه بالجر ()؛ بدلا من «كظلمات» كما رواه ابن القواس وابن فليح، وقرا البزي (): «سحاب ظلمات» باضافة (سحاب)، ل (ظلمات)، جعل الموج المتراكم كالسحاب، وعليها فلا يوقف علي «سحاب».
 {بعضها فوق بعض} [] كاف.
 {لم يكد يراها} [] تام؛ للابتداء بالشرط، ومثله: «فما له من نور».
 {صافات} [] كاف، ومثله: «وتسبيحه».
 {بما يفعلون ()} [] تام؛ ان جعلت الضماءر في «علم صلاته وتسبيحه»، عاءدة علي «كل»، اي: كل قد علم هو صلاة نفسه وتسبيحه، وهو اولي لتوافق الضماءر؛ لان المعني: وهو عليم بما يفعلونه، واظهار المضمر افحم، وانشد سيبويه:
 لا اري الموت يسبق الموت شء ... نغص الموت ذا الغني والفقيرا ()
 وان جعل الضمير في «علم» عاءدا علي الله، وفي «صلاته وتسبيحه» عاءدان علي كل، او بالعكس، اي: علم كل صلاة الله وتسبيحه، اي: اللذين امر الله بهما عباده بان يفعلا كاضافة الخلق الي الخالق كان الوقف علي تسبيحه.
 {والارض} [] حسن. 
 {المصير ()} [] تام.
 {من خلاله} [] حسن.
 {عن من يشاء} [] كاف.
 {بالابصار ()} [] كاف، ومثله: «النهار».
 و {لاولي الابصار ()} [] تام .
 {من ماء} [] حسن.
 {علي بطنه} [] جاءز، ومثله: «علي رجلين».
 {علي اربع} [] كاف، ومثله: «ما يشاء».
 {قدير ()} [] تام.
 {مبينات} [] كاف.
 {مستقيم ()} [] تام؛ علي استءناف ما بعده.
 {واطعنا} [] جاءز.
 {من بعد ذلك} [] حسن.
 {بالمءمنين ()} [] تام، ومثله: «معرضون»، وكذا «مذعنين» عند احمد بن موسي.
 {ورسوله} [] جاءز، وما بعده متصل بما قبله من جهة المعني، والمعني: ان يحيف الله عليهم ورسوله، ولكن ظلموا انفسهم ونافقوا، ودل علي هذا قوله: «بل اولءك هم الظالمون».
 و {الظالمون ()} [] تام.
 {ليحكم بينهم} [] ليس بوقف؛ لان «ان يقولوا» هو اسم كان، وقول المءمنين خبرها، فلا يفصل بينهما.
 {واطعنا} [] حسن.
 {المفلحون ()} [] تام.
 {ويتقه} [] ليس بوقف؛ لان ما بعده جواب الشرط، فلا يفصل بينهما بالوقف، ومثله في التمام «الفاءزون».
 {ليخرجن} [] حسن.
 {لا تقسموا} [] احسن منه، ثم تبتدء: «طاعة»، اي: هي طاعة، او امركم طاعة، علي حذف المبتدا، او «طاعة» مبتدا، و «معروفة» صفة، والخبر محذوف، اي: امثل واولي، او «طاعة» فاعل بفعل محذوف، اي: ولتكن منكم طاعة، وضعف ذلك بان الفاعل لا يحذف الا اذا تقدم ما يشعر به
 
 كقوله (): «يسبح له فيها» في قراءة من قراه بالبناء للمفعول، وقرا زيد (): بنصب «طاعة» بفعل مضمر، اي: اطيعوا طاعة.
 {معروفة} [] كاف.
 {بما تعملون ()} [] تام.
 {واطيعوا الرسول} [] حسن، وليس بكاف؛ لان الذي بعده داخل في الخطاب، وربما غلط في هذا الضعيف في العربية فيتوهم ان «فان تولوا» الغاءب، وانه منقطع مما قبله في اللفظ وفي المعني، وليس الامر كذلك، وعدوا له من الخطاب الي الغيبة موجب للوقف، بل هو علي حذف احدي التاءين، والتقدير: فان تتولوا فهو خطاب، والدليل علي ذلك: ان ما بعده «وعليكم ما حملتم»، ولو كان لغاءب لكان: وعليهم ما حملوا، فدل هذا علي ان الخطاب كله متصل وبعده ايضا «وان تطيعوه تهتدوا».
 {ما حملتم} [] حسن.
 {تهتدوا} [] احسن مما قبله، وقيل: تام.
 {المبين ()} [] تام، ولا وقف من قوله: «وعد الله» الي «امنا» فلا يوقف علي «من قبلهم»، ولا علي «ارتضي لهم»، لدخول ما بعده في الوعد لعطفه علي ما قبله .
 {امنا} [] حسن؛ علي استءناف ما بعده؛ كان قاءلا قال: ما بالهم يستخلفون ويءمنون؟ فقال: يعبدونني، وليس بوقف ان جعل حالا من «وعد الله»، اي: وعدهم الله، ذلك في حال عبادتهم واخلاصهم، ولا محل ليعبدونني من الاعراب علي التقدير الاول، وعلي الثاني محله نصب.
 {شيءا} [] تام؛ للابتداء بالشرط.
 {الفاسقون ()} [] تام.
 {واتوا الزكاة} [] جاءز.
 {(ترحمون ()} [] تام.
 {معجزين في الارض} [] حسن.
 {النار} [] احسن مما قبله.
 {المصير ()} [] تام، ولا وقف من قوله: «يا ايها الذين امنوا» الي «صلاة العشاء» فلا يوقف علي «ملكت ايمانكم»، ولا علي «من قبل صلاة الفجر»، ولا علي «من الظهيرة» للعطف في كل. 
 {بعد صلاة} [] كاف، لمن رفع «ثلاث» علي الابتداء، والخبر «لكم»، او خبر مبتدا محذوف، اي: هذه الخصال ثلاث عورات، او هي ثلاث عورات لكم، وليس بوقف لمن قرا (): «ثلاث عورات» بالنصب بدلا من «ثلاث مرات»؛ لانه لا يفصل بين البدل والمبدل منه بالوقف.
 {عورات لكم} [] حسن، ومثله: «بعدهن» برفع ما بعده خبر مبتدا محذوف، اي: هم طوافون، اي: المماليك والصغار طوافون عليكم، اي: يدخلون عليكم في المنازل غدوة وعشية الا في تلك الاوقات، و «بعضكم» مبتدا، والخبر «علي بعض»، او «طوافون» مرفوع ب «يطوفون» مضمرة؛ فعلي هذا يحسن الوقف علي قوله: «عليكم»، وليس بوقف لمن قرا (): «طوافين» نصبا علي الحال، وقرا ابن ابي عبلة (): «طوافين» ايضا بالنصب علي الحال من ضمير «عليهم».
 {علي بعض} [] كاف، ومثله: «لكم الايات».
 {حكيم ()} [] تام.
 {من قبلهم} [] كاف، وكذا «اياته».
 {حكيم ()} [] تام، ولا وقف من قوله: «والقواعد من النساء» الي قوله: «وبزينة».
 و {بزينة} [] حسن، ومثله: «خير لهن».
 {عليم ()} [] تام، ولا وقف من قوله: «ليس علي الاعمي حرج» الي قوله: «او صديقكم»؛ لان العطف صيرها كالشء الواحد، وقيل: يوقف علي قوله: «ولا علي المريض حرج» وليس بجيد، والاولي وصله.
 {او صديقكم} [] حسن، ومثله: «او اشتاتا»، وقيل: تام؛ لان اذا قد اجيب بالفاء فكانت شرطا في ابتداء حكم، فكانت الفاء للاستءناف.
 {طيبة} [] حسن.
 {الايات} [] ليس بوقف؛ لتعلق حرف الترجي بما قبله، فهو ك (لام كي).
 {تعقلون ()} [] تام.
 {حتي يستاذنوه} [] حسن، ومثله: «ورسوله»، وكذا «لمن شءت منهم». 
 {واستغفر لهم الله} [] احسن مما قبله.
 {غفور رحيم ()} [] تام، وكذا «بعضا»، وقيل: كاف، والمعني: لا تخاطبوا الرسول كما يخاطب بعضكم بعضا، ولكن خاطبوه بالتفخيم والتعظيم والاجلال، او لا تغضبوا ولا تعصوه فيدعو عليكم فيستجاب له، فلا تجعلوا دعاءه كدعاء غيره، فان دعاءه مستجاب، وهو: تام؛ علي القولين ().
 {لواذا} [] حسن.
 {اليم ()} [] تام.
 {والارض} [] حسن، ومثله: «ما انتم عليه»، وقيل: تام؛ للعدول من الخطاب الي الغيبية.
 {ويوم يرجعون اليه} [] ليس بوقف؛ لعطف قوله: «فينبءهم» علي ما قبله.
 {بما عملوا} [] كاف.
 اخر السورة تام. 
  سورة الفرقان
 مكية
 الا قوله: {والذين لا يدعون مع الله الها اخر} [] الي {رحيما ()} [] فمدني.
 [ايها:] وهي سبع وسبعون اية، ليس فيها اختلاف.
  وكلمها: ثمانماءة واثنتان وسبعون كلمة.
  وحروفها: ثلاثة الاف وسبعماءة وثلاثة وثلاثون حرفا.
 وفيها مما يشبه الفواصل، وليس معدودا باجماع، ستة مواضع:
    
 {وهم يخلقون} [].
    
 {قوم اخرون} [].
    
 {اساطير الاولين} [].
    
 {التي وعد المتقون} [].
    
 {ما يشاءون خالدين} [].
    
 {في السماء بروجا} [].
 ورءوس ايها علي الالف، الا موضع واحد، فانه علي اللام وهو قول: {السبيل ()} [].
 {نذيرا ()} [] تام؛ ان جعل ما بعده خبر مبتدا محذوف، تقديره: هو الذي، وكذا ان نصب، بتقدير: اعني، وجاءز: ان جعل بدلا، او عطف بيان.
 {في الملك} [] كاف؛ علي استءناف ما بعده، وان عطف علي ما قبله كان الوقف علي «تقديرا» تاما.
 {الهة} [] ليس بوقف.
 {وهم يخلقون} [] كاف؛ علي استءناف ما بعده، وليس بوقف ان عطف علي «الهة» داخلا في نعتها.
 {(ولانفعا} [] جاءز.
 {نشورا ()} [] تام.
 {قوم اخرون} [] حسن.
 {وزورا ()} [] احسن منه، وهو راس اية.
 {(اساطيرالاولين} [] ليس بوقف؛ لاتصال الكلام بقوله: «اكتتبها».
 {واصيلا ()} [] كاف، ومثله: «والارض».
 {رحيما ()} [] تام.
 
 {(مالهذا الرسول ياكل الطعام ويمشي في الاسواق} [] حسن، واتفق علماء الرسم علي قطع «مال» عن «هذا»، وكذا: {فمال هءلاء القوم} [] في النساء، و {مال هذا الكتاب} [] في الكهف، و {فمال الذين كفروا} [] في المعارج، كتبوا هذه الاربعة منفصلة عما بعدها كلمتين؛ ووجه انفصال هذه الاربعة ما حكاه الكساءي : من ان ما جري مجري ما بال، وما شان، وان قوله: مال زيد، وما بال زيد؛ بمعني: واحد، وقد صح ان اللام في الاربعة لام جر، والاصل: ان الرسم سنة متبعة لا يعلل، وقيل: لا يحسن الوقف علي «الاسواق»؛ لان ما بعده من تمام الحكاية الي «ياكل منها» فلا يوقف علي «الاسواق»، ولا علي «نذيرا» للعطف ب «او».
 {ياكل منها} [] كاف؛ لتناهي الحكاية.
 {مسحورا ()} [] تام.
 {فضلوا} [] جاءز.
 {سبيلا ()} [] تام.
 {الانهار} [] جاءز، لمن قرا: «ويجعل» بالرفع؛ علي الاستءناف، وبها قرا ابن كثير وابن عامر وعاصم، وليس بوقف لمن جزمه عطفا علي جواب الشرط ().
 {قصورا ()} [] كاف؛ ان جعلت «بل» متعلقة بما يليها، اي: بل كذبوا بالساعة، فكيف يلتفتون الي ما قلت، وان عطفت «بل كذبوا»، علي ما حكي من قولهم كان جاءزا، والمعني: قد اتوا باعجب مما قالوا فيك، وهو: تكذيبهم بالساعة؛ لانهم لا يقرون بالميعاد.
 {سعيرا ()} [] كاف؛ علي استءناف ما بعده، ومثله: «وزفيرا» للابتداء بالشرط.
 {ثبورا ()} [] حسن، ومثله: «ثبورا واحدا».
 {كثيرا ()} [] كاف.
 {التي وعد المتقون} [] حسن.
 {ومصيرا ()} [] كاف.
 {خالدين} [] حسن.
 {مسءولا ()} [] تام؛ ان نصب «يوم» بفعل مقدر.
 {من دون الله} [] كاف، لمن قرا: «نحشرهم» بالنون والياء التحتية، في: «فيقول» لعدوله من التكلم الي الغيبة، وليس بوقف لمن قراهما: بالنون، وهو ابن عامر، وكذا من قراهما: بالياء، وهو ابن 
 كثير وحفص ().
 {السبيل ()} [] كاف.
 {قالوا سبحانك} [] جاءز؛ للابتداء بالنفي.
 {من اولياء} []، ان قلنا ان «لكن» لابد ان تقع بين متنافيين فليس بوقف؛ لان «ولكن» هو الذي يصح به معني الكلام، ولجواز الوقف مدخل لقوم، و «من اولياء» مفعول علي زيادة «من» لتاكيد النفي.
 {(حتينسوا الذكر} [] جاءز، اي: اكثرت عليهم وعلي اباءهم النعم فلم يءدوا شكرها، فكان ذلك سببا للاعراض عن ذكر الله ().
 {قوما بورا ()} [] كاف.
 {بما تقولون} [] جاءز، لمن قرا: «يستطيعون» بالياء التحتية للعدول من الخطاب الي الغيبية، وليس بوقف لمن قراه: بتاء الخطاب، والمراد: عبادها، وبها قرا: حفص، والباقون: بياء الغيبية ()، والمراد: الالهة التي كانوا يعبدونها من عاقل وغيره، ولذلك غلب العاقل فجء بواو الضمير ().
 {ولا نصرا} [] كاف، وقيل: تام؛ للابتداء بالشرط.
 {كبيرا ()} [] تام.
 {من المرسلين} [] ليس بوقف؛ لان «الا انهم لياكلون الطعام» تحقيق بعد نفي، وكسروا (ان) بعد الا؛ لان في خبرها اللام، وقيل: كسرت؛ لان الجملة بعد «الا» في موضع الحال، قال ابن الانباري، والتقدير: الا وانهم؛ يعني: انها حالية تقدر معها الواو بيانا للحالية، والعامة علي كسر همزة (ان)، وقرا سعيد بن جبير (): بفتحها؛ علي زيادة اللام.
 {في الاسواق} [] كاف. 
 {فتنة} [] حسن.
 {اتصبرون} [] احسن منه، ولا يجمع بينهما؛ لان قوله: «اتصبرون» متعلق بما قبله، والتقدير: وجعلنا بعضكم لبعض فتنة، لننظر اتصبرون علي ما نختبركم به من اغناء قوم، وفقر اخرين، وصحة قوم، واسقام غيرهم؟ ام لا تصبرون ().
 {بصيرا ()} [] نام، ولا وقف الي قوله: «او نري ربنا» فلا يوقف علي «الملاءكة» للعطف ب «او» بعد.
 {ربنا} [] حسن، وقيل: تام؛ للابتداء بلام القسم.
 {كبيرا ()} [] تام؛ ان نصب «يوم» ب «اذكر» مقدرا، فيكون من عطف الجمل، او نصب ب «يعذبون» مقدرا، ولا يجوز ان يعمل فيه نفس «بشري»؛ لانها مصدر، والمصدر لا يعمل فيما قبله.
 {للمجرمين} [] ليس بوقف.
 {حجرا محجورا ()} [] كاف، اي: وتقول الملاءكة حجرا محجورا، اي: حراما محرما ان يكون للمجرمين البشري، قال الشاعر:
 حنت الي النخلة القصوي، فقلت لها: ... حجر، حرام الا تلك الدهاريس ()
 ووقف الحسن وابو حاتم علي «ويقولون حجرا» علي ان «حجرا» من قول المجرمين، و «محجورا» من قول الله رد عليهم، فقال: محجورا عليكم ان تعاذوا بالذال المعجمة؛ اي: لا عياذ لكم من عذابنا، ومما نريد ان نوقعه بكم، او تجازوا كما كنتم في الدنيا، فحجر الله عليهم ذلك يوم القيامة، والاول قول ابن عباس، وبه قال الفراء، قاله ابن الانباري. وقرا الحسن وابو رجاء (): «حجرا» بضم الحاء، والعامة بكسرها ()، وحكي ابو البقاء فيه فتح الحاء، وقرء 
 بها ()، فهي ثلاث لغات قرء بها، وقيل: ان ذلك من مقول الكفار قالوه لانفسهم، قاله قتادة فيما ذكره الماوردي، وقيل: هو من مقول الكفار للملاءكة، وهي كلمة استعاذة، وكانت معروفة في الجاهلية اذا لقي الرجل من يخافه، قال: حجرا محجورا، اي: حراما عليك التعرض لي، وانتصابه علي معني: حجرت عليه، او حجر الله عليك، كما نقول: سقيا، ورعيا، فحجرا محجورا، من المصادر المنصوبة بافعال متروك اظهارها، وضعت للاستعاذة؛ يعني: ان المجرمين اذا راوا الملاءكة، وهم في النار، قالوا: نعوذ بالله منكم، ان تتعرضوا لنا، فتقول الملاءكة: حجرا محجورا ان تعاذوا من شر هذا اليوم، قاله الحسن، انتهي من تفسير القرطبي ()، وفي السمين: و «حجرا» من المصادر الملتزم اضمار ناصبه، ولا يتصرف فيه، قال سبيويه: يقول الرجل للرجل تفعل كذا، فيقول: حجرا، وهو من حجره، اذا منعه؛ لان المستعيذ طالب من الله ان يمنع عنه المكروه منعا ويحجره، حجرا ومحجورا صفة مءكدة للمعني، كقولهم: ذيل ذاءل، وموت ماءت، والحجر: العقل؛ لانه يمنع صاحبه عما لا يليق، وهذا الوقف جدير بان يخص بتاليف، وما ذكر غاية في بيانه،،، ولله الحمد.
 {منثورا ()} [] تام، ومثله: «مقيلا» ان نصب «يوم تشقق» بمحذوف، او بالظرفية، لقوله: الملك، وان جعل توكيدا اليوم يرون فكافيان.
 {تنزيلا ()} [] تام.
 {للرحمن} [] كاف.
 {عسيرا ()} [] تام؛ ان نصب «يوم» بمحذوف، وجاءز ان عطف علي «يوم تشقق» و «يعض» مضارع: عض، وزنه: فعل، بكسر العين، وحكي الكساءي: فتحها في الماضي، قاله السمين.
 {سبيلا ()} [] كاف، ومثله: «خليلا»؛ علي استءناف ما بعده، واللام في قوله: «لقد» جواب قسم محذوف، والمراد بالظالم هنا: عقبة بن ابي معيط، والخليل امية بن خلف لعنهما الله، ولم يصرح باسمه لءلا يكون الوعيد خاصا ومقصورا عليه، بل هو يتناول من فعل مثل فعلهما اذا ما من ظالم الا وله خليل خاص به ().
 {بعد اذ جاءني} [] تام؛ لانه اخر كلام الظالم، وما بعده من كلام الله تعالي، وهذا ان جعل ما بعده مستانفا، فان جعل الكلام متصلا من قوله: «يا ليتني اتخذت» الي اخر كلامه فلا وقف الا علي اخره.
 {خذولا ()} [] تام، ومثله: «مهجورا». 
 {من المجرمين} [] حسن.
 {ونصيرا ()} [] تام.
 {جملة واحدة كذلك} [] كاف؛ ان جعل التشبيه من تمام الكلام، اي: هلا نزل القران علي محمد  صلي الله عليه وسلم  جملة واحدة، كما انزلت التوراة علي موسي كغيرها من الكتب، قال تعالي: «لنثبت به فءادك»، اي: «انزلناه مفرقا لنثبت به فءادك»، اي: لنقوي به قلبك، وقيل: لتحفظه؛ لانه كان اميا، والاحسن الوقف علي جملة واحدة، ثم تبتدء ب «كذلك»، فكذلك علي الاول من قول المشركين، وعلي الثاني من قول الله ().
 {كذلك لنثبت به فءادك} [] جاءز.
 {ترتيلا ()} [] كاف.
 {تفسيرا ()} [] تام؛ لعدم تعلق ما بعده؛ لانه مبتدا باتفاق، وخبره «اولءك» فلا يوقف علي «جهنم».
 {سبيلا ()} [] تام.
 {وزيرا ()} [] جاءز، والوصل اولي لمكان الفاء.
 {باياتنا} [] حسن، لمن قرا: «فدمرناهم»، وهي قراءة العامة ()؛ فعل ماض معطوف علي محذوف، اي: فذهبا فبلغا الرسالة فكذبوهما، قال تعالي: فدمرناهم، اي: ادت الرسالة الي دمارهم، وليس بوقف علي قراءة من قرا: [«فدمرنهم»] () بالامر وتشديد النون؛ لانه كلام واحد، وهي قراءة علي  رضي الله عنه  وعنه ايضا: «فدمرا بهم» بزيادة باء الجر بعد فعل الامر ()، ونقل الزمخشري عنه ايضا: «فدمرتهم» بتاء المتكلم ()، وقرء: «فدمرانهم» بتخفيف النون ()، عزاها المرادي لبعضهم، ولم يذكرها السمين.
 {تدميرا ()} [] كاف؛ ان نصب «قوم نوح» بفعل مضمر، تقديره: واغرقنا قوم نوح اغرقناهم؛ علي الاشتغال، وليس بوقف ان نصب عطفا علي الضمير المنصوب في «دمرناهم». 
 {للناس اية} [] حسن؛ لان «واعتدنا» مستانف غير معطوف ولا متصل.
 {عذابا اليما ()} [] كاف؛ ان نصب ما بعده بفعل مقدر، وليس بوقف ان عطف علي الضمير في «جعلناهم»، وحينءذ لا يوقف علي اية، ولا علي «اليما»، «واصحاب الرس» عند بعضهم.
 {كثيرا ()} [] كاف.
 {الامثال} [] حسن.
 {تتبيرا ()} [] تام.
 {مطر السوء} [] جاءز.
 {يرونها} [] حسن.
 {نشورا ()} [] تام.
 {الا هزوا} [] حسن، ومثله: «رسولا» عند ابي حاتم، وقال غيره: لا يحسن؛ لان الكلام متصل من قوله: «واذا راوك»، وعليه لا يوقف علي «هزوا»، ولا علي «رسولا».
 {لولا ان صبرنا عليها} [] تام؛ لتناهي مقولهم، وجواب «لولا» محذوف، تقديره: لاضلنا.
 {من اضل سبيلا ()} [] تام.
 {هواه} [] جاءز.
 {وكيلا ()} [] كاف؛ علي استءناف ما بعده، علي ان «ام» منقطعة، تتقدر: ببل، والهمزة؛ كانه قيل: بل اتحسب كان هذا المذمة اشد من التي تقدمتها حتي خفت بالاضراب عنها اليها، وهو كونهم مسلوبي الاسماع ().
 {او يعقلون} [] كاف؛ للابتداء بالنفي المقدر.
 {كالانعام} [] جاءز.
 {اضل سبيلا ()} [] تام.
 {مد الظل} [] كاف؛ لتناهي الاستفهام.
 {ساكنا} [] جاءز لعدوله من الغيبة الي التكلم؛ لان ذلك من اسباب الوقف.
 {دليلا ()} [] ليس بوقف؛ لان «ثم» لترتيب الفعل.
 {يسيرا ()} [] تام.
 {سباتا} [] جاءز.
 {نشورا ()} [] تام.
 {رحمته} [] كاف؛ علي استءناف ما بعده. 
 {طهورا ()} [] ليس بوقف؛ لان قوله: «لنحيي به» متعلق بما قبله.
 {واناسي كثيرا ()} [] تام.
 {ليذكروا} [] كاف.
 {كفورا ()} [] تام.
 {نذيرا ()} [] كاف.
 {الكافرين} [] جاءز.
 {كبيرا ()} [] تام.
 {البحرين} [] حسن، ومثله: «اجاج»؛ علي استءناف ما بعده، وليس بوقف ان عطف علي ما قبله.
 {محجورا ()} [] تام.
 {وصهرا} [] كاف.
 {قديرا ()} [] تام.
 {ولا يضرهم} [] كاف.
 {ظهيرا ()} [] تام.
 {ونذيرا ()} [] كاف.
 {سبيلا ()} [] كاف.
 {لا يموت} [] جاءز؛ للابتداء بالامر.
 {بحمده} [] حسن.
 {خبيرا ()} [] كاف، وقيل: تام؛ ان جعل ما بعده مبتدا، والخبر قوله: «الرحمن»، وان جعل «الذين» خبر مبتدا محذوف، او نصب بتقدير: اعني، كان كافيا، وليس بوقف ان جعل «الذي» في محل جر بدلا من الهاء في «به» لانه لا يفصل بين البدل والمبدل منه بالوقف.
 {علي العرش} [] تام؛ ان رفع «الرحمن» خبر مبتدا محذوف، او مبتدا وما بعده الخبر، وليس بوقف ان رفع بدلا من الضمير في «استوي»، والوقف علي هذا التقدير علي «الرحمن» كاف.
 {خبيرا ()} [] تام، والباء في «به» صلة، و «خبيرا» مفعول «اسال»، او حال من فاعل «اسال»؛ لان الخبير لا يسال الا عن جهة التوكيد، وقيل: الباء بمعني: عن، قال علقمة الشاعر:
 فان تسالوني بالنساء فانني ... بصير بادواء النساء طبيب () 
 اي: عن النساء، والضمير في «به» لله، ولم يحصل من النبي  صلي الله عليه وسلم  شك في الله حتي يسال عنه، بل هذا كقوله: {فان كنت في شك مما انزلنا اليك فاسال الذين يقرءون الكتاب من قبلك} [يونس: ]،
 {قل ان كان للرحمن ولد} [الزخرف: ]، من كل شء معلق علي مستحيل، واما النبي  صلي الله عليه وسلم  قال: «انا لا اشك، ولا اسال، بل اشهد انه الحق » ().
 قال الشاعر:
 هلا سالت القوم يا ابنة مالك ... ان كنت جاهلة بما لم تعلمي ()
 اي: هلا سالت القوم عما لم تعلمي.
 {وما الرحمن} [] حسن، لمن قرا: «تامرنا» بالفوقية، وهي قراءة العامة ()، وليس بوقف لمن قراه بالتحتية، وهي قراءة الاخوان ()، اي: انسجد لما يامرنا به محمد؛ لتعلق ما بعده بما قبله.
 {لما تامرنا} [] جاءز، لمن قرا: بالتاء الفوقية ()، «وزادهم» مستانف.
 {نفورا (()} [] تام.
 {بروجا} [] حسن. 
 {منيرا ()} [] كاف.
 {خلفة} [] ليس بوقف؛ لان ما بعده تفسير لما قبله، ولا يوقف علي المفسر بالفتح دون المفسر بالكسر، ومعني خلفة: ان كل واحد منهما يخلف صاحبه، فمن فاته شء من الاعمال قضاه في الاخر.
 {ان يذكر} [] ليس بوقف للعطف بعده ب «او».
 {شكورا ()} [] تام؛ ان رفع «وعباد» مبتدا، والخبر «اولءك يجزون الغرفة»، وكان الوقف علي «مقاما»، وعليه فلا يوقف من قوله: «وعباد الرحمن» الي «حسنت مستقرا ومقاما» الا لضيق النفس، ومن جعل الخبر محذوفا، او جعل «الذين يمشون» خبرا، وقف علي «هونا»، وهو جاءز.
 {سلاما ()} [] كاف، ومثله: «قياما».
 {عذاب جهنم} [] جاءز.
 {غراما ()} [] اي: هلاكا، كاف، ان لم يجعل ما بعده من تمام كلام الوقف، وليس بوقف ان جعل من كلامهم، و «قواما»، «ولا يزنون» كافيان.
 {يلق اثاما ()} [] حسن؛ لمن قرا: «يضاعف» بالرفع؛ علي الاستءناف، وهو عاصم، وقرا ابن عامر: «يضعف» بالرفع ()؛ علي الاستءناف ايضا، وليس بوقف لمن جزمه بدلا من «يلق» بدل اشتمال، بدل فعل من فعل؛ لان تضعيف العذاب هو لفي الاثام، قال الشاعر:
 متي تاتنا تلمم بنا في ديارنا ... تجد حطبا جزلا ونارا تاججا ()
 {مهانا ()} [] جاءز، والوصل اولي؛ لان «الا» لا يبتدا بها، انظر التفصيل في قوله: «الا ان تتقوا منهم تقاة».
 {حسنات} [] كاف، و «رحيما»، و «متابا» كافيان.
 {الزور} [] ليس بوقف؛ لعطف ما بعده علي ما قبله. 
 {كراما ()} [] كاف، ومعني: كراما، اي: معرضين عن اهل اللغو.
 {وعميانا ()} [] كاف.
 {قرة اعين} [] جاءز؛ للابتداء بعد بالجملة الفعلية.
 {اماما ()} [] حسن.
 {بما صبروا} [] جاءز، ومثله: «وسلاما»، وقال ابو عمرو: كاف، واكفي منه «خالدين فيها»؛ لاتصال الحال بذيها .
 {حسنت مستقرا ومقاما ()} [] تام.
 {لولا دعاءكم} [] كاف، لاختلاف الجملتين.
 {فقد كذبتم} [] جاءز؛ للابتداء بالتهديد.
 اخر السورة تام.
 
  سورة الشعراء
 مكية
 الا قوله: {والشعراء يتبعهم الغاوون ()} [] الي اخر السورة فمدني.
  كلمها: الفان وماءتان وسبع وتسعون كلمة.
  وحروفها: خمسة الاف وخمسماءة واثنان واربعون حرفا.
  وايها: ماءتان وست او سبع وعشرون اية.
 زعم العماني ان الوقف علي {طسم ()} [] كاف، ثم قال بعد والحكم في هذه السورة وفي اختيها في الوقف كالخلاف في اول البقرة.
 {المبين ()} [] كاف.
 {باخع نفسك} [] ليس بوقف؛ لان «ان» في موضع نصب ب «باخع»، معناه: معني الاستقبال؛ فكانه قال: فظلت اعناقهم خاضعين ان انزلنا عليهم اية، وانما قال: خاضعين، ولم يقل: خاضعات؛ لانه اراد بالاعناق: الجماعات والعرب، تقول: اتاني عنق من الناس، اي: جماعة، او هو علي حذف مضاف، اي: فظل اصحاب الاعناق، ثم حذف وبقي الخبر علي ما كان عليه قبل حذف المخبر عنه مراعاة للمحذوف، او انه لما اضيف الي العقلاء اكتسب منهم هذا الحكم كما اكتسب التانيث بالاضافة للمءنث في قوله: كما شرقت صدر القناة من الدم، الي اخر ما قاله السمين. وليس «خاضعين» حالا؛ لان الحال انما يقع بعد تمام الكلام، وقوله: «فظلت اعناقهم لها» لم يتم الا بما بعده ().
 {خاضعين ()} [] كاف، و «خاضعين» خبر (ظل).
 {محدث} [] ليس بوقف للاستثناء؛ لان به يصح معني الكلام.
 {معرضين ()} [] كاف.
 {فقد كذبوا} [] حسن، ثم يبتدء: «فسياتيهم»؛ لانه تهديد.
 {يستهزءون ()} [] تام.
 {الي الارض} [] ليس بوقف.
 {كريم ()} [] كاف.
 {لاية} [] حسن، وكذا مثله فيما ياتي.
 {مءمنين ()} [] كاف.
 {الرحيم ()} [] تام؛ لان «اذ نادي» معه فعل مضمر؛ كانه قال: واذكر اذ نادي ربك موسي، فهو من عطف الجمل مقطوع مما قبله. 
 {موسي} [] ليس بوقف؛ لان الذي وقع به النداء لم يات بعد، ومثله الوقف علي «الظالمين»؛ لان «قوم فرعون» بدل من «القوم الظالمين» وبيان لهم، ولما كان «القوم الظالمين» يوهم الاشتراك، ازاله بعطف البيان؛ لانه يوهم في المعني، ولذلك عبر عن «الظالمين» ب «قوم فرعون»، ووسموا: بالظلم؛ لانهم ظلموا انفسهم بالكفر، وقرء (): «الا يتقون » بكسر النون اي: يتقوني، فحذفت النون لاجتماع النونين، وحذفت الياء للاكتفاء عنها بالكسرة.
 {قوم فرعون} [] حسن؛ للعدول عن الامر الي الاستفهام، وذلك موجب للوقف، ومن قرا: «يتقون» بالتحتية ()؛ كان زيادة في الحسن، ومن قراه بالتاء الفوقية ()؛ كان كلاما واحدا.
 {يكذبون ()} [] حسن، لمن قرا: «ويضيق» و «ينطلق» بالرفع فيهما؛ علي الاستءناف، او عطفا علي اخاف؛ كانه قال: اني اخاف تكذيبهم اياي، ويضيق منه صدري، ولا ينطلق لساني، فالرفع يفيد ثلاث علل:   خوف التكذيب.   وضيق الصدر.   وامتناع انطلاق اللسان. وليس بوقف لمن قرا: بنصب القافين ()؛ عطفا علي «يكذبون».
 {لساني} [] حسن؛ علي القراءتين ()، واستءناف ما بعده.
 {الي هارون ()} [] جاءز.
 {ان يقتلون ()} [] حسن، قال نافع وابو حاتم: «كلا» رد لقوله: «اني اخاف»، اي: لا تخف فانهم لا يقدرون علي ذلك ولا يصلون اليه، ثم يبتدء: «فاذهبا باياتنا».
 {باياتنا} [] حسن.
 {مستمعون ()} [] كاف.
 {رسول رب العالمين ()} [] ليس بوقف؛ لان ما بعده منصوب بما قبله، اي: ارسلنا، بان ارسل بني اسراءيل لتزول عنهم العبودية؛ لان فرعون استعبد بني اسراءيل ().
 {بني اسراءيل ()} [] كاف. 
 {سنين ()} [] جاءز.
 {الكافرين ()} [] كاف، ومثله: «الضالين».
 {لما خفتكم} [] جاءز.
 {المرسلين ()} [] كاف، للاستفهام بمحذوف، تقديره: او تلك، قاله الاخفش. وقيل: الاستفهام لا يضمر ما لم يات بعده (ام)، وليس في الاية ذكر (ام) كما تري.
 {ان عبدت بني اسراءيل ()} [] كاف، ومثله: «وما رب العالمين»، وكذا «موقنين»، و «تستمعون»، و «الاولين»، و «لمجنون»، و «تعقلون»، و «من المسجونين»، و «بشء مبين»، و «الصادقين» كلها وقوف كافية.
 {فالقي عصاه} [] ليس بوقف؛ لان ما بعده يفسر ما قبله.
 {ثعبان مبين ()} [] جاءز، فصلا بين المعجزتين، والوصل اولي؛ لتكون الشهادتان مقرونتين.
 {للناظرين ()} [] كاف.
 {لساحر عليم ()} [] جاءز؛ علي استءناف ما بعده، وليس بوقف ان جعل في موضع الصفة لما قبله.
 {بسحره} [] حسن، بجعل «فماذا تامرون» من قول الملا لفرعون خاطبوه بالجمع تعظيما علي عادة الملوك، والاولي وصله بقول فرعون، اي: فماذا تشيرون، ودليل هذا: جوابهم «قالوا ارجه واخاه»، وقال الفراء: قوله: «يريد ان يخرجكم من ارضكم» هو من كلام الملا، وقوله: «فماذا تامرون» من كلام فرعون، والتقدير عنده: يريد ان يخرجكم من ارضكم، فقال فرعون: فماذا تامرون، واجاز قلت لجاريتي قومي فاني قاءمة، اي قالت: فاني قاءمة. اه نكزاوي.
 {فماذا تامرون ()} [] كاف.
 {واخاه} [] جاءز؛ للابتداء بعده بالامر.
 {حاشرين ()} [] ليس بوقف؛ لان قوله: «ياتوك» جواب الامر، ولذلك كان مجزوما، واصله: ياتونك، فحذفت النون للجازم، ولا يفصل بين الامر وجوابه.
 {سحار عليم ()} [] كاف.
 {يوم معلوم ()} [] جاءز.
 {مجتمعون ()} [] ليس بوقف؛ لان ما بعده (لعل)، وهو في التعلق كلام (كي).
 {الغالبين ()} [] كاف.
 {نحن الغالبين ()} [] جاءز، ومثله: «نعم».
 {لمن المقربين ()} [] كاف.
 
 {ملقون ()} [] جاءز.
 {لنحن الغالبون ()} [] كاف، ومثله: «يافكون».
 {ساجدين ()} [] جاءز.
 {برب العالمين ()} [] ليس بوقف؛ لان الذي بعده بدل مما قبله، او عطف بيان.
 {وهارون ()} [] كاف، ومثله: «قبل ان اذن لكم»؛ للابتداء بان مع اتحاد المقول.
 {علمكم السحر} [] حسن؛ للابتداء بلام الابتداء، والتهديد، وكلاهما يقتضي الابتداء مع ان فيهما الفاء.
 {فلسوف تعلمون} [] كاف؛ للابتداء بلام القسم، اي: والله لاقطعن.
 {اجمعين ()} [] جاءز.
 {لا ضير} [] حسن.
 {منقلبون ()} [] كاف.
 {خطايانا} [] ليس بوقف؛ لان «ان» منصوبة بما قبلها.
 {اول المءمنين ()} [] تام؛ لتمام المقول.
 {متبعون ()} [] كاف، ومثله: «حاشرين» للابتداء ب «ان» علي ان التقدير: بان هءلاء.
 {قليلون ()} []، {لغاءظون ()} []، ليس بوقف لعطف ما بعده علي ما قبله.
 {حاذرون ()} [] كاف، و «مقام كريم» يبني الوقف علي «كريم» علي اختلاف المعربين في محل الكاف من كذلك، وفيها ثلاثة اوجه:
    
 النصب بفعل مقدر، اي: اخرجنا ال فرعون من منازلهم كما وعدنا ايراثها بني اسراءيل.
    
 والجر علي؛ انها وصف لمقام، اي: ومقام كريم مثل ذلك المقام الذي كان لهم.
    
 والرفع؛ علي انها خبر مبتدا محذوف، اي: الامر كذلك؛ فان كانت الكاف في محل رفع، او في محل نصب، كان الوقف علي «كذلك»؛ لان التشبيه وقع خبرا، وهو تمام الفاءدة فلا يقطع، وان كانت في محل جر متصلة بما قبلها، كان الوقف علي «كذلك» ايضا حسنا، دون «كريم»، وفي وجهي النصب والجر تشبيه الشء بنفسه؛ لان المقام الذي كان لهم هو المقام الكريم، قال ابن لهيعة: هو القيوم، والمعني : تركوا جناتهم وعيونهم وكنوزهم ومجالسهم وخرجوا في طلب موسي، والشرط في الوقفين، اعني: «كريم» و «كذلك» ان يجعل الضمير الاول، وهو: الواو في قوله: «فاتبعوهم» لموسي واصحابه، والضمير الثاني، وهو: هم لفرعون واصحابه، اي: ان موسي واصحابه تبعوا فرعون واصحابه، حسن الوقف علي «كذلك»، وليس «كريم»، ولا «كذلك» بوقف ان جعلت الواو في «فاتبعوهم» لفرعون واصحابه، وهم ضمير موسي واصحابه، اي: فتبع فرعون واصحابه موسي؛ لان المعني: خرجوا من
 
 جناتهم فتبعوهم لشدة تعلق «فاتبعوهم»، بقوله: «فاخرجناهم» فلا يفصل بينهما، والمراد: ب «المقام الكريم»؛ مجلس الامراء قالوا كان اذا قعد فرعون علي سريره، وضع بين يديه ثلاثماءة كرسي من ذهب تجلس عليها الامراء والاشراف عليهم اقبية مخوصة بالذهب ()، قاله الكواشي.
 {بني اسراءيل ()} [] ليس بوقف لمكان الفاء.
 {مشرقين ()} [] كاف.
 {انا لمدركون ()} [] لا ينبغي الوقف عليه؛ لان ما بعده جواب لما قبله؛ لان موسي نفي الادراك اصلا؛ لان الله وعده النصر والخلاص منهم.
 {سيهدين ()} [] كاف.
 {بعصاك البحر} [] جاءز.
 {العظيم ()} [] كاف، ومثله: «ثم الاخرين».
 {اجمعين ()} [] جاءز.
 {الاخرين ()} [] حسن، ولما اهلك الله فرعون ومن معه في اليم، ملك مصر امراة يقال: لها دلوك، ولها فيها اثار عجيبة ().
 {ان في ذلك لاية} [] حسن.
 {وما كان اكثرهم مءمنين ()} [] كاف.
 {الرحيم ()} [] تام، ومثله: «ابراهيم»؛ لانه لو وصله لصار «اذ» ظرفا لقوله: «واتل»، وهو محال؛ لان «اذ» ظرف لما مضي لا يعمل فيه «اتل»؛ لانه مستقبل، وهو لا يعمل في الماضي، بل هو ظرف لمقدر، والتقدير: اذكر قصة ابراهيم، وما جري له مع قومه، وليس بوقف ان جعل «اذ» بدلا من «نبا» بدل اشتمال، وهو يءول الي ان العامل فيه «اتل» بالتاويل المذكور. قاله السمين مع زيادة للايضاح.
 {ما تعبدون ()} [] كاف، ومثله: «عاكفين»، وكذا «او يضرون»، و «يفعلون».
 {تعبدون ()} [] الثاني ليس بوقف؛ لان «انتم» توكيد واو الضمير.
 {الاقدمون ()} [] كاف.
 {رب العالمين ()} [] في محل «الذي» الحركات الثلاث الرفع والنصب والجر؛ فان رفع بالابتداء، وما بعده الخبر؛ كان الوقف علي «العالمين» تاما، وان رفع «الذي» خبر مبتدا محذوف، او نصب بتقدير : اعني؛ كان كافيا، وليس بوقف ان جعل «الذي» نعتا لما قبله، او بدلا، او عطف بيان، ومن حيث كونه راس اية يجوز. 
 {فهو يهدين ()} [] كاف، ومثله: «ويسقين»، و «يشفين»، و «يحيين»، و «يوم الدين».
 {بالصالحين ()} [] جاءز، ومثله: «في الاخرين»، و «جنة النعيم»، و «من الضالين».
 {بقلب سليم ()} [] كاف، وقيل: لا يوقف من قوله: «الذي خلقني» الي قوله: «سليم»؛ لان هذه جمل معطوف بعضها علي بعض ومتعلق بعضها ببعض، وان جعل كل جملة فيها ذكر الدعاء مسءلة قاءمة بنفسها حسن الوقف علي اخر كل اية من قوله: «رب هب لي حكما» الي قوله: «بقلب سليم».
 {للمتقين ()} [] جاءز، ومثله: «للغاوين»، «تعبدون» راس اية، ويوقف عليه بناء علي ان الجار والمجرور الذي بعده متعلق بمحذوف، اي: هل ينصرونكم من دون الله، او يكون في الكلام تقديم وتاخير، وان جعل متعلقا بما قبله لم يوقف عليه.
 {من دون الله} [] حسن، ثم تبتدء: «هل ينصرونكم»؛ لان الاستفهام من مقتضيات الابتداء.
 {او ينتصرون ()} [] تام؛ لتناهي الاستفهام.
 {والغاوون ()} [] ليس بوقف؛ لان قوله: «وجنود ابليس» مرفوع عطفا علي «الغاوون»، وكذا لا يوقف علي «ابليس»؛ لان «اجمعون» توكيد لما قبله.
 {اجمعون ()} [] جاءز، ولا وقف من قوله: «قالوا وهم فيها» الي «برب العالمين» فلا يوقف علي «يختصمون»؛ لان فيه الفصل بين القول والمقول؛ لان قوله: «تالله» مقولهم، ولا يوقف علي «ضلال مبين»؛ لان قوله: «اذ نسويكم»، ظرف لما قبله؛ كانهم قالوا ما كنا الا في ضلال مبين، اذ عبدناكم فسويناكم برب العالمين.
 {المجرمون ()} [] جاءز، ومثله: «حميم» والنفي هنا يحتمل نفي الصديق من اصله؛ لان الشء قد ينفي لنفي اصله، او نفي صفته فهو من باب: (علي لا حب لا يهتدي بمناره).
 {من المءمنين ()} [] حسن، ومثله: «لاية».
 {مءمنين ()} [] كاف.
 {الرحيم ()} [] تام.
 {المرسلين ()} [] كاف؛ ان علق «اذ» ب (اذكر) مقدرا، وجاءز ان جعل العامل في «اذ» ما قبله.
 {تتقون ()} [] كاف، ومثله: «واطيعون».
 {من اجر} [] جاءز.
 {رب العالمين ()} [] كاف.
 {واطيعون ()} [] حسن.
 {الارذلون ()} [] كاف، وقد اغرب من فسر: «الارذلون» بالحاكة والحجامين، اذ لو كانوا 
 
 كذلك لكان ايمانهم بنوح مشرفا لهم ومعليا لاقدارهم، وانما هو حكاية عن كفار قومه في تنقيص متبعيه، وكذا فعلت قريش في الرسول  صلي الله عليه وسلم  في شان عمار وصهيب والضعفاء ().
 {بما كانوا يعملون ()} [] جاءز، ومثله: «تشعرون»، وكذا «وما انا بطارد المءمنين»، وكذا «نذير مبين»، و «المرجومين»، و «كذبون» والوصل في الاخير اولي للفاء.
 {فتحا} [] جاءز، ومنهم من قال: ولا وقف من قوله: «ان حسابهم» الي من «المرجومين».
 {من المءمنين ()} [] كاف، وقيل: تام؛ لانه اخر كلام نوح، واخر كلام قومه، وليس في قصة نوح وقف تام.
 {في الفلك المشحون ()} [] حسن، علي استءناف ما بعده، وليس بوقف ان عطف علي ما قبله.
 {الباقين ()} [] كاف.
 {لاية} [] حسن.
 {مءمنين ()} [] كاف.
 {الرحيم ()} [] تام.
 {المرسلين ()} [] كاف؛ ان علق «اذ» ب (اذكر) مقدرا، ويكون من عطف الجمل، وجاءز ان علق بما قبله لكونه راس اية.
 {الا تتقون ()} [] كاف.
 {امين ()} [] جاءز.
 {واطيعون ()} [] كاف.
 {من اجر} [] حسن.
 {العالمين ()} [] كاف.
 {تعبثون ()} [] ليس بوقف للعطف.
 {تخلدون ()} [] كاف، ومثله: «جبارين».
 {واطيعون ()} [] حسن؛ علي استءناف ما بعده، وليس بوقف ان عطف علي ما قبله.
 {بما تعلمون ()} [] جاءز؛ لان الجملة الثانية بعده بيان وتفسير للاولي، او ان قوله: «بانعام»، بدل من قوله: «بما تعلمون»، وكلاهما يقتضي عدم الوقف، ومن حيث كونه راس اية يجوز.
 {وبنين ()} [] ليس بوقف؛ لان ما بعده مجرور عطفا علي ما قبله.
 {وعيون ()} [] حسن. 
 {عظيم ()} [] احسن.
 {الواعظين ()} [] كاف، ولا كراهة في الابتداء بما بعده كما قاله بعضهم؛ لان هذا وما اشبهه غير معتقد للقارء، وانما هو حكاية قول قاءليها حكاها الله عنهم، قرا ابن كثير وابو عمرو والكساءي: «خلق الاولين» بفتح الخاء المعجمة واسكان اللام، والباقون: بضمتين ()؛ ومعناهما الاختلاق وهو: الكذب ().
 {الاولين ()} [] كاف، ومثله: «بمعذبين»، وقيل: لا يوقف في قصة عاد من قوله: «كذبت عاد المرسلين» الي «بمعذبين»؛ لانه اخر كلامهم واخر كلام نبيهم.
 {فاهلكناهم} [] حسن، ومثله: «لاية».
 {مءمنين ()} [] كاف.
 {الرحيم ()} [] تام؛ لانه اخر قصة.
 {المرسلين ()} [] كاف؛ ان علق «اذ» ب (اذكر) مقدرا، وليس بوقف ان جعل العامل في «اذ » ما قبله.
 {الا تتقون ()} [] كاف.
 {امين ()} [] جاءز.
 {فاتقوا الله واطيعون ()} [] كاف.
 {من اجر} [] حسن.
 {العالمين ()} [] كاف.
 {امنين ()} [] جاءز، وان تعلق الجار والمجرور بما قبله لانه راس اية.
 {هضيم ()} [] جاءز ايضا.
 {فارهين ()} [] كاف، ومثله: «واطيعون».
 {المسرفين ()} [] ليس بوقف؛ لان «الذين» بعده نعت للمسرفين.
 {ولا يصلحون ()} [] كاف، ومثله: «من المسحرين»، وكذا «مثلنا»، و «من الصادقين».
 {هذه ناقة} [] جاءز. 
 {معلوم ()} [] كاف، ومثله: «عظيم».
 {نادمين ()} [] ليس بوقف.
 {العذاب} [] كاف.
 {لاية} [] حسن.
 {وما كان اكثرهم مءمنين ()} [] كاف.
 {الرحيم ()} [] تام؛ لانه اخر قصة.
 {المرسلين ()} [] جاءز، وفي «اذ» ما تقدم
 {الا تتقون ()} [] كاف.
 {امين ()} [] جاءز.
 {واطيعون ()} [] كاف.
 {من اجر} [] حسن.
 {العالمين ()} [] كاف.
 {من المخسرين ()} [] جاءز، ومثله: «المستقيم»، وكذا «اشياءهم».
 {مفسدين ()} [] حسن، ومثله: «والجبلة الاولين».
 {من المسحرين ()} [] جاءز.
 {مثلنا} [] كاف.
 {لمن الكاذبين ()} [] حسن.
 {الصادقين ()} [] جاءز، ومثله: «بما تعملون»، وقيل: تام؛ لانه اخر كلامهم، وكلام
 نبيهم  صلي الله عليه وسلم .
 {فكذبوه} [] ليس بوقف؛ لمفاجاة الفاء بما وقع من اجلهم.
 روي انه حبس عنهم الريح سبعا فابتلوا بحر عظيم اخذ بانفاسهم فلا نفعهم ظل، ولا ماء فاضطروا الي ان خرجوا الي البرية فاظلتهم سحابة، وجدوا لها بردا ونسيما فاجتمعوا تحتها فامطرت عليهم نارا فاحرقتهم ().
 {يوم الظلة} [] حسن.
 {عظيم ()} [] احسن منه. 
 {لاية} [] حسن.
 {مءمنين ()} [] كاف.
 {الرحيم ()} [] تام.
 {العالمين ()} [] كاف؛ لمن قرا: «نزل» بالتشديد للزاي، ونصب (): «الروح» مفعول (نزل) مبينا للفاعل، وهو الله تعالي؛ لان (نزل) المشدد يقتضي التدريج والتنجيم بحسب المصالح؛ لانه نزل الي سما الدنيا جملة واحدة، ونجمه جبريل بامر الله تعالي في عشرين سنة مخالفا لقول الكفار لو كان من عند الله لنزل جملة واحدة ().
 قرا ابن عامر وشعبة وحمزة والكساءي: «نزل» مشددا، ومن قرا: بتخفيف الزاي، ورفع: «الروح»، وهي قراءة الباقين كان جاءزا ()، وقرء (): «نزل» مشددا مبنيا للمفعول، و «الروح» ناءب الفاعل، و «الامين» صفته.
 {الامين ()} [] ليس بوقف؛ لان الذي بعده ظرف للتنزيل، وكذا لا يوقف علي «قلبك»؛ لان ما بعده علة في (التنزيل)، وكذا لا يوقف علي «المنذرين»؛ لان ما بعده في موضع نصب؛ لانه منذر بلسانه .
 {مبين ()} [] كاف، ومثله: «زبر الاولين» للاستفهام بعده.
 {اية} [] ليس بوقف، سواء قرء: «يكن» بالتحتية، او بالفوقية، وسواء قرء: بالرفع، او بالنصب ()، ونصبها اما خبر «يكن»، و «ان يعلمه» اسمها، وكانه قال: او لم يكن لهم علم علماء بني اسراءيل اية لهم.
 اتفق علماء الرسم علي كتابة: {علماء} [] بواو والف كما تري. 
 {بني اسراءيل ()} [] كاف.
 {علي بعض الاعجمين ()} [] ليس بوقف لشيءين للعطف بالفاء؛ ولان جواب «لو» لم يات بعد، وهو «ما كانوا به مءمنين».
 و {مءمنين ()} [] كاف.
 {المجرمين ()} [] جاءز، ومثله: «الاليم»، وقيل: لا يجوز؛ لان الفعل الذي بعد الفاء منصوب بالعطف علي ما عملت فيه (حتي) والضمير في «سلكناه» للشرك، او للكفر، او للتكذيب، والضمير في «لا يءمنون به» يعود علي النبي  صلي الله عليه وسلم ، اي: كي لا يءمنوا بمحمد  صلي الله عليه وسلم ، قاله النكزاوي. وكذا لا يوقف علي «بغتة»؛ لان الذي بعدها جملة في موضع الحال.
 {لا يشعرون ()} [] جاءز.
 {منظرون ()} [] كاف، وكذا «يستعجلون» ولا وقف من قوله: «افرايت»، الي «يمتعون» فلا يوقف علي «سنين» للعطف، ولا علي «يوعدون»؛ لان قوله: «ما اغني عنهم» جملة قامت مقام جواب الشرط في قوله: «افرايت ان متعناهم».
 {يمتعون ()} [] كاف.
 {الا لها منذرون ()} [] تام، واتم منه: «ذكري»، وقد اغرب من قال ليس في سورة الشعراء وقف تام الا قوله: «لها منذرون»، ثم يبتدء: «ذكري»، اي: هي ذكري، او انذارنا ذكري، وان جعلت «ذكري» في موضع نصب بتقدير: ينذرهم العذاب ذكري، او هذا القران ذكري، او تكون «ذكري» مفعولا للذكر، اي: ذكرناهم ذكري، كان الوقف علي «ذكري» كافيا؛ لان الذكري متعلقة بالانذار اذا كانت منصوبة لفظا، ومعني وان كانت مرفوعة تعلقت به معني فقط.
 {ظالمين ()} [] كاف، ومثله: «يستطيعون».
 {لمعزولون ()} [] تام.
 {الها اخر} [] ليس بوقف؛ لان ما بعد الفاء جواب للنهي.
 {من المعذبين ()} [] كاف؛ للامر بعده.
 {الاقربين ()} [] جاءز، وقيل: لا يجوز لعطف ما بعده علي ما قبله.
 {من المءمنين ()} [] كاف، ومثله: «تعملون».
 {الرحيم ()} [] ليس بوقف؛ لان الذي بعده نعت له.
 {في الساجدين ()} [] كاف.
 {العليم ()} [] تام .
 {الشياطين ()} [] حسن.
 
 {اثيم ()} [] جاءز، وان كانت الجملة بعده صفة لكونه راس اية.
 {يلقون السمع} [] احسن مما قبله.
 {كاذبون ()} [] احسن منهما، وقيل: كاف.
 {الغاوون ()} [] كاف.
 {يهيمون ()} [] ليس بوقف لعطف ما بعده علي ما قبله، وكذا «ما لا يفعلون» للاستثناء.
 {من بعد ما ظلموا} [] حسن؛ للابتداء بالتهديد.
 اخر السورة تام.
 
  سورة النمل
 مكية
 [ايها:] ثلاث او اربع او خمس وتسعون اية.
  وكلمها: الف وماءة وتسع واربعون كلمة.
  وحروفها: اربعة الاف وسبعماءة وتسعون حرفا.
 {طس} [] تقدم الكلام عليها، ومتي وقفت علي «طس» فلا تقف علي «مبين»؛ لان «تلك» مبتدا خبرها «هدي»، وان جعل الخبر «ايات القران» كان الوقف علي «مبين» كافيا و «هدي» مبتدا خبره «للمءمنين» او خبر مبتدا محذوف، اي: هو هدي، او خبر بعد خبر و «حسنا» ان نصب «بشري» و «رحمة» علي المصدر بفعل مقدر من لفظهما، اي: يهدين هدي ويبشر بشري، وليس «مبين» وقفا؛ ان رفع «هدي» بدلا من «ايات» او خبرا ثانيا، او نصب علي الحال من «ايات»، او من «القران» او من الضمير في «مبين»؛ فكانه قال هاديا ومبشرا «للمءمنين» في محل «الذين» الحركات الثلاث: فتام؛ ان رفع خبر مبتدا محذوف، اي: هم الذين، او نصب علي المدح، وليس بوقف ان جر نعتا «للمءمنين» او بدلا او بيانا ().
 {يوقنون ()} [] تام.
 {اعمالهم} [] جاءز.
 {يعمهون ()} [] كاف؛ ان لم يجعل ما بعده خبر «ان»، وليس بوقف ان جعل خبرا لها، او خبرا بعد خبر.
 {سوء العذاب} [] كاف؛ علي استءناف ما بعده، وليس بوقف ان جعل ما بعده جملة في موضع الحال.
 {الاخسرون ()} [] حسن، ومثله: «عليم» ان علق «اذ» بمضمر، وليس بوقف ان علق بما قبله، اي: عليم وقت قول موسي لاهله عند مسيره من مدين الي مصر ().
 {انست نارا} [] جاءز؛ للابتداء بالسين، وهو من مقتضيات الابتداء، ومثلها: «سوف»؛ لانها للتهديد فيبتدا بها الكلام؛ لانها لتاكيد الواقع.
 {تصطلون ()} [] كاف.
 {ومن حولها} [] حسن؛ ان كان «وسبحان الله» خارجا عن النداء، وليس بوقف ان كان داخلا فيه. 
 {رب العالمين ()} [] حسن.
 {العزيز الحكيم ()} [] كاف .
 {والق عصاك} [] اكفي منه، وقال نافع: تام.
 {ولم يعقب} [] تام للابتداء بالنداء، ومثله: «لا تخف»، وكذا «المرسلون»، لمن قرا: «الا» من يفتح الهمزة وتخفيف اللام حرف تنبيه وهو ابو جعفر ()، كما قال امرء القيس:
 الا ايها الليل الطويل الا انجلي ... بصبح وما الاصباح منك بامثل ()
 فعلي هذه القراءة يحسن الوقف علي «المرسلون»، وليس بوقف لمن قرا (): باداة الاستثناء؛ لانها لا يبتدا بها، ولجواز الابتداء بها مدخل لقوم يجعلون «الا» بمعني: لكن، والمعني: لكن من ظلم من غير المرسلين، ويجعلون الاستثناء منقطعا وهذا مذهب الفراء والنحويون لا يجوزون ذلك.
 و {رحيم ()} [] تام؛ للابتداء بعد بالامر.
 {وقومه} [] كاف.
 {فاسقين ()} [] تام.
 {مبصرة} [] ليس بوقف؛ لان جواب لما لم يات بعد.
 {مبين ()} [] تام؛ علي استءناف ما بعده.
 {واستيقنتها انفسهم} [] ليس بوقف؛ علي ان في الاية تقديما وتاخيرا، والتقدير: جحدوا بها ظلما وعلوا واستيقنتها انفسهم.
 والوقف علي {وعلوا} [] كاف.
 {المفسدين ()} [] تام.
 {علما} [] جاءز. 
 {المءمنين ()} [] كاف، ولا وقف من قوله: «وورث سليمان داود» الي «كل شء» فلا يوقف علي «داود» ولا علي «منطق الطير» للعطف في كل.
 {من كل شء} [] كاف.
 {المبين ()} [] تام.
 {يوزعون ()} [] كاف.
 {واد النمل} [] ليس بوقف؛ لان «قالت» جواب «حتي اذا»؛ لان «حتي» الداخلة علي «اذا» ابتداءية، وكذا لا يوقف علي «مساكنكم»؛ لان ما بعده جواب الامر.
 {وجنوده} [] تام؛ لانه اخر كلام النملة، ثم قال تعالي: «وهم لا يشعرون»، اي: لا يشعرون ان سليمان يفقه كلامهم، واوحي الله الي سليمان ان الله قد زاد في ملكك، انه لا يتكلم احد الا حملت الريح كلامه فاخبرتك به فسمع سليمان كلام النملة من ثلاثة اميال، ثم قال لها: لم قلت ادخلوا مساكنكم اخفت عليهم مني ظلما، فقالت: لا، ولكن خشيت ان يفتنوا بما يرون من ملكك فيشغلهم ذلك عن طاعة ربهم ().
 {لا يشعرون ()} [] كاف، ولا وقف من قوله: «فتبسم» الي «ترضاه» فلا يوقف علي «وعلي والدي»؛ لان «ان» الثانية معطوفة علي «ان» الاولي.
 {ترضاه} [] جاءز؛ علي استءناف ما بعده، وليس بوقف ان عطف ما بعده علي ما قبله.
 {الصالحين ()} [] حسن.
 {الهدهد} [] جاءز.
 {من الغاءبين ()} [] كاف؛ علي استءناف ما بعده، واللام في «لاعذبنه» جواب قسم محذوف، وليس بوقف ان جعل ما بعده متصلا بما قبله، ورسموا: {او لاذبحنه} []، بزيادة الف بعد لام الف كما تري، ولا تعرف زيادتها من جهة اللفظ بل من جهة المعني.
 {بسلطان مبين ()} [] كاف.
 {غير بعيد} [] جاءز.
 {بما لم تحط به} [] حسن.
 {بنبا يقين ()} [] تام؛ علي استءناف ما بعده، والا كان جاءزا لكونه راس اية.
 {من كل شء} [] حسن، وقد اغرب بعضهم وزعم ان الوقف علي «عرش»، ويبتدء: ب «عظيم»، «وجدتها»، وليس بشء؛ لانه جعل العبادة لغير الله عظيمة، وكان قياسه علي هذا ان يقول عظيمة وجدتها اذ لمستعظم، انما هو سجودهم لغير الله، واما عرشها فهو اذل واحقر ان يصفه الله 
 بالعظم، وفيه ايضا قطع نعت النكرة وهو قليل ().
 {عظيم ()} [] حسن.
 {من دون الله} [] جاءز.
 {لا يهتدون ()} [] تام؛ علي قراءة الكساءي (): «الا» بفتح الهمزة وتخفيف اللام، وعلي قراءته يوقف علي «اعمالهم» وعلي «يهتدون»، ومن قرا بتشديد (): «الا» لا يقف علي «اعمالهم» ولا علي «لا يهتدون» ولا علي «الا»؛ لان الياء علي قراءتها بالتشديد من بنية الكلمة فلا تقطع، واصل: الا، ان لادغمت النون في اللام، ف «ان» هي الناصبة للفعل، وهو: «يسجدوا»، وحذف النون علامة النصب، قال ابو حاتم: ولولا ان المراد ما ذكر لقال: الا يسجدون، باثبات النون كقوله: «قوم فرعون الا يتقون»، فان قلت ليس في مصحف عثمان الف بين السين والياء، قلنا حذفت الالف في الكتابة كما حذفت من (ابن) بين العلمين، ولو وقف علي قراءة الكساءي: «الايا» ثم ابتدا: «اسجدوا» جاز؛ لان تقديره: الا يا هءلاء اسجدوا، وكثير ممن يدعي هذا الفن يتعمد الوقف علي ذلك ويعده وقفا حسنا مختارا، وليس هو كذلك، بل هو جاءز، وليس بمختار، ومن وقف مضطرا عليه ياثم، قال: اسجدوا، علي الامر جاز، والتقدير: الا يا هءلاء اسجدوا، وحذف المنادي؛ لان حرف النداء يدل عليه، وقد كثر مباشرة يا لفعل الامر، وقد سمع: الا يا ارحمونا، الا يا تصدقوا علينا؛ بمعني: الا يا هءلاء افعلوا هذا، اي: السجود لله تعالي ().
 {والارض} [] حسن، لمن قرا: «الا» بالتشديد ().
 {وما تعلنون ()} [] تام.
 {الا هو} [] جاءز، بتقدير: هو رب العرش، وليس بوقف ان رفع بدلا من الجلالة.
 {العظيم (()} [] كاف، ومثله: «من الكاذبين».
 {ثم تول عنهم} [] ليس بوقف؛ لان هذا من مجاز المقدم والمءخر؛ فكانه قال: فالقه اليهم فانظر ماذا يرجعون ثم تول عنهم.
 {يرجعون ()} [] كاف.
 {كتاب كريم ()} [] حسن، ولا وقف من قوله: «انه من سليمان» الي «مسلمين» لاتصال 
 الكلام بعضه ببعض من جهة المعني؛ علي قراءة عكرمة وابن ابي عبلة بفتح (): «انه من سليمان»، و «انه» في الموضعين بدل من «كتاب» بدل اشتمال او بدل كل من كل؛ كانه قيل: القي الي انه من سليمان وانه كذا وكذا، او الفتح علي اسقاط حرف الجر، قاله الزمخشري. ويجوز ان يراد لانه من سليمان؛ كانها عللت كرمه بكونه من سليمان، وتصديره باسم الله، وعلي قراءة العامة يجوز الوقف علي «سليمان» علي ان ما بعده مستانف جوابا للسءال قومها كانهم قالوا: ممن الكتاب وما فيه؟ فاجابتهم بالجوابين، وقرء (): «تغلوا» بغين معجمة من الغلو وهو مجاوزة الحد؛ والمعني لا تمتنعوا من جوابي فترك الجواب من الغلو والتكبر، ولا يوقف علي «بسم الله الرحمن الرحيم»؛ لان قوله: «ان لا تعلوا علي» متصل ب «القي» فموضع (ان) رفع علي البدل مما عمل فيه «القي»، وهو «كتاب»، ويجوز ان يكون موضعها جرا، والتقدير: وانه بسم الله الرحمن الرحيم بان لا تعلوا علي ().
 {مسلمين ()} [] تام.
 {في امري} [] جاءز.
 {تشهدون ()} [] كاف.
 {والامر اليك} [] جاءز.
 {ماذا تامرين ()} [] كاف، ويجوز في «ماذا»؛ ان تكون استفهامية مبتدا، و (ذا) اسم موصول بمعني: الذي، خبرها، ويجوز ان تجعل مع (ذا) بمنزلة اسم واحد مفعول «تامرين»، اي: اي شء تامرين به.
 {اذلة} [] تام؛ لانه اخر كلام بلقيس، وراس اية ايضا، ثم قال تعالي: «وكذلك يفعلون»، وهو اتم، ثم اخبر الله تعالي عنها انها قالت: واني مرسلة الي سليمان بهدية، فان كان ملكا قبلها، وان كان نبيا لم يقبلها ().
 {المرسلون ()} [] كاف.
 {بمال} [] حسن؛ لانتهاء الاستفهام، ومثله: «مما اتاكم» لاختلاف الجملتين، وايضا بل ترجح جانب الوقف. 
 {تفرحون ()} [] كاف.
 {لا قبل لهم بها} [] ليس بوقف؛ لان ما بعده بقية كلامه.
 {وهم صاغرون ()} [] كاف، ومثله: «مسلمين».
 {من مقامك} [] حسن؛ للابتداء ب «اني».
 {امين ()} [] كاف.
 {طرفك} [] كاف.
 {ام اكفر} [] تام؛ لانتهاء الاستفهام، وللابتداء بالشرط.
 {لنفسه} [] حسن.
 {كريم ()} [] تام.
 {لا يهتدون ()} [] كاف.
 {عرشك} [] حسن.
 {كانه هو} [] احسن منه.
 {مسلمين ()} [] كاف.
 {من دون الله} [] حسن؛ لمن قرا (): «انها» بكسر الهمزة، وهي قراءة الجماعة، اي: صدها الله تعالي، اي: حال بينها وبين ما كانت تعبد، او صدها سليمان، وما علي المعنيين في موضع نصب، وليس بوقف لمن قرا: «انها» بفتح الهمزة، وهي قراءة سعيد بن جبير ()، وعليها فالوقف علي «من قوم كافرين» تام.
 {الصرح} [] حسن، ورسموا: {ادخلي} [] بياء يوقف عليها عند الضرورة.
 {عن ساقيها} [] جاءز.
 {من قوارير} [] كاف.
 {لله رب العالمين ()} [] تام؛ لانه اخر القصة، وما بعده ابتداء اخري.
 {ان اعبدوا الله} [] جاءز.
 {يختصمون ()} [] كاف.
 {قبل الحسنة} [] جاءز.
 {ترحمون ()} [] كاف. 
 {وبمن معك} [] حسن.
 {تفتنون ()} [] تام.
 {ولا يصلحون ()} [] كاف؛ علي استءناف ما بعده.
 {لصادقون ()} [] كاف.
 {ومكرنا مكرا} [] جاءز.
 {لا يشعرون ()} [] كاف، ومثله: «عاقبة مكرهم» لمن قرا: «انا دمرناهم» بكسر الهمزة؛ علي الاستءناف، وهي قراءة اهل مكة والمدينة والشام والبصرة، وليس بوقف لمن قرا: بفتحها ()؛ بدلا من قوله: «عاقبة» فتكون في محل رفع، وكذلك ان جعلنا «انا» في محل رفع خبر مبتدا محذوف، اي: هو انا دمرناهم، او جعلت خبر كان فتكون في محل نصب، وبها قرا الكوفيون: عاصم وحمزة والكساءي ()، وعلي قراءتهم لا يوقف علي «مكرا»، ولا علي «يشعرون»، ولا علي «مكرهم».
 {اجمعين ()} [] كاف، ومثله: «بما ظلموا»، وكذا «يعلمون».
 {امنوا} [] جاءز.
 {يتقون ()} [] تام؛ لانه اخر القصة، «ولوطا» منصوب بفعل مضمر؛ كانه قال: وارسلنا لوطا، وليس بوقف ان عطف «ولوطا» علي «صالحا» وحينءذ لا يوقف من اول قصة صالح الي هذا الموضع؛ لاتصال الكلام بعضه ببعض.
 {وانتم تبصرون ()} [] كاف.
 {من دون النساء} [] جاءز.
 {تجهلون ()} [] كاف.
 {من قريتكم} [] جاءز.
 {يتطهرون ()} [] كاف، ومثله: «من الغابرين»، وكذا «مطرا».
 {المنذرين ()} [] تام؛ لانه اخر قصص هذه السورة، ومن قوله: «قل الحمد لله» الي «صادقين» ليس فيه وقف؛ لان جميعه داخل في الاستفهام الاول، ومتصل بعضه ببعض من جهة المعني.
 {الذين اصطفي} [] حسن، ومثله: «يشركون»، وان جعل ما بعد «يشركون» مستانفا كان كافيا. 
 {بهجة} [] كاف، ومثله: «شجرها»؛ لان المعني: اعبادة الذي خلق السموات والارض خير؟ ام عبادة مالا يضر ولا ينفع؟.
 {اءله مع الله} [] حسن، ومثله: «يعدلون»، وان جعل ما بعده مستانفا غير معطوف علي الاستفهام الاول كان كافيا.
 {حاجزا} [] حسن، ومثله: «اءله مع الله»، وكذا «لا يعلمون»، وكذا «خلفاء الارض»، ومثله: «اءله مع الله» و «تذكرون»، و «رحمته»، و «اءله مع الله»، و «يشركون»، و «ثم يعيده»، و «الارض»، و «اءله مع الله»، و «صادقين»، و «الا الله» كلها حسان، ورفع: «الا الله»؛ علي انه فاعل «يعلم» و «من» مفعول، و «الغيب» بدل من «من» او رفع: «الا الله» بدل من «من»، اي: لا يعلم الغيب الا الله، علي لغة تميم، حيث يقولون ما في الدار احد الا حمار، يريدون ما فيها الا حمار، كان احدا لم يذكر، اي لا يعلم من يذكر في السموات والارض. انظر: السمين.
 {يبعثون ()} [] تام، عند ابي حاتم؛ والمعني: لا يعلمون متي يخرجون من قبورهم؟ فكيف يعلمون الغيب؟!! ()
 {في الاخرة} [] حسن، ومثله: «في شك منها».
 {عمون ()} [] تام.
 {لمخرجون ()} [] كاف؛ علي استءناف ما بعده، وتكون اللام في «لقد» جواب قسم محذوف، وليس بوقف ان جعل ما بعده متصلا بما قبله.
 {من قبل} [] حسن.
 {الاولين ()} [] كاف، ومثله: «المجرمين»، وكذا: «يمكرون»، و «صادقين»، واغرب بعضهم وزعم ان الكلام قد تم عند قوله: «ردف» ثم يبتدء: «لكم بعض الذي» وفيه نظر.
 {تستعجلون ()} [] كاف، ومثله: «لا يشكرون».
 {وما يعلنون ()} [] تام، ومثله: «مبين»، والتاء في «غاءبة» للمبالغة، وقيل: انها كالتاء الداخلة علي المصادر، نحو: العاقبة، والعافية؛ من انها اسماء لا صفات.
 {فيه يختلفون ()} [] كاف.
 {للمءمنين ()} [] تام .
 {بحكمه} [] كاف، ومثله: «العليم».
 {فتوكل علي الله} [] حسن.
 {المبين ()} [] تام. 
 {الموتي} [] ليس بوقف، لمن قرا: «تسمع» الثانية بالفوقية المضمومة وكسر الميم، و «الصم» بالنصب؛ لان ما بعده معطوف علي ما قبله من الخطاب، ومن قرا: «يسمع» بالتحتية المفتوحة وفتح الميم، ورفع: «الصم» كان حسنا ().
 {مدبرين ()} [] كاف.
 {عن ضلالتهم} [] حسن، قرا ابو جعفر وشيبة ونافع وعاصم وابو عمرو: «وبهادي العمي»، بالاضافة، وقرا حمزة: «تهدي العمي» بالفوقية، ونصب «العمي»، وقرا عبد الله بن عامر الشامي: «بهادي العمي» بتنوين «هاد»، ونصب «العمي»، وكان النساءي يقف: «بهادي» بالياء في النمل والروم ()، اصله: بهادي، استثقلت الكسرة علي الياء فحذفت فبقيت الياء ساكنة، والحرف الذي لقيها ساكن فاسقطوا الياء لالتقاء الساكنين، وقد اتفق علماء الرسم علي حذف الياء من اربعة احرف مضافة تبعا لخط المصحف الامام: {وان الله لهاد الذين امنوا} [] في الحج، و {حتي اذا اتوا علي واد
 النمل} [] النمل، {وما انت بهادي العمي} [] في الروم، و {الا من هو صال الجحيم ()} [] في الصافات.
 {باياتنا} [] حسن.
 {مسلمون ()} [] تام.
 {تكلمهم} [] حسن، لمن قرا: «ان الناس» بكسر الهمزة علي الاستءناف، وقرا العامة: «تكلمهم» بتشديد اللام ()، من: الكلام، وقرء: «تكلمهم» بفتح التاء واسكان الكاف وضم اللام، من باب: نصر من الكلم، اي: الجرح، اي: تجرحهم، وبها قرا ابن عباس وابن جبير ومجاهد وابو زرعة والجحدري ()، وروي ان خروج الدابة حين ينقطع الخير فلا يءمر بمعروف، ولا ينهي عن منكر، ولا 
 منيب ولا ناءب، وفي الحديث: ان خروج الدابة وطلوع الشمس من المغرب من اول الاشراط ()، ولم يعين الاول منهما، وظاهر الاحاديث ان طلوع الشمس اخرها، والظاهر: ان الدابة واحدة، وروي انه يخرج في كل بلد دابة مما هو مبثوث نوعها في الارض، وليست واحدة، طولها: ستون ذراعا، لها قواءم وزغب وريش وجناحان لا يفوتها هارب ولا يدركها طالب، معها عصي موسي، وخاتم سليمان عليهما الصلاة والسلام فتختم وجه الكافر بخاتم سليمان فيسود وجهه، وتمسح وجه المءمن فيبيض وجهه ()، وقرا الكوفيون عاصم وحمزة والكساءي (): «ان» بفتح الهمزة؛ لان «ان » تكون منصوبة بما قبلها، فلا يوقف علي «تكلمهم»؛ لان المعني: تكلمهم بان الناس كانوا باياتنا لا يوقنون، قيل: تخرج من الصفا، وقيل: تخرج من البحر، وهي الجساسة ().
 {لا يوقنون ()} [] تام.
 {ممن يكذب باياتنا} [] جاءز.
 {يوزعون ()} [] كاف.
 {ولم تحيطوا بها علما} [] جاءز، فصلا بين الاستفهامين؛ لان: «ام» منقطعة، فتقدر: بل، فهو: انتقال من الاستفهام الذي يقتضي التوبيخ الي الاستفهام عن عملهم علي جهة التوبيخ، اي: اي شء 
 كنتم، والمعني: ان كان لكم عمل، او حجة فهاتوهما، وليس لهم عمل ولا حجة فيما عملوه، الا الكفر والتكذيب ().
 {تعملون ()} [] كاف.
 {بما ظلموا} [] جاءز.
 {لا ينطقون ()} [] تام.
 {مبصرا} [] كاف.
 {يءمنون ()} [] تام؛ ان نصب «يوم» بفعل مضمر، وان عطف علي «ويوم نحشر» لا يوقف من «يوم» الاول الي «يوم» الثاني؛ لاتصال الكلام بعضه ببعض.
 {الا من شاء الله} [] تام، ومثله: «داخرين».
 {السحاب} [] حسن، ثم يبتدء: «صنع الله»، والعامل فيه مضمر، اي: صنع الله ذلك صنعا، ثم اضيف الي فاعله بعد حذف عامله، وقيل: منصوب علي الاغراء، اي: انظروا صنع الله عليكم، ومن قرا (): «صنع الله» بالرفع، خبر مبتدا محذوف تقديره: ذلك صنع الله، كان الوقف علي «السحاب» احسن.
 {كل شء} [] كاف.
 {بما تفعلون ()} [] تام.
 {خير منها} [] حسن.
 {امنون ()} [] كاف، وقال يحيي بن نصير النحوي: لا يوقف علي الاول حتي يءتي بالثاني، والاولي الفصل بين الفريقين، ولا يخلط احدهما مع الاخر.
 {في النار} [] حسن؛ للابتداء بالاستفهام.
 {تعملون ()} [] تام.
 {الذي حرمها} [] حسن، ومثله: «كل شء».
 {من المسلمين ()} [] ليس بوقف؛ لان «ان» بعده موضعها نصب بالعطف؛ علي «ان» الاولي.
 {القران} [] كاف.
 {لنفسه} [] جاءز، وقال يحيي بن نصير النحوي: لا يوقف علي احد المتعادلين حتي يءتي بالثاني. 
 {من المنذرين ()} [] تام.
 {الحمد لله} [] جاءز؛ لان الابتداء بالسين من مقتضيات الابتداء.
 {فتعرفونها} [] حسن.
 اخر السورة تام.
 
  سورة القصص
 مكية
 الا قوله: {ان الذي فرض عليك القران لرادك} [] الاية فانها نزلت بالجحفة، والا قوله: {الذين اتيناهم الكتاب} []، الي {الجاهلين ()} [] فمدني.
 [ايها:] وهي ثمان وثمانون اية اجماعا.
  وكلمها: الف واربعماءة واحدي واربعون كلمة .
  وحروفها: خمسة الاف وثمانماءة حرف.
 وليس فيها شء مما يشبه الفواصل.
 {طسم ()} [] تقدم الكلام عليه.
 {المبين ()} [] كاف؛ ان جعل «تلك» مبتدا، و «ايات الكتاب» خبره «هذا» ان وقفت علي «طسم» والا فالوقف علي «المبين» تام.
 {بالحق} [] ليس بوقف؛ لان اللام بعده من صلة ما قبله.
 {يءمنون ()} [] تام.
 {شيعا} [] صالح؛ لان ما بعده يصلح مستانفا، وحالا من الضمير في «وجعل»، او صفة ل «شيعا»، و «يذبح» بدلا من محل يستضعف، وانه كان من «المفسدين» بيان للنبا.
 {نساءهم} [] كاف.
 {من المفسدين ()} [] تام.
 {في الارض} [] ليس بوقف؛ لان قوله: «ونجعلهم اءمة» منصوب بالنسق علي ما عملت فيه «ان»، وكذا «اءمة» لعطف ما بعده علي ما قبله.
 {الوارثين ()} [] جاءز.
 {ونمكن لهم في الارض} [] حسن؛ علي قراءة حمزة والكساءي (): «ويري فرعون» بالياء والامالة، ورفع: «فرعون» وما بعده ثلاثيا مستانفا؛ فكانه قال: «ويري فرعون وهامان وجنودهما»، وليس بوقف علي قراءة الباقين بالنون المضمومة ونصب «فرعون» ()، وما بعده لان الواو في «ونري»؛ بمعني: اللام.
 {ما كانوا يحذرون ()} [] تام.
 {ان ارضعيه} [] حسن؛ للابتداء بالشرط.
 {في اليم} [] جاءز.
 {ولا تخافي ولا تحزني} [] كاف؛ للابتداء ب «انا»، ومثله: «من المرسلين» افصح ما في الكتاب، «واوحينا الي ام موسي» الاية؛ لان فيها امرين ونهيين وخبرين وبشارتين ().
 {وحزنا} [] كاف.
 {خاطءين ()} [] تام.
 {قرة عين لي ولك} [] كاف، وقال الزجاج: تام، قال الكواشي: يحمل قول الزجاج ان لم يرد بقوله: تام، التام المعروف عند اهل هذا الفن؛ بل اراد الصالح، وكانه يشير الي استحباب الوقف علي «لك» لءلا يتوهم ان الوقف علي «لا» جاءز، ومما يقوي هذا ان الزجاج قلما تعرض الي ذلك الوقف والله اعلم بكتابه. اه.
 وروي عن ابن عباس رضي الله عنهما انه قال: الوقف علي «لا»؛ لان امراة فرعون قالت: «قرة عين لي ولك»، فقال لها فرعون: اما لك فنعم، واما لي فلا، ليس هو لي قرة عين. فكان كما قال قال الفراء وابو حاتم وجماعة من اهل الكوفة ان هذا لحن، ولا وجه لهذا الوقف في العربية؛ لانه لو كان كذلك لقال: تقتلونه، بنون الرفع، اذ لا مقتضي لحذفها؛ لان حذفها انما كان للنهي، فاذا بطل ان يكون نهيا وجب ثبوت النون، فلما جاء بغير نون علم ان العامل في الفعل «لا» فلا يفصل منه، وهذا القول اقدم من قاءله، علي مثل ابن عباس، وهو الامام المقدم في الفصاحة والعربية واشعار العرب وتاويل الكتاب والسنة، قال السدي: قال ابن عباس: لو ان فرعون قال هو قرة عين لي لكان ذلك ايمانا منه، ولهداه الله لموسي كما هدي زوجته، ولكنه ابي فحرم ذلك (). ولقول ابن عباس مذهب ساءغ في العربية، وهو: ان يكون «تقتلوه» معه حرف جازم قد اضمر قبل الفعل؛ لان ما قبله يدل عليه؛ فكانه قال: قرة عين لي ولك لا، ثم قال: لا تقتلوه عسي ان ينفعنا، وتكون «لا» الاولي قد دلت علي حذف الثانية، وقد جاء اضمار «لا» في القران في قوله: «يبين الله لكم ان تضلوا»، اي: لءلا تضلوا، وقد جاء في الشعر 
 اضمار الجازم كقول ابي طالب يخاطب النبي  صلي الله عليه وسلم :
 محمد نفد نفسك كل نفس ... اذا ما خفت من امر تبالا ()
 اراد: لتفد نفسك، ومنه:
 فقلت ادعي وادعو ان اندي ... لصوت ان ينادي داعيان ()
 اراد: ولادعو، وقد اتفق علماء الرسم علي كتابة: {قرة عين لي} [] و {امراة فرعون} [] بالتاء المجرورة فيهما، وكذا كل (امراة) ذكرت مع زوجها، فهي بالتاء المجرورة كما تقدم، وهذا غاية في بيان هذا الوقف،،، ولله الحمد
 {او نتخذه ولدا} [] حسن.
 {لا يشعرون ()} [] كاف.
 {فارغا} [] جاءز.
 {لتبدي به} [] ليس بوقف؛ لارتباط ما بعده به، ومفعول «تبدي» محذوف، اي: لتبدي به القول، اي: لتظهره.
 {من المءمنين ()} [] كاف.
 {قصيه} [] حسن.
 {لا يشعرون ()} [] كاف، ولا وقف الي «ناصحون»، فلا يوقف علي «من قبل» لمكان الفاء.
 و {ناصحون ()} [] كاف.
 وقوله: {هل ادلكم علي اهل بيت} [] الاية؛ يسمي عند اهل البيان الكلام الموجه؛ لان «امه» لما قالت: هل ادلكم، فقالوا لها: انك قد عرفتيه فاخبرينا من هو؟ فقالت: ما اردت الا وهم ناصحون للملك فتخلصت منهم بهذا التاويل، ونظير هذا لما سءل بعضهم، وكان بين اقوام بعضهم يحب عليا دون غيره، وبعضهم ابا بكر، وبعضهم عمر، وبعضهم عثمان، فقيل لهم: ايهم احب الي رسول الله  صلي الله عليه وسلم ؟ 
 فقال: من كانت ابنته تحته، ولا وقف من قوله: «فرددناه» الي «لا يعلمون»، فلا يوقف علي «تقر عينها» لعطف ما بعده علي ما قبله، ولا علي «تحزن» كذلك، ولا علي «حق» لحرف الاستدراك بعده؛ لانه يستدرك بها الاثبات بعد النفي، والنفي بعد الاثبات ().
 {لا يعلمون ()} [] كاف، ومثله: «علما»، وكذا «المحسنين».
 {من اهلها} [] ليس بوقف لفاء العطف.
